<div class="container" style="max-width:800px;margin:0 auto;padding:48px 0;">
  <h1 style="color:#D8A26C;font-weight:bold;">常见问题</h1>
  <div style="margin-top:32px;">
    {% for faq in faqs %}
      <details style="margin-bottom:16px;">
        <summary style="color:#D8A26C;font-weight:bold;">{{ faq.question }}</summary>
        <div style="color:#444;">{{ faq.answer }}</div>
      </details>
    {% endfor %}
  </div>
</div>