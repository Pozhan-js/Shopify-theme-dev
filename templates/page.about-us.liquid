{% layout 'theme' %}

<div class="page-width">
  {% section 'fengshui-about-section' %}
  {% section 'fengshui-about-section-2' %}
  {% section 'fengshui-about-section-3' %}
  {% section 'fengshui-about-section-4' %}
</div>

<style>
  /* 保持原有样式不变 */
  .about-us-page {
    max-width: 1400px;
  }

  .about-hero {
    height: 500px;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 60px;
  }

  .about-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
  }

  .hero-content h1 {
    font-size: 3em;
    margin-bottom: 20px;
    font-family: 'SimSun', serif;
  }

  .hero-content p {
    font-size: 1.5em;
    letter-spacing: 5px;
  }

  .about-section {
    display: flex;
    align-items: center;
    margin-bottom: 80px;
    gap: 50px;
  }

  .about-section.reverse {
    flex-direction: row-reverse;
  }

  .image-wrapper {
    flex: 1;
  }

  .image-wrapper img {
    width: 100%;
    border-radius: 4px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .content-wrapper {
    flex: 1;
  }

  .content-wrapper h2 {
    font-size: 2em;
    margin-bottom: 30px;
    position: relative;
    font-family: 'SimSun', serif;
  }

  .content-wrapper h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 80px;
    height: 2px;
    background: {{ settings.color_button_bg }};
  }

  .content-box {
    background: #f9f5f0;
    padding: 30px;
    border-radius: 4px;
    line-height: 1.8;
  }

  .content-box p {
    margin-bottom: 15px;
  }

  .craftsmen-section {
    text-align: center;
    margin: 100px 0;
  }

  .craftsmen-section h2 {
    font-size: 2em;
    margin-bottom: 50px;
    font-family: 'SimSun', serif;
  }

  .craftsmen-grid {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
  }

  .craftsman-card {
    width: 300px;
    text-align: center;
  }

  .craftsman-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 20px;
    border: 5px solid #f9f5f0;
  }

  .craftsman-card h3 {
    font-size: 1.3em;
    margin-bottom: 10px;
    color: {{ settings.color_heading }};
  }

  .craftsman-card p {
    color: #666;
  }

  .contact-section {
    text-align: center;
    margin: 80px 0;
  }

  .contact-section h2 {
    font-size: 2em;
    margin-bottom: 30px;
    font-family: 'SimSun', serif;
  }

  .contact-info {
    background: #f9f5f0;
    padding: 40px;
    max-width: 600px;
    margin: 0 auto;
    border-radius: 4px;
  }

  .contact-info p {
    margin-bottom: 15px;
    font-size: 1.1em;
  }

  @media (max-width: 749px) {
    .about-section, .about-section.reverse {
      flex-direction: column;
    }

    .hero-content h1 {
      font-size: 2em;
    }

    .hero-content p {
      font-size: 1em;
    }

    .craftsman-card {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
