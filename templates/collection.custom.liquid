{%- liquid
  assign products = collection.products
  assign products_per_row = section.settings.products_per_row | default: 4
-%}

{%- style -%}
  .collection-hero {
    position: relative;
    height: 300px;
    background-image: url('{{ section.settings.image | img_url: 'master' }}');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .collection-title {
    background-color: rgba(0,0,0,0.5);
    color: white;
    padding: 20px;
    border-radius: 5px;
    font-size: 2.5rem;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat({{ products_per_row }}, 1fr);
    gap: 20px;
    padding: 20px;
  }
  
  @media screen and (max-width: 749px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .product-card {
    position: relative;
  }
  .product-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ff0000;
    color: white;
    padding: 5px 10px;
    border-radius: 3px;
    font-size: 0.8rem;
    z-index: 1;
  }
  
  .price {
    margin-top: 10px;
  }
  
  .product-card h3 {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin: 10px 0 5px;
  }
  
  .price {
    font-size: {{ section.settings.price_font_size }}px;
  }
  
  .current-price {
    color: #d82c2c;
    font-weight: bold;
  }
  
  .original-price {
    color: #666;
    margin-left: 8px;
  }
{%- endstyle -%}

<div class="collection-hero">
  <h1 class="collection-title">{{ collection.title }}</h1>
</div>

<div class="product-grid">
  {% for product in products %}
    <div class="product-card">
      {% if product.available == false %}
        <span class="product-badge">售罄</span>
      {% elsif product.compare_at_price > product.price %}
        <span class="product-badge">促销</span>
      {% endif %}
      
      <a href="{{ product.url }}">
        <img src="{{ product.featured_image | img_url: '300x300' }}" 
             width="300" 
             height="300"
             loading="lazy"
             alt="{{ product.title }}">
      </a>
      
      <h3>{{ product.title }}</h3>
      
      <div class="price">
        <span class="current-price">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="original-price"><s>{{ product.compare_at_price | money }}</s></span>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Collection Template",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Products per row"
    },
    {
      "type": "header",
      "content": "字体设置"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "label": "产品标题字体大小(px)",
      "unit": "px"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "产品标题颜色",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "price_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 14,
      "label": "价格字体大小(px)",
      "unit": "px"
    }
  ]
}
{% endschema %}
