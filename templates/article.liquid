<div class="article-section">
  <div class="article-container">
    <article class="article-content">
      <header class="article-header">
        <h1 class="article-title">{{ article.title }}</h1>
        <div class="article-meta">
          <time class="article-date" datetime="{{ article.created_at | date: '%Y-%m-%d' }}">
            {{ article.created_at | date: format: 'abbreviated_date' }}
          </time>
          {% if article.author != blank %}
            <span class="article-author">{{ article.author }}</span>
          {% endif %}
        </div>
      </header>

      {% if article.image != blank %}
        <div class="article-image">
          {{ article.image | image_url: width: 1100 | image_tag: loading: 'lazy', widths: '375, 750, 1100, 1500', sizes: '(min-width: 990px) 66vw, 100vw' }}
        </div>
      {% endif %}

      <div class="article-body">
        {{ article.content }}
      </div>

      {% if article.tags.size > 0 %}
        <div class="article-tags">
          <span class="article-tags-label">Tags:</span>
          {% for tag in article.tags %}
            <a href="{{ tag | link_to_tag: tag }}" class="article-tag">{{ tag }}</a>
            {% unless forloop.last %}, {% endunless %}
          {% endfor %}
        </div>
      {% endif %}

      {% if blog.comments_enabled? %}
        <div class="article-comments">
          <h2 class="comments-title">
            Comments ({{ article.comments_count }})
          </h2>
          
          {% paginate article.comments by 5 %}
            {% if article.comments.size > 0 %}
              <div class="comments-list">
                {% for comment in article.comments %}
                  <div class="comment">
                    <div class="comment-content">{{ comment.content }}</div>
                    <div class="comment-meta">
                      <span class="comment-author">{{ comment.author }}</span>
                      <span class="comment-date">
                        {{ comment.created_at | date: format: 'abbreviated_date' }}
                      </span>
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% endif %}
            
            {% if paginate.pages > 1 %}
              <div class="pagination">
                {{ paginate | default_pagination }}
              </div>
            {% endif %}
          {% endpaginate %}
          
          {% render 'blog-comment-form', article: article %}
        </div>
      {% endif %}
    </article>

    {% if section.settings.show_sidebar %}
      <aside class="article-sidebar">
        {% render 'blog-sidebar' %}
      </aside>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .article-section {
    padding: 2rem 0;
  }

  .article-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  @media screen and (min-width: 990px) {
    .article-container {
      grid-template-columns: 2fr 1fr;
    }
  }

  .article-content {
    max-width: 100%;
  }

  .article-header {
    margin-bottom: 2rem;
  }

  .article-title {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    color: rgb(var(--color-foreground-rgb) / 0.7);
    font-size: 0.875rem;
  }

  .article-image {
    margin-bottom: 2rem;
  }

  .article-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .article-body {
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .article-tags {
    margin-bottom: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgb(var(--color-foreground-rgb) / 0.1);
  }

  .article-tags-label {
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .article-tag {
    color: rgb(var(--color-foreground-rgb) / 0.7);
    text-decoration: none;
    margin-right: 0.5rem;
  }

  .article-tag:hover {
    color: rgb(var(--color-foreground-rgb));
  }

  .article-comments {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgb(var(--color-foreground-rgb) / 0.1);
  }

  .comments-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .comments-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .comment {
    padding: 1rem;
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.1);
    border-radius: 8px;
  }

  .comment-content {
    margin-bottom: 0.5rem;
  }

  .comment-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgb(var(--color-foreground-rgb) / 0.7);
  }

  .comment-author {
    font-weight: 600;
  }

  .article-sidebar {
    position: sticky;
    top: 2rem;
    height: fit-content;
  }

  .pagination {
    margin: 2rem 0;
    text-align: center;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show sidebar",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    }
  ]
}
{% endschema %}
