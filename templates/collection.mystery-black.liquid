<script>
// 黑白神秘产品系列模板交互功能
document.addEventListener('DOMContentLoaded', function() {
  
  // 排序功能
  const sortDropdown = document.getElementById('collection-sort');
  if (sortDropdown) {
    sortDropdown.addEventListener('change', function() {
      const sortValue = this.value;
      const url = new URL(window.location);
      url.searchParams.set('sort_by', sortValue);
      window.location.href = url.toString();
    });
    
    // 设置当前排序值
    const urlParams = new URLSearchParams(window.location.search);
    const currentSort = urlParams.get('sort_by');
    if (currentSort) {
      sortDropdown.value = currentSort;
    }
  }
  
  // 快速查看功能
  const quickViewButtons = document.querySelectorAll('.quick-view-button');
  quickViewButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const productId = this.dataset.productId;
      // 这里可以添加快速查看模态框逻辑
      console.log('快速查看产品:', productId);
      
      // 简单的视觉反馈
      this.style.transform = 'scale(0.95)';
      setTimeout(() => {
        this.style.transform = '';
      }, 150);
    });
  });
  
  // 添加到购物车功能
  const addToCartButtons = document.querySelectorAll('.add-to-cart-button');
  addToCartButtons.forEach(button => {
    button.addEventListener('click', function() {
      const productId = this.dataset.productId;
      const buttonText = this.querySelector('.button-text');
      const originalText = buttonText.textContent;
      
      // 添加加载状态
      buttonText.textContent = '添加中...';
      this.style.background = 'linear-gradient(45deg, #10b981, #059669)';
      this.disabled = true;
      
      // 模拟添加到购物车请求
      setTimeout(() => {
        buttonText.textContent = '已添加';
        
        setTimeout(() => {
          buttonText.textContent = originalText;
          this.style.background = '';
          this.disabled = false;
        }, 2000);
      }, 800);
      
      console.log('添加到购物车:', productId);
    });
  });
  
  // 颜色选项点击事件
  const colorDots = document.querySelectorAll('.color-dot');
  colorDots.forEach(dot => {
    dot.addEventListener('click', function() {
      // 移除同组其他选中状态
      const colorOptions = this.closest('.color-options');
      colorOptions.querySelectorAll('.color-dot').forEach(d => {
        d.style.borderColor = 'rgba(255, 255, 255, 0.3)';
        d.style.transform = '';
      });
      
      // 添加选中状态
      this.style.borderColor = 'rgba(255, 255, 255, 0.8)';
      this.style.transform = 'scale(1.2)';
    });
  });
  
  // 产品卡片进入动画
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }, index * 100);
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);
  
  // 为产品卡片添加进入动画
  const productCards = document.querySelectorAll('.product-card-wrapper');
  productCards.forEach(card => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px)';
    card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(card);
  });
});
</script>
