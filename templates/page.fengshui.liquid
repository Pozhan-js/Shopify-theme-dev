{% layout 'theme' %}

<div class="page-width fengshui-page">
  <div class="fengshui-hero">
    <h1 class="fengshui-title">Powerful Healing Starts with Personalized Feng Shui Arrangement</h1>
    <p class="fengshui-subtitle">The ancient art of harmonizing energy flow</p>
  </div>

  <div class="fengshui-container">
    <div class="fengshui-display">
      {% section 'fengshui-section' %}
    </div>
    <div class="fengshui-content"></div>
  </div>
</div>

<style>
  .fengshui-page {
    padding: 50px 20px;
    background: linear-gradient(135deg, #f5f0e6 0%, #e8d9c5 100%);
  }

  .fengshui-hero {
    text-align: center;
    margin-bottom: 50px;
  }

  .fengshui-title {
    font-size: 2.5rem;
    color: #5c3a21;
    margin-bottom: 15px;
    font-weight: 400;
  }

  .fengshui-subtitle {
    font-size: 1.2rem;
    color: #8b4513;
    margin: 0;
  }

  .fengshui-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: center;
  }

  .fengshui-image {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .fengshui-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
    margin-bottom: 30px;
  }

  .fengshui-button {
    background-color: #8b4513;
    color: white;
    padding: 12px 30px;
    border-radius: 4px;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .fengshui-button:hover {
    background-color: #5c3a21;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .fengshui-container {
      grid-template-columns: 1fr;
    }

    .fengshui-title {
      font-size: 2rem;
    }
  }
</style>
