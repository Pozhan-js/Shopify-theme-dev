{% layout 'theme' %}

<div class="page-width">
  {% section 'fengshui-career-section' %}
  {% section 'fengshui-harmony-section' %}
  {% section 'fengshui-celestial-section' %}
  {% section 'fengshui-celestial-section-2' %}
  {% section 'fengshui-celestial-section-3' %}
  {% section 'fengshui-Cocoon-section' %}
  {% section 'fengshui-Cocoon-section-2' %}
  {% section 'fengshui-veil-section' %}
  {% section 'fengshui-veil-section-2' %}
</div>

<style>
  .collection-card {
    margin-bottom: 30px;
    text-align: center;
    transition: transform 0.3s ease;
  }
  .collection-card:hover {
    transform: translateY(-5px);
  }
  .collection-card__image {
    margin-bottom: 15px;
    overflow: hidden;
    border-radius: 4px;
  }
  .collection-card__title {
    font-size: 1.2em;
    margin-bottom: 5px;
    color: {{ settings.color_heading }};
  }
  .collection-card__count {
    color: {{ settings.color_body_text | color_modify: 'alpha', 0.6 }};
    font-size: 0.9em;
  }
</style>
