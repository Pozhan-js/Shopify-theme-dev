<div class="page-home-container">
    {% section 'home-hero-section' %}
    {% section 'auto-category-section' %}
    {% section 'products-grid-section' %}

    {% section 'brand-story-section' %}
    {% section 'contact-cta-section' %}
</div>

<style>
    .page-home-container {
        background: #fff;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section-title {
        font-size: 36px;
        font-weight: 600;
        color: #D8A26C;
        text-align: center;
        margin-bottom: 20px;
    }

    .section-subtitle {
        font-size: 18px;
        color: #666;
        text-align: center;
        margin-bottom: 50px;
    }

    /* 新品推荐 */
    .new-products-section {
        padding: 80px 0;
        background: #f9f9f9;
    }

    .products-showcase {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .product-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .product-card h3 {
        padding: 15px;
        font-size: 18px;
        color: #333;
    }

    .product-card .price {
        padding: 0 15px 15px;
        font-size: 20px;
        font-weight: 600;
        color: #D8A26C;
    }

    /* 品牌故事 */
    .brand-story-section {
        padding: 80px 0;
        background: white;
    }

    .story-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
    }

    .story-text h2 {
        font-size: 36px;
        color: #D8A26C;
        margin-bottom: 20px;
    }

    .story-text p {
        font-size: 16px;
        line-height: 1.8;
        color: #666;
        margin-bottom: 30px;
    }

    .story-button {
        display: inline-block;
        padding: 15px 30px;
        background: #D8A26C;
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: 600;
    }

    .story-image img {
        width: 100%;
        border-radius: 10px;
    }

    /* 客户评价 */
    .testimonials-section {
        padding: 80px 0;
        background: #f9f9f9;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .testimonial-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .stars {
        color: #FFD700;
        font-size: 20px;
        margin-bottom: 15px;
    }

    .testimonial-card p {
        font-size: 16px;
        line-height: 1.6;
        color: #666;
        margin-bottom: 15px;
    }

    .author {
        font-weight: 600;
        color: #333;
    }

    /* 联系我们 */
    .contact-cta-section {
        padding: 20px 0;
        background: #f9f9f9;
        color: #333;
    }

    .contact-wrapper {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .contact-info {
        display: flex;
        gap: 20px;
        align-items: center;
        flex-wrap: wrap;
    }

    .cta-button {
        display: inline-block;
        padding: 8px 20px;
        background: #D8A26C;
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: 14px;
        transition: background 0.3s ease;
    }

    .cta-button:hover {
        background: #c6925a;
    }

    @media (max-width: 768px) {
        .contact-wrapper {
            flex-direction: column;
            gap: 15px;
        }
        
        .contact-info {
            flex-direction: column;
            gap: 10px;
        }
    }

    .empty-state {
        text-align: center;
        color: #666;
        padding: 40px;
    }

    @media (max-width: 768px) {
        .story-content {
            grid-template-columns: 1fr;
            gap: 30px;
        }
        
        .section-title {
            font-size: 28px;
        }
        
        .products-showcase {
            grid-template-columns: 1fr;
        }
        
        .testimonials-grid {
            grid-template-columns: 1fr;
        }
        
        .contact-info {
            grid-template-columns: 1fr;
        }
    }
</style>
