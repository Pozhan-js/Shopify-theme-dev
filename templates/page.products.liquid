{% layout 'theme' %}

<div class="page-width">
  <header class="section-header text-center">
    <h1 class="section-header__title">{{ page.title }}</h1>
    <p class="section-header__subtitle">匠心独运 · 古韵流芳</p>
  </header>

  {% section 'product-grid' %}

  <style>
    /* 古风样式覆盖 */
    .product-grid {
      margin-top: 50px;
    }

    .card__heading {
      font-family: 'SimSun', serif;
      font-size: 1.2em;
      color: #5c3a21;
    }

    .price-item {
      color: #8b4513;
      font-weight: bold;
    }

    .card {
      border: 1px solid #e0c9ac;
      border-radius: 4px;
      overflow: hidden;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(92, 58, 33, 0.1);
    }

    .card__media {
      background: #f9f5f0;
    }

    .price__sale {
      color: #a52a2a;
    }

    .badge {
      background: #8b4513;
      color: white;
      font-family: 'SimSun', serif;
    }
  </style>
</div>
