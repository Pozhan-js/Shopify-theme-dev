<style>
  .faq-section {
    background-color: #f5f5f5;
    padding: 40px 20px;
    font-family: Arial, sans-serif;
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-category {
    margin-bottom: 40px;
  }

  .faq-category-title {
    color: #8b4b6b;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    background-color: #e8d5dd;
    padding: 15px 20px;
    border-radius: 8px;
    margin: 0 0 20px 0;
  }

  .faq-item {
    margin-bottom: 20px;
  }

  .faq-question {
    font-weight: bold;
    color: #333;
    margin-bottom: 8px;
    font-size: 16px;
  }

  .faq-answer {
    color: #666;
    line-height: 1.6;
    font-size: 15px;
  }

  .contact-message {
    text-align: center;
    margin-top: 40px;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
  }

  .contact-message p {
    font-size: 18px;
    color: #333;
    margin: 0;
  }
</style>

<div class="faq-section">
  <div class="faq-container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'faq_category' %}
          <div class="faq-category">
            <h2 class="faq-category-title">
              {{ block.settings.category_title }}
            </h2>

            {% assign faqs_json = block.settings.faqs | strip %}
            {% if faqs_json != blank %}
              {% assign faqs = faqs_json | parse_json %}
              {% for faq in faqs %}
                <div class="faq-item">
                  <div class="faq-question">
                    {{ faq.question }}
                  </div>
                  <div class="faq-answer">
                    {{ faq.answer }}
                  </div>
                </div>
              {% endfor %}
            {% endif %}
          </div>

        {% when 'single_faq' %}
          <div class="faq-item">
            <div class="faq-question">
              {{ block.settings.question }}
            </div>
            <div class="faq-answer">
              {{ block.settings.answer }}
            </div>
          </div>

        {% when 'contact_message' %}
          <div class="contact-message">
            <p>{{ block.settings.message }}</p>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [],
  "blocks": [
    {
      "type": "faq_category",
      "name": "FAQ Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Category Title"
        },
        {
          "type": "textarea",
          "id": "faqs",
          "label": "FAQs (JSON Format)",
          "info": "Enter FAQs in JSON format: [{\"question\": \"Question?\", \"answer\": \"Answer text.\"}]",
          "default": "[{\"question\": \"Sample question?\", \"answer\": \"Sample answer.\"}]"
        }
      ]
    },
    {
      "type": "single_faq",
      "name": "Single FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here."
        }
      ]
    },
    {
      "type": "contact_message",
      "name": "Contact Message",
      "settings": [
        {
          "type": "text",
          "id": "message",
          "label": "Contact Message",
          "default": "If you have any other questions, please feel free to contact us!"
        }
      ]
    }
  ],
