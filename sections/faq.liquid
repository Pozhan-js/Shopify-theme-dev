<style>
  .faq-section {
    background-color: #f8f8f8;
    padding: 60px 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .faq-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-category {
    margin-bottom: 50px;
  }

  .faq-category-title {
    color: #2c2c2c;
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 30px;
    padding: 0;
    background: none;
    border-radius: 0;
  }

  .faq-item {
    margin-bottom: 25px;
  }

  .faq-question {
    font-weight: 600;
    color: #2c2c2c;
    margin-bottom: 8px;
    font-size: 16px;
    line-height: 1.4;
  }

  .faq-answer {
    color: #555;
    line-height: 1.6;
    font-size: 16px;
    margin-left: 0;
  }

  .contact-message {
    text-align: left;
    margin-top: 50px;
    padding: 0;
    background: none;
    border-radius: 0;
  }

  .contact-message p {
    font-size: 16px;
    color: #2c2c2c;
    margin: 0;
    font-weight: 600;
  }
</style>

<div class="faq-section">
  <div class="faq-container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'faq_category' %}
          <div class="faq-category">
            <h2 class="faq-category-title">
              {{ block.settings.category_title }}
            </h2>

            {% assign faqs_json = block.settings.faqs | strip %}
            {% if faqs_json != blank %}
              {% assign faqs = faqs_json | parse_json %}
              {% for faq in faqs %}
                <div class="faq-item">
                  <div class="faq-question">
                    {{ faq.question }}
                  </div>
                  <div class="faq-answer">
                    {{ faq.answer }}
                  </div>
                </div>
              {% endfor %}
            {% endif %}
          </div>

        {% when 'single_faq' %}
          <div class="faq-item">
            <div class="faq-question">
              {{ block.settings.question }}
            </div>
            <div class="faq-answer">
              {{ block.settings.answer }}
            </div>
          </div>

        {% when 'contact_message' %}
          <div class="contact-message">
            <p>{{ block.settings.message }}</p>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [],
  "blocks": [
    {
      "type": "faq_category",
      "name": "FAQ Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Category Title"
        },
        {
          "type": "textarea",
          "id": "faqs",
          "label": "FAQs (JSON Format)",
          "info": "Enter FAQs in JSON format: [{\"question\": \"Question?\", \"answer\": \"Answer text.\"}]",
          "default": "[{\"question\": \"Sample question?\", \"answer\": \"Sample answer.\"}]"
        }
      ]
    },
    {
      "type": "single_faq",
      "name": "Single FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here."
        }
      ]
    },
    {
      "type": "contact_message",
      "name": "Contact Message",
      "settings": [
        {
          "type": "text",
          "id": "message",
          "label": "Contact Message",
          "default": "If you have any other questions, please feel free to contact us!"
        }
      ]
    }
  ],
  "presets": [
    {
