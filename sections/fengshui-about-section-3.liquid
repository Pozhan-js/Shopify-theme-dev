{% schema %}
{
  "name": "关于我们布局3",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Master Ma"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "Feng Shui Consultant /Energy Alignment "
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Specialist"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#F9F5F0"
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "内容图片"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "内容描述",
      "default": "<p>在这里添加事业财富风水布局的详细描述</p>"
    }
  ],
  "presets": [
    {
      "name": "事业财富风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div
  class="fengshui-about-3-section"
>
  <div class="page-width">
    <div class="about-3-content">
      <div class="content-left">
        <div class="about-words-3">
          <span class="title">{{ section.settings.title_line1 }}</span>
          <span class="sub-title">{{ section.settings.title_line2 }}</span>
          <span class="sub-title">{{ section.settings.title_line3 }}</span>
        </div>
        <div class="content-text">
          {{ section.settings.content_text }}
        </div>
      </div>
      <div class="content-right">
        {% if section.settings.content_image != blank %}
          <img
            src="{{ section.settings.content_image | img_url: '800x' }}"
            alt="事业财富风水布局"
            width="800"
            height="800"
            loading="lazy"
            style="max-width: 100%; height: auto;"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-about-3-section {
    padding: 0;
    background-size: cover;
    background-position: center;
    position: relative;
  }
  .fengshui-about-3-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_color }};
    opacity: 0.85;
    z-index: 0;
  }
  .fengshui-about-3-section .page-width {
    position: relative;
    z-index: 1;
  }

  .about-words-3 {
    text-align: center;
    font-size: 2.2rem;
    color: #5c3a21;
    margin-bottom: 50px;
    margin-top:0;
    display:flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding-top: 50px;
  }
  .about-words-3 .title {
    font-size: 5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .about-words-3 .sub-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .about-words-3 .sub-title {
    font-size: 1.8rem;
    color: #7a5b46;
  }

  .about-3-content {
    display: flex;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-left {
    flex: 1;
  }
  .content-left img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .content-right {
    flex: 1;
    display: flex;
    align-items: center;
  }
  .content-text {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #555;
  }

  @media (max-width: 768px) {
    .about-3-content {
      flex-direction: column;
    }
    .about-3-title {
      font-size: 1.8rem;
    }
  }
</style>
