<div class="brand-intro page-width">
  <div class="brand-intro__container">
    <div class="brand-intro__left">
      <div class="brand-intro__richtext">
        {{ section.settings.richtext }}
      </div>
      
      <div class="brand-intro__text-columns">
        <div class="brand-intro__column">
          <h3 class="brand-intro__column-title" style="font-size: {{ section.settings.title_left_size }}px">
            {{ section.settings.title_left }}
          </h3>
          <div class="brand-intro__column-content">
            {{ section.settings.content_left }}
          </div>
        </div>
        <div class="brand-intro__column">
          <h3 class="brand-intro__column-title" style="font-size: {{ section.settings.title_right_size }}px">
            {{ section.settings.title_right }}
          </h3>
          <div class="brand-intro__column-content">
            {{ section.settings.content_right }}
          </div>
        </div>
      </div>
    </div>
    
    <div class="brand-intro__right">
      {% if section.settings.image != blank %}
        <div class="brand-intro__image">
          {% render 'responsive-image', image: section.settings.image %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .brand-intro {
    padding: 60px 0;
  }
  
  .brand-intro__container {
    display: flex;
    gap: 40px;
  }
  
  .brand-intro__left {
    width: 70%;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  
  .brand-intro__right {
    width: 30%;
  }
  
  .brand-intro__richtext {
    width: 100%;
  }
  
  .brand-intro__text-columns {
    display: flex;
    gap: 20px;
  }
  
  .brand-intro__column {
    width: 50%;
    padding: 0 15px;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 20px;
  }
  
  .brand-intro__column-title {
    width: 30%;
    text-align: right;
  }
  
  .brand-intro__column-content {
    width: 70%;
    text-align: left;
  }
  
  .brand-intro__image {
    width: 100%;
    height: 100%;
    position: relative;
    padding-top: 100%;
  }
  
  .brand-intro__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  @media (max-width: 768px) {
    .brand-intro__container {
      flex-direction: column;
    }
    
    .brand-intro__left,
    .brand-intro__right {
      width: 100%;
    }
    
    .brand-intro__text-columns {
      flex-direction: column;
    }
    
    .brand-intro__title-column,
    .brand-intro__content-column {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "品牌介绍",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "richtext",
      "label": "富文本内容",
      "default": "<p>在这里输入品牌介绍文本</p>"
    },
    {
      "type": "text",
      "id": "title_left",
      "label": "左侧标题",
      "default": "品牌故事"
    },
    {
      "type": "richtext",
      "id": "content_left",
      "label": "左侧内容",
      "default": "<p>在这里输入品牌故事内容</p>"
    },
    {
      "type": "range",
      "id": "title_left_size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "左侧标题大小",
      "default": 24
    },
    {
      "type": "text",
      "id": "title_right",
      "label": "右侧标题",
      "default": "品牌理念"
    },
    {
      "type": "richtext",
      "id": "content_right",
      "label": "右侧内容",
      "default": "<p>在这里输入品牌理念内容</p>"
    },
    {
      "type": "range",
      "id": "title_right_size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "右侧标题大小",
      "default": 24
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "右侧图片"
    }
  ],
  "presets": [
    {
      "name": "品牌介绍",
      "category": "custom"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
