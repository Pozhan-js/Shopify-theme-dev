<div class="brand-story-section">
  <div class="page-width">
    <div class="story-container">
      <div class="story-header">
        <h2 class="story-title">{{ section.settings.title | default: 'Our Story' | escape }}</h2>
        <div class="story-subtitle">{{ section.settings.subtitle | default: 'Since 2015' | escape }}</div>
      </div>
      
      <div class="story-content">
        <div class="story-text">
          {{ section.settings.description | default: 'Since 2015, we have insisted on handmade production, using high-quality ingredients, and carefully baking every product. From a small family workshop to multiple stores today, we have always stayed true to our original intention.' | escape }}
        </div>
        
        <div class="story-features">
          {% if section.settings.feature1 != blank %}
            <div class="feature-item">
              <span class="feature-icon">ü•ê</span>
              <span class="feature-text">{{ section.settings.feature1 | default: 'Handmade with Love' | escape }}</span>
            </div>
          {% endif %}
          
          {% if section.settings.feature2 != blank %}
            <div class="feature-item">
              <span class="feature-icon">üåæ</span>
              <span class="feature-text">{{ section.settings.feature2 | default: 'Premium Ingredients' | escape }}</span>
            </div>
          {% endif %}
          
          {% if section.settings.feature3 != blank %}
            <div class="feature-item">
              <span class="feature-icon">‚ù§Ô∏è</span>
              <span class="feature-text">{{ section.settings.feature3 | default: 'Family Tradition' | escape }}</span>
            </div>
          {% endif %}
        </div>
        
        {% if section.settings.show_button %}
          <div class="story-cta">
            <a href="{{ section.settings.button_link | default: '/pages/about' }}" class="story-button">
              {{ section.settings.button_text | default: 'Learn More' | escape }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.brand-story-section {
  padding: 50px 0;
  background: linear-gradient(135deg, #F9F2EB 0%, #F4EEE6 100%);
}

.story-container {
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.story-header {
  margin-bottom: 24px;
}

.story-title {
  font-size: 28px;
  color: #8B4513;
  margin-bottom: 8px;
  font-weight: 600;
}

.story-subtitle {
  font-size: 16px;
  color: #D8A26C;
  font-weight: 500;
}

.story-content {
  max-width: 500px;
  margin: 0 auto;
}

.story-text {
  font-size: 16px;
  line-height: 1.6;
  color: #555;
  margin-bottom: 24px;
}

.story-features {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.feature-icon {
  font-size: 24px;
  margin-bottom: 4px;
}

.feature-text {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

.story-cta {
  margin-top: 24px;
}

.story-button {
  display: inline-block;
  padding: 12px 28px;
  background: #D8A26C;
  color: white;
  text-decoration: none;
  border-radius: 24px;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(216, 162, 108, 0.3);
}

.story-button:hover {
  background: #c6925a;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(216, 162, 108, 0.4);
}

@media (max-width: 768px) {
  .brand-story-section {
    padding: 60px 20px;
  }
  
  .story-title {
    font-size: 32px;
  }
  
  .story-subtitle {
    font-size: 16px;
  }
  
  .story-text {
    font-size: 16px;
    margin-bottom: 30px;
  }
  
  .story-features {
    flex-direction: column;
    gap: 20px;
  }
  
  .feature-item {
    flex-direction: row;
    gap: 12px;
  }
}
</style>

{% schema %}
{
  "name": "Brand Story Section",
  "tag": "section",
  "class": "brand-story-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Since 2015"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Since 2015, we have insisted on handmade production, using high-quality ingredients, and carefully baking every product. From a small family workshop to multiple stores today, we have always stayed true to our original intention."
    },
    {
      "type": "text",
      "id": "feature1",
      "label": "Feature 1",
      "default": "Handmade with Love"
    },
    {
      "type": "text",
      "id": "feature2",
      "label": "Feature 2",
      "default": "Premium Ingredients"
    },
    {
      "type": "text",
      "id": "feature3",
      "label": "Feature 3",
      "default": "Family Tradition"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Brand Story Section"
    }
  ]
}
{% endschema %}
