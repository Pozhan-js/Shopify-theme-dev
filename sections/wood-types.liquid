<div class="wood-types">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        {{ section.settings.title | default: "Customize Your Pilates Equipment Frame – Wood Types" }}
      </h2>
      <p class="section-subtitle">
        {{ section.settings.subtitle | default: "Choose the look and performance that fits your brand and studio aesthetic." }}
      </p>
    </div>
    
    <div class="wood-types-grid">
      <div class="wood-type-card">
        <h3 class="wood-type-title">
          {{ section.settings.maple_title | default: "Maple Wood Bed Frame" }}
        </h3>
        <div class="wood-type-image">
          {% if section.settings.maple_image != blank %}
            <img src="{{ section.settings.maple_image | img_url: '572x320' }}" alt="{{ section.settings.maple_title }}" class="wood-image">
          {% else %}
            <div class="wood-image-placeholder maple-bg">
              <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?ixlib=rb-4.0.3&auto=format&fit=crop&w=572&q=80" alt="Maple Wood Bed Frame" class="wood-image">
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="wood-type-card">
        <h3 class="wood-type-title">
          {{ section.settings.walnut_title | default: "Walnut Wood Bed Frame" }}
        </h3>
        <div class="wood-type-image">
          {% if section.settings.walnut_image != blank %}
            <img src="{{ section.settings.walnut_image | img_url: '572x320' }}" alt="{{ section.settings.walnut_title }}" class="wood-image">
          {% else %}
            <div class="wood-image-placeholder walnut-bg">
              <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?ixlib=rb-4.0.3&auto=format&fit=crop&w=572&q=80" alt="Walnut Wood Bed Frame" class="wood-image">
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

