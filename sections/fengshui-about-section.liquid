{% schema %}
{
  "name": "关于我们布局1",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Piece"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "together"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Your"
    },
    {
      "type": "text",
      "id": "title_line4",
      "label": "标题4",
      "default": "perfect"
    },
    {
      "type": "text",
      "id": "title_line5",
      "label": "标题5",
      "default": "energy"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#F9F5F0"
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "内容图片"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "内容描述",
      "default": "<p>在这里添加事业财富风水布局的详细描述</p>"
    }
  ],
  "presets": [
    {
      "name": "事业财富风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="fengshui-about-section">
  <div class="page-width">
    <div class="about-content-vertical">
      {% if section.settings.content_image != blank %}
        <div class="content-image">
          <img
            src="{{ section.settings.content_image | img_url: '600x' }}"
            alt="事业财富风水布局"
            width="600"
            height="600"
            loading="lazy"
          >
        </div>
      {% endif %}
      
      <div class="content-description">
        {{ section.settings.content_text }}
      </div>
      
      {% if section.settings.button_text != blank %}
        <div class="content-button">
          <a href="{{ section.settings.button_link }}" class="button fengshui-button">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .fengshui-about-section {
    padding: 60px 0;
    background-size: cover;
    background-position: center;
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  .fengshui-about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_color }};
    z-index: 0;
  }
  
  .fengshui-about-section .page-width {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .about-content-vertical {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
    gap: 30px;
    padding: 0 30px;
  }

  .content-image {
    margin-bottom: 20px;
  }
  
  .content-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .content-description {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #fff;
    max-width: 800px;
    margin: 0 auto;
  }

  .content-button {
    margin-top: 20px;
  }

  .fengshui-button {
    background-color: transparent;
    color: white;
    padding: 12px 30px;
    border: 2px solid white;
    border-radius: 4px;
    font-size: 1.5rem;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    --border-opacity: transparent;
    text-decoration: none;
  }

  .fengshui-button:hover {
    background-color: white;
    color: #333;
    border-color: white;
    border: 2px solid white;
    outline: none;
    box-shadow: none;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .fengshui-about-section {
      padding: 30px 15px;
      min-height: auto;
    }
    
    .about-content-vertical {
      gap: 25px;
      padding: 0 20px;
      max-width: 100%;
    }
    
    .content-image img {
      max-width: 400px;
    }
    
    .content-description {
      font-size: 1.4rem;
      max-width: 100%;
    }
  }
</style>
