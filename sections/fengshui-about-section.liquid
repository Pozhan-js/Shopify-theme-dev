{% schema %}
{
  "name": "关于我们布局1",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Piece"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "together"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Your"
    },
    {
      "type": "text",
      "id": "title_line4",
      "label": "标题4",
      "default": "perfect"
    },
    {
      "type": "text",
      "id": "title_line5",
      "label": "标题5",
      "default": "energy"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#F9F5F0"
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "内容图片"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "内容描述",
      "default": "<p>在这里添加事业财富风水布局的详细描述</p>"
    }
  ],
  "presets": [
    {
      "name": "事业财富风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div
  class="fengshui-about-section"
>
  <div class="page-width">
    <div class="about-content">
      <div class="content-left">
        {% if section.settings.content_image != blank %}
          <img
            src="{{ section.settings.content_image | img_url: '800x' }}"
            alt="事业财富风水布局"
            width="800"
            height="800"
            loading="lazy"
            style="max-width: 100%; height: auto;"
          >
        {% endif %}
      </div>
      <div class="content-right">
        <div class="content-text">
          <div class="about-words">
            <span class="word">{{ section.settings.title_line1 }}</span>
            <span class="word">{{ section.settings.title_line2 }}</span>
            <span class="word">{{ section.settings.title_line3 }}</span>
            <span class="word">{{ section.settings.title_line4 }}</span>
            <span class="word">{{ section.settings.title_line5 }}</span>
          </div>
          <div>{{ section.settings.content_text }}</div>
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="button fengshui-button">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-about-section {
    padding: 30px 0;
    background-size: cover;
    background-position: center;
    position: relative;
  }
  .fengshui-about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_color }};
    z-index: 0;
  }
  .fengshui-about-section .page-width {
    position: relative;
    z-index: 1;
  }

  .about-words {
    display: flex;
    flex-direction: column;
    font-size: 4rem;
    text-shadow: 2px 2px 4px rgba(255,255,255,0.1);
    pointer-events: none;
    text-align: right;
  }

  .about-title {
    text-align: right;
    font-size: 5rem;
    color: #fff;
  }

  .about-content {
    display: flex;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-left {
    flex: 1;
  }
  .content-left img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .content-right {
    flex: 1;
    display: flex;
    align-items: center;
  }
  .content-text {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #fff;
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .fengshui-button {
    width: 310px;
    background-color: #ddd;
    color: #000;
    padding: 15px 20px;
    border-radius: 4px;
    font-size: 1.5rem;
    margin-bottom: 20px;
    display: inline-block;
  }

  .fengshui-button:hover {
    background-color: #fff;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .about-content {
      flex-direction: column;
    }
    .about-title {
      font-size: 1.8rem;
    }
  }
</style>
