{% schema %}
{
  "name": "风水咨询按钮",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "预约风水咨询"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    }
  ],
  "presets": [
    {
      "name": "风水咨询按钮",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<style>
  .consult-button {
    display: inline-block;
    padding: 12px 30px;
    background-color: #ddd;
    color: #000;
    text-decoration: none;
    border-radius: 4px;
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .consult-button:hover {
    background-color: #fff;
    transform: translateY(-2px);
  }
</style>

<a href="{{ section.settings.button_link }}" class="button consult-button">
  {{ section.settings.button_text }}
</a>
