{% schema %}
{
  "name": "风水咨询按钮",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "Unlock Custom Feng Shui Solution"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    }
  ],
  "presets": [
    {
      "name": "风水咨询按钮",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<style>
  .consult-button-container {
    text-align: center;
    width: 100%;
    margin: 20px 0;
  }

  .consult-button {
    display: inline-block;
    padding: 12px 30px;
    background-color: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 4px;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    margin: 0 auto;
    --border-opacity: transparent;
  }

  .consult-button:hover {
    background-color: white;
    color: #333;
    border-color: white;
    border: 2px solid white;
    outline: none;
    box-shadow: none;
    transform: translateY(-2px);
  }
</style>

<div class="consult-button-container">
  <a href="{{ section.settings.button_link }}" class="button consult-button">
    {{ section.settings.button_text }}
  </a>
</div>
