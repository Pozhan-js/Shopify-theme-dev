<div class="store-info-section">
  <!-- 顶部标题区域 -->
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
    </div>
  </div>

  <!-- 主要内容区域 -->
  <div class="main-content">
    <div class="container">
      <div class="info-content">
        <!-- 店铺信息内容 - 富文本编辑 -->
        <div class="store-content-section">
          {{ section.settings.store_content }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .store-info-section {
    font-family: 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', sans-serif;
  }

  .hero-section {
    background: linear-gradient(135deg, #2d5a4a 0%, #1a3d32 100%);
    padding: 80px 0;
    text-align: center;
    color: white;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    margin: 0;
    color: #ffffff;
  }

  .main-content {
    padding: 80px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .info-content {
    margin: 0 auto;
    width: 50%;
    text-align: left;
  }

  .store-content-section {
    margin-bottom: 40px;
  }

  .store-content-section h1,
  .store-content-section h2,
  .store-content-section h3,
  .store-content-section h4,
  .store-content-section h5,
  .store-content-section h6 {
    color: #333;
    margin: 30px 0 15px 0;
    font-weight: 500;
    line-height: 1.4;
  }

  .store-content-section h1 {
    font-size: 1.8rem;
  }

  .store-content-section h2 {
    font-size: 1.5rem;
  }

  .store-content-section h3 {
    font-size: 1.3rem;
  }

  .store-content-section h4 {
    font-size: 1.1rem;
  }

  .store-content-section h5,
  .store-content-section h6 {
    font-size: 1rem;
  }

  .store-content-section p {
    font-size: 1rem;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.7;
  }

  .store-content-section ul,
  .store-content-section ol {
    margin: 15px 0;
    padding-left: 20px;
  }

  .store-content-section li {
    font-size: 1rem;
    color: #333;
    margin: 8px 0;
    line-height: 1.6;
  }

  .store-content-section strong {
    font-weight: 600;
    color: #222;
  }

  .store-content-section em {
    font-style: italic;
    color: #555;
  }

  .store-content-section a {
    color: #2d5a4a;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .store-content-section a:hover {
    color: #1a3d32;
  }

  .store-content-section blockquote {
    border-left: 4px solid #2d5a4a;
    padding-left: 20px;
    margin: 20px 0;
    font-style: italic;
    color: #666;
  }

  /* 增强的表格样式 */
  .store-content-section table {
    width: 100%;
    border-collapse: collapse;
    margin: 25px 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
    background-color: #fff;
  }

  .store-content-section th,
  .store-content-section td {
    border: 1px solid #e0e0e0;
    padding: 15px 12px;
    text-align: left;
    vertical-align: top;
  }

  .store-content-section th {
    background: linear-gradient(135deg, #2d5a4a 0%, #1a3d32 100%);
    color: #ffffff;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .store-content-section td {
    font-size: 0.95rem;
    color: #333;
    line-height: 1.6;
  }

  .store-content-section tbody tr {
    transition: background-color 0.2s ease;
  }

  .store-content-section tbody tr:nth-child(even) {
    background-color: #f8f9fa;
  }

  .store-content-section tbody tr:hover {
    background-color: #e8f5e8;
  }

  /* 表格内的特殊样式 */
  .store-content-section table strong {
    color: #2d5a4a;
    font-weight: 600;
  }

  .store-content-section table em {
    color: #666;
    font-style: italic;
  }

  /* 响应式表格 */
  .store-content-section .table-wrapper {
    overflow-x: auto;
    margin: 25px 0;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .store-content-section hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 30px 0;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .store-content-section {
      margin-bottom: 30px;
    }

    .store-content-section h1 {
      font-size: 1.5rem;
    }

    .store-content-section h2 {
      font-size: 1.3rem;
    }

    .store-content-section h3 {
      font-size: 1.2rem;
    }

    .main-content {
      padding: 40px 0;
    }

    .hero-section {
      padding: 60px 0;
    }

    .info-content {
      width: 90%;
    }

    /* 移动端表格优化 */
    .store-content-section table {
      font-size: 0.85rem;
      margin: 20px 0;
    }

    .store-content-section th,
    .store-content-section td {
      padding: 10px 8px;
    }

    .store-content-section th {
      font-size: 0.8rem;
    }

    /* 移动端表格滚动提示 */
    .store-content-section .table-wrapper::after {
      content: '← スクロールしてください →';
      display: block;
      text-align: center;
      font-size: 0.75rem;
      color: #999;
      margin-top: 8px;
    }
  }

  /* 表格内容的特殊格式 */
  .store-content-section table .time-cell {
    font-weight: 500;
    color: #2d5a4a;
  }

  .store-content-section table .highlight-cell {
    background-color: #fff3cd;
    border-left: 3px solid #ffc107;
  }

  .store-content-section table .important-cell {
    background-color: #f8d7da;
    border-left: 3px solid #dc3545;
  }

  .store-content-section table .success-cell {
    background-color: #d4edda;
    border-left: 3px solid #28a745;
  }
</style>

