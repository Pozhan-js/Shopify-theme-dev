<div class="store-info-section">
  <!-- 顶部标题区域 -->
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
    </div>
  </div>

  <!-- 主要内容区域 -->
  <div class="main-content">
    <div class="container">
      <!-- 店铺信息标题 -->
      <div class="section-header">
        <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
      </div>

      <div class="info-content">
        <!-- 店铺基础信息 -->
        <div class="basic-info-section">
          <!-- 营业时间 -->
          <div class="info-block">
            <h3 class="info-label">{{ section.settings.hours_label }}</h3>
            <p class="info-value">{{ section.settings.hours_value }}</p>
          </div>

          <!-- 定休日 -->
          <div class="info-block">
            <h3 class="info-label">{{ section.settings.holiday_label }}</h3>
            <p class="info-value">{{ section.settings.holiday_value }}</p>
          </div>

          <!-- 住所 -->
          <div class="info-block">
            <h3 class="info-label">{{ section.settings.address_label }}</h3>
            <p class="info-value">{{ section.settings.address_value }}</p>
          </div>

          <!-- 电话 -->
          <div class="info-block">
            <h3 class="info-label">{{ section.settings.tel_label }}</h3>
            <p class="info-value">{{ section.settings.tel_value }}</p>
          </div>

          <!-- 传真 -->
          <div class="info-block">
            <h3 class="info-label">{{ section.settings.fax_label }}</h3>
            <p class="info-value">{{ section.settings.fax_value }}</p>
          </div>
        </div>

        <!-- 交通信息 -->
        <div class="access-info-section">
          <!-- 最寄り駅からのアクセス -->
          <div class="access-section">
            <h3 class="access-title">{{ section.settings.station_access_title }}</h3>

            <div class="access-group">
              <h4 class="access-subtitle">{{ section.settings.metro_title }}</h4>
              {% for access in section.blocks %}
                {% if access.type == 'metro_access' %}
                  <p class="access-item">{{ access.settings.description }}</p>
                {% endif %}
              {% endfor %}
            </div>

            <div class="access-group">
              <h4 class="access-subtitle">{{ section.settings.jr_title }}</h4>
              {% for access in section.blocks %}
                {% if access.type == 'jr_access' %}
                  <p class="access-item">{{ access.settings.description }}</p>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- 车からのアクセス -->
          <div class="access-section">
            <h3 class="access-title">{{ section.settings.car_access_title }}</h3>
            <p class="access-description">{{ section.settings.car_access_description }}</p>
            <p class="access-note">{{ section.settings.parking_note }}</p>
          </div>

          <!-- Google Map 按钮 -->
          <div class="map-section">
            <a href="{{ section.settings.map_url }}" class="map-button" target="_blank">
              {{ section.settings.map_button_text }}
            </a>
          </div>
        </div>
      </div>

      <!-- 地图图片 -->
      {% if section.settings.map_image %}
        <div class="map-image-section">
          <img src="{{ section.settings.map_image | img_url: 'master' }}" alt="店舗地図" class="map-image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .store-info-section {
    font-family: 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', sans-serif;
  }

  .hero-section {
    background: linear-gradient(135deg, #2d5a4a 0%, #1a3d32 100%);
    padding: 80px 0;
    text-align: center;
    color: white;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    margin: 0;
  }

  .main-content {
    background-color: #f8f8f8;
    padding: 80px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-subtitle {
    font-size: 0.9rem;
    color: #666;
    letter-spacing: 0.2em;
    margin: 0 0 10px 0;
    text-transform: uppercase;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 300;
    color: #333;
    margin: 0;
    letter-spacing: 0.05em;
  }

  .info-content {
    margin: 0 auto 60px auto;
    width: 50%;
    text-align: left;
  }

  .basic-info-section {
    margin-bottom: 60px;
  }

  .access-info-section {
    margin-bottom: 40px;
  }

  .info-block {
    margin-bottom: 30px;
  }

  .info-label {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 8px 0;
    font-weight: normal;
  }

  .info-value {
    font-size: 1rem;
    color: #333;
    margin: 0;
    line-height: 1.6;
  }

  .access-section {
    margin-bottom: 40px;
  }

  .access-title {
    font-size: 1.2rem;
    color: #333;
    margin: 0 0 20px 0;
    font-weight: 500;
    text-align: left;
  }

  .access-group {
    margin-bottom: 25px;
  }

  .access-subtitle {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 10px 0;
    font-weight: normal;
    text-align: left;
  }

  .access-item {
    font-size: 0.9rem;
    color: #333;
    margin: 0 0 5px 0;
    line-height: 1.6;
    text-align: left;
  }

  .access-description {
    font-size: 0.9rem;
    color: #333;
    margin: 0 0 10px 0;
    line-height: 1.6;
    text-align: left;
  }

  .access-note {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
    line-height: 1.6;
    text-align: left;
  }

  .map-section {
    margin-top: 30px;
    text-align: left;
  }

  .map-button {
    display: inline-block;
    border: 1px solid #333;
    padding: 12px 30px;
    color: #333;
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }

  .map-button:hover {
    background-color: #333;
    color: white;
  }

  .map-image-section {
    margin: 40px auto 0 auto;
    width: 50%;
    text-align: left;
  }

  .map-image {
    width: 100%;
    max-width: 800px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .basic-info-section {
      margin-bottom: 40px;
    }

    .main-content {
      padding: 40px 0;
    }

    .hero-section {
      padding: 60px 0;
    }

    .info-content {
      width: 90%;
    }

    .map-image-section {
      width: 90%;
    }
  }
</style>

