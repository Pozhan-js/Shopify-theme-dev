<div class="store-info-section">
  <!-- 顶部标题区域 -->
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
    </div>
  </div>

  <!-- 主要内容区域 -->
  <div class="main-content">
    <div class="container">
      <!-- 店铺信息标题 -->
      <div class="section-header">
        <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
      </div>

      <div class="info-content">
        <!-- 店铺信息内容 - 富文本编辑 -->
        <div class="store-content-section">
          {{ section.settings.store_content }}
        </div>

        <!-- Google Map 按钮 -->
        {% if section.settings.map_url != blank %}
          <div class="map-section">
            <a href="{{ section.settings.map_url }}" class="map-button" target="_blank">
              {{ section.settings.map_button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      <!-- 地图图片 -->
      {% if section.settings.map_image %}
        <div class="map-image-section">
          <img src="{{ section.settings.map_image | img_url: 'master' }}" alt="店舗地図" class="map-image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .store-info-section {
    font-family: 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', sans-serif;
  }

  .hero-section {
    background: linear-gradient(135deg, #2d5a4a 0%, #1a3d32 100%);
    padding: 80px 0;
    text-align: center;
    color: white;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    margin: 0;
  }

  .main-content {
    background-color: #f8f8f8;
    padding: 80px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-subtitle {
    font-size: 0.9rem;
    color: #666;
    letter-spacing: 0.2em;
    margin: 0 0 10px 0;
    text-transform: uppercase;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 300;
    color: #333;
    margin: 0;
    letter-spacing: 0.05em;
  }

  .info-content {
    margin: 0 auto 60px auto;
    width: 50%;
    text-align: left;
  }

  .store-content-section {
    margin-bottom: 40px;
  }

  .store-content-section h1,
  .store-content-section h2,
  .store-content-section h3,
  .store-content-section h4,
  .store-content-section h5,
  .store-content-section h6 {
    color: #333;
    margin: 30px 0 15px 0;
    font-weight: 500;
    line-height: 1.4;
  }

  .store-content-section h1 {
    font-size: 1.8rem;
  }

  .store-content-section h2 {
    font-size: 1.5rem;
  }

  .store-content-section h3 {
    font-size: 1.3rem;
  }

  .store-content-section h4 {
    font-size: 1.1rem;
  }

  .store-content-section h5,
  .store-content-section h6 {
    font-size: 1rem;
  }

  .store-content-section p {
    font-size: 1rem;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.7;
  }

  .store-content-section ul,
  .store-content-section ol {
    margin: 15px 0;
    padding-left: 20px;
  }

  .store-content-section li {
    font-size: 1rem;
    color: #333;
    margin: 8px 0;
    line-height: 1.6;
  }

  .store-content-section strong {
    font-weight: 600;
    color: #222;
  }

  .store-content-section em {
    font-style: italic;
    color: #555;
  }

  .store-content-section a {
    color: #2d5a4a;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .store-content-section a:hover {
    color: #1a3d32;
  }

  .store-content-section blockquote {
    border-left: 4px solid #2d5a4a;
    padding-left: 20px;
    margin: 20px 0;
    font-style: italic;
    color: #666;
  }

  .store-content-section table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
  }

  .store-content-section th,
  .store-content-section td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
  }

  .store-content-section th {
    background-color: #f5f5f5;
    font-weight: 600;
    color: #333;
  }

  .store-content-section hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 30px 0;
  }

  .map-section {
    margin-top: 30px;
    text-align: left;
  }

  .map-button {
    display: inline-block;
    border: 1px solid #333;
    padding: 12px 30px;
    color: #333;
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }

  .map-button:hover {
    background-color: #333;
    color: white;
  }

  .map-image-section {
    margin: 40px auto 0 auto;
    width: 50%;
    text-align: left;
  }

  .map-image {
    width: 100%;
    max-width: 800px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .store-content-section {
      margin-bottom: 30px;
    }

    .store-content-section h1 {
      font-size: 1.5rem;
    }

    .store-content-section h2 {
      font-size: 1.3rem;
    }

    .store-content-section h3 {
      font-size: 1.2rem;
    }

    .main-content {
      padding: 40px 0;
    }

    .hero-section {
      padding: 60px 0;
    }

    .info-content {
      width: 90%;
    }

    .map-image-section {
      width: 90%;
    }
  }
</style>

