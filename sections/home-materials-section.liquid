{% comment %}
  Home Materials Section - 材质展示区域
  支持后台配置材质卡片、标题、描述等
{% endcomment %}

<style>
  .materials-section {
    padding: 4rem 0;
    background: white;
  }

  .materials-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .materials-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .materials-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .materials-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 48rem;
    margin: 0 auto;
    line-height: 1.6;
  }

  .materials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .material-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .material-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .material-image {
    width: 100%;
    height: 16rem;
    object-fit: cover;
  }

  .material-content {
    padding: 1.5rem;
  }

  .material-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }

  .material-description {
    color: #6b7280;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .material-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    color: #ef4444;
    font-weight: 500;
  }

  .feature-icon {
    margin-right: 0.5rem;
    color: #10b981;
  }

  @media (max-width: 768px) {
    .materials-title {
      font-size: 2rem;
    }
    
    .materials-subtitle {
      font-size: 1.125rem;
    }
    
    .materials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .material-features {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="materials-section">
  <div class="materials-container">
    <div class="materials-header">
      <h2 class="materials-title">{{ section.settings.title }}</h2>
      <p class="materials-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="materials-grid">
      {% for material in section.settings.materials %}
        <div class="material-card">
          <img src="{{ material.image | image_url: width: 600 }}" 
               alt="{{ material.title }}" 
               class="material-image">
          <div class="material-content">
            <h3 class="material-title">{{ material.title }}</h3>
            <p class="material-description">{{ material.description }}</p>
            <div class="material-features">
              {% for feature in material.features %}
                <div class="feature-item">
                  <i class="fas fa-check-circle feature-icon"></i>
                  {{ feature }}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Materials Section",
  "settings": [
    {
      "type": "header",
      "content": "Section Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Premium Materials & Craftsmanship"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "We are committed to using the finest materials and most skilled craftsmanship to deliver exceptional products"
    },
    {
      "type": "header",
      "content": "Material Cards"
    },
    {
      "type": "list",
      "id": "materials",
      "label": "Material Cards",
      "info": "Add material showcase cards",
      "limit": 6,
      "item": {
        "type": "object",
        "name": "Material",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Material Image",
            "info": "Recommended size: 600x400px"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Material Title",
            "default": "Premium Material"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "High-quality material description"
          },
          {
            "type": "list",
            "id": "features",
            "label": "Features",
            "item": {
              "type": "text",
              "name": "Feature"
            },
            "default": [
              "Premium Quality",
              "Durable",
              "Eco-friendly"
            ]
          }
        ]
      },
      "default": [
        {
          "title": "Premium Leather",
          "description": "Genuine leather with exceptional durability and timeless appeal"
        },
        {
          "title": "Solid Gold",
          "description": "18K solid gold for lasting beauty and value"
        },
        {
          "title": "Natural Gemstones",
          "description": "Hand-selected natural gemstones with brilliant clarity"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Materials",
      "category": "Home Page"
    }
  ]
}
{% endschema %}
