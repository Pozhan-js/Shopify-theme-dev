{% comment %}
  Home Materials Section - 材质展示区域
  使用 blocks 实现可编辑材质卡片，兼容所有 Shopify 主题
{% endcomment %}

<style>
  .materials-section {
    padding: 4rem 0;
    background: white;
  }

  .materials-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .materials-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .materials-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .materials-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 48rem;
    margin: 0 auto;
    line-height: 1.6;
  }

  .materials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .material-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .material-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .material-image {
    width: 100%;
    height: 16rem;
    object-fit: cover;
  }

  .material-content {
    padding: 1.5rem;
  }

  .material-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }

  .material-description {
    color: #6b7280;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .material-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    color: #ef4444;
    font-weight: 500;
  }

  .feature-icon {
    margin-right: 0.5rem;
    color: #10b981;
  }

  @media (max-width: 768px) {
    .materials-title {
      font-size: 2rem;
    }
    
    .materials-subtitle {
      font-size: 1.125rem;
    }
    
    .materials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .material-features {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="materials-section">
  <div class="materials-container">
    <div class="materials-header">
      <h2 class="materials-title">{{ section.settings.title }}</h2>
      <p class="materials-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="materials-grid">
      {% for block in section.blocks %}
        {% if block.type == 'material' %}
          <div class="material-card">
            <img src="{{ block.settings.image | image_url: width: 600 }}" 
                 alt="{{ block.settings.title }}" 
                 class="material-image">
            <div class="material-content">
              <h3 class="material-title">{{ block.settings.title }}</h3>
              <p class="material-description">{{ block.settings.description }}</p>
              <div class="material-features">
                {% if block.settings.feature_1 != blank %}
                  <div class="feature-item">
                    <i class="fas fa-check-circle feature-icon"></i>
                    {{ block.settings.feature_1 }}
                  </div>
                {% endif %}
                {% if block.settings.feature_2 != blank %}
                  <div class="feature-item">
                    <i class="fas fa-check-circle feature-icon"></i>
                    {{ block.settings.feature_2 }}
                  </div>
                {% endif %}
                {% if block.settings.feature_3 != blank %}
                  <div class="feature-item">
                    <i class="fas fa-check-circle feature-icon"></i>
                    {{ block.settings.feature_3 }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
