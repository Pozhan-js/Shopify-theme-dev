{% schema %}
{
  "name": "顶部固定图片",
  "tag": "section",
  "class": "custom-top-image-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "选择图片"
    },
    {
      "type": "range",
      "id": "width",
      "min": 100,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "宽度",
      "default": 220
    },
    {
      "type": "range",
      "id": "height",
      "min": 30,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "高度",
      "default": 64
    },
    {
      "type": "range",
      "id": "left_position",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "左侧距离",
      "default": 40
    },
    {
      "type": "range",
      "id": "top_position",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "顶部距离",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "顶部固定图片"
    }
  ]
}
{% endschema %}

<style>
  .custom-top-image {
    position: fixed;
    z-index: 999;
    left: {{ section.settings.left_position }}px;
    top: {{ section.settings.top_position }}px;
    width: {{ section.settings.width }}px;
    height: {{ section.settings.height }}px;
  }
  .custom-top-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>

<div class="custom-top-image">
  {% if section.settings.logo_image != blank %}
    {{ section.settings.logo_image | image_url: width: 400 | image_tag: loading: 'lazy' }}
  {% endif %}
</div>
