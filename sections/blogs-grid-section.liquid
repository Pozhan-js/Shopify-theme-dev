        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

    .back-home-btn:hover {
        background: #c6925a;
    }

    @media (max-width: 768px) {
        .blogs-grid-section {
            padding: 30px 15px;
        }

        .section-title {
            font-size: 28px;
        }

        .section-subtitle {
            font-size: 14px;
        }

        .articles-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .article-content {
            padding: 15px;
        }

        .article-title {
            font-size: 16px;
        }
    }
