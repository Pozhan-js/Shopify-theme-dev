<div class="blogs-grid-section">
    <div class="section-container">
        {% if section.settings.show_title %}
            <div class="section-header">
                <h2 class="section-title" style="color: {{ section.settings.title_color }};">
                    {{ section.settings.title | default: 'Baking Blog' }}
                </h2>
                {% if section.settings.subtitle != blank %}
                    <p class="section-subtitle">{{ section.settings.subtitle }}</p>
                {% endif %}
            </div>
        {% endif %}

        {% assign blog_handle = section.settings.blog | default: 'news' %}
        {% assign target_blog = blogs[blog_handle] %}

        {% if target_blog and target_blog.articles.size > 0 %}
            <div class="articles-grid">
                {% for article in target_blog.articles limit: section.settings.articles_per_page %}
                    <article class="article-card">
                        {% if article.image %}
                            <div class="article-image">
                                <a href="{{ article.url | replace: '/blogs/', '/recipes/' }}">
                                    <img src="{{ article.image | image_url: width: 300, height: 200, crop: 'center' }}" 
                                         alt="{{ article.title }}" 
                                         loading="lazy">
                                </a>
                            </div>
                        {% else %}
                            <div class="article-image placeholder">
                                <span>ğŸ“</span>
                            </div>
                        {% endif %}
                        
                        <div class="article-content">
                            {% if section.settings.show_date or section.settings.show_tags %}
                                <div class="article-meta">
                                    {% if section.settings.show_date %}
                                        <time class="article-date">{{ article.published_at | date: "%Yå¹´%mæœˆ%dæ—¥" }}</time>
                                    {% endif %}
                                    {% if section.settings.show_tags and article.tags.size > 0 %}
                                        <div class="article-tags">
                                            {% for tag in article.tags limit: 2 %}
                                                <span class="tag">{{ tag }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                            
                            <h3 class="article-title">
                                <a href="{{ article.url }}">{{ article.title }}</a>
                            </h3>
                            
                            {% if section.settings.show_excerpt %}
                                <p class="article-excerpt">
                                    {{ article.excerpt | strip_html | truncate: section.settings.excerpt_length }}
                                </p>
                            {% endif %}
                            
                            {% if section.settings.show_read_more %}
                                <a href="{{ article.url }}" class="read-more">
                                    {{ section.settings.read_more_text | default: 'é˜…è¯»å…¨æ–‡ â†’' }}
                                </a>
                            {% endif %}
                        </div>
                    </article>
                {% endfor %}
            </div>
            
            {% if section.settings.show_view_more and target_blog.articles.size > section.settings.articles_per_page %}
