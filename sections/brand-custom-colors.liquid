<div class="brand-colors-section" {{ section.shopify_attributes }}>
  <div class="container">
    <div class="content-layout">
      <!-- 左侧文字内容 -->
      <div class="text-content">
        <h2 class="main-title">{{ section.settings.main_title }}</h2>

        <div class="description">
          {{ section.settings.description }}
        </div>

        <div class="cta-section">
          <p class="cta-text">{{ section.settings.cta_text }}</p>
          {% if section.settings.show_underline %}
            <div class="underline"></div>
          {% endif %}
        </div>
      </div>

      <!-- 右侧颜色材料图片 -->
      <div class="colors-visual">
        {% if section.settings.colors_image %}
          <img
            src="{{ section.settings.colors_image | img_url: '800x' }}"
            alt="{{ section.settings.colors_image_alt }}"
            class="colors-image"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .brand-colors-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    background-color: {{ section.settings.section_background_color }};
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.content_gap }}px;
    align-items: center;
    min-height: 500px;
  }

  /* 左侧文字内容 */
  .text-content {
    padding-right: 40px;
  }

  .main-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    line-height: {{ section.settings.title_line_height }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    max-width: 500px;
  }

  .description {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    max-width: 520px;
  }

  .cta-section {
    margin-top: {{ section.settings.cta_margin_top }}px;
  }

  .cta-text {
    font-size: {{ section.settings.cta_font_size }}px;
    color: {{ section.settings.cta_color }};
    font-weight: {{ section.settings.cta_font_weight }};
    line-height: {{ section.settings.cta_line_height }};
    margin: 0 0 {{ section.settings.cta_margin_bottom }}px 0;
    max-width: 480px;
  }

  .underline {
    width: {{ section.settings.underline_width }}px;
    height: {{ section.settings.underline_height }}px;
    background-color: {{ section.settings.underline_color }};
    margin-top: {{ section.settings.underline_margin_top }}px;
  }

  /* 右侧颜色图片 */
  .colors-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 40px;
  }

  .colors-image {
    max-width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  /* 响应式设计 */
  @media (max-width: 1024px) {
    .content-layout {
      gap: 40px;
    }

    .text-content {
      padding-right: 20px;
    }

    .colors-visual {
      padding-left: 20px;
    }
  }

  @media (max-width: 768px) {
    .content-layout {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .text-content {
      padding-right: 0;
      order: 1;
    }

    .colors-visual {
      padding-left: 0;
      order: 2;
    }

    .main-title {
      font-size: {{ section.settings.title_font_size | minus: 8 }}px;
    }

    .description {
      font-size: {{ section.settings.description_font_size | minus: 2 }}px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .brand-colors-section {
      padding: {{ section.settings.section_padding_top | divided_by: 2 }}px 0;
    }

    .main-title {
      font-size: {{ section.settings.title_font_size | minus: 12 }}px;
    }
  }
</style>

