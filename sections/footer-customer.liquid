<style>
  .footer {
    width: 100%;
    background-color: #000000;
    padding: 60px 0 30px;
    color: white;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .footer__main {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 80px;
    margin-bottom: 50px;
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer__column-title {
    font-size: 18px;
    font-weight: 600;
    color: white;
    margin: 0 0 25px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__nav-item {
    margin: 0;
  }

  .footer__nav-link {
    color: #cccccc;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    transition: color 0.3s ease;
    display: block;
  }

  .footer__nav-link:hover {
    color: white;
  }

  .footer__social-icons {
    display: flex;
    gap: 15px;
    justify-content: center;
    align-items: center;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: transparent;
    border: 1px solid #333;
    border-radius: 4px;
    color: #cccccc;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background-color: #333;
    color: white;
    border-color: #555;
  }

  .footer__social-icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .footer__bottom {
    border-top: 1px solid #333;
    padding-top: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
  }

  .footer__payment-icons {
    display: flex;
    gap: 8px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .footer__payment-icon {
    height: 32px;
    width: auto;
    border-radius: 4px;
  }

  .footer__copyright {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 14px;
    color: #999;
    text-align: center;
  }

  .footer__copyright-text {
    margin: 0;
  }

  .footer__powered-by {
    color: #999;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__powered-by:hover {
    color: #ccc;
  }

  @media (max-width: 1024px) {
    .footer {
      padding: 50px 0 25px;
    }

    .footer__container {
      padding: 0 30px;
    }

    .footer__main {
      gap: 60px;
      margin-bottom: 40px;
    }

    .footer__column-title {
      font-size: 17px;
      margin-bottom: 20px;
    }

    .footer__nav-list {
      gap: 10px;
    }

    .footer__social-icons {
      gap: 12px;
    }

    .footer__social-link {
      width: 36px;
      height: 36px;
    }

    .footer__social-icon {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 0 20px;
    }

    .footer__container {
      padding: 0 20px;
    }

    .footer__main {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 35px;
    }

    .footer__column-title {
      font-size: 16px;
      margin-bottom: 18px;
    }

    .footer__nav-list {
      gap: 8px;
    }

    .footer__nav-link {
      font-size: 13px;
    }

    .footer__social-icons {
      gap: 10px;
    }

    .footer__social-link {
      width: 34px;
      height: 34px;
    }

    .footer__social-icon {
      width: 16px;
      height: 16px;
    }

    .footer__bottom {
      padding-top: 25px;
      gap: 20px;
    }

    .footer__payment-icons {
      gap: 6px;
    }

    .footer__payment-icon {
      height: 28px;
    }

    .footer__copyright {
      flex-direction: column;
      gap: 10px;
    }

    .footer__copyright-text,
    .footer__powered-by {
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 35px 0 18px;
    }

    .footer__container {
      padding: 0 15px;
    }

    .footer__main {
      gap: 35px;
      margin-bottom: 30px;
    }

    .footer__column-title {
      font-size: 15px;
      margin-bottom: 15px;
    }

    .footer__nav-list {
      gap: 6px;
    }

    .footer__nav-link {
      font-size: 12px;
    }

    .footer__social-icons {
      gap: 8px;
    }

    .footer__social-link {
      width: 32px;
      height: 32px;
    }

    .footer__social-icon {
      width: 14px;
      height: 14px;
    }

    .footer__bottom {
      padding-top: 20px;
      gap: 18px;
    }

    .footer__payment-icons {
      gap: 4px;
    }

    .footer__payment-icon {
      height: 24px;
    }

    .footer__copyright-text,
    .footer__powered-by {
      font-size: 12px;
    }
  }
</style>

<footer class="footer">
  <div class="footer__container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Support Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ section.settings.support_title }}</h3>
        <nav>
          <ul class="footer__nav-list">
            {% for block in section.blocks %}
              {% if block.type == 'support_link' %}
                <li class="footer__nav-item">
                  <a href="{{ block.settings.link_url | default: '#' }}" class="footer__nav-link">
                    {{ block.settings.link_text }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>
      </div>

      <!-- About Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ section.settings.about_title }}</h3>
        <nav>
          <ul class="footer__nav-list">
            {% for block in section.blocks %}
              {% if block.type == 'about_link' %}
                <li class="footer__nav-item">
                  <a href="{{ block.settings.link_url | default: '#' }}" class="footer__nav-link">
                    {{ block.settings.link_text }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>
      </div>

      <!-- Find Us Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ section.settings.social_title }}</h3>
        <div class="footer__social-icons">
          {% for block in section.blocks %}
            {% if block.type == 'social_link' %}
              <a
