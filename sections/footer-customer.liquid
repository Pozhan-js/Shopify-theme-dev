                  </svg>
                {% endif %}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <!-- Payment Icons -->
      <div class="footer__payment-icons">
        {% for block in section.blocks %}
          {% if block.type == 'payment_icon' %}
            {% if block.settings.payment_image %}
              <img
                src="{{ block.settings.payment_image | img_url: '80x' }}"
                alt="{{ block.settings.payment_name | default: 'Payment Method' }}"
                class="footer__payment-icon"
                loading="lazy"
              >
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>

      <!-- Copyright -->
      <div class="footer__copyright">
        <p class="footer__copyright-text">
          {{ section.settings.copyright_text }}
        </p>
        {% if section.settings.powered_by_text != blank %}
          <a
            href="{{ section.settings.powered_by_url | default: 'https://www.shopify.com' }}"
            class="footer__powered-by"
            target="_blank"
            rel="noopener"
          >
            {{ section.settings.powered_by_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

