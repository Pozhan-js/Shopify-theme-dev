      "type": "select",
      "id": "slide_height",
      "options": [
        {
          "value": "large",
          "label": "大"
        },
        {
          "value": "medium",
          "label": "中"
        },
        {
          "value": "small",
          "label": "小"
        }
      ],
      "default": "large",
      "label": "轮播图高度"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "自动轮播",
      "default": true
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "秒",
      "label": "切换速度",
      "default": 5
    }
  ],
  "presets": [
    {
      "name": "珠宝轮播图",
      "settings": {
        "slide_height": "large",
        "auto_rotate": true,
        "change_slides_speed": 5
      }
    }
  ]
}
{% endschema %}
