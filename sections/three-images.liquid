<div class="three-images-section">
  <div class="page-width">
    <div class="three-images-grid">
      {% for i in (1..3) %}
        <div class="image-item">
          {% assign image_key = 'image_' | append: i %}
          {% if section.settings[image_key] != blank %}
            <img src="{{ section.settings[image_key] | img_url: '600x' }}" 
                 alt="{{ section.settings[image_key].alt | escape }}"
                 width="600"
                 height="400"
                 loading="lazy"
                 style="object-fit: cover;">
          {% else %}
            <div class="placeholder-image">{{ 'image' | placeholder_svg_tag }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .three-images-grid {
    display: flex;
    gap: 20px;
  }
  .image-item {
    flex: 1;
    min-width: 0;
  }
  .image-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .placeholder-image {
    background: #f5f5f5;
    padding: 20px;
  }
</style>

{% schema %}
{
  "name": "三图平均分布",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "图片设置"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "图片 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "图片 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "图片 3"
    }
  ],
  "presets": [
    {
      "name": "三图平均分布",
      "category": "图片"
    }
  ]
}
{% endschema %}
