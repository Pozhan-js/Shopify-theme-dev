<div class="custom-text" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;">
  <div class="page-width">
    <div class="rich-text-content" style="min-height: 50px;">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .custom-text {
    margin: 0 auto;
  }
  .rich-text-content {
    line-height: 1.6;
  }
  .rich-text-content p {
    margin: 0 0 1em 0;
  }
  .rich-text-content p:last-child {
    margin-bottom: 0;
  }
</style>

{% schema %}
{
  "name": "自定义富文本",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "间距设置"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 20
    },
    {
      "type": "header",
      "content": "内容设置"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "富文本内容",
      "default": "<p>在这里输入您的文本内容</p>"
    }
  ],
  "presets": [
    {
      "name": "自定义富文本",
      "category": "文本"
    }
  ]
}
{% endschema %}
