<div class="custom-text{% if section.settings.full_width %} full-width{% endif %} align-{{ section.settings.text_alignment }}" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0; background-color: {{ section.settings.background_color }};">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="rich-text-content" style="min-height: 50px;">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .custom-text:not(.full-width) {
    margin: 0 auto;
    width: {% if section.settings.width_type == 'percentage' %}{{ section.settings.width_percentage }}%{% else %}{{ section.settings.width_fixed }}px{% endif %};
  }
  .custom-text.full-width {
    width: 100%;
  }
  .custom-text.align-left {
    text-align: left;
    margin-right: auto;
  }
  .custom-text.align-center {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }
  .custom-text.align-right {
    text-align: right;
    margin-left: auto;
  }
  .rich-text-content {
    line-height: 1.6;
    text-align: {{ section.settings.content_alignment }};
    color: {{ section.settings.text_color }};
  }
  .rich-text-content p {
    margin: 0 0 1em 0;
  }
  .rich-text-content p:last-child {
    margin-bottom: 0;
  }
</style>

{% schema %}
{
  "name": "自定义富文本",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "间距设置"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 20
    },
    {
      "type": "header",
      "content": "内容设置"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "富文本内容",
      "default": "<p>在这里输入您的文本内容</p>"
    },
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "select",
      "id": "width_type",
      "label": "宽度类型",
      "options": [
        {
          "value": "percentage",
          "label": "百分比"
        },
        {
          "value": "fixed",
          "label": "固定宽度"
        }
      ],
      "default": "percentage"
    },
    {
      "type": "range",
      "id": "width_percentage",
      "min": 25,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "宽度百分比",
      "default": 100
    },
    {
      "type": "range",
      "id": "width_fixed",
      "min": 200,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "固定宽度",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "区块对齐",
      "options": [
        {
          "value": "left",
          "label": "左对齐"
        },
        {
          "value": "center",
          "label": "居中对齐"
        },
        {
          "value": "right",
          "label": "右对齐"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "文本对齐",
      "options": [
        {
          "value": "left",
          "label": "左对齐"
        },
        {
          "value": "center",
          "label": "居中对齐"
        },
        {
          "value": "right",
          "label": "右对齐"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色", 
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "占满屏幕宽度",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "自定义富文本",
      "category": "文本"
    }
  ]
}
{% endschema %}
