{% schema %}
{
  "name": "和谐保护风水布局",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Harmony"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "Guardian"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Vortex"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "背景图片"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此添加和谐保护风水布局的详细说明</p>"
    }
  ],
  "presets": [
    {
      "name": "和谐保护风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div
  class="fengshui-harmony-section"
  {% if section.settings.bg_image != blank %}
    style="background: url('{{ section.settings.bg_image | img_url: '2000x' }}')  center center / cover no-repeat;"
  {% endif %}
>
  <div class="harmony-header">
    <h2 class="harmony-title">{{ section.settings.title_line1 }}</h2>
    <h2 class="harmony-title">{{ section.settings.title_line2 }}</h2>
    <h2 class="harmony-title">{{ section.settings.title_line3 }}</h2>
  </div>
</div>

<style>
  .fengshui-harmony-section {
    width: 100%;
    padding: 20px 0 60px;
    background-size: cover;
    background-position: center;
    min-height: 400px;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    position: relative;
    background: linear-gradient(135deg, #f5f0e6 0%, #e8d9c5 100%);
  }
  .fengshui-harmony-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    z-index: 0;
  }
  .harmony-header {
    position: absolute;
    top: 5px;
    right: 0;
    text-align: right;
  }
  .harmony-title {
    margin-right: 15px;
    font-weight: 600;
    font-size: 5rem;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.1);
  }
</style>
