<style>
  .join-the-change {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #333;
  }

  .join-the-change__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .join-the-change__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .join-the-change__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
  }

  .join-the-change__container {
    position: relative;
    z-index: 3;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
    text-align: center;
  }

  .join-the-change__title {
    font-size: 72px;
    font-weight: 300;
    color: white;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    letter-spacing: 3px;
    line-height: 1.1;
    text-transform: uppercase;
  }

  @media (max-width: 1024px) {
    .join-the-change {
      height: 450px;
    }

    .join-the-change__container {
      padding: 0 30px;
    }

    .join-the-change__title {
      font-size: 60px;
      letter-spacing: 2px;
    }
  }

  @media (max-width: 768px) {
    .join-the-change {
      height: 400px;
    }

    .join-the-change__container {
      padding: 0 20px;
    }

    .join-the-change__title {
      font-size: 48px;
      letter-spacing: 1.5px;
    }
  }

  @media (max-width: 480px) {
    .join-the-change {
      height: 350px;
    }

    .join-the-change__container {
      padding: 0 15px;
    }

    .join-the-change__title {
      font-size: 36px;
      letter-spacing: 1px;
    }
  }
</style>

<section class="join-the-change">
  <div class="join-the-change__background">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | img_url: '1920x' }}"
        alt="{{ section.settings.title | default: 'Join The Change' }}"
        loading="lazy"
      >
    {% else %}
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
    {% endif %}
  </div>

  {% if section.settings.show_overlay %}
    <div
      class="join-the-change__overlay"
      style="background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});"
    ></div>
  {% endif %}

  <div class="join-the-change__container">
    {% if section.settings.title != blank %}
      <h2 class="join-the-change__title" style="color: {{ section.settings.title_color }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Join The Change",
  "tag": "section",
  "class": "join-the-change-section",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "JOIN THE CHANGE"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Join The Change"
    }
  ]
}
{% endschema %}
