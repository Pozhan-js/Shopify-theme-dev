{%- liquid
  assign image = section.settings.image
  assign heading = section.settings.heading
  assign sub_title = section.settings.sub_title
-%}

<div class="hero-section">
  {% if image != blank %}
    {{ image | image_url: width: 2000 | image_tag: class: 'hero-media' }}
  {% endif %}

  <div class="hero-content">
    <h1 class="hero-heading">{{ heading }}</h1>
    <p class="hero-subtitle">{{ sub_title }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url }}" class="hero-button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "hero section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景图片"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "标题",
      "default": "The Turning of Light"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "副标题",
      "default": "Tagline#: Ancient Wisdom for Modern Living. Enhance Your Space, Transform Your Life."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "了解更多"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "按钮链接"
    },
  ],
  "presets": [
    {
      "name": "hero section"
    }
  ]
}
{% endschema %}

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .hero-media {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 20px;
  }

  .hero-heading {
    color: white;
    font-size: 3rem;
    margin-bottom: 1rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
  }

  .hero-subtitle {
    color: white;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    max-width: 600px;
  }

  .hero-button {
    display: inline-block;
    padding: 12px 30px;
    background-color: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 4px;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: 1rem;
  }

  .hero-button:hover {
    background-color: white;
    color: #333;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero-heading {
      font-size: 2rem;
    }
    .hero-subtitle {
      font-size: 1.2rem;
      max-width: 80%;
    }
    .hero-button {
      padding: 10px 20px;
      font-size: 1.2rem;
    }
  }
</style>
