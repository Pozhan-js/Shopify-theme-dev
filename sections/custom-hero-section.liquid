{%- liquid
  assign image = section.settings.image
  assign heading = section.settings.heading
  assign sub_title = section.settings.sub_title
-%}

<div class="hero-section">
  {% if image != blank %}
    {{ image | image_url: width: 2000 | image_tag: class: 'hero-media' }}
  {% endif %}

  <div class="hero-content">
    <h1 class="hero-heading">{{ heading }}</h1>
    <p class="hero-heading">{{ sub_title }}</p>
  </div>
</div>

{% schema %}
{
  "name": "hero section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景图片"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "标题",
      "default": "Harmony Flow Feng Shui"
    },
    {
      "type": "text",
      "id": "subTitle",
      "label": "副标题",
      "default": "Tagline#: Ancient Wisdom for Modern Living. Enhance Your Space, Transform Your Life."
    },
  ],
  "presets": [
    {
      "name": "hero section"
    }
  ]
}
{% endschema %}

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .hero-media {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 20px;
  }

  .hero-heading {
    color: white;
    font-size: 3rem;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
  }


  @media (max-width: 768px) {
    .hero-heading {
      font-size: 2rem;
    }
  }
</style>
