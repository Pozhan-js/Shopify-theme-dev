  /* 滚动时的透明度和效果 */
  .shopify-section-header-sticky {
    background: rgba(255, 255, 255, {{ section.settings.scroll_opacity | divided_by: 100.0 }}) !important;
    backdrop-filter: blur({{ section.settings.scroll_blur }}px) !important;
    -webkit-backdrop-filter: blur({{ section.settings.scroll_blur }}px) !important;
    box-shadow: 0 2px {{ section.settings.shadow_intensity }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity | divided_by: 100.0 }}) !important;
  }

