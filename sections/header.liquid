  /* 头部容器固定定位且不占位 */
  .section-header {
    position: fixed !important; /* 固定定位，始终固定在顶部 */
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000; /* 确保在其他内容之上 */
    margin-bottom: 0 !important; /* 移除下边距 */
    background: rgba(255, 255, 255, {{ section.settings.header_opacity | divided_by: 100.0 }}) !important;
    backdrop-filter: blur({{ section.settings.blur_intensity }}px) !important;
    -webkit-backdrop-filter: blur({{ section.settings.blur_intensity }}px) !important;
    box-shadow: 0 2px {{ section.settings.shadow_intensity }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity | divided_by: 100.0 }}) !important;
    transition: all 0.3s ease-in-out; /* 添加平滑过渡效果 */
  }

  .header-wrapper {
    background: rgba(255, 255, 255, {{ section.settings.header_opacity | divided_by: 100.0 }}) !important;
    border-bottom: none !important;
  }

  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 3rem {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 3rem;
    background: rgba(255, 255, 255, {{ section.settings.header_opacity | divided_by: 100.0 }}) !important;
    border-bottom: none !important;
    transition: padding 0.3s ease-in-out; /* 添加内边距过渡效果 */
  }

  /* 确保所有颜色方案下都使用设定的透明度 */
  .color-scheme-1,
  .color-scheme-2,
  .color-scheme-3,
  .color-background-1,
  .color-background-2,
  .gradient {
    background: rgba(255, 255, 255, {{ section.settings.header_opacity | divided_by: 100.0 }}) !important;
    background-color: rgba(255, 255, 255, {{ section.settings.header_opacity | divided_by: 100.0 }}) !important;
    background-image: none !important;
  }

  /* 移除所有可能的背景和边框 */
  .header-wrapper::before,
  .header-wrapper::after,
  .header::before,
  .header::after {
    display: none !important;
  }

  /* 文字颜色保持可读性 */
  .header__heading-link {
    color: {{ section.settings.text_color }} !important;
    transition: color 0.3s ease-in-out;
  }

  .header__icon {
    color: {{ section.settings.text_color }} !important;
    transition: color 0.3s ease-in-out;
  }

  .list-menu__item--link {
