  .shopify-section-header-sticky .header__icon,
  .shopify-section-header-sticky .list-menu__item--link {
    color: {{ section.settings.text_color }} !important;
  }

  /* 隐藏状态保持设定透明度 */
  .shopify-section-header-hidden {
    background: rgba(255, 255, 255, {{ section.settings.scroll_opacity | divided_by: 100.0 }}) !important;
    transform: translateY(-100%);
    transition: transform 0.3s ease-in-out;
  }

  /* 显示状态 */
  .shopify-section-header-revealed {
    transform: translateY(0);
    transition: transform 0.3s ease-in-out;
    background: rgba(255, 255, 255, {{ section.settings.scroll_opacity | divided_by: 100.0 }}) !important;
  }

  /* 移除边框分隔线 */
