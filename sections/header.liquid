  .color-scheme-1,
  .color-scheme-2,
  .color-scheme-3,
  .color-background-1,
  .color-background-2,
  .gradient {

    background-image: none !important;
  }

  /* 移除所有可能的背景和边框 */
  .header-wrapper::before,
  .header-wrapper::after,
  .header::before,
  .header::after {
