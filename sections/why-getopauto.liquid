<style>
  .why-getopauto {
    width: 100%;
    background-color: #ffffff;
    padding: 60px 0;
  }

  .why-getopauto__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .why-getopauto__header {
    text-align: center;
    margin-bottom: 50px;
  }

  .why-getopauto__title {
    font-size: 36px;
    font-weight: 600;
    color: #333;
    margin: 0 0 20px 0;
  }

  .why-getopauto__subtitle {
    font-size: 14px;
    font-weight: 400;
    color: #666;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  .why-getopauto__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    min-height: 600px;
  }

  .why-getopauto__item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .why-getopauto__item--image {
    background: #f8f9fa;
  }

  .why-getopauto__item--text {
    background: #ffffff;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .why-getopauto__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .why-getopauto__item-title {
    font-size: 24px;
    font-weight: 600;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.3;
  }

  .why-getopauto__item-description {
    font-size: 14px;
    font-weight: 400;
    color: #666;
    line-height: 1.6;
    margin: 0;
    max-width: 300px;
  }

  /* 特定布局样式 */
  .why-getopauto__item:nth-child(1) {
    grid-column: 1;
    grid-row: 1;
  }

  .why-getopauto__item:nth-child(2) {
    grid-column: 2;
    grid-row: 1;
  }

  .why-getopauto__item:nth-child(3) {
    grid-column: 1;
    grid-row: 2;
  }

  .why-getopauto__item:nth-child(4) {
    grid-column: 2;
    grid-row: 2;
  }

  .why-getopauto__item:nth-child(5) {
    grid-column: 1;
    grid-row: 3;
  }

  .why-getopauto__item:nth-child(6) {
    grid-column: 2;
    grid-row: 3;
  }

  @media (max-width: 1024px) {
    .why-getopauto {
      padding: 50px 0;
    }

    .why-getopauto__container {
      padding: 0 30px;
    }

    .why-getopauto__title {
      font-size: 32px;
    }

    .why-getopauto__subtitle {
      font-size: 13px;
    }

    .why-getopauto__item--text {
      padding: 30px;
    }

    .why-getopauto__item-title {
      font-size: 22px;
    }

    .why-getopauto__item-description {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .why-getopauto {
      padding: 40px 0;
    }

    .why-getopauto__container {
      padding: 0 20px;
    }

    .why-getopauto__title {
      font-size: 28px;
    }

    .why-getopauto__subtitle {
      font-size: 12px;
    }

    .why-getopauto__content {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .why-getopauto__item:nth-child(1),
    .why-getopauto__item:nth-child(2),
    .why-getopauto__item:nth-child(3),
    .why-getopauto__item:nth-child(4),
    .why-getopauto__item:nth-child(5),
    .why-getopauto__item:nth-child(6) {
      grid-column: 1;
      grid-row: auto;
    }

    .why-getopauto__item--text {
      padding: 25px 20px;
      min-height: 200px;
    }

    .why-getopauto__item--image {
      min-height: 250px;
    }

    .why-getopauto__item-title {
      font-size: 20px;
    }

    .why-getopauto__item-description {
      font-size: 12px;
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .why-getopauto {
      padding: 35px 0;
    }

    .why-getopauto__container {
      padding: 0 15px;
    }

    .why-getopauto__title {
      font-size: 24px;
    }

    .why-getopauto__subtitle {
      font-size: 11px;
    }

    .why-getopauto__item--text {
      padding: 20px 15px;
      min-height: 180px;
    }

    .why-getopauto__item--image {
      min-height: 220px;
    }

    .why-getopauto__item-title {
      font-size: 18px;
      margin-bottom: 12px;
    }

    .why-getopauto__item-description {
      font-size: 11px;
    }
  }
</style>

<section class="why-getopauto">
  <div class="why-getopauto__container">
    <!-- Header -->
    <div class="why-getopauto__header">
      {% if section.settings.title != blank %}
        <h2 class="why-getopauto__title" style="color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="why-getopauto__subtitle" style="color: {{ section.settings.subtitle_color }};">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>

    <!-- Content Grid -->
    <div class="why-getopauto__content">
      {% for block in section.blocks %}
        {% if block.type == 'content_item' %}
          {% if block.settings.item_type == 'image' %}
            <div class="why-getopauto__item why-getopauto__item--image">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | img_url: '600x' }}"
                  alt="{{ block.settings.image_alt | default: 'Why Getopauto' }}"
                  class="why-getopauto__image"
                  loading="lazy"
                >
              {% endif %}
            </div>
          {% elsif block.settings.item_type == 'text' %}
            <div class="why-getopauto__item why-getopauto__item--text">
              {% if block.settings.item_title != blank %}
                <h3 class="why-getopauto__item-title" style="color: {{ block.settings.title_color }};">
                  {{ block.settings.item_title }}
                </h3>
              {% endif %}

              {% if block.settings.item_description != blank %}
                <p class="why-getopauto__item-description" style="color: {{ block.settings.description_color }};">
                  {{ block.settings.item_description }}
                </p>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why Getopauto",
  "tag": "section",
  "class": "why-getopauto-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Getopauto"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#333333"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "If maintaining your truck's peak performance is your priority, you've come to the right place. Getopauto is your one-stop online shop for diesel filter maintenance. Genuine quality, 3rd-party tested filters at a great price."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#666666"
    }
  ],
  "blocks": [
    {
      "type": "content_item",
      "name": "Content Item",
      "settings": [
        {
          "type": "select",
          "id": "item_type",
          "label": "Item Type",
          "options": [
            {
              "value": "image",
              "label": "Image"
            },
            {
              "value": "text",
              "label": "Text"
            }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Only shown when Item Type is Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text",
          "info": "Only shown when Item Type is Image"
        },
        {
          "type": "text",
          "id": "item_title",
          "label": "Title",
          "info": "Only shown when Item Type is Text"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#333333",
          "info": "Only shown when Item Type is Text"
        },
        {
          "type": "textarea",
          "id": "item_description",
          "label": "Description",
          "info": "Only shown when Item Type is Text"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#666666",
          "info": "Only shown when Item Type is Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Getopauto",
      "blocks": [
        {
          "type": "content_item",
          "settings": {
            "item_type": "image"
          }
        },
        {
          "type": "content_item",
          "settings": {
            "item_type": "text",
            "item_title": "OEM Performance",
            "item_description": "Aftermarket filters - OEM form, fit and function."
          }
        },
        {
          "type": "content_item",
          "settings": {
            "item_type": "text",
            "item_title": "Cut the Middleman",
            "item_description": "We are the original manufacturer of filter cartridges with our warehouse located in the United States. We offer a complete range of products at competitive prices, eliminating those annoying markups you encounter with OEMs, distributors, and parts stores."
          }
        },
        {
          "type": "content_item",
          "settings": {
            "item_type": "image"
          }
        },
        {
          "type": "content_item",
          "settings": {
            "item_type": "image"
          }
        },
        {
          "type": "content_item",
          "settings": {
            "item_type": "text",
            "item_title": "Fitment Guaranteed",
            "item_description": "If it doesn't fit, we will offer you a replacement or a refund (*some conditions apply)."
          }
        }
      ]
    }
  ]
}
{% endschema %}
