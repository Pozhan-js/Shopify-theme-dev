<div class="category-section">
  <div class="category-hero">
    <div class="category-hero-content">
      <h1 class="category-title">{{ section.settings.title }}</h1>
      <p class="category-subtitle">{{ section.settings.subtitle }}</p>
    </div>
  </div>

  <div class="category-container">
    <div class="category-grid">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <div class="category-card">
            <div class="category-image">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 400, height: 400, crop: center }}" 
                     alt="{{ block.settings.title }}">
              {% else %}
                <img src="https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=400&h=400&fit=crop" 
                     alt="{{ block.settings.title }}">
              {% endif %}
            </div>
            <div class="category-info">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
              <a href="{{ block.settings.link }}" class="category-link">{{ block.settings.button_text }}</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_featured %}
    <div class="featured-section">
      <h2 class="section-title">{{ section.settings.featured_title }}</h2>
      <div class="featured-grid">
        {% for block in section.blocks %}
          {% if block.type == 'featured' %}
            <div class="featured-item">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 300, height: 300, crop: center }}" 
                     alt="{{ block.settings.title }}">
              {% else %}
                <img src="https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=300&h=300&fit=crop" 
                     alt="{{ block.settings.title }}">
              {% endif %}
              <h4>{{ block.settings.title }}</h4>
              <p>{{ block.settings.description }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</div>

<style>
.category-section {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.category-hero {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  padding: 80px 0;
  text-align: center;
  margin-bottom: 60px;
  border-radius: 8px;
}

.category-title {
  font-size: 42px;
  font-weight: 300;
  color: #1a1a1a;
  margin-bottom: 20px;
  letter-spacing: 2px;
}

.category-subtitle {
  font-size: 18px;
  color: #666;
  font-weight: 300;
}

.category-container {
  padding: 0 20px;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 40px;
  margin-bottom: 80px;
}

.category-card {
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.category-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.category-image {
  width: 100%;
  height: 250px;
  overflow: hidden;
}

.category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.category-card:hover .category-image img {
  transform: scale(1.05);
}

.category-info {
  padding: 30px;
  text-align: center;
}

.category-info h3 {
  font-size: 24px;
  font-weight: 400;
  color: #1a1a1a;
  margin-bottom: 10px;
}

.category-info p {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
  line-height: 1.6;
}

.category-link {
  display: inline-block;
  padding: 12px 30px;
  background: #1a1a1a;
  color: #fff;
  text-decoration: none;
  border-radius: 25px;
  font-size: 14px;
  letter-spacing: 1px;
  transition: background 0.3s ease;
}

.category-link:hover {
  background: #333;
}

.featured-section {
  margin-top: 80px;
}

.section-title {
  font-size: 32px;
  font-weight: 300;
  text-align: center;
  margin-bottom: 40px;
  color: #1a1a1a;
}

.featured-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
}

.featured-item {
  text-align: center;
  padding: 30px;
}

.featured-item img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 20px;
}

.featured-item h4 {
  font-size: 20px;
  font-weight: 400;
  color: #1a1a1a;
  margin-bottom: 10px;
}

.featured-item p {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .category-title {
    font-size: 32px;
  }
  
  .category-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .featured-grid {
    grid-template-columns: 1fr;
  }
}
</style>

