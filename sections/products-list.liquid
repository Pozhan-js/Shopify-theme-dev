<div class="products-list" style="display: flex; flex-wrap: wrap; gap: 32px; justify-content: flex-start; padding-bottom: 48px;">
  {% if collection.products.size > 0 %}
    {% for product in collection.products %}
      <div style="width: 260px; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px #eee; padding: 24px; display: flex; flex-direction: column; align-items: center;">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}" style="width: 180px; height: 180px; object-fit: cover; border-radius: 8px; margin-bottom: 16px;">
        </a>
        <div style="font-size: 1.1rem; font-weight: bold; color: #222; margin-bottom: 8px;">{{ product.title }}</div>
        <div style="color: #D8A26C; font-size: 1.1rem; margin-bottom: 16px;">{{ product.price | money }}</div>
        <a href="{{ product.url }}" style="background: #D8A26C; color: #fff; padding: 8px 24px; border-radius: 6px; font-weight: bold; text-decoration: none;">查看详情</a>
      </div>
    {% endfor %}
  {% else %}
    <div style="text-align:center; color:#999; width:100%;">暂无商品，请在后台添加产品。</div>
  {% endif %}
</div>