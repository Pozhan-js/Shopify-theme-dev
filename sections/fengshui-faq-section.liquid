{% schema %}
{
  "name": "faq布局",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "大标题",
      "default": "天轨八卦风水布局"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此输入风水布局内容</p>"
    },
        {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "Unlock Custom Feng Shui Solution"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    }
  ],
  "presets": [
    {
      "name": "天轨八卦风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="fengshui-celestial-section">
  <div
    class="page-width"
  >
    <h2 class="celestial-title">{{ section.settings.title }}</h2>
    <div class="celestial-content">
      {{ section.settings.content }}
    </div>
  </div>
  {% if section.settings.button_text != blank %}
    <a href="{{ section.settings.button_link }}" class="button fengshui-button">
      {{ section.settings.button_text }}
    </a>
  {% endif %}
</div>

<style>
  .fengshui-celestial-section {
    padding: 0;
    position: relative;
    min-height: 500px;
    background: #000000;
    color: #fff;
  }

  .page-width {
    position: relative;
    z-index: 11;
  }

  .celestial-title {
    text-align: center;
    font-size: 2.2rem;
    color: #fff;
    margin-bottom: 30px;
    margin-top: 0;
    padding: 30px;
  }

  .celestial-content {
    max-width: 1000px;
    margin: 0 auto 50px;
    padding: 30px 30px 100px;
    background: transparent;
    border-radius: 8px;
  }

  .fengshui-button {
    background-color: #ddd;
    color: #000;
    padding: 15px 40px;
    border-radius: 4px;
    font-size: 1.5rem;
    display: inline-block;
    position:absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
  }

  .fengshui-button:hover {
    background-color: #fff;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .fengshui-celestial-section {
      padding: 0;
      min-height: 300px;
    }

    .celestial-title {
      font-size: 1.8rem;
    }
  }
</style>
