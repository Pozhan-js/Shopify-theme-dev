<style>
  .product-categories {
    width: 100%;
    background-color: #ffffff;
    padding: 60px 0;
  }

  .product-categories__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .product-categories__buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .product-categories__button {
    display: inline-block;
    padding: 12px 24px;
    border: 1px solid #871d16;
    background-color: transparent;
    color: #871d16;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .product-categories__button:hover {
    background-color: #871d16;
    color: white;
  }

  .product-categories__wholesale-btn {
    display: flex;
    justify-content: center;
    margin-bottom: 60px;
  }

  .product-categories__wholesale-btn .product-categories__button {
    background-color: #871d16;
    color: white;
  }

  .product-categories__wholesale-btn .product-categories__button:hover {
    background-color: #6b1611;
  }

  .product-categories__features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    align-items: start;
  }

  .product-categories__feature {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .product-categories__feature-icon {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background-color: #871d16;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    flex-shrink: 0;
  }

  .product-categories__feature-icon svg {
    width: 60px;
    height: 60px;
    fill: white;
    stroke: white;
  }

  .product-categories__feature-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.3;
  }

  .product-categories__feature-description {
    font-size: 14px;
    font-weight: 400;
    color: #666;
    line-height: 1.5;
    margin: 0;
    text-align: center;
  }

  @media (max-width: 1024px) {
    .product-categories {
      padding: 50px 0;
    }

    .product-categories__container {
      padding: 0 30px;
    }

    .product-categories__buttons {
      gap: 15px;
      margin-bottom: 35px;
    }

    .product-categories__button {
      padding: 10px 20px;
      font-size: 13px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 50px;
    }

    .product-categories__features {
      gap: 30px;
    }

    .product-categories__feature-icon {
      width: 100px;
      height: 100px;
      margin-bottom: 18px;
    }

    .product-categories__feature-icon svg {
      width: 50px;
      height: 50px;
    }

    .product-categories__feature-title {
      font-size: 16px;
      margin-bottom: 12px;
    }

    .product-categories__feature-description {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .product-categories {
      padding: 40px 0;
    }

    .product-categories__container {
      padding: 0 20px;
    }

    .product-categories__buttons {
      gap: 12px;
      margin-bottom: 30px;
    }

    .product-categories__button {
      padding: 8px 16px;
      font-size: 12px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 40px;
    }

    .product-categories__features {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }

    .product-categories__feature-icon {
      width: 90px;
      height: 90px;
      margin-bottom: 15px;
    }

    .product-categories__feature-icon svg {
      width: 45px;
      height: 45px;
    }

    .product-categories__feature-title {
      font-size: 15px;
      margin-bottom: 10px;
    }

    .product-categories__feature-description {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .product-categories {
      padding: 35px 0;
    }

    .product-categories__container {
      padding: 0 15px;
    }

    .product-categories__buttons {
      gap: 8px;
      margin-bottom: 25px;
    }

    .product-categories__button {
      padding: 6px 12px;
      font-size: 11px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 35px;
    }

    .product-categories__features {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .product-categories__feature-icon {
      width: 80px;
      height: 80px;
      margin-bottom: 12px;
    }

    .product-categories__feature-icon svg {
      width: 40px;
      height: 40px;
    }

    .product-categories__feature-title {
      font-size: 14px;
      margin-bottom: 8px;
    }

    .product-categories__feature-description {
      font-size: 11px;
    }
  }
</style>

<section class="product-categories">
  <div class="product-categories__container">
    <!-- Product Category Buttons -->
    <div class="product-categories__buttons">
      {% for block in section.blocks %}
        {% if block.type == 'category_button' %}
          <a
            href="{{ block.settings.button_url | default: '#' }}"
            class="product-categories__button"
            style="border-color: {{ block.settings.button_border_color }}; color: {{ block.settings.button_text_color }};"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Wholesale Button -->
    {% if section.settings.show_wholesale_button %}
      <div class="product-categories__wholesale-btn">
        <a
          href="{{ section.settings.wholesale_url | default: '#' }}"
          class="product-categories__button"
          style="background-color: {{ section.settings.wholesale_bg_color }}; color: {{ section.settings.wholesale_text_color }}; border-color: {{ section.settings.wholesale_bg_color }};"
        >
          {{ section.settings.wholesale_text }}
        </a>
      </div>
    {% endif %}

    <!-- Features Grid -->
    <div class="product-categories__features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="product-categories__feature">
            <div
              class="product-categories__feature-icon"
              style="background-color: {{ block.settings.icon_bg_color }};"
            >
              {% if block.settings.icon_type == 'shopping_bag' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M19 7H16V6C16 4.34315 14.6569 3 13 3H11C9.34315 3 8 4.34315 8 6V7H5C4.44772 7 4 7.44772 4 8V19C4 20.1046 4.89543 21 6 21H18C19.1046 21 20 20.1046 20 19V8C20 7.44772 19.5523 7 19 7ZM10 6C10 5.44772 10.4477 5 11 5H13C13.5523 5 14 5.44772 14 6V7H10V6ZM6 9H8V11C8 11.5523 8.44772 12 9 12C9.55228 12 10 11.5523 10 11V9H14V11C14 11.5523 14.4477 12 15 12C15.5523 12 16 11.5523 16 11V9H18V19H6V9Z" fill="white"/>
                </svg>
              {% elsif block.settings.icon_type == 'warehouse' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L2 7V22H22V7L12 2ZM4 8.236L12 4.236L20 8.236V20H16V12H8V20H4V8.236ZM10 14H14V20H10V14Z" fill="white"/>
                  <path d="M6 10H8V11H6V10ZM10 10H12V11H10V10ZM14 10H16V11H14V10ZM18 10H20V11H18V10Z" fill="white"/>
                </svg>
              {% elsif block.settings.icon_type == 'shipping' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 6V15H2C2 16.1046 2.89543 17 4 17C5.10457 17 6 16.1046 6 15H14C14 16.1046 14.8954 17 16 17C17.1046 17 18 16.1046 18 15H23V12L20 8H15V6H1ZM3 8H13V13H3V8ZM15 10H18.5L20.5 12H15V10ZM4 14C4.55228 14 5 14.4477 5 15C5 15.5523 4.55228 16 4 16C3.44772 16 3 15.5523 3 15C3 14.4477 3.44772 14 4 14ZM16 14C16.5523 14 17 14.4477 17 15C17 15.5523 16.5523 16 16 16C15.4477 16 15 15.5523 15 15C15 14.4477 15.4477 14 16 14Z" fill="white"/>
                </svg>
              {% elsif block.settings.icon_type == 'quality' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 7H16V5C16 3.89543 15.1046 3 14 3H10C8.89543 3 8 3.89543 8 5V7H4C3.44772 7 3 7.44772 3 8V19C3 20.1046 3.89543 21 5 21H19C20.1046 21 21 20.1046 21 19V8C21 7.44772 20.5523 7 20 7ZM10 5H14V7H10V5ZM19 19H5V9H7V11C7 11.5523 7.44772 12 8 12C8.55228 12 9 11.5523 9 11V9H15V11C15 11.5523 15.4477 12 16 12C16.5523 12 16 11.5523 16 11V9H19V19Z" fill="white"/>
                  <path d="M10 13L12 15L16 11" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% endif %}
            </div>
            <h3
              class="product-categories__feature-title"
              style="color: {{ block.settings.title_color }};"
            >
              {{ block.settings.feature_title }}
            </h3>
            <p
              class="product-categories__feature-description"
              style="color: {{ block.settings.description_color }};"
            >
              {{ block.settings.feature_description }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

