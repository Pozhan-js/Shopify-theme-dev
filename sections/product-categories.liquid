<style>
  .product-categories {
    width: 100%;
    background-color: #ffffff;
    padding: 60px 0;
  }

  .product-categories__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .product-categories__buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .product-categories__button {
    display: inline-block;
    padding: 12px 24px;
    border: 1px solid #930a0a;
    background-color: transparent;
    color: #930a0a;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
  }

  .product-categories__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: #871d16;
    transition: left 0.3s ease;
    z-index: 1;
  }

  .product-categories__button:hover::before {
    left: 0;
  }

  .product-categories__button:hover {
    color: white;
    position: relative;
    z-index: 2;
  }

  .product-categories__button span {
    position: relative;
    z-index: 2;
  }

  .product-categories__wholesale-btn {
    display: flex;
    justify-content: center;
    margin-bottom: 60px;
  }

  .product-categories__features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    align-items: start;
  }

  .product-categories__feature {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .product-categories__feature-icon {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background-color: #871d16;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    flex-shrink: 0;
  }

  .product-categories__feature-icon svg {
    width: 60px;
    height: 60px;
    fill: none;
    stroke: white;
    stroke-width: 1.5;
  }

  .product-categories__feature-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.3;
  }

  .product-categories__feature-description {
    font-size: 14px;
    font-weight: 400;
    color: #666;
    line-height: 1.5;
    margin: 0;
    text-align: center;
  }

  @media (max-width: 1024px) {
    .product-categories {
      padding: 50px 0;
    }

    .product-categories__container {
      padding: 0 30px;
    }

    .product-categories__buttons {
      gap: 15px;
      margin-bottom: 35px;
    }

    .product-categories__button {
      padding: 10px 20px;
      font-size: 13px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 50px;
    }

    .product-categories__features {
      gap: 30px;
    }

    .product-categories__feature-icon {
      width: 100px;
      height: 100px;
      margin-bottom: 18px;
    }

    .product-categories__feature-icon svg {
      width: 50px;
      height: 50px;
      stroke-width: 1.5;
    }

    .product-categories__feature-title {
      font-size: 16px;
      margin-bottom: 12px;
    }

    .product-categories__feature-description {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .product-categories {
      padding: 40px 0;
    }

    .product-categories__container {
      padding: 0 20px;
    }

    .product-categories__buttons {
      gap: 12px;
      margin-bottom: 30px;
    }

    .product-categories__button {
      padding: 8px 16px;
      font-size: 12px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 40px;
    }

    .product-categories__features {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }

    .product-categories__feature-icon {
      width: 90px;
      height: 90px;
      margin-bottom: 15px;
    }

    .product-categories__feature-icon svg {
      width: 45px;
      height: 45px;
      stroke-width: 1.5;
    }

    .product-categories__feature-title {
      font-size: 15px;
      margin-bottom: 10px;
    }

    .product-categories__feature-description {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .product-categories {
      padding: 35px 0;
    }

    .product-categories__container {
      padding: 0 15px;
    }

    .product-categories__buttons {
      gap: 8px;
      margin-bottom: 25px;
    }

    .product-categories__button {
      padding: 6px 12px;
      font-size: 11px;
    }

    .product-categories__wholesale-btn {
      margin-bottom: 35px;
    }

    .product-categories__features {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .product-categories__feature-icon {
      width: 80px;
      height: 80px;
      margin-bottom: 12px;
    }

    .product-categories__feature-icon svg {
      width: 40px;
      height: 40px;
      stroke-width: 1.5;
    }

    .product-categories__feature-title {
      font-size: 14px;
      margin-bottom: 8px;
    }

    .product-categories__feature-description {
      font-size: 11px;
    }
  }
</style>

<section class="product-categories">
  <div class="product-categories__container">
    <!-- Product Category Buttons -->
    <div class="product-categories__buttons">
      {% for block in section.blocks %}
        {% if block.type == 'category_button' %}
          <a
            href="{{ block.settings.button_url | default: '#' }}"
            class="product-categories__button"
          >
            <span>{{ block.settings.button_text }}</span>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Wholesale Button -->
    {% if section.settings.show_wholesale_button %}
      <div class="product-categories__wholesale-btn">
        <a
          href="{{ section.settings.wholesale_url | default: '#' }}"
          class="product-categories__button"
        >
          <span>{{ section.settings.wholesale_text }}</span>
        </a>
      </div>
    {% endif %}

    <!-- Features Grid -->
    <div class="product-categories__features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="product-categories__feature">
            <div class="product-categories__feature-icon">
              {% if block.settings.icon_type == 'shopping_bag' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 2L3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6L18 2H6Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M3 6H21" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M16 10C16 12.2091 14.2091 14 12 14C9.79086 14 8 12.2091 8 10" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'warehouse' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 21H21" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M5 21V7L12 3L19 7V21" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 21V15H15V21" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 9H10" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M14 9H15" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'shipping' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 3H1V16H16V3Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M16 8H20L23 11V16H16V8Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="5.5" cy="18.5" r="2.5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="18.5" cy="18.5" r="2.5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'quality' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 12L11 14L15 10" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% endif %}
            </div>
            <h3 class="product-categories__feature-title">
              {{ block.settings.feature_title }}
            </h3>
            <p class="product-categories__feature-description">
              {{ block.settings.feature_description }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

