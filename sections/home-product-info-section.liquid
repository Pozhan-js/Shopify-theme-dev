    }

    .sku-options {
      justify-content: center;
    }

    .quantity-selector {
      justify-content: center;
    }
  }
</style>

<section class="product-info-section">
  <div class="product-info-container">
    <div class="product-info-grid">
      <!-- Left Content -->
      <div class="product-info-left">
        <span class="product-badge">{{ section.settings.badge_text }}</span>
        <h1 class="product-title">{{ section.settings.product_title }}</h1>
        <p class="product-description">{{ section.settings.product_description }}</p>

        <div class="price-row">
          <span id="current-price">{{ section.settings.current_price }}</span>
          <span class="price-old price-discount" id="old-price">{{ section.settings.old_price }}</span>
        </div>

        <p><strong>{{ section.settings.shipping_info }}</strong></p>

        <form class="product-form" action="/cart/add" method="post" enctype="multipart/form-data">
          <!-- SKU Selector -->
          {% if section.blocks.size > 0 %}
            <div class="sku-selector">
              <h3>{{ section.settings.sku_selector_title }}</h3>
              <div class="sku-options">
                {% for block in section.blocks %}
                  {% if block.type == 'sku_option' %}
                    <div class="sku-option">
                      <input type="radio" 
                             id="sku-{{ forloop.index }}" 
                             name="id" 
                             value="{{ block.settings.variant_id }}"
                             data-price="{{ block.settings.sku_price }}"
                             data-old-price="{{ block.settings.sku_old_price }}"
                             {% if forloop.first %}checked{% endif %}>
                      <label for="sku-{{ forloop.index }}">{{ block.settings.sku_name }}</label>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}

          <!-- Quantity Selector -->
          <div class="quantity-selector">
            <label for="quantity">{{ section.settings.quantity_label }}:</label>
            <div class="quantity-input">
              <button type="button" class="quantity-btn" onclick="changeQuantity(-1)">âˆ’</button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-number" readonly>
              <button type="button" class="quantity-btn" onclick="changeQuantity(1)">+</button>
            </div>
          </div>

          <!-- Benefits List -->
          <div class="benefits-list">
            {% for block in section.blocks %}
              {% if block.type == 'benefit' %}
                <div class="benefit-item">
                  <span>{{ block.settings.benefit_name }}</span>
                  <span class="value">{{ block.settings.benefit_value }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <div class="total-row">
            <span>{{ section.settings.total_label }}</span>
            <span id="total-price">{{ section.settings.total_price }}</span>
          </div>
          <p class="disclaimer">{{ section.settings.disclaimer_text }}</p>

          <p class="guarantee">{{ section.settings.guarantee_text }}</p>
          <p class="flexible">{{ section.settings.flexible_text }}</p>
          
          <!-- Button Group -->
          <div class="button-group">
            <button type="submit" name="add" class="add-to-cart-button">
              {{ section.settings.add_to_cart_text }}
            </button>
            <button type="submit" name="add" class="buy-now-button" onclick="this.form.action='/cart/add'; this.form.submit(); window.location.href='/cart';">
              {{ section.settings.buy_now_text }}
            </button>
          </div>
        </form>
      </div>

      <!-- Right Image -->
      <div>
        {% if section.settings.main_image != blank %}
          <img src="{{ section.settings.main_image | image_url }}"
               alt="{{ section.settings.main_image_alt | default: section.settings.product_title }}"
               class="main-image">
        {% elsif section.settings.fallback_image != blank %}
          <img src="{{ section.settings.fallback_image | image_url }}"
               alt="{{ section.settings.main_image_alt | default: section.settings.product_title }}"
               class="main-image">
        {% else %}
          <div class="main-image placeholder-image" style="background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
            <span style="color: #9ca3af;">Please upload an image</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  // Quantity change function
  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    let currentQuantity = parseInt(quantityInput.value);
    let newQuantity = currentQuantity + change;
    
    if (newQuantity < 1) newQuantity = 1;
    
    quantityInput.value = newQuantity;
    updateTotalPrice();
  }

  // Update price when SKU changes
  document.addEventListener('DOMContentLoaded', function() {
    const skuOptions = document.querySelectorAll('input[name="id"]');
    const currentPriceElement = document.getElementById('current-price');
    const oldPriceElement = document.getElementById('old-price');
    
    skuOptions.forEach(function(option) {
      option.addEventListener('change', function() {
        if (this.checked) {
          const newPrice = this.getAttribute('data-price');
          const newOldPrice = this.getAttribute('data-old-price');
          
          if (newPrice) currentPriceElement.textContent = newPrice;
          if (newOldPrice) oldPriceElement.textContent = newOldPrice;
          
          updateTotalPrice();
        }
      });
    });

    // Initialize total price
    updateTotalPrice();
  });

  function updateTotalPrice() {
    const selectedSku = document.querySelector('input[name="id"]:checked');
    const quantity = parseInt(document.getElementById('quantity').value);
    const totalPriceElement = document.getElementById('total-price');
    
    if (selectedSku && selectedSku.getAttribute('data-price')) {
      const unitPrice = selectedSku.getAttribute('data-price');
      // Extract numeric value from price string (assuming format like "$79/mo USD")
      const priceMatch = unitPrice.match(/\$(\d+)/);
      if (priceMatch) {
        const numericPrice = parseInt(priceMatch[1]);
        const totalPrice = numericPrice * quantity;
        totalPriceElement.textContent = unitPrice.replace(/\$\d+/, '$' + totalPrice);
      }
    }
  }
</script>

