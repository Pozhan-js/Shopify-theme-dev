      justify-content: center;
    }

    .quantity-selector {
      justify-content: center;
    }
  }
</style>

<section class="product-info-section">
  <div class="product-info-container">
    <div class="product-info-grid">
      <!-- Left Content -->
      <div class="product-info-left">
        {% if section.settings.badge_text != blank %}
          <span class="product-badge">{{ section.settings.badge_text }}</span>
        {% endif %}
        
        <h1 class="product-title">
          {% if section.settings.use_product_title %}
            {{ product.title }}
          {% else %}
            {{ section.settings.product_title | default: product.title }}
          {% endif %}
        </h1>
        
        <div class="product-description">
          {% if section.settings.use_product_description %}
            {{ product.description | truncate: 200 }}
          {% else %}
            {{ section.settings.product_description | default: product.description }}
          {% endif %}
        </div>

        <div class="price-row">
          <span id="current-price">
            {% if product.compare_at_price > product.price %}
              {{ product.price | money }}
            {% else %}
              {{ product.price | money }}
            {% endif %}
          </span>
          {% if product.compare_at_price > product.price %}
            <span class="price-old price-discount" id="old-price">{{ product.compare_at_price | money }}</span>
          {% endif %}
        </div>

        <p><strong>{{ section.settings.shipping_info }}</strong></p>

        <form class="product-form" action="/cart/add" method="post" enctype="multipart/form-data">
          <!-- SKU Selector for Product Variants -->
          {% if product.variants.size > 1 %}
            <div class="sku-selector">
              <h3>{{ section.settings.sku_selector_title }}</h3>
              <div class="sku-options">
                {% for variant in product.variants %}
                  <div class="sku-option">
                    <input type="radio" 
                           id="variant-{{ variant.id }}" 
                           name="id" 
                           value="{{ variant.id }}"
                           data-price="{{ variant.price | money }}"
                           data-old-price="{% if variant.compare_at_price > variant.price %}{{ variant.compare_at_price | money }}{% endif %}"
                           data-available="{{ variant.available }}"
                           {% if forloop.first %}checked{% endif %}
                           {% unless variant.available %}disabled{% endunless %}>
                    <label for="variant-{{ variant.id }}">
                      {{ variant.title }}
                      {% unless variant.available %} - Sold Out{% endunless %}
                    </label>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% else %}
            <!-- Single variant product -->
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          {% endif %}

          <!-- Custom SKU Options from Section Blocks (if any) -->
          {% if section.blocks.size > 0 %}
            {% assign has_sku_blocks = false %}
            {% for block in section.blocks %}
              {% if block.type == 'sku_option' %}
                {% assign has_sku_blocks = true %}
                {% break %}
              {% endif %}
            {% endfor %}
            
            {% if has_sku_blocks %}
              <div class="sku-selector">
                <h3>{{ section.settings.custom_sku_title | default: "Additional Options" }}</h3>
                <div class="sku-options">
                  {% for block in section.blocks %}
                    {% if block.type == 'sku_option' %}
                      <div class="sku-option">
                        <input type="radio" 
                               id="custom-sku-{{ forloop.index }}" 
                               name="custom_sku" 
                               value="{{ block.settings.variant_id }}"
                               data-price="{{ block.settings.sku_price }}"
                               data-old-price="{{ block.settings.sku_old_price }}">
                        <label for="custom-sku-{{ forloop.index }}">{{ block.settings.sku_name }}</label>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          {% endif %}

          <!-- Quantity Selector -->
          <div class="quantity-selector">
            <label for="quantity">{{ section.settings.quantity_label }}:</label>
            <div class="quantity-input">
              <button type="button" class="quantity-btn" onclick="changeQuantity(-1)">âˆ’</button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-number" readonly>
              <button type="button" class="quantity-btn" onclick="changeQuantity(1)">+</button>
            </div>
          </div>

          <!-- Benefits List -->
          {% if section.blocks.size > 0 %}
            <div class="benefits-list">
              {% for block in section.blocks %}
                {% if block.type == 'benefit' %}
                  <div class="benefit-item">
                    <span>{{ block.settings.benefit_name }}</span>
                    <span class="value">{{ block.settings.benefit_value }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <div class="total-row">
            <span>{{ section.settings.total_label }}</span>
            <span id="total-price">{{ product.price | money }}</span>
          </div>
          
          {% if section.settings.disclaimer_text != blank %}
            <p class="disclaimer">{{ section.settings.disclaimer_text }}</p>
          {% endif %}

          {% if section.settings.guarantee_text != blank %}
            <p class="guarantee">{{ section.settings.guarantee_text }}</p>
          {% endif %}
          
          {% if section.settings.flexible_text != blank %}
            <p class="flexible">{{ section.settings.flexible_text }}</p>
          {% endif %}
          
          <!-- Button Group -->
          <div class="button-group">
            <button type="submit" name="add" class="add-to-cart-button" id="add-to-cart-btn">
              {{ section.settings.add_to_cart_text }}
            </button>
            <button type="button" class="buy-now-button" id="buy-now-btn">
              {{ section.settings.buy_now_text }}
            </button>
          </div>
        </form>
      </div>

      <!-- Right Image -->
      <div>
        {% if section.settings.use_product_image and product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 600 }}"
               alt="{{ product.featured_image.alt | default: product.title }}"
               class="main-image">
        {% elsif section.settings.main_image != blank %}
          <img src="{{ section.settings.main_image | image_url: width: 600 }}"
               alt="{{ section.settings.main_image_alt | default: product.title }}"
               class="main-image">
        {% elsif section.settings.fallback_image != blank %}
          <img src="{{ section.settings.fallback_image | image_url: width: 600 }}"
               alt="{{ section.settings.main_image_alt | default: product.title }}"
               class="main-image">
        {% else %}
          <div class="main-image placeholder-image" style="background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
            <span style="color: #9ca3af;">{{ product.title | default: "Product Image" }}</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  // Quantity change function
  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    let currentQuantity = parseInt(quantityInput.value);
    let newQuantity = currentQuantity + change;
    
    if (newQuantity < 1) newQuantity = 1;
    
    quantityInput.value = newQuantity;
    updateTotalPrice();
  }

  // Update price when variant changes
  document.addEventListener('DOMContentLoaded', function() {
    const variantOptions = document.querySelectorAll('input[name="id"]');
    const currentPriceElement = document.getElementById('current-price');
    const oldPriceElement = document.getElementById('old-price');
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const buyNowBtn = document.getElementById('buy-now-btn');
    
    variantOptions.forEach(function(option) {
      option.addEventListener('change', function() {
        if (this.checked) {
          const newPrice = this.getAttribute('data-price');
          const newOldPrice = this.getAttribute('data-old-price');
          const isAvailable = this.getAttribute('data-available') === 'true';
          
          if (newPrice) currentPriceElement.textContent = newPrice;
          
          if (newOldPrice && newOldPrice !== '') {
            if (!oldPriceElement) {
              const priceRow = document.querySelector('.price-row');
              const oldPriceSpan = document.createElement('span');
              oldPriceSpan.className = 'price-old price-discount';
              oldPriceSpan.id = 'old-price';
              priceRow.appendChild(oldPriceSpan);
            }
            document.getElementById('old-price').textContent = newOldPrice;
            document.getElementById('old-price').style.display = 'inline';
          } else if (oldPriceElement) {
            oldPriceElement.style.display = 'none';
          }
          
          // Update button states based on availability
          if (isAvailable) {
            addToCartBtn.disabled = false;
            buyNowBtn.disabled = false;
            addToCartBtn.textContent = '{{ section.settings.add_to_cart_text }}';
          } else {
            addToCartBtn.disabled = true;
            buyNowBtn.disabled = true;
            addToCartBtn.textContent = 'Sold Out';
          }
          
          updateTotalPrice();
        }
      });
    });

    // Buy now button functionality
    document.getElementById('buy-now-btn').addEventListener('click', function() {
      const form = document.querySelector('.product-form');
      const formData = new FormData(form);
      
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        window.location.href = '/cart';
      })
      .catch(error => {
        console.error('Error:', error);
      });
    });

    // Initialize total price
    updateTotalPrice();
  });

  function updateTotalPrice() {
    const selectedVariant = document.querySelector('input[name="id"]:checked');
    const quantity = parseInt(document.getElementById('quantity').value);
    const totalPriceElement = document.getElementById('total-price');
    
    if (selectedVariant && selectedVariant.getAttribute('data-price')) {
      const unitPrice = selectedVariant.getAttribute('data-price');
      // Extract numeric value from price string
      const priceMatch = unitPrice.match(/[\d,]+\.?\d*/);
      if (priceMatch) {
        const numericPrice = parseFloat(priceMatch[0].replace(',', ''));
        const totalPrice = numericPrice * quantity;
        const currency = unitPrice.match(/[^\d\s,\.]+/);
        const currencySymbol = currency ? currency[0] : '$';
        totalPriceElement.textContent = currencySymbol + totalPrice.toFixed(2);
      }
    }
  }
</script>

