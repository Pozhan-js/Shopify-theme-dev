    background: #8aa63f;
    transform: translateY(-1px);
  }

  .main-image {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .product-form {
    width: 100%;
  }

  @media (max-width: 768px) {
