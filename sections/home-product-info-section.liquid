<style>
  .product-info-section {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px 0;
    background: {{ section.settings.background_color }};
  }

  .product-info-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .product-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .product-info-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-badge {
    display: inline-block;
    background: {{ section.settings.badge_background_color }};
    color: {{ section.settings.badge_text_color }};
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    width: fit-content;
  }

  .product-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .product-description {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.price_font_size }}px;
    font-weight: 600;
    color: {{ section.settings.price_color }};
    align-items: center;
  }

  .price-old {
    color: {{ section.settings.old_price_color }};
    text-decoration: line-through;
  }

  .price-discount {
    color: {{ section.settings.discount_color }};
    font-weight: bold;
  }

  .sku-selector {
    margin: 1.5rem 0;
  }

  .sku-selector h3 {
    font-size: {{ section.settings.sku_title_font_size }}px;
    color: {{ section.settings.sku_title_color }};
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .sku-options {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .sku-option {
    position: relative;
  }

  .sku-option input[type="radio"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .sku-option label {
    display: block;
    padding: 0.75rem 1rem;
    border: 2px solid {{ section.settings.sku_border_color }};
    border-radius: {{ section.settings.sku_border_radius }}px;
    background: {{ section.settings.sku_background_color }};
    color: {{ section.settings.sku_text_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: {{ section.settings.sku_font_size }}px;
    font-weight: 500;
    text-align: center;
    min-width: 80px;
  }

  .sku-option input[type="radio"]:checked + label {
    border-color: #9ABD48;
    background: #9ABD48;
    color: white;
  }

  .sku-option label:hover {
    border-color: #9ABD48;
  }

  .quantity-selector {
    margin: 1rem 0;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .quantity-selector label {
    font-size: {{ section.settings.quantity_font_size }}px;
    color: {{ section.settings.quantity_color }};
    font-weight: 600;
  }

  .quantity-input {
    display: flex;
    align-items: center;
    border: 2px solid {{ section.settings.quantity_border_color }};
    border-radius: {{ section.settings.quantity_border_radius }}px;
    overflow: hidden;
  }

  .quantity-btn {
    background: {{ section.settings.quantity_btn_background }};
    color: {{ section.settings.quantity_btn_color }};
    border: none;
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    transition: background 0.3s ease;
  }

  .quantity-btn:hover {
    background: #9ABD48;
    color: white;
  }

  .quantity-number {
    padding: 0.5rem 1rem;
    border: none;
    text-align: center;
    font-size: {{ section.settings.quantity_font_size }}px;
    font-weight: 600;
    width: 60px;
    background: white;
  }

  .benefits-list {
    margin: 1.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .benefit-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: {{ section.settings.benefit_font_size }}px;
    color: {{ section.settings.benefit_color }};
  }

  .benefit-item .value {
    color: {{ section.settings.benefit_value_color }};
    font-weight: normal;
  }

  .total-row {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.total_font_size }}px;
    font-weight: bold;
    color: {{ section.settings.total_color }};
  }

  .disclaimer {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: {{ section.settings.disclaimer_color }};
    line-height: 1.5;
  }

  .guarantee {
