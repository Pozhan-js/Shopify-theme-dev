{% comment %}
  Home Product Info Section - 可后台编辑版
  支持后台修改所有内容和图片
{% endcomment %}

<style>
  .product-info-section {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px 0;
    background: {{ section.settings.background_color }};
  }

  .product-info-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .product-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .product-info-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-badge {
    display: inline-block;
    background: {{ section.settings.badge_background_color }};
    color: {{ section.settings.badge_text_color }};
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    width: fit-content;
  }

  .product-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .product-description {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.price_font_size }}px;
    font-weight: 600;
    color: {{ section.settings.price_color }};
    align-items: center;
  }

  .price-old {
    color: {{ section.settings.old_price_color }};
    text-decoration: line-through;
  }

  .price-discount {
    color: {{ section.settings.discount_color }};
    font-weight: bold;
  }

  .benefits-list {
    margin: 1.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .benefit-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: {{ section.settings.benefit_font_size }}px;
    color: {{ section.settings.benefit_color }};
  }

  .benefit-item .value {
    color: {{ section.settings.benefit_value_color }};
    font-weight: normal;
  }

  .total-row {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.total_font_size }}px;
    font-weight: bold;
    color: {{ section.settings.total_color }};
  }

  .disclaimer {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: {{ section.settings.disclaimer_color }};
    line-height: 1.5;
  }

  .guarantee {
    margin-top: 1rem;
    font-weight: 600;
    color: {{ section.settings.guarantee_color }};
  }

  .flexible {
    font-size: 0.875rem;
    color: {{ section.settings.flexible_color }};
  }

  .main-image {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  @media (max-width: 768px) {
    .product-info-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }

    .benefit-item, .price-row, .total-row {
      font-size: {{ section.settings.benefit_font_size_mobile }}px;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .total-row {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

<section class="product-info-section">
  <div class="product-info-container">
    <div class="product-info-grid">
      <!-- 左侧文案 -->
      <div class="product-info-left">
        <span class="product-badge">{{ section.settings.badge_text }}</span>
        <h1 class="product-title">{{ section.settings.product_title }}</h1>
        <p class="product-description">{{ section.settings.product_description }}</p>

        <div class="price-row">
          <span>{{ section.settings.current_price }}</span>
          <span class="price-old price-discount">{{ section.settings.old_price }}</span>
        </div>

        <p><strong>{{ section.settings.shipping_info }}</strong></p>

        <div class="benefits-list">
          {% for block in section.blocks %}
            {% if block.type == 'benefit' %}
              <div class="benefit-item">
                <span>{{ block.settings.benefit_name }}</span>
                <span class="value">{{ block.settings.benefit_value }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <div class="total-row">
          <span>{{ section.settings.total_label }}</span>
          <span>{{ section.settings.total_price }}</span>
        </div>
        <p class="disclaimer">{{ section.settings.disclaimer_text }}</p>

        <p class="guarantee">{{ section.settings.guarantee_text }}</p>
        <p class="flexible">{{ section.settings.flexible_text }}</p>
      </div>

      <!-- 右侧主图 -->
      <div>
        {% if section.settings.main_image != blank %}
          <img src="{{ section.settings.main_image | image_url: '600x' }}"
               alt="{{ section.settings.main_image_alt | default: section.settings.product_title }}"
               class="main-image">
        {% elsif section.settings.fallback_image != blank %}
          <img src="{{ section.settings.fallback_image | image_url: '600x' }}"
               alt="{{ section.settings.main_image_alt | default: section.settings.product_title }}"
               class="main-image">
        {% else %}
          <div class="main-image placeholder-image" style="background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
            <span style="color: #9ca3af;">请上传图片</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

