{% comment %}
  Home Product Info Section - 简化版
  左侧：AG1 订阅套餐文案 + 价格 + 赠品
  右侧：单张主图
{% endcomment %}

<style>
  .product-info-section {
    padding: 4rem 0;
    background: white;
  }

  .product-info-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .product-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .product-info-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-badge {
    display: inline-block;
    background: #ef4444;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    width: fit-content;
  }

  .product-title {
    font-size: 2.25rem;
    font-weight: bold;
    color: #1f2937;
    margin: 0;
  }

  .product-description {
    font-size: 1.125rem;
    color: #6b7280;
    line-height: 1.6;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
  }

  .price-old {
    color: #9ca3af;
    text-decoration: line-through;
  }

  .price-discount {
    color: #ef4444;
    font-weight: bold;
  }

  .benefits-list {
    margin: 1.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .benefit-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1rem;
    color: #1f2937;
  }

  .benefit-item .value {
    color: #6b7280;
    font-weight: normal;
  }

  .total-row {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    font-size: 1.25rem;
    font-weight: bold;
    color: #1f2937;
  }

  .disclaimer {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.5;
  }

  .guarantee {
    margin-top: 1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .flexible {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .main-image {
    width: 100%;
    height: 28rem;
    object-fit: cover;
    border-radius: 0.75rem;
  }

  @media (max-width: 768px) {
    .product-info-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-title {
      font-size: 1.875rem;
    }

    .benefit-item, .price-row, .total-row {
      font-size: 1rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .total-row {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

<section class="product-info-section">
  <div class="product-info-container">
    <div class="product-info-grid">
      <!-- 左侧文案 -->
      <div class="product-info-left">
        <span class="product-badge">Best Seller</span>
        <h1 class="product-title">Get started with your AG1 Welcome Kit^</h1>
        <p class="product-description">AG1 Pouch</p>

        <div class="price-row">
          <span>$79/mo USD</span>
          <span class="price-old price-discount">$99 USD†</span>
        </div>

        <p><strong>30 day supply per pouch, ships every 30 days</strong></p>

        <div class="benefits-list">
          <div class="benefit-item">
            <span>Welcome Kit</span>
            <span class="value">Free ($28 USD)</span>
          </div>
          <div class="benefit-item">
            <span>AG1 Shaker, Scoop, and Canister</span>
            <span class="value">Free</span>
          </div>
          <div class="benefit-item">
            <span>AG1 Travel Packs (5 count)</span>
            <span class="value">Free ($19 USD)</span>
          </div>
        </div>

        <div class="total-row">
          <span>Total</span>
          <span>$79/mo USD</span>
        </div>
        <p class="disclaimer">† Value of one-time purchase</p>

        <p class="guarantee">90-day money back guarantee</p>
        <p class="flexible">Update or cancel anytime</p>
      </div>

      <!-- 右侧主图 -->
      <div>
        <img src="{{ section.settings.main_image | image_url: '600x' }}"
             alt="AG1 Welcome Kit"
             class="main-image">
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Product Info Section",
  "settings": [
    {
      "type": "header",
      "content": "Product Information"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "主图",
      "info": "建议尺寸：600x600 或更高"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "产品标题",
      "default": "Get started with your AG1 Welcome Kit^"
    }
  ],
  "presets": [
    {
      "name": "Home Product Info",
      "category": "Home Page",
      "settings": {
        "product_title": "Get started with your AG1 Welcome Kit^",
        "main_image": ""
      }
    }
  ]
}
{% endschema %}
