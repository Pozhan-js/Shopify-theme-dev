    font-weight: 600;
    color: {{ section.settings.guarantee_color }};
  }

  .flexible {
    font-size: 0.875rem;
    color: {{ section.settings.flexible_color }};
  }

  .button-group {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    flex-direction: column;
  }

  .add-to-cart-button, .buy-now-button {
    padding: 1rem 2rem;
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    width: 100%;
  }

  .add-to-cart-button {
