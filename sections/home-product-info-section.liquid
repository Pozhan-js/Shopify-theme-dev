{% comment %}
  Product Info Section - Multi-SKU Support
  Displays current product information from Shopify product object
  Auto-fetches first product from collections if no specific product is set
  Supports backend editing through section settings
{% endcomment %}

{% liquid
  assign display_product = product
  if section.settings.selected_product != blank
    assign display_product = all_products[section.settings.selected_product]
  elsif display_product == blank and collections.all.products.size > 0
    assign display_product = collections.all.products.first
  endif
%}

<style>
  .product-info-section {
    padding: {{ section.settings.paddingtop | times: 0.5 | round: 0 }}px 0 {{ section.settings.paddingbottom | times: 0.5 | round: 0 }}px 0;
    background: {{ section.settings.backgroundcolor }};
  }

  .product-info-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .product-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .product-info-left {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .product-title {
    font-size: {{ section.settings.titlefontsize }}px;
    font-weight: bold;
    color: {{ section.settings.titlecolor }};
    margin: 0;
    line-height: 1.1;
  }

  .product-description {
    font-size: {{ section.settings.descriptionfontsize }}px;
    color: {{ section.settings.descriptioncolor }};
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.pricefontsize }}px;
    font-weight: 600;
    color: {{ section.settings.pricecolor }};
    align-items: center;
  }

  .price-old {
    color: {{ section.settings.oldpricecolor }};
    text-decoration: line-through;
  }

  .price-discount {
    color: {{ section.settings.discountcolor }};
    font-weight: bold;
  }

  .sku-selector {
    margin: 1rem 0;
  }

  .sku-selector h3 {
    font-size: {{ section.settings.skutitlefontsize }}px;
    color: {{ section.settings.skutitlecolor }};
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .sku-options {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .sku-option {
    position: relative;
  }

  .sku-option input[type="radio"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .sku-option label {
    display: block;
    padding: 0.5rem 0.75rem;
    border: 2px solid {{ section.settings.skubordercolor }};
    border-radius: {{ section.settings.skuborderradius }}px;
    background: {{ section.settings.skubackgroundcolor }};
    color: {{ section.settings.skutextcolor }};
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: {{ section.settings.skufontsize }}px;
    font-weight: 500;
    text-align: center;
    min-width: 70px;
  }

  .sku-option input[type="radio"]:checked + label {
    border-color: #9ABD48;
    background: #9ABD48;
    color: white;
  }

  .sku-option label:hover {
    border-color: #9ABD48;
  }

  .quantity-selector {
    margin: 0.75rem 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .quantity-selector label {
    font-size: {{ section.settings.quantityfontsize }}px;
    color: {{ section.settings.quantitycolor }};
    font-weight: 600;
  }

  .quantity-input {
    display: flex;
    align-items: center;
    border: 2px solid {{ section.settings.quantitybordercolor }};
    border-radius: {{ section.settings.quantityborderradius }}px;
    overflow: hidden;
  }

  .quantity-btn {
    background: {{ section.settings.quantitybtnbackground }};
    color: {{ section.settings.quantitybtncolor }};
    border: none;
    padding: 0.4rem 0.6rem;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: background 0.3s ease;
  }

  .quantity-btn:hover {
    background: #9ABD48;
    color: white;
  }

  .quantity-number {
    padding: 0.4rem 0.75rem;
    border: none;
    text-align: center;
    font-size: {{ section.settings.quantityfontsize }}px;
    font-weight: 600;
    width: 50px;
    background: white;
  }

  .benefits-list {
    margin: 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .benefit-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: {{ section.settings.benefitfontsize }}px;
    color: {{ section.settings.benefitcolor }};
  }

  .benefit-item .value {
    color: {{ section.settings.benefitvaluecolor }};
    font-weight: normal;
  }

  .total-row {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    font-size: {{ section.settings.totalfontsize }}px;
    font-weight: bold;
    color: {{ section.settings.totalcolor }};
  }

  .shipping-info {
    margin-bottom: 0.5rem;
    font-size: {{ section.settings.descriptionfontsize }}px;
    color: {{ section.settings.descriptioncolor }};
  }

  .disclaimer {
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: {{ section.settings.disclaimercolor }};
    line-height: 1.4;
  }

  .disclaimer p {
    margin: 0.25rem 0;
  }

  .guarantee {
    margin-top: 0.75rem;
    font-weight: 600;
    color: {{ section.settings.guaranteecolor }};
    font-size: 0.9rem;
  }

  .guarantee p {
    margin: 0.25rem 0;
  }

  .flexible {
    font-size: 0.8rem;
    color: {{ section.settings.flexiblecolor }};
  }

  .flexible p {
    margin: 0.25rem 0;
  }

  .button-group {
    margin-top: 1.5rem;
    display: flex;
    gap: 0.75rem;
    flex-direction: column;
  }

  .add-to-cart-button, .buy-now-button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: {{ section.settings.buttonborderradius }}px;
    font-size: {{ section.settings.buttonfontsize }}px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    width: 100%;
  }

  .add-to-cart-button {
    background: {{ section.settings.addtocartbgcolor }};
    color: {{ section.settings.addtocarttextcolor }};
    border: 2px solid #9ABD48;
  }

  .add-to-cart-button:hover {
    background: #9ABD48;
    color: white;
    transform: translateY(-1px);
  }

  .buy-now-button {
    background: #9ABD48;
    color: white;
  }

  .buy-now-button:hover {
    background: #8aa63f;
    transform: translateY(-1px);
  }

  .main-image {
    width: 100%;
    height: {{ section.settings.imageheight }}px;
    object-fit: cover;
    border-radius: {{ section.settings.imageborderradius }}px;
    transition: opacity 0.3s ease;
  }

  .main-image.changing {
    opacity: 0.7;
  }

  .product-form {
    width: 100%;
  }

  @media (max-width: 768px) {
    .product-info-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-info-left {
      gap: 0.5rem;
    }

    .product-title {
      font-size: {{ section.settings.titlefontsizemobile }}px;
    }

    .benefit-item, .price-row, .total-row {
      font-size: {{ section.settings.benefitfontsizemobile }}px;
    }

    .benefit-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .total-row {
      flex-direction: row;
      justify-content: space-between;
    }

    .button-group {
      flex-direction: column;
      gap: 0.5rem;
    }

    .sku-options {
      justify-content: center;
    }

    .quantity-selector {
      justify-content: center;
    }
  }
</style>

<section class="product-info-section">
  <div class="product-info-container">
    <div class="product-info-grid">
      <!-- Left Content -->
      <div class="product-info-left">
        <h1 class="product-title">
          {% if section.settings.useproducttitle %}
            {{ display_product.title }}
          {% else %}
            {{ section.settings.producttitle | default: display_product.title }}
          {% endif %}
        </h1>

        <div class="product-description">
          {% if section.settings.useproductdescription %}
            {{ display_product.description | truncate: 200 }}
          {% else %}
            {{ section.settings.productdescription | default: display_product.description }}
          {% endif %}
        </div>

        <div class="price-row">
          <span id="current-price">
            {% if display_product.compare_at_price > display_product.price %}
              {{ display_product.price | money }}
            {% else %}
              {{ display_product.price | money }}
            {% endif %}
          </span>
          {% if display_product.compare_at_price > display_product.price %}
            <span class="price-old price-discount" id="old-price">{{ display_product.compare_at_price | money }}</span>
          {% endif %}
        </div>

        {% if section.settings.shippinginfo != blank %}
          <div class="shipping-info">{{ section.settings.shippinginfo }}</div>
        {% endif %}

        <form class="product-form" action="/cart/add" method="post" enctype="multipart/form-data">
          <!-- SKU Selector for Product Variants -->
          {% if display_product.variants.size > 1 %}
            <div class="sku-selector">
              <h3>{{ section.settings.skuselectortitle }}</h3>
              <div class="sku-options">
                {% for variant in display_product.variants %}
                  <div class="sku-option">
                    <input
                      type="radio"
                      id="variant-{{ variant.id }}"
                      name="id"
                      value="{{ variant.id }}"
                      data-price="{{ variant.price | money }}"
                      data-old-price="{% if variant.compare_at_price > variant.price %}{{ variant.compare_at_price | money }}{% endif %}"
                      data-available="{{ variant.available }}"
                      data-image="{% if variant.image %}{{ variant.image | image_url: width: 600 }}{% elsif display_product.featured_image %}{{ display_product.featured_image | image_url: width: 600 }}{% endif %}"
                      data-image-alt="{% if variant.image %}{{ variant.image.alt | default: variant.title }}{% else %}{{ display_product.featured_image.alt | default: display_product.title }}{% endif %}"
                      {% if forloop.first %}
                        checked
                      {% endif %}
                      {% unless variant.available %}
                        disabled
                      {% endunless %}
                    >
                    <label for="variant-{{ variant.id }}">
                      {{ variant.title }}
                      {% unless variant.available %} - Sold Out{% endunless %}
                    </label>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% else %}
            <!-- Single variant product -->
            <input type="hidden" name="id" value="{{ display_product.selected_or_first_available_variant.id }}">
          {% endif %}

          <!-- Custom SKU Options from Section Blocks (if any) -->
          {% if section.blocks.size > 0 %}
            {% assign has_sku_blocks = false %}
            {% for block in section.blocks %}
              {% if block.type == 'skuoption' %}
                {% assign has_sku_blocks = true %}
                {% break %}
              {% endif %}
            {% endfor %}

            {% if has_sku_blocks %}
              <div class="sku-selector">
                <h3>{{ section.settings.customskutitle | default: 'Additional Options' }}</h3>
                <div class="sku-options">
                  {% for block in section.blocks %}
                    {% if block.type == 'skuoption' %}
                      <div class="sku-option">
                        <input
                          type="radio"
                          id="custom-sku-{{ forloop.index }}"
                          name="customsku"
                          value="{{ block.settings.variantid }}"
                          data-price="{{ block.settings.skuprice }}"
                          data-old-price="{{ block.settings.skuoldprice }}"
                        >
                        <label for="custom-sku-{{ forloop.index }}">{{ block.settings.skuname }}</label>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          {% endif %}

          <!-- Quantity Selector -->
          <div class="quantity-selector">
            <label for="quantity">{{ section.settings.quantitylabel }}:</label>
            <div class="quantity-input">
              <button type="button" class="quantity-btn" onclick="changeQuantity(-1)">âˆ’</button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-number" readonly>
              <button type="button" class="quantity-btn" onclick="changeQuantity(1)">+</button>
            </div>
          </div>

          <!-- Benefits List -->
          {% if section.blocks.size > 0 %}
            <div class="benefits-list">
              {% for block in section.blocks %}
                {% if block.type == 'benefit' %}
                  <div class="benefit-item">
                    <span>{{ block.settings.benefitname }}</span>
                    <span class="value">{{ block.settings.benefitvalue }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <div class="total-row">
            <span>{{ section.settings.totallabel }}</span>
            <span id="total-price">{{ display_product.price | money }}</span>
          </div>

          {% if section.settings.disclaimertext != blank %}
            <div class="disclaimer">{{ section.settings.disclaimertext }}</div>
          {% endif %}

          {% if section.settings.guaranteetext != blank %}
            <div class="guarantee">{{ section.settings.guaranteetext }}</div>
          {% endif %}

          {% if section.settings.flexibletext != blank %}
            <div class="flexible">{{ section.settings.flexibletext }}</div>
          {% endif %}

          <!-- Button Group -->
          <div class="button-group">
            <button type="submit" name="add" class="add-to-cart-button" id="add-to-cart-btn">
              {{ section.settings.addtocarttext }}
            </button>
            <button type="button" class="buy-now-button" id="buy-now-btn">
              {{ section.settings.buynowtext }}
            </button>
          </div>
        </form>
      </div>

      <!-- Right Image -->
      <div>
        {% if section.settings.useproductimage and display_product.featured_image %}
          <img
            id="main-product-image"
            src="{{ display_product.featured_image | image_url: width: 600 }}"
            alt="{{ display_product.featured_image.alt | default: display_product.title }}"
            class="main-image"
            loading="lazy"
          >
        {% elsif section.settings.mainimage != blank %}
          <img
            id="main-product-image"
            src="{{ section.settings.mainimage | image_url: width: 600 }}"
            alt="{{ section.settings.mainimagealt | default: display_product.title }}"
            class="main-image"
            loading="lazy"
          >
        {% elsif section.settings.fallbackimage != blank %}
          <img
            id="main-product-image"
            src="{{ section.settings.fallbackimage | image_url: width: 600 }}"
            alt="{{ section.settings.mainimagealt | default: display_product.title }}"
            class="main-image"
            loading="lazy"
          >
        {% elsif display_product.featured_image %}
          <img
            id="main-product-image"
            src="{{ display_product.featured_image | image_url: width: 600 }}"
            alt="{{ display_product.featured_image.alt | default: display_product.title }}"
            class="main-image"
            loading="lazy"
          >
        {% else %}
          <div
            id="main-product-image"
            class="main-image placeholder-image"
            style="background: #f3f4f6; display: flex; align-items: center; justify-content: center; color: #9ca3af; font-size: 16px;"
          >
            <span>{{ display_product.title | default: 'Product Image' }}</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  // Quantity change function
  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    let currentQuantity = parseInt(quantityInput.value);
    let newQuantity = currentQuantity + change;

    if (newQuantity < 1) newQuantity = 1;

    quantityInput.value = newQuantity;
    updateTotalPrice();
  }

  // Update price when variant changes
  document.addEventListener('DOMContentLoaded', function () {
    const variantOptions = document.querySelectorAll('input[name="id"]');
    const currentPriceElement = document.getElementById('current-price');
    const oldPriceElement = document.getElementById('old-price');
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const buyNowBtn = document.getElementById('buy-now-btn');

    variantOptions.forEach(function (option) {
      option.addEventListener('change', function () {
        if (this.checked) {
          const newPrice = this.getAttribute('data-price');
          const newOldPrice = this.getAttribute('data-old-price');
          const isAvailable = this.getAttribute('data-available') === 'true';
          const newImage = this.getAttribute('data-image');
          const newImageAlt = this.getAttribute('data-image-alt');

          if (newPrice) currentPriceElement.textContent = newPrice;

          if (newOldPrice && newOldPrice !== '') {
            if (!oldPriceElement) {
              const priceRow = document.querySelector('.price-row');
              const oldPriceSpan = document.createElement('span');
              oldPriceSpan.className = 'price-old price-discount';
              oldPriceSpan.id = 'old-price';
              priceRow.appendChild(oldPriceSpan);
            }
            document.getElementById('old-price').textContent = newOldPrice;
            document.getElementById('old-price').style.display = 'inline';
          } else if (oldPriceElement) {
            oldPriceElement.style.display = 'none';
          }

          // Update product image
          const mainImage = document.getElementById('main-product-image');
          if (newImage && mainImage) {
            mainImage.classList.add('changing');
            setTimeout(function () {
              if (mainImage.tagName === 'IMG') {
                mainImage.src = newImage;
                mainImage.alt = newImageAlt || '';
              } else {
                // Convert placeholder div to img if needed
                const newImg = document.createElement('img');
                newImg.id = 'main-product-image';
                newImg.src = newImage;
                newImg.alt = newImageAlt || '';
                newImg.className = 'main-image';
                newImg.loading = 'lazy';
                mainImage.parentNode.replaceChild(newImg, mainImage);
              }
              setTimeout(function () {
                document.getElementById('main-product-image').classList.remove('changing');
              }, 50);
            }, 150);
          }

          // Update button states based on availability
          if (isAvailable) {
            addToCartBtn.disabled = false;
            buyNowBtn.disabled = false;
            addToCartBtn.textContent = '{{ section.settings.addtocarttext }}';
          } else {
            addToCartBtn.disabled = true;
            buyNowBtn.disabled = true;
            addToCartBtn.textContent = 'Sold Out';
          }

          updateTotalPrice();
        }
      });
    });

    // Buy now button functionality
    document.getElementById('buy-now-btn').addEventListener('click', function () {
      const form = document.querySelector('.product-form');
      const formData = new FormData(form);

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => {
          window.location.href = '/cart';
        })
        .catch((error) => {
          console.error('Error:', error);
        });
    });

    // Initialize total price
    updateTotalPrice();
  });

  function updateTotalPrice() {
    const selectedVariant = document.querySelector('input[name="id"]:checked');
    const quantity = parseInt(document.getElementById('quantity').value);
    const totalPriceElement = document.getElementById('total-price');

    if (selectedVariant && selectedVariant.getAttribute('data-price')) {
      const unitPrice = selectedVariant.getAttribute('data-price');
      // Extract numeric value from price string
      const priceMatch = unitPrice.match(/[\d,]+\.?\d*/);
      if (priceMatch) {
        const numericPrice = parseFloat(priceMatch[0].replace(',', ''));
        const totalPrice = numericPrice * quantity;
        const currency = unitPrice.match(/[^\d\s,\.]+/);
        const currencySymbol = currency ? currency[0] : '$';
        totalPriceElement.textContent = currencySymbol + totalPrice.toFixed(2);
      }
    }
  }
</script>

