{%- style -%}
  .product-highlight {
    display: flex;
    min-height: 600px;
    margin-bottom: 36px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 2rem;
    margin: 0;
  }

  .highlight-left {
    width: 50%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 100%;
  }

  .highlight-image-container {
    position: relative;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 300px;
  }

  .highlight-image {
    width: 50%;
    height: 300px;
    object-fit: contain;
  }

  .highlight-info {
    width: calc(100% - 2rem);
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(255,255,255,0.8);
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }

  .highlight-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    color: #000;
  }

  .highlight-price {
    font-size: 0.9rem;
    margin: 0.2rem 0 0;
    color: #333;
  }

  .highlight-bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
  }

  .highlight-text {
    flex: 1;
    font-size: 0.9rem;
    color: #666;
  }

  .highlight-button {
    background: none;
    border: 1px solid #000;
    padding: 0.5rem 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-right: 2rem;
  }

  .highlight-button:hover {
    background: #000;
    color: #fff;
  }

  .highlight-right {
    flex: 1;
    background-size: cover;
    background-position: center;
  }

  @media screen and (max-width: 750px) {
    .product-highlight {
      flex-direction: column;
    }
    
    .highlight-right {
      min-height: 300px;
    }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="product-highlight">
  <div class="highlight-left">
    <div class="highlight-image-container">
      {%- if section.settings.product != blank -%}
        {% assign product = section.settings.product %}
        <img 
          class="highlight-image" 
          src="{{ product.featured_image | img_url: '800x' }}" 
          alt="{{ product.featured_image.alt }}" 
          loading="lazy"
          width="800"
          height="800"
        />
        <div class="highlight-info">
          <h3 class="highlight-title">{{ product.title }}</h3>
          <p class="highlight-price">{{ product.price | money }}</p>
        </div>
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: 'highlight-image' }}
      {%- endif -%}
    </div>
    
    <div class="highlight-bottom">
      <p class="highlight-text">{{ section.settings.bottom_text }}</p>
      <a href="{{ section.settings.button_link }}" class="highlight-button">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
  
  <div class="highlight-right" style="background-image: url('{{ section.settings.right_image | img_url: '2000x' }}')">
    {%- if section.settings.right_image == blank -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Highlight",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Product"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Text",
      "default": "Discover more about this product"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Senses Preview V2-2"
    }
  ]
}
{% endschema %}
