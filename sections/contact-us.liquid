<section class="contact-us-section">
  <div class="contact-container">
    <!-- Header -->
    <header class="contact-header">
      <h1 class="contact-title">{{ section.settings.page_title }}</h1>
      <nav class="contact-breadcrumb">
        <a href="{{ routes.root_url }}">{{ section.settings.breadcrumb_home }}</a>
        <span>/</span>
        <span>{{ section.settings.breadcrumb_current }}</span>
      </nav>
    </header>

    <!-- Content -->
    <div class="contact-content">
      <h2 class="contact-section-title">{{ section.settings.section_title }}</h2>
      <p class="contact-description">{{ section.settings.description }}</p>

      <!-- Success Message -->
      <div class="success-message" id="successMessage">
        {{ section.settings.success_message }}
      </div>

      <!-- Error Message -->
      <div class="error-message" id="errorMessage">
        {{ section.settings.error_message }}
      </div>

      <!-- Contact Form -->
      <form class="contact-form" id="contactForm" onsubmit="handleFormSubmit(event)">
        <!-- Name Field -->
        <div class="form-group">
          <label class="form-label" for="contact-name">{{ section.settings.name_label }}</label>
          <input
            type="text"
            id="contact-name"
            name="contact[name]"
            class="form-input"
            placeholder="{{ section.settings.name_placeholder }}"
            required
          >
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <label class="form-label" for="contact-email">{{ section.settings.email_label }}</label>
          <input
            type="email"
            id="contact-email"
            name="contact[email]"
            class="form-input"
            placeholder="{{ section.settings.email_placeholder }}"
            required
          >
        </div>

        <!-- Phone Field -->
        <div class="form-group">
          <label class="form-label" for="contact-phone">{{ section.settings.phone_label }}</label>
          <div class="phone-input-group">
            <select class="country-select" name="contact[country_code]">
              {% for block in section.blocks %}
                {% if block.type == 'country_code' %}
                  <option
                    value="{{ block.settings.code }}"
                    {% if block.settings.default %}
                      selected
                    {% endif %}
                  >
                    {{ block.settings.flag }}
                    {{ block.settings.code }}
                  </option>
                {% endif %}
              {% endfor %}
            </select>
            <input
              type="tel"
              id="contact-phone"
              name="contact[phone]"
              class="form-input phone-input"
              placeholder="{{ section.settings.phone_placeholder }}"
            >
          </div>
        </div>

        <!-- Help Topic Field -->
        <div class="form-group">
          <label class="form-label" for="contact-topic">{{ section.settings.topic_label }}</label>
          <select id="contact-topic" name="contact[topic]" class="form-select" required>
            <option value="">{{ section.settings.topic_placeholder }}</option>
            {% for block in section.blocks %}
              {% if block.type == 'help_topic' %}
                <option value="{{ block.settings.topic_value }}">{{ block.settings.topic_label }}</option>
              {% endif %}
            {% endfor %}
          </select>
        </div>

        <!-- Message Field -->
        <div class="form-group">
          <label class="form-label" for="contact-message">{{ section.settings.message_label }}</label>
          <textarea
            id="contact-message"
            name="contact[body]"
            class="form-textarea"
            placeholder="{{ section.settings.message_placeholder }}"
            required
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-button">
          {{ section.settings.submit_button_text }}
        </button>
      </form>
    </div>
  </div>
</section>

<script>
  function handleFormSubmit(event) {
    event.preventDefault();

    const form = event.target;
    const formData = new FormData(form);
    const submitButton = form.querySelector('.submit-button');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');

    // Hide previous messages
    successMessage.classList.remove('show');
    errorMessage.classList.remove('show');

    // Show loading state
    form.classList.add('loading');
    submitButton.textContent = '{{ section.settings.sending_button_text }}';

    // Simulate form submission (replace with actual Shopify contact form handling)
    fetch('/contact', {
      method: 'POST',
      body: formData,
      headers: {
        Accept: 'application/json',
      },
    })
      .then((response) => {
        if (response.ok) {
          // Show success message
          successMessage.classList.add('show');
          form.reset();

          // Scroll to success message
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          throw new Error('Form submission failed');
        }
      })
      .catch((error) => {
        console.error('Error:', error);
        errorMessage.classList.add('show');

        // Scroll to error message
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
      })
      .finally(() => {
        // Remove loading state
        form.classList.remove('loading');
        submitButton.textContent = '{{ section.settings.submit_button_text }}';
      });
  }

  // Auto-hide messages after 5 seconds
  function autoHideMessage(element) {
    if (element.classList.contains('show')) {
      setTimeout(() => {
        element.classList.remove('show');
      }, 5000);
    }
  }

  // Watch for message visibility changes
  const observer = new MutationObserver(function (mutations) {
    mutations.forEach(function (mutation) {
      if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
        const target = mutation.target;
        if (target.classList.contains('success-message') || target.classList.contains('error-message')) {
          autoHideMessage(target);
        }
      }
    });
  });

  observer.observe(document.getElementById('successMessage'), { attributes: true });
  observer.observe(document.getElementById('errorMessage'), { attributes: true });
</script>

