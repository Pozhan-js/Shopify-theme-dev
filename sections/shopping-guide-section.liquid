<style>
.shopping-guide-section {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.guide-hero {
  background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);
  padding: 80px 0;
  text-align: center;
  margin-bottom: 60px;
  border-radius: 8px;
}

.guide-title {
  font-size: 42px;
  font-weight: 300;
  color: #1a1a1a;
  margin-bottom: 20px;
  letter-spacing: 2px;
}

.guide-subtitle {
