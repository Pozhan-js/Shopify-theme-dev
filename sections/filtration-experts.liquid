<style>
  .filtration-experts {
    width: 100%;
    background-color: #ffffff;
    padding: 60px 0;
  }

  .filtration-experts__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .filtration-experts__title {
    text-align: center;
    font-size: 36px;
    font-weight: 600;
    color: #333;
    margin: 0 0 50px 0;
  }

  .filtration-experts__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .filtration-experts__article {
    background: #ffffff;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .filtration-experts__article:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .filtration-experts__image-wrapper {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .filtration-experts__image {
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    object-position: center;
  }

  .filtration-experts__content {
    padding: 25px 20px 30px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .filtration-experts__date {
    font-size: 14px;
    color: #666;
    margin: 0 0 10px 0;
    font-weight: 400;
  }

  .filtration-experts__article-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin: 0 0 15px 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .filtration-experts__article-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .filtration-experts__article-title a:hover {
    color: #871d16;
  }

  .filtration-experts__excerpt {
    font-size: 14px;
    color: #666;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 1024px) {
    .filtration-experts {
      padding: 50px 0;
    }

    .filtration-experts__container {
      padding: 0 30px;
    }

    .filtration-experts__title {
      font-size: 32px;
      margin-bottom: 40px;
    }

    .filtration-experts__grid {
      gap: 30px;
    }

    .filtration-experts__image-wrapper {
      height: 250px;
    }

    .filtration-experts__content {
      padding: 20px 18px 25px;
    }

    .filtration-experts__article-title {
      font-size: 17px;
    }

    .filtration-experts__excerpt {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .filtration-experts {
      padding: 40px 0;
    }

    .filtration-experts__container {
      padding: 0 20px;
    }

    .filtration-experts__title {
      font-size: 28px;
      margin-bottom: 35px;
    }

    .filtration-experts__grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .filtration-experts__image-wrapper {
      height: 220px;
    }

    .filtration-experts__content {
      padding: 18px 15px 22px;
    }

    .filtration-experts__article-title {
      font-size: 16px;
      margin-bottom: 12px;
    }

    .filtration-experts__excerpt {
      font-size: 12px;
    }

    .filtration-experts__date {
      font-size: 13px;
      margin-bottom: 8px;
    }
  }

  @media (max-width: 480px) {
    .filtration-experts {
      padding: 35px 0;
    }

    .filtration-experts__container {
      padding: 0 15px;
    }

    .filtration-experts__title {
      font-size: 24px;
      margin-bottom: 30px;
    }

    .filtration-experts__grid {
      gap: 20px;
    }

    .filtration-experts__image-wrapper {
      height: 200px;
    }

    .filtration-experts__content {
      padding: 15px 12px 18px;
    }

    .filtration-experts__article-title {
      font-size: 15px;
      margin-bottom: 10px;
    }

    .filtration-experts__excerpt {
      font-size: 11px;
    }

    .filtration-experts__date {
      font-size: 12px;
      margin-bottom: 6px;
    }
  }
</style>

<section class="filtration-experts">
  <div class="filtration-experts__container">
    {% if section.settings.title != blank %}
      <h2 class="filtration-experts__title" style="color: {{ section.settings.title_color }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="filtration-experts__grid">
      {% for block in section.blocks %}
        {% if block.type == 'article' %}
          <article class="filtration-experts__article">
            <div class="filtration-experts__image-wrapper">
              {% if block.settings.article_image %}
                <img
                  src="{{ block.settings.article_image | img_url: '400x' }}"
                  alt="{{ block.settings.article_title | default: 'Article Image' }}"
                  class="filtration-experts__image"
                  loading="lazy"
                >
              {% endif %}
            </div>

            <div class="filtration-experts__content">
              {% if block.settings.article_date != blank %}
                <time class="filtration-experts__date" style="color: {{ block.settings.date_color }};">
                  {{ block.settings.article_date }}
                </time>
              {% endif %}

              {% if block.settings.article_title != blank %}
                <h3 class="filtration-experts__article-title" style="color: {{ block.settings.title_color }};">
                  {% if block.settings.article_url != blank %}
                    <a href="{{ block.settings.article_url }}">{{ block.settings.article_title }}</a>
                  {% else %}
                    {{ block.settings.article_title }}
                  {% endif %}
                </h3>
              {% endif %}

              {% if block.settings.article_excerpt != blank %}
                <p class="filtration-experts__excerpt" style="color: {{ block.settings.excerpt_color }};">
                  {{ block.settings.article_excerpt }}
                </p>
              {% endif %}
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

