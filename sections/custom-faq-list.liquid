  "name": "FAQ列表",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "区块标题",
      "default": "常见问题"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "标题大小",
      "default": 24
    },
    {
      "type": "select",
      "id": "title_weight",
