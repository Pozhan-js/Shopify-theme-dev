{% comment %}
  Home Footer Section - 页脚区域
  完全兼容版：避免嵌套 list，使用固定字段替代
{% endcomment %}

<style>
  .footer-section {
    background: #111827;
    color: white;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Notices Section */
  .footer-notices {
    background: #1f2937;
    padding: 3rem 0;
  }

  .notices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .notice-card {
    background: #374151;
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .notice-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .notice-icon {
    width: 2.5rem;
    height: 2.5rem;
    background: #ef4444;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.75rem;
  }

  .notice-title {
    font-size: 1.125rem;
    font-weight: 600;
  }

  .notice-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    color: #d1d5db;
    font-size: 0.875rem;
  }

  .notice-item i {
    color: #ef4444;
    margin-right: 0.5rem;
    margin-top: 0.125rem;
  }

  /* Subscribe Section */
  .footer-subscribe {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    padding: 3rem 0;
    text-align: center;
  }

  .subscribe-title {
    font-size: 1.875rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .subscribe-subtitle {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .subscribe-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
  }

  .subscribe-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 0.5rem 0 0 0.5rem;
    outline: none;
    font-size: 1rem;
  }

  .subscribe-button {
    background: white;
    color: #ef4444;
    border: none;
    padding: 0 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .subscribe-button:hover {
    opacity: 0.9;
  }

  .subscribe-success {
    margin-top: 1rem;
    padding: 0.75rem 1rem;
    background: #10b981;
    border-radius: 0.5rem;
    display: inline-block;
    display: none;
  }

  /* Main Footer */
  .footer-main {
    padding: 3rem 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
  }

  .footer-brand h3 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .footer-description {
    color: #9ca3af;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    color: #9ca3af;
  }

  .contact-item i {
    color: #ef4444;
    margin-right: 0.75rem;
    width: 1rem;
  }

  .footer-social h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .social-link {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: #374151;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: background 0.2s;
  }

  .social-link:hover {
    background: #ef4444;
  }

  .app-download h5 {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .app-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .app-button {
    background: white;
    color: #1f2937;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid #374151;
    padding: 1.5rem 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: white;
  }

  @media (max-width: 768px) {
    .notices-grid {
      grid-template-columns: 1fr;
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .footer-links {
      justify-content: center;
    }
  }
</style>

<footer class="footer-section">
  <!-- Notices -->
  <div class="footer-notices">
    <div class="footer-container">
      <div class="notices-grid">
        {% for block in section.blocks %}
          {% if block.type == 'notice' %}
            <div class="notice-card">
              <div class="notice-header">
                <div class="notice-icon">
                  <i class="{{ block.settings.icon }}"></i>
                </div>
                <h3 class="notice-title">{{ block.settings.title }}</h3>
              </div>
              <ul>
                {% if block.settings.item_1 != blank %}
                <li class="notice-item">
                  <i class="fas fa-check"></i>
                  {{ block.settings.item_1 }}
                </li>
                {% endif %}
                {% if block.settings.item_2 != blank %}
                <li class="notice-item">
                  <i class="fas fa-check"></i>
                  {{ block.settings.item_2 }}
                </li>
                {% endif %}
                {% if block.settings.item_3 != blank %}
                <li class="notice-item">
                  <i class="fas fa-check"></i>
                  {{ block.settings.item_3 }}
                </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Subscribe -->
  <div class="footer-subscribe">
    <div class="footer-container">
      <h3 class="subscribe-title">{{ section.settings.subscribe_title }}</h3>
      <p class="subscribe-subtitle">{{ section.settings.subscribe_subtitle }}</p>
      <form class="subscribe-form" onsubmit="handleSubscribe(event)">
        <input type="email" 
               class="subscribe-input" 
               placeholder="Enter your email address" 
               required>
        <button type="submit" class="subscribe-button">Subscribe</button>
      </form>
      <div class="subscribe-success" id="subscribeSuccess">
        <i class="fas fa-check-circle"></i> Successfully subscribed!
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-grid">
        <div class="footer-brand">
          <h3>{{ section.settings.brand_name }}</h3>
          <p class="footer-description">{{ section.settings.brand_description }}</p>
          <div class="footer-contact">
            <div class="contact-item">
              <i class="fas fa-phone"></i>
              <span>{{ section.settings.contact_phone }}</span>
            </div>
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <span>{{ section.settings.contact_email }}</span>
            </div>
            <div class="contact-item">
              <i class="fas fa-clock"></i>
              <span>{{ section.settings.business_hours }}</span>
            </div>
          </div>
        </div>

        <div class="footer-social">
          <h4>Follow Us</h4>
          <div class="social-links">
            {% for block in section.blocks %}
              {% if block.type == 'social_link' %}
                <a href="{{ block.settings.url }}" class="social-link" target="_blank">
                  <i class="{{ block.settings.icon }}"></i>
                </a>
              {% endif %}
            {% endfor %}
          </div>
          <div class="app-download">
            <h5>Download Our App</h5>
            <div class="app-buttons">
              <div class="app-button">App Store</div>
              <div class="app-button">Google Play</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          © {{ 'now' | date: '%Y' }} {{ section.settings.brand_name }}. All rights reserved.
        </div>
        <div class="footer-links">
          <a href="#" class="footer-link">Privacy Policy</a>
          <a href="#" class="footer-link">Terms of Service</a>
          <a href="#" class="footer-link">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  function handleSubscribe(event) {
    event.preventDefault();
    const form = event.target;
    const email = form.querySelector('.subscribe-input').value;
    
    console.log('Subscribing email:', email);
    
    const success = document.getElementById('subscribeSuccess');
    success.style.display = 'inline-block';
    form.reset();
    
    setTimeout(() => {
      success.style.display = 'none';
    }, 3000);
  }
</script>

