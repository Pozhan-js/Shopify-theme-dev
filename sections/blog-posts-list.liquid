<div class="blog-posts-list-section">
  <div class="page-width">
    <h2 class="blog-posts-title">{{ section.settings.title }}</h2>
    
    <ul class="blog-posts-simple-list">
      {% for article in blogs.news.articles %}
        <li class="blog-post-simple-item">
          <a href="{{ article.url }}" class="blog-post-simple-link">
            <span class="blog-post-date">{{ article.published_at | date: '%Y-%m-%d' }}</span>
            <span class="blog-post-title-text">{{ article.title }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
    
    {% if blogs.news.articles.size > 0 %}
      <div class="blog-posts-more">
        <a href="/blogs/news" class="blog-posts-all-link">查看所有文章</a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.blog-posts-list-section {
  padding: 40px 0;
  background-color: {{ section.settings.background_color }};
}

.blog-posts-title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 30px;
  color: {{ section.settings.title_color }};
}

.blog-posts-simple-list {
  list-style: none;
  padding: 0;
  margin: 0;
  max-width: 800px;
  margin: 0 auto;
}

.blog-post-simple-item {
  border-bottom: 1px solid #eee;
  transition: background-color 0.3s ease;
}

.blog-post-simple-item:hover {
  background-color: #f9f9f9;
}

.blog-post-simple-link {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  text-decoration: none;
  color: #333;
  transition: color 0.3s ease;
}

.blog-post-simple-link:hover {
  color: #007bff;
}

.blog-post-date {
  font-size: 0.9rem;
  color: #666;
  min-width: 100px;
  margin-right: 20px;
}

.blog-post-title-text {
  font-size: 1.1rem;
  font-weight: 500;
  line-height: 1.4;
}

.blog-posts-more {
  text-align: center;
  margin-top: 30px;
}

.blog-posts-all-link {
  display: inline-block;
  padding: 10px 25px;
  background-color: #333;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.blog-posts-all-link:hover {
  background-color: #555;
}

@media (max-width: 768px) {
  .blog-posts-list-section {
    padding: 30px 20px;
  }
  
  .blog-posts-title {
    font-size: 1.5rem;
  }
  
  .blog-post-simple-link {
    flex-direction: column;
    align-items: flex-start;
    padding: 12px 15px;
  }
  
  .blog-post-date {
    margin-right: 0;
    margin-bottom: 5px;
    font-size: 0.8rem;
  }
  
  .blog-post-title-text {
    font-size: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "博客文章列表",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "博客文章列表"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "标题颜色",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "博客文章列表",
      "category": "内容"
    }
  ]
}
{% endschema %}
