<div class="rich-text-section" style="background-color: {{ section.settings.bg_color | default: 'transparent' }};">
  <div class="page-width">
    <div class="rich-text-content" style="color: {{ section.settings.text_color }};">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .rich-text-section {
    width: 100%;
    padding: 20px 0;
  }
  .rich-text-content {
    font-size: {{ section.settings.base_font_size }}px;
    line-height: 1.6;
  }
  .rich-text-content h1 {
    font-size: {{ section.settings.h1_size }}px;
  }
  .rich-text-content h2 {
    font-size: {{ section.settings.h2_size }}px;
  }
  .rich-text-content h3 {
    font-size: {{ section.settings.h3_size }}px;
  }
  .rich-text-content p {
    margin: 0 0 1em 0;
  }
  .rich-text-content p:last-child {
    margin-bottom: 0;
  }
</style>

{% schema %}
{
  "name": "自定义富文本",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "文本内容",
      "default": "<p>在这里输入您的文本</p>"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "字体大小设置"
    },
    {
      "type": "range",
      "id": "base_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "基础字体大小",
      "default": 16
    },
    {
      "type": "range",
      "id": "h1_size",
      "min": 24,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "H1标题大小",
      "default": 36
    },
    {
      "type": "range",
      "id": "h2_size",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "H2标题大小",
      "default": 28
    },
    {
      "type": "range",
      "id": "h3_size",
      "min": 18,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "H3标题大小",
      "default": 22
    }
  ],
  "presets": [
    {
      "name": "自定义富文本",
      "category": "text",
      "settings": {
        "content": "<p>示例文本内容</p>",
        "bg_color": "transparent",
        "text_color": "#ffffff",
        "base_font_size": 16,
        "h1_size": 36,
        "h2_size": 28,
        "h3_size": 22
      }
    }
  ],
  "disabled_on": {
    "groups": []
  }
}
{% endschema %}
