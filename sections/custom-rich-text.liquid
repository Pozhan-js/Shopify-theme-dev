<div class="rich-text-section" style="background-color: {{ section.settings.bg_color | default: 'transparent' }};">
  <div class="page-width">
    <div class="rich-text-content" style="color: {{ section.settings.text_color }};">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .rich-text-section {
    width: 100%;
    padding: 20px 0;
  }
  .rich-text-content {
    line-height: 1.6;
  }
  .rich-text-content p {
    margin: 0 0 1em 0;
  }
  .rich-text-content p:last-child {
    margin-bottom: 0;
  }
</style>

{% schema %}
{
  "name": "自定义富文本",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "文本内容",
      "default": "<p>在这里输入您的文本</p>"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "自定义富文本",
      "category": "text",
      "settings": {
        "content": "<p>示例文本内容</p>",
        "bg_color": "transparent",
        "text_color": "#ffffff"
      }
    }
  ],
  "disabled_on": {
    "groups": []
  }
}
{% endschema %}
