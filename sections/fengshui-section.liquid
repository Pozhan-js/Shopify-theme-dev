{% schema %}
{
  "name": "风水布置区块",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Powerful Healing"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "Starts with"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Personalized"
    },
    {
      "type": "text",
      "id": "title_line4",
      "label": "标题4",
      "default": "Feng Shui Arrangment"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "风水装饰品图片"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "描述内容",
      "default": "<p>Feng Shui: The ancient art of harmonizing energy flow. Scientifically balance your space, enhance environmental vibes, and elevate daily life with natural vitality.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "Unlock Custom Feng Shui Solution"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    }
  ],
  "presets": [
    {
      "name": "风水布置区块",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<div class="fengshui-section">
  <div class="page-width">
    <div class="fengshui-container">
      <div class="fengshui-display">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="风水装饰品"
            class="fengshui-image"
            width="800"
            height="auto"
            loading="lazy"
          >
        {% endif %}
      </div>
      <div class="fengshui-content">
        <div class="fengshui-hero">
          <h2 class="hero-title">{{ section.settings.title_line1 }}</h2>
          <h2 class="hero-title">{{ section.settings.title_line2 }}</h2>
          <h2 class="hero-title">{{ section.settings.title_line3 }}</h2>
          <h2 class="hero-title">{{ section.settings.title_line4 }}</h2>
        </div>
        <div class="fengshui-description">
          {{ section.settings.description }}
        </div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="button fengshui-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-section {
    padding: 50px 0;
    background: #000000;
  }

  .fengshui-hero {
    text-align: left;
    margin-bottom: 50px;
  }

  .hero-title {
    font-size: 4rem;
    color: #ffffff;
    margin-bottom: 78px;
    margin-top: 0;
    font-weight: 600;
  }

  .fengshui-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: center;
  }

  .fengshui-image {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .fengshui-description {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #ffffff;
    margin-bottom: 30px;
  }

  .fengshui-button {
    background-color: #ddd;
    color: #000;
    padding: 12px 30px;
    border-radius: 4px;
    font-size: 1.5rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .fengshui-button:hover {
    background-color: #fff;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .fengshui-container {
      grid-template-columns: 1fr;
    }

    .fengshui-title {
      font-size: 2rem;
    }
  }
</style>
