{% schema %}
{
  "name": "风水科学区块",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "Why Billionaires Treat Feng Shui as Spatial Physics? (Lab-Validated)"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "描述内容",
      "default": "<p>Feng Shui as a form of environmental science creates measurable impact through interactions with architectural energy flows.</p>"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "主图片"
    },
    {
      "type": "image_picker",
      "id": "left_item",
      "label": "左侧物品图片"
    },
    {
      "type": "image_picker",
      "id": "right_item",
      "label": "右侧物品图片"
    }
  ],
  "presets": [
    {
      "name": "风水科学区块",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<div class="fengshui-science-section">
  <div class="page-width">
    <div class="science-content">
      <h2 class="science-title">{{ section.settings.title }}</h2>
      <div class="science-display">
        {% if section.settings.main_image != blank %}
          <div class="main-image">
            <img
              src="{{ section.settings.main_image | img_url: '1000x' }}"
              alt="风水科学展示"
              width="1000"
              height="1000"
              loading="lazy"
            >
          </div>
        {% endif %}

        <div class="item-grid">
          {% if section.settings.left_item != blank %}
            <div class="item left-item">
              <img
                src="{{ section.settings.left_item | img_url: '300x' }}"
                alt="左侧风水物品"
                width="300"
                height="300"
                loading="lazy"
              >
            </div>
          {% endif %}

          {% if section.settings.right_item != blank %}
            <div class="item right-item">
              <img
                src="{{ section.settings.right_item | img_url: '300x' }}"
                alt="右侧风水物品"
                width="300"
                height="300"
                loading="lazy"
              >
            </div>
          {% endif %}
        </div>
      </div>

      <div class="science-description">
        {{ section.settings.description }}
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-science-section {
    padding: 60px 0;
    background: linear-gradient(135deg, #f5f0e6 0%, #e8d9c5 100%);
  }

  .science-title {
    font-size: 3.1rem;
    color: #fff;
    text-align: center;
    margin-bottom: 30px;
    margin-top: 0;
    font-weight: 500;
    position: absolute;
    top: 15px;
    left: 50%;
    transform: translateX(-50%);
  }

  .science-content {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .science-description {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 40px;
    text-align: left;
  }

  .science-display {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .main-image {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .main-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .item-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .item {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .item img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .science-title {
      font-size: 1.8rem;
    }

    .item-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
