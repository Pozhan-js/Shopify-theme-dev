{% comment %}
  Contact CTA Section - 联系我们行动召唤模块
  可编辑的联系信息和按钮，英文显示
{% endcomment %}

<div class="contact-cta-section">
  <div class="page-width">
    <div class="contact-wrapper">
      <div class="contact-info">
        {% if section.settings.show_address %}
          <span class="contact-item">
            <span class="contact-icon">📍</span>
            {{ section.settings.address | default: '123 Nanjing Road, Huangpu District, Shanghai' | escape }}
          </span>
        {% endif %}
        
        {% if section.settings.show_phone %}
          <span class="contact-item">
            <span class="contact-icon">📞</span>
            {{ section.settings.phone | default: '400-123-4567' | escape }}
          </span>
        {% endif %}
        
        {% if section.settings.show_email %}
          <span class="contact-item">
            <span class="contact-icon">✉️</span>
            {{ section.settings.email | default: 'info@bakery.com' | escape }}
          </span>
        {% endif %}
      </div>
      
      {% if section.settings.show_button %}
        <a href="{{ section.settings.button_link | default: '/pages/contact' }}" 
           class="cta-button">
          {{ section.settings.button_text | default: 'Contact Us' | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.contact-cta-section {
  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  background-color: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
}

.contact-wrapper {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30px;
  flex-wrap: wrap;
}

.contact-info {
  display: flex;
  gap: 30px;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 16px;
}

.contact-icon {
  font-size: 18px;
}

.cta-button {
  display: inline-block;
  padding: 12px 30px;
  background: {{ section.settings.button_color }};
  color: white;
  text-decoration: none;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 600;
  transition: background 0.3s ease;
}

.cta-button:hover {
  background: {{ section.settings.button_hover_color }};
}

@media (max-width: 768px) {
  .contact-wrapper {
    flex-direction: column;
    gap: 20px;
  }
  
  .contact-info {
    flex-direction: column;
    gap: 15px;
  }
  
  .contact-item {
    justify-content: center;
  }
}
</style>

{% schema %}
{
  "name": "Contact CTA Section",
  "tag": "section",
  "class": "contact-cta-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_address",
      "label": "Show Address",
      "default": true
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Nanjing Road, Huangpu District, Shanghai"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show Phone",
      "default": true
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "400-123-4567"
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show Email",
      "default": false
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "info@bakery.com"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#D8A26C"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#c6925a"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Contact CTA Section"
    }
  ]
}
{% endschema %}
