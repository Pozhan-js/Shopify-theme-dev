<div class="contact-hero-section">
  <div class="contact-hero-container">
    <!-- 背景图片 -->
    <div class="contact-hero-background">
      {% if section.settings.background_image != blank %}
        <img
          src="{{ section.settings.background_image | img_url: '1920x' }}"
          alt="{{ section.settings.background_alt | default: 'Contact Background' }}"
          class="background-image"
        >
      {% else %}
        <div
          class="background-placeholder"
          style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"
        ></div>
      {% endif %}
      <div
        class="background-overlay"
        style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
      ></div>
    </div>

    <!-- 内容区域 -->
    <div class="contact-hero-content">
      <div class="content-wrapper">
        <div class="text-content">
          {% if section.settings.heading != blank %}
            <h1 class="contact-heading">{{ section.settings.heading }}</h1>
          {% endif %}

          {% if section.settings.description != blank %}
            <p class="contact-description">{{ section.settings.description }}</p>
          {% endif %}
        </div>

        <div class="button-content">
          {% if section.settings.button_text != blank %}
            <a
              href="{{ section.settings.button_url | default: '#' }}"
              class="contact-button"
              {% if section.settings.open_new_tab %}
                target="_blank"
              {% endif %}
            >
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-hero-section {
    position: relative;
    width: 100%;
    height: clamp({{ section.settings.mobile_section_height }}px, {{ section.settings.section_height | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.section_height }}px);
    overflow: hidden;
  }

  .contact-hero-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .contact-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .background-placeholder {
    width: 100%;
    height: 100%;
  }

  .background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .contact-hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 clamp(20px, 5.2vw, 100px);
  }

  .content-wrapper {
    max-width: 1920px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: clamp(30px, 5vw, 100px);
  }

  .text-content {
    flex: 1;
    max-width: clamp(300px, 50%, 800px);
  }

  .contact-heading {
    font-size: clamp({{ section.settings.mobile_heading_size }}px, {{ section.settings.heading_size | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.heading_size }}px);
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 clamp({{ section.settings.mobile_text_spacing }}px, {{ section.settings.text_spacing | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.text_spacing }}px);
    text-transform: {{ section.settings.heading_transform }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .contact-description {
    font-size: clamp({{ section.settings.mobile_description_size }}px, {{ section.settings.description_size | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.description_size }}px);
    font-weight: {{ section.settings.description_weight }};
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin: 0;
    max-width: {{ section.settings.description_max_width }}px;
  }

  .button-content {
    flex-shrink: 0;
  }

  .contact-button {
    display: inline-block;
    padding: clamp({{ section.settings.mobile_button_padding_y }}px, {{ section.settings.button_padding_y | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.button_padding_y }}px) clamp({{ section.settings.mobile_button_padding_x }}px, {{ section.settings.button_padding_x | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.button_padding_x }}px);
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-size: clamp({{ section.settings.mobile_button_font_size }}px, {{ section.settings.button_font_size | divided_by: 1920.0 | times: 100 }}vw, {{ section.settings.button_font_size }}px);
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .contact-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .content-wrapper {
      flex-direction: column;
      text-align: center;
      gap: {{ section.settings.mobile_content_gap }}px;
    }

    .text-content {
      max-width: 100%;
    }

    .contact-description {
      max-width: 100%;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .content-wrapper {
      gap: {{ section.settings.tablet_content_gap }}px;
    }
  }
</style>

