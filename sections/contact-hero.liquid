<div class="contact-hero-section">
  <div class="contact-hero-container">
    <!-- 背景图片 -->
    <div class="contact-hero-background">
      {% if section.settings.background_image != blank %}
        <img
          src="{{ section.settings.background_image | img_url: '1920x' }}"
          alt="{{ section.settings.background_alt | default: 'Contact Background' }}"
          class="background-image"
        >
      {% else %}
        <div
          class="background-placeholder"
          style="background-color: #1B1B1B;"
        ></div>
      {% endif %}
      <div
        class="background-overlay"
        style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
      ></div>
    </div>

    <!-- 内容区域 -->
    <div class="contact-hero-content">
      <div class="container">
        <div class="content-wrapper">
          <div class="text-content">
            {% if section.settings.heading != blank %}
              <h1 class="contact-heading">{{ section.settings.heading }}</h1>
            {% endif %}

            {% if section.settings.description != blank %}
              <p class="contact-description">{{ section.settings.description }}</p>
            {% endif %}
          </div>

          <div class="button-content">
            {% if section.settings.button_text != blank %}
              <a
                href="{{ section.settings.button_url | default: '#' }}"
                class="contact-button"
                {% if section.settings.open_new_tab %}
                  target="_blank"
                {% endif %}
              >
                <svg
                  class="cta-icon"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7" />
                </svg>
                {{ section.settings.button_text }}
              </a>
            {% endif %}
            
            {% if section.settings.catalog_button_text != blank %}
              <a
                href="{{ section.settings.catalog_button_url | default: '#' }}"
                class="catalog-button"
                {% if section.settings.catalog_open_new_tab %}
                  target="_blank"
                {% endif %}
              >
                {% if section.settings.catalog_button_icon != blank %}
                  <img src="{{ section.settings.catalog_button_icon | img_url: '18x18' }}" alt="Catalog Icon" class="catalog-icon">
                {% else %}
                  <svg
                    class="catalog-icon"
                    width="18"
                    height="18"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                {% endif %}
                {{ section.settings.catalog_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

