<div class="contact-hero-section">
  <div class="contact-hero-container">
    <!-- 背景图片 -->
    <div class="contact-hero-background">
      {% if section.settings.background_image != blank %}
        <img
          src="{{ section.settings.background_image | img_url: '1920x' }}"
          alt="{{ section.settings.background_alt | default: 'Contact Background' }}"
          class="background-image"
        >
      {% else %}
        <div
          class="background-placeholder"
          style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"
        ></div>
      {% endif %}
      <div
        class="background-overlay"
        style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
      ></div>
    </div>

    <!-- 内容区域 -->
    <div class="contact-hero-content">
      <div class="container">
        <div class="content-wrapper">
          <div class="text-content">
            {% if section.settings.heading != blank %}
              <h1 class="contact-heading">{{ section.settings.heading }}</h1>
            {% endif %}

            {% if section.settings.description != blank %}
              <p class="contact-description">{{ section.settings.description }}</p>
            {% endif %}
          </div>

          <div class="button-content">
            {% if section.settings.button_text != blank %}
              <a
                href="{{ section.settings.button_url | default: '#' }}"
                class="contact-button"
                {% if section.settings.open_new_tab %}
                  target="_blank"
                {% endif %}
              >
                <svg
                  class="cta-icon"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7" />
                </svg>
                {{ section.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-hero-section {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}px;
    overflow: hidden;
  }

  .contact-hero-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .contact-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: none;
  }

  .background-placeholder {
    width: 100%;
    height: 100%;
  }

  .background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .contact-hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-end;
    padding-bottom: 80px;
  }

  .container {
    max-width: 1300px;
    width: 100%;
    margin: 0 auto;
    padding: 0 48px;
  }

  .content-wrapper {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 100px;
  }

  .text-content {
    flex: 1;
    max-width: 800px;
  }

  .contact-heading {
    font-family: 'Poppins', sans-serif;
    font-size: 48px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 {{ section.settings.text_spacing }}px;
    text-transform: {{ section.settings.heading_transform }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .contact-description {
    font-family: 'Poppins', sans-serif;
    font-size: 15px;
    font-weight: 400;
    color: {{ section.settings.description_color }};
    line-height: 30px;
    margin: 0;
    max-width: {{ section.settings.description_max_width }}px;
    white-space: nowrap;
  }

  .button-content {
    flex-shrink: 0;
  }

  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .cta-icon {
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .contact-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .contact-button:hover .cta-icon {
    transform: translateX(2px);
  }

  /* 响应式设计 */
  @media (max-width: 480px) {
    .contact-hero-section {
      height: auto;
      min-height: 400px;
    }

    .contact-hero-content {
      padding-bottom: 40px;
      align-items: center;
    }

    .container {
      padding: 0 20px;
    }

    .content-wrapper {
      flex-direction: column;
      text-align: center;
      gap: 20px;
      width: 100%;
    }

    .text-content {
      max-width: 100%;
      width: 100%;
    }

    .contact-heading {
      font-size: 28px;
      margin-bottom: 12px;
      letter-spacing: 1px;
      word-wrap: break-word;
      hyphens: auto;
    }

    .contact-description {
      font-size: 14px;
      line-height: 24px;
      max-width: 100%;
      width: 100%;
      white-space: normal;
      word-wrap: break-word;
      hyphens: auto;
      text-align: center;
    }

    .contact-button {
      padding: 12px 24px;
      font-size: 12px;
      letter-spacing: 0.5px;
      word-wrap: break-word;
    }
  }

  @media (min-width: 481px) and (max-width: 768px) {
    .contact-hero-section {
      height: auto;
      min-height: 500px;
    }

    .contact-hero-content {
      padding-bottom: 50px;
      align-items: center;
    }

    .container {
      padding: 0 30px;
    }

    .content-wrapper {
      flex-direction: column;
      text-align: center;
      gap: 25px;
      width: 100%;
    }

    .text-content {
      max-width: 100%;
      width: 100%;
    }

    .contact-heading {
      font-size: 36px;
      margin-bottom: 15px;
      letter-spacing: 1.5px;
      word-wrap: break-word;
      hyphens: auto;
    }

    .contact-description {
      font-size: 14px;
      line-height: 26px;
      max-width: 100%;
      width: 100%;
      white-space: normal;
      word-wrap: break-word;
      hyphens: auto;
      text-align: center;
    }

    .contact-button {
      padding: 14px 28px;
      font-size: 13px;
      letter-spacing: 0.8px;
      word-wrap: break-word;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .contact-hero-content {
      padding-bottom: 60px;
    }

    .content-wrapper {
      gap: 50px;
    }

    .contact-heading {
      font-size: 42px;
      margin-bottom: 18px;
    }

    .contact-description {
      font-size: 15px;
      line-height: 28px;
    }

    .contact-button {
      padding: 15px 30px;
      font-size: 13px;
    }
  }

  @media (min-width: 1025px) and (max-width: 1440px) {
    .contact-hero-content {
      padding-bottom: 70px;
    }

    .contact-heading {
      font-size: 46px;
      margin-bottom: 20px;
    }

    .contact-description {
      font-size: 15px;
      line-height: 30px;
    }

    .contact-button {
      padding: 16px 30px;
      font-size: 14px;
    }
  }

  @media (min-width: 1441px) {
    .contact-hero-content {
      padding-bottom: 80px;
    }

    .contact-heading {
      font-size: 48px;
      margin-bottom: 20px;
    }

    .contact-description {
      font-size: 15px;
      line-height: 30px;
    }

    .contact-button {
      padding: 16px 30px;
      font-size: 14px;
    }
  }
</style>

