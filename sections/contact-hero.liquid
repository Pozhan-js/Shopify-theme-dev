<div class="contact-hero-section">
  <div class="contact-hero-container">
    <!-- 背景图片 -->
    <div class="contact-hero-background">
      {% if section.settings.background_image != blank %}
        <img
          src="{{ section.settings.background_image | img_url: '1920x' }}"
          alt="{{ section.settings.background_alt | default: 'Contact Background' }}"
          class="background-image"
        >
      {% else %}
        <div
          class="background-placeholder"
          style="background-color: #1B1B1B;"
        ></div>
      {% endif %}
      <div
        class="background-overlay"
        style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
      ></div>
    </div>

    <!-- 内容区域 -->
    <div class="contact-hero-content">
      <div class="container">
        <div class="content-wrapper">
          <div class="text-content">
            {% if section.settings.heading != blank %}
              <h1 class="contact-heading">{{ section.settings.heading }}</h1>
            {% endif %}

            {% if section.settings.description != blank %}
              <p class="contact-description">{{ section.settings.description }}</p>
            {% endif %}
          </div>

          <div class="button-content">
            {% if section.settings.button_text != blank %}
              <a
                href="{{ section.settings.button_url | default: '#' }}"
                class="contact-button"
                {% if section.settings.open_new_tab %}
                  target="_blank"
                {% endif %}
              >
                <svg
                  class="cta-icon"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7" />
                </svg>
                {{ section.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

