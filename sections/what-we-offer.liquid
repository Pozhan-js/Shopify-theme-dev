<div class="what-we-offer">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        {{ section.settings.title | default: "What We Offer" }}
      </h2>
    </div>
    
    <div class="offer-content">
      <div class="offer-left">
        <div class="offer-description">
          {{ section.settings.description | default: "We design and build studio-grade apparatus with over 30+ handcrafted steps, eco-minded finishes, and rigorous QC. From single prototypes to full private-label runs, XS Pilates delivers the quality your brand stands for." }}
        </div>
        {% if section.settings.button_text != blank %}
          <div class="offer-cta">
            <a href="{{ section.settings.button_url | default: '#' }}" class="btn btn-consultation">
              {% if section.settings.button_icon != blank %}
                <img src="{{ section.settings.button_icon | img_url: '24x24' }}" alt="Icon" class="btn-icon">
              {% else %}
                <span class="btn-arrow">></span>
              {% endif %}
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
      
      <div class="offer-right">
        <div class="offer-cards">
          <div class="offer-card manufacturing-card">
            {% if section.settings.manufacturing_image != blank %}
              <img src="{{ section.settings.manufacturing_image | img_url: '680x400' }}" alt="Full-Line Manufacturing" class="card-image">
            {% else %}
              <div class="card-image-placeholder manufacturing-bg"></div>
            {% endif %}
            <div class="card-content">
              <h3 class="card-title">
                {{ section.settings.manufacturing_title | default: "Full-Line Manufacturing" }}
              </h3>
            </div>
          </div>
          
          <div class="offer-card solutions-card">
            {% if section.settings.solutions_image != blank %}
              <img src="{{ section.settings.solutions_image | img_url: '680x400' }}" alt="Comprehensive OEM Solutions" class="card-image">
            {% else %}
              <div class="card-image-placeholder solutions-bg"></div>
            {% endif %}
            <div class="card-content">
              <h3 class="card-title">
                {{ section.settings.solutions_title | default: "Comprehensive OEM Solutions" }}
              </h3>
              <ul class="card-features">
                {% for block in section.blocks %}
                  {% if block.type == 'feature' %}
                    <li class="feature-item">
                      {{ block.settings.feature_text }}
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.what-we-offer {
  padding: 80px 0;
  background-color: #ffffff;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-header {
  text-align: left;
  margin-bottom: 60px;
}

.section-title {
  font-size: 48px;
  font-weight: 500;
  color: #161616;
  margin: 0;
  line-height: 1.2;
  text-align: left;
}

.offer-content {
  display: flex;
  gap: 60px;
  align-items: flex-start;
}

.offer-left {
  flex: 1;
  max-width: 400px;
}

.offer-description {
  font-size: 16px;
  font-weight: 400;
  line-height: 32px;
  color: rgba(22, 22, 22, 0.5);
  margin-bottom: 40px;
}

.offer-cta {
  margin-top: 40px;
}

.btn {
  display: inline-block;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-consultation {
  background-color: #C22E35;
  color: white;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  font-weight: 500;
}

.btn-arrow {
  font-size: 16px;
  font-weight: 600;
  color: white;
}

.btn-icon {
  width: 12px;
  height: 8px;
  object-fit: contain;
}

.btn-consultation:hover {
  background-color: #A02329;
  transform: translateY(-2px);
}

.offer-right {
  flex: 2;
}

.offer-cards {
  display: flex;
  gap: 20px;
  height: 400px;
}

.offer-card {
  flex: 1;
  border-radius: 16px;
  overflow: hidden;
  position: relative;
  background: #f5f5f5;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.manufacturing-card {
  background: linear-gradient(135deg, #8B7355 0%, #A0926B 100%);
}

.solutions-card {
  background: linear-gradient(135deg, #E8E8E8 0%, #F5F5F5 100%);
}

.card-image {
  width: 100%;
  height: 60%;
  object-fit: cover;
  object-position: center;
}

.card-image-placeholder {
  width: 100%;
  height: 60%;
}

.manufacturing-bg {
  background: url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=680&q=80') center/cover;
}

.solutions-bg {
  background: url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=680&q=80') center/cover;
}

.card-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24px;
  border-radius: 16px;
  margin: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 20px;
  font-weight: 600;
  color: #333333;
  margin: 0 0 16px 0;
  line-height: 1.3;
}

.card-features {
  list-style: none;
  padding: 0;
  margin: 0;
}

.feature-item {
  font-size: 14px;
  font-weight: 400;
  color: #666666;
  margin-bottom: 8px;
  position: relative;
  padding-left: 16px;
  line-height: 1.4;
}

.feature-item:before {
  content: '';
  position: absolute;
  left: 0;
  top: 8px;
  width: 6px;
  height: 6px;
  background-color: #C4504A;
  border-radius: 50%;
}

.feature-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
/* 大屏幕 (1920px+) */
@media (min-width: 1920px) {
  .container {
    max-width: 1400px;
  }
  
  .section-title {
    font-size: 56px;
  }
  
  .offer-description {
    font-size: 18px;
  }
  
  .offer-cards {
    height: 480px;
  }
}

/* 笔记本电脑 (1366px - 1919px) */
@media (max-width: 1919px) and (min-width: 1366px) {
  .container {
    max-width: 1100px;
  }
  
  .section-title {
    font-size: 44px;
  }
  
  .offer-description {
    font-size: 15px;
  }
  
  .offer-cards {
    height: 360px;
  }
}

/* 小笔记本 (1024px - 1365px) */
@media (max-width: 1365px) and (min-width: 1024px) {
  .container {
    max-width: 960px;
    padding: 0 30px;
  }
  
  .section-title {
    font-size: 40px;
  }
  
  .offer-content {
    gap: 40px;
  }
  
  .offer-cards {
    height: 320px;
  }
  
  .card-title {
    font-size: 18px;
  }
}

/* 平板横屏 (768px - 1023px) */
@media (max-width: 1023px) and (min-width: 768px) {
  .what-we-offer {
    padding: 60px 0;
  }
  
  .section-title {
    font-size: 36px;
    margin-bottom: 40px;
  }
  
  .offer-content {
    flex-direction: column;
    gap: 40px;
  }
  
  .offer-left {
    max-width: 100%;
  }
  
  .offer-cards {
    height: 280px;
  }
  
  .card-content {
    padding: 20px;
    margin: 12px;
  }
}

/* 平板竖屏和大手机 (481px - 767px) */
@media (max-width: 767px) and (min-width: 481px) {
  .what-we-offer {
    padding: 50px 0;
  }
  
  .container {
    padding: 0 20px;
  }
  
  .section-title {
    font-size: 32px;
    margin-bottom: 30px;
  }
  
  .offer-content {
    flex-direction: column;
    gap: 30px;
  }
  
  .offer-cards {
    flex-direction: column;
    height: auto;
    gap: 20px;
  }
  
  .offer-card {
    height: 300px;
  }
  
  .card-title {
    font-size: 16px;
  }
  
  .feature-item {
    font-size: 13px;
  }
}

/* 小手机 (320px - 480px) */
@media (max-width: 480px) {
  .what-we-offer {
    padding: 40px 0;
  }
  
  .container {
    padding: 0 15px;
  }
  
  .section-title {
    font-size: 28px;
    margin-bottom: 25px;
  }
  
  .offer-description {
    font-size: 14px;
    margin-bottom: 30px;
  }
  
  .offer-cta {
    margin-top: 30px;
  }
  
.btn {
  display: inline-block;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
  
  .card-title {
    font-size: 15px;
    margin-bottom: 12px;
  }
  
  .feature-item {
    font-size: 12px;
    margin-bottom: 6px;
  }
}

/* 超小屏幕 (最小320px) */
@media (max-width: 320px) {
  .section-title {
    font-size: 24px;
  }
  
  .offer-description {
    font-size: 13px;
  }
  
  .offer-card {
    height: 260px;
  }
  
  .card-title {
    font-size: 14px;
  }
  
  .feature-item {
    font-size: 11px;
  }
}
</style>

