<header>
  <div class="nav-blur">
    <nav class="nav-container">
      <div class="nav-flex">
        <!-- Logo -->
        <div class="logo-container">
          <a href="{{ routes.root_url }}">
            {% if section.settings.logoimage %}
              <div class="logo-image">
                {% assign logosize2x = section.settings.logosize | default: 48 | times: 2 %}
                <img
                  src="{{ section.settings.logoimage | img_url: logosize2x }}"
                  alt="{{ section.settings.sitename | default: shop.name }}"
                  width="{{ section.settings.logosize | default: 48 }}"
                  height="{{ section.settings.logosize | default: 48 }}">
              </div>
            {% else %}
              <div class="logo-bg">
                <span>{{ section.settings.logotext | default: 'XS' }}</span>
              </div>
            {% endif %}
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="desktop-nav">
          {% assign mainmenuhandle = section.settings.mainmenu | default: 'main-menu' %}
          {% assign mainmenu = linklists[mainmenuhandle] %}
          {% if mainmenu and mainmenu.links.size > 0 %}
            {% for link in mainmenu.links %}
              <div class="dropdown">
                {% assign is_mega_menu = false %}
                {% if section.settings.megamenu_title != blank %}
                  {% if link.title == section.settings.megamenu_title %}
                    {% assign is_mega_menu = true %}
                  {% endif %}
                {% else %}
                  {% if link.title == 'Pilates Equipment' %}
                    {% assign is_mega_menu = true %}
                  {% endif %}
                {% endif %}
                
                {% if is_mega_menu %}
                  <span class="nav-item" style="cursor: pointer;">
                    <span>{{ link.title | escape }}</span>
                    <span class="dropdown-arrow"></span>
                  </span>
                  <div class="mega-dropdown-menu">
                    <div class="mega-menu-grid">
                      <!-- Column 1 -->
                      <div class="mega-menu-column">
                        {% if section.settings.category1_title != blank %}
                          <div class="mega-menu-category">
                            <h3>{{ section.settings.category1_title }}</h3>
                            <ul>
                              {% if section.settings.category1_link1_text != blank %}
                                <li><a href="{{ section.settings.category1_link1_url }}">{{ section.settings.category1_link1_text }}</a></li>
                              {% endif %}
                              {% if section.settings.category1_link2_text != blank %}
                                <li><a href="{{ section.settings.category1_link2_url }}">{{ section.settings.category1_link2_text }}</a></li>
