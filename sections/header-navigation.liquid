<style>
  /* Header Navigation Styles */
  .nav-blur {
    backdrop-filter: blur(12px);
    background: #5A5A5A;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    border-radius: 9999px;
    margin: 16px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
  }

  .nav-container {
    padding: 8px 24px;
    min-height: calc({{ section.settings.logo_size | default: 48 }}px + 16px);
  }

  .nav-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 12px;
    height: 100%;
  }

  .logo-bg {
    background: #FFFFFF;
    color: #DC2626;
    width: {{ section.settings.logo_size | default: 48 }}px;
    height: calc({{ section.settings.logo_size | default: 48 }}px + 8px);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: {{ section.settings.logo_size | default: 48 | times: 0.5 }}px;
  }

  .logo-image {
    height: calc({{ section.settings.logo_size | default: 48 }}px + 8px);
    border-radius: 6px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-image img {
    height: 100%;
    width: auto;
    border-radius: 6px;
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .desktop-nav {
    display: none;
    align-items: center;
    gap: 40px;
    margin-left: 32px;
  }

  .dropdown {
    position: relative;
    white-space: nowrap;
  }

  .nav-item {
    color: #FFFFFF;
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 0.01em;
    transition: all 0.2s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 6px;
    min-width: fit-content;
    height: {{ section.settings.logo_size | default: 48 }}px;
  }

  .nav-item:hover {
    color: #E5E7EB;
  }

  .dropdown-arrow::after {
    content: '';
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 6px;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 3px solid currentColor;
    transition: transform 0.2s ease;
  }

  .dropdown:hover .dropdown-arrow::after {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 8px;
    width: 192px;
    border-radius: 8px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
  }

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
  }

  .dropdown-item {
    display: block;
    padding: 8px 16px;
    font-size: 14px;
    color: #FFFFFF;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .dropdown-item:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }

  .right-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .contact-badge {
    background: linear-gradient(135deg, #DC2626 0%, #EF4444 100%);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.3);
    border: none;
    border-radius: 9999px;
    padding: 8px 16px;
    display: none;
    align-items: center;
    gap: 8px;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    height: {{ section.settings.logo_size | default: 48 }}px;
  }

  .contact-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .contact-badge:hover::before {
    left: 100%;
  }

  .contact-badge:hover {
    background: linear-gradient(135deg, #B91C1C 0%, #DC2626 100%);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
    color: #FFFFFF;
  }

  .contact-number {
    background: rgba(255, 255, 255, 0.2);
    color: #FFFFFF;
    font-weight: 600;
    font-size: 11px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-icon {
    transition: all 0.3s ease;
    color: #FFFFFF;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    border-radius: 4px;
    height: {{ section.settings.logo_size | default: 48 }}px;
    width: {{ section.settings.logo_size | default: 48 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-icon:hover {
    transform: scale(1.1);
    color: #DC2626;
  }

  .mobile-menu-toggle {
    background: none;
    border: none;
    color: #FFFFFF;
    padding: 8px;
    cursor: pointer;
    display: block;
    height: {{ section.settings.logo_size | default: 48 }}px;
    width: {{ section.settings.logo_size | default: 48 }}px;
    align-items: center;
    justify-content: center;
  }

  .mobile-menu {
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    display: none;
  }

  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .mobile-menu-item {
    width: 100%;
    text-align: left;
    color: #FFFFFF;
    background: none;
    border: none;
    padding: 8px 0;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: color 0.2s ease;
    text-decoration: none;
  }

  .mobile-menu-item:hover {
    color: #E5E7EB;
  }

  .mobile-submenu {
    margin-left: 16px;
    margin-top: 8px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .mobile-submenu-item {
    color: #9CA3AF;
    text-decoration: none;
    padding: 4px 0;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .mobile-submenu-item:hover {
    color: #FFFFFF;
  }

  .mobile-contact-badge {
    background: linear-gradient(135deg, #DC2626 0%, #EF4444 100%);
    border: none;
    border-radius: 9999px;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 500;
    margin-top: 16px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .mobile-contact-badge:hover {
    background: linear-gradient(135deg, #B91C1C 0%, #DC2626 100%);
    color: #FFFFFF;
  }

  /* Responsive styles */
  @media (min-width: 1024px) {
    .nav-blur {
      margin: 24px 32px;
    }
    
    .nav-container {
      padding: 8px 32px;
      min-height: calc({{ section.settings.logo_size | default: 48 }}px + 16px);
    }
    
    .desktop-nav {
      display: flex;
      flex: 1;
      justify-content: flex-start;
    }
    
    .contact-badge {
      display: flex;
    }
    
    .mobile-menu-toggle {
      display: none;
    }
    
    .mobile-menu {
      display: none !important;
    }
  }

  @media (min-width: 1280px) {
    .desktop-nav {
      gap: 48px;
    }
  }
</style>

<header>
  <div class="nav-blur">
    <nav class="nav-container">
      <div class="nav-flex">
        <!-- Logo -->
        <div class="logo-container">
          <a href="{{ routes.root_url }}">
            {% if section.settings.logo_image %}
              <div class="logo-image">
                {% assign logo_size_2x = section.settings.logo_size | default: 48 | times: 2 %}
                <img src="{{ section.settings.logo_image | img_url: logo_size_2x }}" 
                     alt="{{ section.settings.site_name | default: shop.name }}"
                     width="{{ section.settings.logo_size | default: 48 }}" 
                     height="{{ section.settings.logo_size | default: 48 }}">
              </div>
            {% else %}
              <div class="logo-bg">
                <span>{{ section.settings.logo_text | default: 'XS' }}</span>
              </div>
            {% endif %}
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="desktop-nav">
          {% assign main_menu_handle = section.settings.main_menu | default: 'main-menu' %}
          {% assign main_menu = linklists[main_menu_handle] %}
          {% if main_menu and main_menu.links.size > 0 %}
            {% for link in main_menu.links %}
              <div class="dropdown">
                {% if link.links.size > 0 %}
                  <span class="nav-item" style="cursor: pointer;">
                    <span>{{ link.title | escape }}</span>
                    <span class="dropdown-arrow"></span>
                  </span>
                  <div class="dropdown-menu">
                    <div style="padding: 8px 0;">
                      {% for child_link in link.links %}
                        <a href="{{ child_link.url }}" class="dropdown-item">
                          {{ child_link.title | escape }}
                        </a>
                      {% endfor %}
                    </div>
                  </div>
                {% else %}
                  <a href="{{ link.url }}" class="nav-item">
                    <span>{{ link.title | escape }}</span>
                  </a>
                {% endif %}
              </div>
            {% endfor %}
          {% endif %}
        </div>

        <!-- Right Side Actions -->
        <div class="right-actions">
          <!-- Contact Us Button -->
          <a href="{{ section.settings.contact_link }}" class="contact-badge">
            <span>{{ section.settings.contact_text | default: 'Contact Us' | escape }}</span>
            <div class="contact-number">
              <span>{{ section.settings.contact_number | default: '21' | escape }}</span>
            </div>
          </a>

          <!-- Search Icon -->
          <button class="search-icon" onclick="toggleSearch()">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>

          <!-- Mobile Menu Button -->
          <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
            <svg class="menu-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="close-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="mobile-menu" id="mobileMenu">
        <div class="mobile-menu-content">
          {% if main_menu and main_menu.links.size > 0 %}
            {% for link in main_menu.links %}
              <div>
                {% if link.links.size > 0 %}
                  <button class="mobile-menu-item" onclick="toggleSubmenu('submenu{{ forloop.index }}')">
                    {{ link.title | escape }}
                  </button>
                  <div class="mobile-submenu" id="submenu{{ forloop.index }}" style="display: none;">
                    {% for child_link in link.links %}
                      <a href="{{ child_link.url }}" class="mobile-submenu-item">
                        {{ child_link.title | escape }}
                      </a>
                    {% endfor %}
                  </div>
                {% else %}
                  <a href="{{ link.url }}" class="mobile-menu-item">
                    {{ link.title | escape }}
                  </a>
                {% endif %}
              </div>
            {% endfor %}
          {% endif %}
          
          <a href="{{ section.settings.contact_link }}" class="mobile-contact-badge">
            <span>{{ section.settings.contact_text | default: 'Contact Us' | escape }}</span>
            <div class="contact-number">
              <span>{{ section.settings.contact_number | default: '21' | escape }}</span>
            </div>
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
function toggleMobileMenu() {
  const mobileMenu = document.getElementById('mobileMenu');
  const menuIcon = document.querySelector('.menu-icon');
  const closeIcon = document.querySelector('.close-icon');
  
  if (mobileMenu.style.display === 'none' || mobileMenu.style.display === '') {
    mobileMenu.style.display = 'block';
    menuIcon.style.display = 'none';
    closeIcon.style.display = 'block';
  } else {
    mobileMenu.style.display = 'none';
    menuIcon.style.display = 'block';
    closeIcon.style.display = 'none';
  }
}

function toggleSubmenu(submenuId) {
  const submenu = document.getElementById(submenuId);
  if (submenu.style.display === 'none' || submenu.style.display === '') {
    submenu.style.display = 'flex';
  } else {
    submenu.style.display = 'none';
  }
}

function toggleSearch() {
  // 搜索功能实现
  console.log('Search clicked');
}
</script>

