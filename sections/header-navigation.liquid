<header>
  <div class="nav-blur">
    <nav class="nav-container">
      <div class="nav-flex">
        <!-- Logo -->
        <div class="logo-container">
          <a href="{{ routes.root_url }}">
            {% if section.settings.logoimage %}
              <div class="logo-image">
                {% assign logosize2x = section.settings.logosize | default: 48 | times: 2 %}
                <img
                  src="{{ section.settings.logoimage | img_url: logosize2x }}"
                  alt="{{ section.settings.sitename | default: shop.name }}"
                  width="{{ section.settings.logosize | default: 48 }}"
                  height="{{ section.settings.logosize | default: 48 }}">
              </div>
            {% else %}
              <div class="logo-bg">
                <span>{{ section.settings.logotext | default: 'XS' }}</span>
              </div>
            {% endif %}
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="desktop-nav">
          {% assign mainmenu = linklists[section.settings.mainmenu] %}
          {% if mainmenu and mainmenu.links.size > 0 %}
            {% for link in mainmenu.links %}
              {% assign link_handle = link.title | handleize %}
              
              {% if link_handle == 'pilates-equipment' or link_handle == 'products' or link_handle == 'equipment' %}
                <!-- Equipment Mega Menu -->
                <div class="dropdown has-mega-menu equipment-mega">
                  <span class="nav-item dropdown-arrow">{{ link.title | escape }}</span>
                  {% render 'mega-menu-equipment' %}
                </div>

              {% elsif link_handle == 'pilates-equipment-custom' %}
                <!-- Custom Equipment Dropdown Menu -->
