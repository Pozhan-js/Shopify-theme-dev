<style>
  /* Hero Banner Styles */
  .hero-section {
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
    , url('{{ section.settings.herobackgroundimage | img_url: '2048x' }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    border-radius: 16px;
    overflow: hidden;
  }

  .hero-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 128px 24px 0;
    width: 90%;
  }

  .hero-content {
    max-width: 1024px;
  }

  .hero-title {
    color: #FFFFFF;
    font-weight: 500;
    line-height: 60px;
    letter-spacing: -0.02em;
    font-size: 48px;
    margin-bottom: 24px;
    font-family: 'Inter'
    , system-ui
    , sans-serif;
  }

  .hero-subtitle {
    color: #D1D5DB;
    font-weight: 400;
    line-height: 1.6;
    font-size: 15px;
    margin-bottom: 32px;
    max-width: 600px;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .cta-button {
    background: linear-gradient(135deg, #DC2626 0%, #EF4444 100%);
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.3);
    transition: all 0.3s ease;
    color: #FFFFFF;
    width: 180px;
    height: 59.76px;
    border-radius: 4px;
    font-weight: 600;
    font-size: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    padding: 0;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button:hover {
    background: linear-gradient(135deg, #B91C1C 0%, #DC2626 100%);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
    transform: translateY(-2px);
    color: #FFFFFF;
  }

  .cta-icon {
    transition: transform 0.3s ease;
  }

  .cta-button:hover .cta-icon {
    transform: translateX(4px);
  }

  /* Default background if no image is set */
  .hero-section.default-bg {
    background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
    , url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  /* Ensure background image is responsive */
  @media (max-width: 768px) {
    .hero-section {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('{{ section.settings.herobackgroundimage | img_url: '1024x' }}');
    }

    .hero-section.default-bg {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1024&q=80');
    }
  }

  @media (min-width: 769px) and (max-width: 1279px) {
    .hero-section {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('{{ section.settings.herobackgroundimage | img_url: '1600x' }}');
    }

    .hero-section.default-bg {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
    }
  }

  @media (min-width: 1280px) {
    .hero-section {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('{{ section.settings.herobackgroundimage | img_url: '2048x' }}');
    }

    .hero-section.default-bg {
      background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))
      , url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
    }
  }

  /* Responsive styles */
  @media (max-width: 480px) {
    .hero-section {
      background-attachment: scroll;
      min-height: 100vh;
    }

    .hero-container {
      padding: 80px 16px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 100%;
    }

    .hero-title {
      font-size: 28px;
      line-height: 36px;
      margin-bottom: 16px;
    }

    .hero-subtitle {
      font-size: 14px;
      margin-bottom: 24px;
      max-width: 100%;
      white-space: normal;
    }

    .cta-button {
      width: 140px;
      height: 44px;
      font-size: 10px;
      gap: 4px;
    }

    .cta-button .cta-icon {
      width: 12px;
      height: 12px;
    }
  }

  @media (min-width: 481px) and (max-width: 768px) {
    .hero-section {
      background-attachment: scroll;
      min-height: 100vh;
    }

    .hero-container {
      padding: 90px 20px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 100%;
    }

    .hero-title {
      font-size: 32px;
      line-height: 40px;
      margin-bottom: 18px;
    }

    .hero-subtitle {
      font-size: 14px;
      margin-bottom: 26px;
      max-width: 100%;
      white-space: normal;
    }

    .cta-button {
      width: 150px;
      height: 48px;
      font-size: 10px;
      gap: 6px;
    }

    .cta-button .cta-icon {
      width: 12px;
      height: 12px;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .hero-section {
      background-attachment: scroll;
      min-height: 100vh;
    }

    .hero-container {
      padding: 110px 28px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 800px;
    }

    .hero-title {
      font-size: 36px;
      line-height: 46px;
      margin-bottom: 20px;
    }

    .hero-subtitle {
      font-size: 14px;
      margin-bottom: 28px;
      max-width: 500px;
    }

    .cta-button {
      width: 160px;
      height: 52px;
      font-size: 11px;
      gap: 7px;
    }

    .cta-button .cta-icon {
      width: 14px;
      height: 14px;
    }
  }

  @media (min-width: 1024px) and (max-width: 1279px) {
    .hero-container {
      padding: 120px 30px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 900px;
    }

    .hero-title {
      font-size: 40px;
      line-height: 50px;
      margin-bottom: 22px;
    }

    .hero-subtitle {
      font-size: 14px;
      margin-bottom: 30px;
      max-width: 550px;
    }

    .cta-button {
      width: 165px;
      height: 54px;
      font-size: 11px;
      gap: 7px;
    }

    .cta-button .cta-icon {
      width: 14px;
      height: 14px;
    }
  }

  @media (min-width: 1280px) and (max-width: 1439px) {
    .hero-container {
      padding: 125px 32px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 1000px;
    }

    .hero-title {
      font-size: 42px;
      line-height: 52px;
      margin-bottom: 23px;
    }

    .hero-subtitle {
      font-size: 15px;
      margin-bottom: 31px;
      max-width: 580px;
    }

    .cta-button {
      width: 170px;
      height: 56px;
      font-size: 11px;
      gap: 7px;
    }

    .cta-button .cta-icon {
      width: 15px;
      height: 15px;
    }
  }

  @media (min-width: 1440px) and (max-width: 1679px) {
    .hero-container {
      padding: 126px 32px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 1000px;
    }

    .hero-title {
      font-size: 44px;
      line-height: 55px;
      margin-bottom: 23px;
    }

    .hero-subtitle {
      font-size: 15px;
      margin-bottom: 31px;
      max-width: 580px;
    }

    .cta-button {
      width: 172px;
      height: 57px;
      font-size: 11px;
      gap: 7px;
    }

    .cta-button .cta-icon {
      width: 15px;
      height: 15px;
    }
  }

  @media (min-width: 1680px) and (max-width: 1919px) {
    .hero-container {
      padding: 127px 32px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 1020px;
    }

    .hero-title {
      font-size: 46px;
      line-height: 58px;
      margin-bottom: 23px;
    }

    .hero-subtitle {
      font-size: 15px;
      margin-bottom: 31px;
      max-width: 590px;
    }

    .cta-button {
      width: 175px;
      height: 58px;
      font-size: 12px;
      gap: 7px;
    }

    .cta-button .cta-icon {
      width: 15px;
      height: 15px;
    }
  }

  @media (min-width: 1920px) {
    .hero-container {
      padding: 128px 32px 0;
      width: 90%;
    }

    .hero-content {
      max-width: 1024px;
    }

    .hero-title {
      font-size: 48px;
      line-height: 60px;
      margin-bottom: 24px;
    }

    .hero-subtitle {
      font-size: 15px;
      margin-bottom: 32px;
      max-width: 600px;
    }

    .cta-button {
      width: 180px;
      height: 59.76px;
      font-size: 12px;
      gap: 8px;
    }

    .cta-button .cta-icon {
      width: 16px;
      height: 16px;
    }
  }

  /* Animation effects */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-content > * {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .hero-title {
    animation-delay: 0.2s;
  }

  .hero-subtitle {
    animation-delay: 0.4s;
  }

  .cta-button {
    animation-delay: 0.6s;
  }
</style>

<section class="hero-section {% if section.settings.herobackgroundimage == blank %}default-bg{% endif %}">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        {% if section.settings.herotitle != blank %}
          {{ section.settings.herotitle | newline_to_br }}
        {% else %}
          The Pilates Equipment<br>
          Manufacturer Behind Global<br>
          Pilates Brands
        {% endif %}
      </h1>

      <p class="hero-subtitle">
        {{ section.settings.herosubtitle | default: "Supplying 25%+ of the world's total pilates equipment production" }}
      </p>

      {% if section.settings.showctabutton %}
        <a href="{{ section.settings.cta_link | default: '#quote' }}" class="cta-button">
          <svg
            class="cta-icon"
            width="16"
            height="16"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7" />
          </svg>
          <span>{{ section.settings.ctatext | default: 'GET A QUOTE' }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "herobackgroundimage",
        "label": "Background Image",
        "info": "Recommended size: 2048x1024px or larger"
      },
      {
        "type": "textarea",
        "id": "herotitle",
        "label": "Hero Title",
        "default": "The Pilates Equipment\nManufacturer Behind Global\nPilates Brands",
        "info": "Use line breaks to control text layout"
      },
      {
        "type": "text",
        "id": "herosubtitle",
        "label": "Hero Subtitle",
        "default": "Supplying 25%+ of the world's total pilates equipment production"
      },
      {
        "type": "checkbox",
        "id": "showctabutton",
        "label": "Show CTA Button",
        "default": true
      },
      {
        "type": "text",
        "id": "ctatext",
        "label": "CTA Button Text",
        "default": "GET A QUOTE"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Button Link",
        "info": "Where the button should link to"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner"
      }
    ]
  }
{% endschema %}
