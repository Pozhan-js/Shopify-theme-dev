<style>
  .hero-banner {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
  }

  .hero-banner__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
  }

  .hero-banner__container {
    position: relative;
    z-index: 3;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .hero-banner__content {
    max-width: 600px;
  }

  .hero-banner__title {
    font-size: 48px;
    font-weight: 700;
    color: white;
    line-height: 1.2;
    margin: 0 0 20px 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__subtitle {
    font-size: 18px;
    font-weight: 400;
    color: white;
    line-height: 1.5;
    margin: 0 0 30px 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__button {
    display: inline-block;
    background-color: #dc3545;
    color: white;
    padding: 15px 30px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    border-radius: 4px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
  }

  .hero-banner__button:hover {
    background-color: #c82333;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
    color: white;
  }

  .hero-banner__button:active {
    transform: translateY(0);
  }

  /* 平板端适配 */
  @media (max-width: 1024px) {
    .hero-banner {
      height: 500px;
    }

    .hero-banner__container {
      padding: 0 30px;
    }

    .hero-banner__title {
      font-size: 40px;
    }

    .hero-banner__subtitle {
      font-size: 16px;
    }
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .hero-banner {
      height: 400px;
    }

    .hero-banner__container {
      padding: 0 20px;
    }

    .hero-banner__content {
      max-width: 100%;
      text-align: center;
    }

    .hero-banner__title {
      font-size: 32px;
      margin-bottom: 15px;
    }

    .hero-banner__subtitle {
      font-size: 15px;
      margin-bottom: 25px;
    }

    .hero-banner__button {
      padding: 12px 25px;
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .hero-banner {
      height: 350px;
    }

    .hero-banner__container {
      padding: 0 15px;
    }

    .hero-banner__title {
      font-size: 28px;
    }

    .hero-banner__subtitle {
      font-size: 14px;
    }
  }
</style>

<section class="hero-banner">
  <!-- 背景图片 -->
  <div class="hero-banner__background">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | img_url: '1920x' }}"
        alt="{{ section.settings.title | default: shop.name }}"
        loading="lazy"
      >
    {% else %}
      <!-- 默认背景色 -->
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
    {% endif %}
  </div>

  <!-- 遮罩层 -->
  {% if section.settings.show_overlay %}
    <div
      class="hero-banner__overlay"
      style="background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});"
    ></div>
  {% endif %}

  <!-- 内容区域 -->
  <div class="hero-banner__container">
    <div class="hero-banner__content">
      {% if section.settings.title != blank %}
        <h1 class="hero-banner__title" style="color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="hero-banner__subtitle" style="color: {{ section.settings.subtitle_color }};">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a
          href="{{ section.settings.button_url }}"
          class="hero-banner__button"
          style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Getopauto Filters Wholesale"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contact us to establish long-term cooperation and get more favorable price."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "CONTACT US"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button background color",
      "default": "#dc3545"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "title": "Getopauto Filters Wholesale",
        "subtitle": "Contact us to establish long-term cooperation and get more favorable price.",
        "button_text": "CONTACT US",
        "show_overlay": true,
        "overlay_opacity": 40
      }
    }
  ]
}
{% endschema %}
