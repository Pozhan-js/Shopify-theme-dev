{% comment %}
  Privacy Policy Section - 隐私政策页面
  简洁专业的法律文档页面设计
{% endcomment %}

<style>
  .privacy-policy-section {
    background: #ffffff;
    color: #333333;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
  }

  .privacy-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header Section */
  .privacy-header {
    text-align: center;
    padding: 4rem 0 3rem;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 3rem;
  }

  .privacy-title {
    font-size: 3.5rem;
    font-weight: 400;
    color: #333333;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .privacy-breadcrumb {
    font-size: 1rem;
    color: #666666;
    margin: 0;
  }

  .privacy-breadcrumb a {
    color: #666666;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .privacy-breadcrumb a:hover {
    color: #9abd48;
  }

  .privacy-breadcrumb span {
    margin: 0 0.5rem;
  }

  /* Content Section */
  .privacy-content {
    padding-bottom: 4rem;
  }

  .privacy-last-updated {
    font-size: 0.95rem;
    color: #666666;
    margin-bottom: 2.5rem;
    font-weight: 500;
  }

  .privacy-intro {
    font-size: 1.05rem;
    color: #444444;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .privacy-notice {
    font-size: 1.05rem;
    color: #444444;
    line-height: 1.7;
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-left: 4px solid #9abd48;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  /* Section Headings */
  .privacy-section-title {
    font-size: 2.2rem;
    font-weight: 400;
    color: #333333;
    margin: 3rem 0 1.5rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .privacy-subsection-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333333;
    margin: 2.5rem 0 1rem 0;
  }

  /* Content Text */
  .privacy-text {
    font-size: 1rem;
    color: #555555;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .privacy-text:last-child {
    margin-bottom: 0;
  }

  /* Lists */
  .privacy-list {
    margin: 1.5rem 0;
    padding-left: 0;
  }

  .privacy-list li {
    font-size: 1rem;
    color: #555555;
    line-height: 1.7;
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .privacy-list li::before {
    content: '•';
    color: #9abd48;
    font-weight: bold;
    position: absolute;
    left: 0;
  }

  /* Numbered Lists */
  .privacy-numbered-list {
    counter-reset: privacy-counter;
    margin: 1.5rem 0;
    padding-left: 0;
  }

  .privacy-numbered-list li {
    counter-increment: privacy-counter;
    font-size: 1rem;
    color: #555555;
    line-height: 1.7;
    margin-bottom: 1rem;
    padding-left: 2rem;
    position: relative;
  }

  .privacy-numbered-list li::before {
    content: counter(privacy-counter) '.';
    color: #9abd48;
    font-weight: 600;
    position: absolute;
    left: 0;
  }

  /* Emphasis */
  .privacy-emphasis {
    font-weight: 600;
    color: #333333;
  }

  /* Links */
  .privacy-link {
    color: #9abd48;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .privacy-link:hover {
    border-bottom-color: #9abd48;
  }

  /* Contact Section */
  .privacy-contact {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 0.75rem;
    padding: 2rem;
    margin: 3rem 0;
  }

  .privacy-contact-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333333;
    margin-bottom: 1rem;
  }

  .privacy-contact-info {
    font-size: 1rem;
    color: #555555;
    line-height: 1.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .privacy-container {
      padding: 0 1rem;
    }

    .privacy-header {
      padding: 2.5rem 0 2rem;
    }

    .privacy-title {
      font-size: 2.5rem;
    }

    .privacy-section-title {
      font-size: 1.8rem;
      margin: 2rem 0 1rem 0;
    }

    .privacy-subsection-title {
      font-size: 1.2rem;
    }

    .privacy-content {
      padding-bottom: 2rem;
    }

    .privacy-notice,
    .privacy-contact {
      padding: 1rem;
      margin: 2rem 0;
    }
  }

  @media (max-width: 480px) {
    .privacy-title {
      font-size: 2rem;
    }

    .privacy-section-title {
      font-size: 1.5rem;
    }

    .privacy-breadcrumb {
      font-size: 0.9rem;
    }
  }
</style>

<section class="privacy-policy-section">
  <div class="privacy-container">
    <!-- Header -->
    <header class="privacy-header">
      <h1 class="privacy-title">{{ section.settings.page_title }}</h1>
      <nav class="privacy-breadcrumb">
        <a href="{{ routes.root_url }}">{{ section.settings.breadcrumb_home }}</a>
        <span>/</span>
        <span>{{ section.settings.breadcrumb_current }}</span>
      </nav>
    </header>

    <!-- Content -->
    <div class="privacy-content">
      <!-- Last Updated -->
      {% if section.settings.last_updated != blank %}
        <p class="privacy-last-updated">
          {{ section.settings.last_updated_label }}: {{ section.settings.last_updated }}
        </p>
      {% endif %}

      <!-- Introduction -->
      {% if section.settings.introduction != blank %}
        <div class="privacy-intro">
          {{ section.settings.introduction }}
        </div>
      {% endif %}

      <!-- Important Notice -->
      {% if section.settings.important_notice != blank %}
        <div class="privacy-notice">
          {{ section.settings.important_notice }}
        </div>
      {% endif %}

      <!-- Dynamic Sections -->
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'text_block' %}
            {% if block.settings.block_title != blank or block.settings.block_content != blank %}
              <div class="privacy-text-block">
                {% if block.settings.block_title != blank %}
                  <h3 class="privacy-subsection-title">{{ block.settings.block_title }}</h3>
                {% endif %}
                {% if block.settings.block_content != blank %}
                  <div class="privacy-text">{{ block.settings.block_content }}</div>
                {% endif %}
              </div>
            {% endif %}

          {% when 'section' %}
            <section>
              <h2 class="privacy-section-title">{{ block.settings.section_title }}</h2>
              {% if block.settings.section_content != blank %}
                <div class="privacy-text">{{ block.settings.section_content }}</div>
              {% endif %}
            </section>

          {% when 'subsection' %}
            <div>
              <h3 class="privacy-subsection-title">{{ block.settings.subsection_title }}</h3>
              {% if block.settings.subsection_content != blank %}
                <div class="privacy-text">{{ block.settings.subsection_content }}</div>
              {% endif %}
            </div>

          {% when 'text' %}
            {% if block.settings.text_content != blank %}
              <div class="privacy-text">{{ block.settings.text_content }}</div>
            {% endif %}

          {% when 'rich_text' %}
            {% if block.settings.rich_text_content != blank %}
              <div class="privacy-text">{{ block.settings.rich_text_content }}</div>
            {% endif %}

          {% when 'list' %}
            {% if block.settings.list_items != blank %}
              <ul class="privacy-list">
                {% assign items = block.settings.list_items | split: '|' %}
                {% for item in items %}
                  {% if item != blank %}
                    <li>{{ item | strip }}</li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}

          {% when 'numbered_list' %}
            {% if block.settings.numbered_items != blank %}
              <ol class="privacy-numbered-list">
                {% assign items = block.settings.numbered_items | split: '|' %}
                {% for item in items %}
                  {% if item != blank %}
                    <li>{{ item | strip }}</li>
                  {% endif %}
                {% endfor %}
              </ol>
            {% endif %}

          {% when 'contact' %}
            <div class="privacy-contact">
              <h3 class="privacy-contact-title">{{ block.settings.contact_title }}</h3>
              <div class="privacy-contact-info">
                {{ block.settings.contact_content }}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

