    },
    {
      "type": "color",
      "id": "title_color",
      "label": "标题颜色",
      "default": "#2c3e50"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "副标题颜色",
      "default": "#7f8c8d"
    },
    {
      "type": "color",
      "id": "block_background",
      "label": "块背景颜色",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "block_title_color",
      "label": "块标题颜色",
      "default": "#2c3e50"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "强调色",
      "default": "#3498db"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "链接颜色",
      "default": "#3498db"
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "分割线颜色",
      "default": "#e9ecef"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "文本块",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "块标题"
        },
        {
          "type": "richtext",
          "id": "block_content",
          "label": "块内容"
        }
      ]
    },
    {
      "type": "list_block",
      "name": "列表块",
      "settings": [
        {
          "type": "text",
          "id": "list_title",
          "label": "列表标题"
        },
        {
          "type": "textarea",
          "id": "list_items",
          "label": "列表项目",
          "info": "用 | 符号分隔每个列表项"
        }
      ]
    },
    {
      "type": "contact_block",
      "name": "联系信息块",
      "settings": [
        {
          "type": "text",
          "id": "contact_title",
          "label": "联系标题"
        },
        {
          "type": "text",
          "id": "contact_email",
          "label": "联系邮箱"
        },
        {
          "type": "text",
          "id": "contact_phone",
          "label": "联系电话"
        },
        {
          "type": "textarea",
          "id": "contact_address",
          "label": "联系地址"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "隐私政策",
      "blocks": [
        {
          "type": "text_block",
          "settings": {
            "block_title": "信息收集",
            "block_content": "<p>我们收集您在使用我们服务时提供的信息，包括但不限于个人身份信息、联系信息和使用数据。</p>"
          }
        },
        {
          "type": "text_block",
          "settings": {
            "block_title": "信息使用",
            "block_content": "<p>我们使用收集的信息来提供、维护和改进我们的服务，以及与您沟通。</p>"
          }
        },
        {
          "type": "list_block",
          "settings": {
            "list_title": "我们收集的信息类型",
            "list_items": "个人身份信息（姓名、邮箱等）|设备信息和使用数据|Cookie 和类似技术收集的信息|位置信息（如果您允许）"
          }
        },
        {
          "type": "contact_block",
          "settings": {
            "contact_title": "隐私问题联系方式",
            "contact_email": "privacy@example.com",
            "contact_phone": "+86 400-123-4567"
          }
        }
      ]
    }
  ]
}
{% endschema %}
