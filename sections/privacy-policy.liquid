<div class="privacy-policy-section">
  <div class="container">
    {% if section.settings.show_title %}
      <div class="privacy-policy-header">
        <h1 class="privacy-policy-title">
          {{ section.settings.page_title | default: '隐私政策' }}
        </h1>
        {% if section.settings.subtitle %}
          <p class="privacy-policy-subtitle">
            {{ section.settings.subtitle }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="privacy-policy-content">
      {% if section.settings.content %}
        <div class="privacy-policy-text">
          {{ section.settings.content }}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="privacy-policy-blocks">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'text_block' %}
                <div class="privacy-block privacy-text-block" {{ block.shopify_attributes }}>
                  {% if block.settings.block_title %}
                    <h2 class="block-title">{{ block.settings.block_title }}</h2>
                  {% endif %}
                  {% if block.settings.block_content %}
                    <div class="block-content">
                      {{ block.settings.block_content }}
                    </div>
                  {% endif %}
                </div>

              {% when 'list_block' %}
                <div class="privacy-block privacy-list-block" {{ block.shopify_attributes }}>
                  {% if block.settings.list_title %}
                    <h2 class="block-title">{{ block.settings.list_title }}</h2>
                  {% endif %}
                  {% if block.settings.list_items %}
                    <ul class="privacy-list">
                      {% assign list_items = block.settings.list_items | split: '|' %}
                      {% for item in list_items %}
                        {% unless item == blank %}
                          <li>{{ item | strip }}</li>
                        {% endunless %}
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>

              {% when 'contact_block' %}
                <div class="privacy-block privacy-contact-block" {{ block.shopify_attributes }}>
                  {% if block.settings.contact_title %}
                    <h2 class="block-title">{{ block.settings.contact_title }}</h2>
                  {% endif %}
                  <div class="contact-info">
                    {% if block.settings.contact_email %}
                      <p class="contact-item">
                        <strong>邮箱：</strong>
                        <a href="mailto:{{ block.settings.contact_email }}">
                          {{ block.settings.contact_email }}
                        </a>
                      </p>
                    {% endif %}
                    {% if block.settings.contact_phone %}
                      <p class="contact-item">
                        <strong>电话：</strong>
                        <a href="tel:{{ block.settings.contact_phone }}">
                          {{ block.settings.contact_phone }}
                        </a>
                      </p>
                    {% endif %}
                    {% if block.settings.contact_address %}
                      <p class="contact-item">
                        <strong>地址：</strong>
                        {{ block.settings.contact_address }}
                      </p>
                    {% endif %}
                  </div>
                </div>

              {% when 'divider' %}
                <div class="privacy-block privacy-divider" {{ block.shopify_attributes }}>
                  <hr class="section-divider">
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.last_updated %}
        <div class="privacy-policy-footer">
          <p class="last-updated">最后更新时间：{{ section.settings.last_updated }}</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .privacy-policy-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    color: {{ section.settings.text_color | default: '#333333' }};
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .privacy-policy-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .privacy-policy-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: {{ section.settings.title_color | default: '#2c3e50' }};
    line-height: 1.2;
  }

  .privacy-policy-subtitle {
    font-size: 1.2rem;
    color: {{ section.settings.subtitle_color | default: '#7f8c8d' }};
    margin-bottom: 0;
    line-height: 1.5;
  }

  .privacy-policy-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .privacy-policy-text {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 40px;
  }

  .privacy-policy-blocks {
    margin-top: 40px;
  }

  .privacy-block {
    margin-bottom: 40px;
    padding: 30px;
    background-color: {{ section.settings.block_background | default: '#f8f9fa' }};
    border-radius: 8px;
    border-left: 4px solid {{ section.settings.accent_color | default: '#3498db' }};
  }

  .block-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ section.settings.block_title_color | default: '#2c3e50' }};
  }

  .block-content {
    font-size: 1rem;
    line-height: 1.7;
  }

  .privacy-list {
    padding-left: 20px;
    margin: 0;
  }

  .privacy-list li {
    margin-bottom: 10px;
    line-height: 1.6;
  }

  .contact-info {
    margin-top: 20px;
  }

  .contact-item {
    margin-bottom: 15px;
    font-size: 1rem;
  }

  .contact-item a {
    color: {{ section.settings.link_color | default: '#3498db' }};
    text-decoration: none;
  }

  .contact-item a:hover {
    text-decoration: underline;
  }

  .section-divider {
    border: none;
    height: 2px;
    background-color: {{ section.settings.divider_color | default: '#e9ecef' }};
    margin: 30px 0;
  }

  .privacy-policy-footer {
    margin-top: 60px;
    padding-top: 30px;
    border-top: 1px solid {{ section.settings.divider_color | default: '#e9ecef' }};
    text-align: center;
  }

  .last-updated {
    font-size: 0.9rem;
    color: {{ section.settings.subtitle_color | default: '#7f8c8d' }};
    font-style: italic;
  }

  @media (max-width: 768px) {
    .privacy-policy-section {
      padding: 40px 0;
    }

    .container {
      padding: 0 15px;
    }

    .privacy-policy-title {
      font-size: 2rem;
    }

    .privacy-policy-subtitle {
      font-size: 1.1rem;
    }

    .privacy-block {
      padding: 20px;
      margin-bottom: 30px;
    }

    .block-title {
      font-size: 1.3rem;
    }
  }
</style>

