{% comment %}
  Home Footer Section - 优化版
  现代化设计，主题色#9ABD48，增强视觉效果，添加商品注意事项
{% endcomment %}

<style>
  .footer-section {
    background: linear-gradient(180deg, #374151 0%, #1f2937 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .footer-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(154, 189, 72, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(154, 189, 72, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .footer-container {
    max-width: 1280px;
    width: 90%;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 1;
  }

  /* Notices Section */
  .footer-notices {
    background: rgba(55, 65, 81, 0.7);
    backdrop-filter: blur(10px);
    padding: 4rem 0;
    border-bottom: 1px solid rgba(75, 85, 99, 0.4);
  }

  .notices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .notice-card {
    background: linear-gradient(135deg, rgba(75, 85, 99, 0.8) 0%, rgba(107, 114, 128, 0.6) 100%);
    border: 1px solid rgba(107, 114, 128, 0.3);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .notice-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #9abd48, #8aa63f, #7a9536);
  }

  .notice-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: rgba(154, 189, 72, 0.3);
  }

  .notice-header {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .notice-icon {
    width: 3rem;
    height: 3rem;
    background: linear-gradient(135deg, #9abd48 0%, #8aa63f 100%);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    box-shadow: 0 8px 16px rgba(154, 189, 72, 0.3);
  }

  .notice-icon svg {
    width: 20px;
    height: 20px;
    fill: white;
  }

  .notice-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
  }

  .notice-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    color: #e5e7eb;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .notice-item svg {
    width: 16px;
    height: 16px;
    fill: #9abd48;
    margin-right: 0.75rem;
    margin-top: 0.125rem;
    flex-shrink: 0;
  }

  /* Product Notices Section */
  .product-notices {
    background: rgba(31, 41, 55, 0.8);
    padding: 4rem 0;
    border-bottom: 1px solid rgba(75, 85, 99, 0.4);
  }

  .product-notices-title {
    font-size: 2.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #9abd48, #8aa63f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .product-notices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .product-notice-card {
    background: linear-gradient(135deg, rgba(75, 85, 99, 0.7) 0%, rgba(107, 114, 128, 0.5) 100%);
    border: 1px solid rgba(107, 114, 128, 0.3);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .product-notice-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    border-color: rgba(154, 189, 72, 0.2);
  }

  .product-notice-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .product-notice-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.75rem;
    flex-shrink: 0;
  }

  .product-notice-icon.warning {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }

  .product-notice-icon.info {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
  }

  .product-notice-icon.medical {
    background: linear-gradient(135deg, #9abd48, #8aa63f);
  }

  .product-notice-icon.age {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  }

  .product-notice-icon.storage {
    background: linear-gradient(135deg, #6b7280, #4b5563);
  }

  .product-notice-icon svg {
    width: 16px;
    height: 16px;
    fill: white;
  }

  .product-notice-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: white;
    margin: 0;
  }

  .product-notice-content {
    color: #d1d5db;
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .product-notices-disclaimer {
    background: rgba(75, 85, 99, 0.5);
    border: 1px solid rgba(107, 114, 128, 0.3);
    border-radius: 0.75rem;
    padding: 1.5rem;
    text-align: center;
    color: #d1d5db;
    font-size: 0.875rem;
    line-height: 1.6;
    font-style: italic;
  }

  /* Subscribe Section */
  .footer-subscribe {
    background: linear-gradient(135deg, #9abd48 0%, #8aa63f 50%, #7a9536 100%);
    padding: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .footer-subscribe::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.3;
  }

  .subscribe-content {
    position: relative;
    z-index: 1;
  }

  .subscribe-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .subscribe-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    font-weight: 300;
  }

  .subscribe-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .subscribe-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: none;
    outline: none;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
  }

  .subscribe-button {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 0 2rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .subscribe-button:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateX(-2px);
  }

  .subscribe-success {
    margin-top: 1.5rem;
    padding: 1rem 1.5rem;
    background: rgba(16, 185, 129, 0.9);
    border-radius: 0.75rem;
    display: inline-block;
    display: none;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 16px rgba(16, 185, 129, 0.3);
  }

  .subscribe-success svg {
    width: 16px;
    height: 16px;
    fill: white;
    margin-right: 0.5rem;
    vertical-align: middle;
  }

  /* Main Footer */
  .footer-main {
    padding: 4rem 0;
    background: rgba(31, 41, 55, 0.9);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .footer-brand h3 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #9abd48, #8aa63f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-description {
    color: #d1d5db;
    margin-bottom: 2rem;
    line-height: 1.7;
    font-size: 1.1rem;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    color: #d1d5db;
    padding: 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    background: rgba(75, 85, 99, 0.4);
    transform: translateX(5px);
  }

  .contact-item svg {
    width: 18px;
    height: 18px;
    fill: #9abd48;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .footer-social h4 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-link {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(75, 85, 99, 0.8) 0%, rgba(107, 114, 128, 0.6) 100%);
    border: 1px solid rgba(107, 114, 128, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #9abd48, #8aa63f);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .social-link:hover::before {
    opacity: 1;
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(154, 189, 72, 0.3);
  }

  .social-link svg {
    width: 18px;
    height: 18px;
    fill: white;
    position: relative;
    z-index: 1;
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(75, 85, 99, 0.4);
    padding: 2rem 0;
    background: rgba(31, 41, 55, 0.8);
    backdrop-filter: blur(10px);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    color: #9ca3af;
    font-size: 0.9rem;
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #9abd48;
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: white;
  }

  .footer-link:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .notices-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-notices-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-links {
      justify-content: center;
      flex-wrap: wrap;
    }

    .subscribe-title {
      font-size: 2rem;
    }

    .product-notices-title {
      font-size: 2rem;
    }

    .subscribe-form {
      flex-direction: column;
      gap: 1rem;
    }

    .subscribe-input,
    .subscribe-button {
      border-radius: 0.75rem;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>

<footer class="footer-section">
  <!-- Notices -->
  <div class="footer-notices">
    <div class="footer-container">
      <div class="notices-grid">
        {% for block in section.blocks %}
          {% if block.type == 'notice' %}
            <div class="notice-card">
              <div class="notice-header">
                <div class="notice-icon">
                  {% case block.settings.icon_type %}
                    {% when 'shipping' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                      </svg>
                    {% when 'return' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"/>
                      </svg>
                    {% when 'support' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                    {% else %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                  {% endcase %}
                </div>
                <h3 class="notice-title">{{ block.settings.title }}</h3>
              </div>
              <ul>
                {% if block.settings.item_1 != blank %}
                  <li class="notice-item">
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    {{ block.settings.item_1 }}
                  </li>
                {% endif %}
                {% if block.settings.item_2 != blank %}
                  <li class="notice-item">
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    {{ block.settings.item_2 }}
                  </li>
                {% endif %}
                {% if block.settings.item_3 != blank %}
                  <li class="notice-item">
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    {{ block.settings.item_3 }}
                  </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Product Notices -->
  <div class="product-notices">
    <div class="footer-container">
      <h3 class="product-notices-title">{{ section.settings.product_notices_title }}</h3>
      <div class="product-notices-grid">
        {% for block in section.blocks %}
          {% if block.type == 'product_notice' %}
            <div class="product-notice-card">
              <div class="product-notice-header">
                <div class="product-notice-icon {{ block.settings.notice_type }}">
                  {% case block.settings.notice_type %}
                    {% when 'warning' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
                      </svg>
                    {% when 'info' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                      </svg>
                    {% when 'medical' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M19 8h-2v3h-3v2h3v3h2v-3h3v-2h-3V8zM4 6h5v2h2V6h1V4H4v2zm0 5h3v2h2v-2h3v-2H4v2zm0 5h5v2h2v-2h1v-2H4v2z"/>
                      </svg>
                    {% when 'age' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                    {% when 'storage' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                      </svg>
                    {% else %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                      </svg>
                  {% endcase %}
                </div>
                <h4 class="product-notice-title">{{ block.settings.notice_title }}</h4>
              </div>
              <p class="product-notice-content">{{ block.settings.notice_content }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      {% if section.settings.product_notices_disclaimer != blank %}
        <div class="product-notices-disclaimer">
          {{ section.settings.product_notices_disclaimer }}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Subscribe -->
  <div class="footer-subscribe">
    <div class="footer-container">
      <div class="subscribe-content">
        <h3 class="subscribe-title">{{ section.settings.subscribe_title }}</h3>
        <p class="subscribe-subtitle">{{ section.settings.subscribe_subtitle }}</p>
        <form class="subscribe-form" onsubmit="handleSubscribe(event)">
          <input
            type="email"
            class="subscribe-input"
            placeholder="Enter your email address"
            required
          >
          <button type="submit" class="subscribe-button">Subscribe</button>
        </form>
        <div class="subscribe-success" id="subscribeSuccess">
          <svg viewBox="0 0 24 24">
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          Successfully subscribed!
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-grid">
        <div class="footer-brand">
          <h3>{{ section.settings.brand_name }}</h3>
          <p class="footer-description">{{ section.settings.brand_description }}</p>
          <div class="footer-contact">
            <div class="contact-item">
              <svg viewBox="0 0 24 24">
                <path fill="currentColor" d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
              </svg>
              <span>{{ section.settings.contact_phone }}</span>
            </div>
            <div class="contact-item">
              <svg viewBox="0 0 24 24">
                <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
              <span>{{ section.settings.contact_email }}</span>
            </div>
            <div class="contact-item">
              <svg viewBox="0 0 24 24">
                <path fill="currentColor" d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
              </svg>
              <span>{{ section.settings.business_hours }}</span>
            </div>
          </div>
        </div>

        <div class="footer-social">
          <h4>Follow Us</h4>
          <div class="social-links">
            {% for block in section.blocks %}
              {% if block.type == 'social_link' %}
                <a href="{{ block.settings.url }}" class="social-link" target="_blank">
                  {% case block.settings.icon_type %}
                    {% when 'facebook' %}
                      <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
