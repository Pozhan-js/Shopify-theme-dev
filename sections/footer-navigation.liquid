        <img src="{{ section.settings.logo | img_url: '315x102' }}" alt="{{ shop.name }}" class="footer-logo">
      {% else %}
        <h2 class="footer-brand-text">{{ section.settings.brand_text | default: shop.name }}</h2>
      {% endif %}

      <!-- Social Media Links -->
