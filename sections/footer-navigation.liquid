<style>
  .footer-navigation {
    background-color: #1b1b1b;
    color: #ffffff;
    padding: 60px 0 40px;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 80px;
    align-items: start;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 30px;
    align-items: flex-start;
  }

  .footer-logo {
    max-width: 250px;
    width: 250px;
    height: 81px;
    object-fit: contain;
  }

  .footer-brand-text {
    font-size: 24px;
    font-weight: bold;
    margin: 0;
    color: #ffffff;
  }

  .social-links {
    display: flex;
    gap: 12px;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    color: #ffffff;
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: #ff6b6b;
  }

  .logo-bottom-icons {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    transition: opacity 0.3s ease;
  }

  .logo-icon:hover {
    opacity: 0.8;
  }

  .logo-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer-nav-columns {
    margin-top: 24px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 60px;
    align-items: start;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .footer-column-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 25px 0;
    color: #ffffff;
  }

  .footer-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-nav-item {
    margin: 0;
  }

  .footer-nav-link {
    color: #cccccc;
    text-decoration: none;
    font-size: 16px;
    line-height: 1.5;
    transition: color 0.3s ease;
  }

  .footer-nav-link:hover {
    color: #ffffff;
  }

  /* Responsive Design - 基于1920px设计图 */

  /* 超大屏幕 (1920px+) */
  @media (min-width: 1920px) {
    .footer-container {
      max-width: 1600px;
      padding: 0 120px;
      gap: 100px;
    }

    .footer-navigation {
      padding: 70px 0 50px;
    }

    .footer-brand {
      gap: 35px;
    }

    .footer-logo {
      max-width: 300px;
      width: 300px;
      height: 97px;
    }

    .footer-brand-text {
      font-size: 28px;
    }

    .social-links {
      gap: 15px;
    }

    .social-link {
      width: 32px;
      height: 32px;
    }

    .logo-bottom-icons {
      gap: 15px;
    }

    .logo-icon {
      width: 32px;
      height: 32px;
    }

    .footer-nav-columns {
      gap: 70px;
      margin-top: 30px;
    }

    .footer-column-title {
      font-size: 20px;
      margin-bottom: 28px;
    }

    .footer-nav-link {
      font-size: 17px;
    }

    .footer-nav-list {
      gap: 14px;
    }
  }

  /* 大屏幕 (1440px - 1919px) */
  @media (min-width: 1440px) and (max-width: 1919px) {
    .footer-container {
      max-width: 1300px;
      padding: 0 60px;
      gap: 85px;
    }

    .footer-navigation {
      padding: 65px 0 45px;
    }

    .footer-brand {
      gap: 32px;
    }

    .footer-logo {
      max-width: 280px;
      width: 280px;
      height: 91px;
    }

    .footer-brand-text {
      font-size: 26px;
    }

    .social-links {
      gap: 14px;
    }

    .social-link {
      width: 30px;
      height: 30px;
    }

    .logo-bottom-icons {
      gap: 14px;
    }

    .logo-icon {
      width: 30px;
      height: 30px;
    }

    .footer-nav-columns {
      gap: 65px;
      margin-top: 26px;
    }

    .footer-column-title {
      font-size: 19px;
      margin-bottom: 26px;
    }

    .footer-nav-link {
      font-size: 16px;
    }

    .footer-nav-list {
      gap: 13px;
    }
  }

  /* 中等屏幕 (1024px - 1439px) */
  @media (min-width: 1024px) and (max-width: 1439px) {
    .footer-container {
      max-width: 1200px;
      padding: 0 40px;
      gap: 80px;
    }

    .footer-navigation {
      padding: 60px 0 40px;
    }

    .footer-brand {
      gap: 30px;
    }

    .footer-logo {
      max-width: 315px;
      width: 315px;
      height: 102px;
    }

    .footer-brand-text {
      font-size: 28px;
    }

    .social-links {
      gap: 15px;
    }

    .social-link {
      width: 35px;
      height: 35px;
    }

    .logo-bottom-icons {
      gap: 15px;
    }

    .logo-icon {
      width: 35px;
      height: 35px;
    }

    .footer-nav-columns {
      gap: 60px;
      margin-top: 24px;
    }

    .footer-column-title {
      font-size: 18px;
      margin-bottom: 25px;
    }

    .footer-nav-link {
      font-size: 16px;
    }

    .footer-nav-list {
      gap: 12px;
    }
  }

  /* 平板屏幕 (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 50px;
      padding: 0 30px;
    }

    .footer-brand {
      align-items: center;
      text-align: center;
    }

    .footer-nav-columns {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
      margin-top: 0;
    }

    .footer-navigation {
      padding: 50px 0 40px;
    }

    .footer-logo {
      max-width: 280px;
      width: 280px;
      height: 90px;
    }

    .footer-brand-text {
      font-size: 26px;
    }

    .footer-column-title {
      font-size: 17px;
      margin-bottom: 20px;
    }

    .footer-nav-link {
      font-size: 15px;
    }
  }

  /* 小屏幕 (481px - 767px) */
  @media (min-width: 481px) and (max-width: 767px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 0 20px;
    }

    .footer-brand {
      align-items: center;
      text-align: center;
      gap: 25px;
    }

    .footer-nav-columns {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-top: 0;
    }

    .footer-navigation {
      padding: 40px 0 30px;
    }

    .footer-logo {
      max-width: 250px;
      width: 250px;
      height: 81px;
    }

    .footer-brand-text {
      font-size: 24px;
    }

    .social-links {
      gap: 12px;
      justify-content: center;
    }

    .logo-bottom-icons {
      gap: 12px;
      justify-content: center;
    }

    .footer-column {
      align-items: center;
      text-align: center;
    }

    .footer-column-title {
      font-size: 16px;
      margin-bottom: 18px;
    }

    .footer-nav-link {
      font-size: 14px;
    }

    .footer-nav-list {
      gap: 10px;
    }
  }

  /* 超小屏幕 (最大480px) */
  @media (max-width: 480px) {
    .footer-container {
      padding: 0 15px;
      gap: 35px;
    }

    .footer-brand {
      align-items: center;
      text-align: center;
      gap: 20px;
    }

    .footer-logo {
      max-width: 200px;
      width: 200px;
      height: 65px;
    }

    .footer-brand-text {
      font-size: 20px;
    }

    .social-links {
      gap: 10px;
      justify-content: center;
    }

    .social-link {
      width: 32px;
      height: 32px;
    }

    .logo-bottom-icons {
      gap: 10px;
      justify-content: center;
    }

    .logo-icon {
      width: 32px;
      height: 32px;
    }

    .footer-nav-columns {
      grid-template-columns: 1fr;
      gap: 25px;
      margin-top: 0;
    }

    .footer-column {
      align-items: center;
      text-align: center;
    }

    .footer-column-title {
      font-size: 15px;
      margin-bottom: 15px;
    }

    .footer-nav-link {
      font-size: 13px;
    }

    .footer-nav-list {
      gap: 8px;
    }

    .footer-navigation {
      padding: 30px 0 25px;
    }
  }
</style>

