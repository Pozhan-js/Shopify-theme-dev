      <h3 class="contact-card-title">
        {{ section.settings.email_title | default: "Email Support" }}
      </h3>
      <p class="contact-card-description">
        {{ section.settings.email_description | default: "Send us detailed questions and receive comprehensive answers" }}
      </p>
      {% if section.settings.email_button_text != blank %}
        <a href="{{ section.settings.email_url | default: '#' }}" class="contact-card-button">
          {% if section.settings.email_button_icon != blank %}
            <img src="{{ section.settings.email_button_icon | img_url: '24x24' }}" alt="Email Icon" class="contact-card-button-icon">
