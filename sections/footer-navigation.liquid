}

/* 法律链接区域样式 */
.footer-legal {
  background-color: #1b1b1b;
  border-top: 1px solid #333333;
  padding: 20px 0;
}

.footer-legal-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.legal-links {
  display: flex;
  gap: 30px;
  justify-content: flex-start;
  align-items: center;
}

.legal-link {
  color: #cccccc;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.3s ease;
  position: relative;
}

.legal-link:hover {
  color: #ffffff;
}

.legal-link:not(:last-child)::after {
  content: '|';
  position: absolute;
  right: -15px;
  color: #666666;
  font-weight: normal;
}

/* 响应式设计 - 法律链接区域 */

/* 大屏幕 (1920px+) */
@media (min-width: 1920px) {
  .contact-cards-container {
    max-width: 1600px;
    padding: 0 120px;
    gap: 26px;
  }

  .footer-legal-container {
    max-width: 1600px;
    padding: 0 120px;
  }
  
  .legal-links {
    gap: 40px;
  }
  
  .legal-link {
    font-size: 16px;
  }
  
  .legal-link:not(:last-child)::after {
    right: -20px;
  }
}

/* 中等屏幕 (1024px - 1919px) */
@media (min-width: 1024px) and (max-width: 1919px) {
  .contact-card {
    width: calc(460px * 0.84);
    height: calc(280px * 0.84);
    padding: calc(38px * 0.84) calc(22px * 0.84) calc(22px * 0.84) calc(22px * 0.84);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .contact-cards-container {
    max-width: 1200px;
    padding: 0 40px;
    gap: 26px;
  }

  .footer-legal-container {
    max-width: 1200px;
    padding: 0 40px;
  }
  
  .legal-links {
    gap: 35px;
  }
  
  .legal-link {
    font-size: 15px;
  }
  
  .legal-link:not(:last-child)::after {
    right: -17px;
  }
}

/* 平板屏幕 (768px - 1023px) */
@media (min-width: 768px) and (max-width: 1023px) {
  .contact-cards-container {
    grid-template-columns: 1fr;
    gap: 26px;
    padding: 0 30px;
  }

  .footer-legal-container {
    padding: 0 30px;
  }
  
  .legal-links {
    justify-content: center;
    gap: 25px;
  }
  
  .legal-link {
    font-size: 14px;
  }
  
  .legal-link:not(:last-child)::after {
    right: -12px;
  }
}

