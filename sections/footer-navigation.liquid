          </a>
        {% endif %}

        {% if section.settings.icon_2_image %}
          <a href="{{ section.settings.icon_2_url }}" target="_blank" class="logo-icon">
            <img src="{{ section.settings.icon_2_image | img_url: '28x' }}" alt="Icon 2">
          </a>
        {% endif %}

