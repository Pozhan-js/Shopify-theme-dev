    <!-- Navigation Columns -->
    <div class="footer-nav-columns">
      <!-- Products Column -->
      <div class="footer-column">
        <h3 class="footer-column-title">{{ section.settings.products_title | default: 'Products' }}</h3>
        <ul class="footer-nav-list">
          {% for block in section.blocks %}
            {% if block.type == 'product_link' %}
              <li class="footer-nav-item">
                <a href="{{ block.settings.link }}" class="footer-nav-link">
                  {{ block.settings.text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- OEM Service Column -->
      <div class="footer-column">
        <h3 class="footer-column-title">{{ section.settings.service_title | default: 'OEM Service' }}</h3>
        <ul class="footer-nav-list">
          {% for block in section.blocks %}
            {% if block.type == 'service_link' %}
              <li class="footer-nav-item">
                <a href="{{ block.settings.link }}" class="footer-nav-link">
                  {{ block.settings.text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="footer-column">
        <h3 class="footer-column-title">{{ section.settings.company_title | default: 'Company' }}</h3>
        <ul class="footer-nav-list">
          {% for block in section.blocks %}
            {% if block.type == 'company_link' %}
              <li class="footer-nav-item">
                <a href="{{ block.settings.link }}" class="footer-nav-link">
                  {{ block.settings.text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
