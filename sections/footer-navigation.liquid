<!-- 联系卡片区域 -->
<div class="contact-cards-section">
  <div class="contact-cards-container">
    <!-- Schedule a Call Card -->
    <div class="contact-card">
      <h3 class="contact-card-title">
        {{ section.settings.schedule_title | default: "Schedule a Call" }}
      </h3>
      <p class="contact-card-description">
        {{ section.settings.schedule_description | default: "Choose a time that works for you - we'll connect you with a specialist." }}
      </p>
      {% if section.settings.schedule_button_text != blank %}
        <a href="{{ section.settings.schedule_url | default: '#' }}" class="contact-card-button">
          {% if section.settings.schedule_button_icon != blank %}
            <img src="{{ section.settings.schedule_button_icon | img_url: '24x24' }}" alt="Schedule Icon" class="contact-card-button-icon">
          {% else %}
            <svg class="contact-card-button-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
