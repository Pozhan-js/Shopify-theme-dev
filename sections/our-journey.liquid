<style>
  .our-journey {
    background-color: #f5f5f5;
    padding: 100px 0;
    position: relative;
  }

  .our-journey__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .our-journey__title {
    text-align: center;
    font-size: 3.5rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 80px;
  }

  .our-journey__timeline {
    position: relative;
    padding: 0;
  }

  .our-journey__timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: #ddd;
    transform: translateX(-50%);
    z-index: 1;
  }

  .our-journey__item {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
  }

  .our-journey__item:nth-child(odd) {
    flex-direction: row;
  }

  .our-journey__item:nth-child(even) {
    flex-direction: row-reverse;
  }

  .our-journey__content {
    width: 48%;
    background: white;
    border-radius: 25px;
    padding: 25px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    position: relative;
    display: flex;
    align-items: flex-start;
    gap: 30px;
  }

  .our-journey__item:nth-child(odd) .our-journey__content {
    margin-right: 4%;
    flex-direction: row;
  }

  .our-journey__item:nth-child(even) .our-journey__content {
    margin-left: 4%;
    flex-direction: row-reverse;
  }

  .our-journey__image {
    width: 240px;
    height: 180px;
    border-radius: 20px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .our-journey__text {
    flex: 1;
  }

  .our-journey__item:nth-child(odd) .our-journey__text {
    text-align: right;
  }

  .our-journey__item:nth-child(even) .our-journey__text {
    text-align: left;
  }

  .our-journey__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .our-journey__year {
    font-size: 3.5rem;
    font-weight: 700;
    color: #b33c3b;
    margin-bottom: 15px;
    line-height: 1;
  }

  .our-journey__subtitle {
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .our-journey__description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.7;
  }

  .our-journey__dot {
    position: absolute;
    left: 50%;
    top: 25px;
    transform: translateX(-50%);
    width: 20px;
    height: 20px;
    background-color: #c22e35 !important;
    border-radius: 50%;
    z-index: 999 !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  @media (max-width: 768px) {
    .our-journey {
      padding: 80px 0;
    }

    .our-journey__title {
      font-size: 3rem;
      margin-bottom: 60px;
    }

    .our-journey__timeline::before {
      left: 35px;
      width: 2px;
    }

    .our-journey__item {
      flex-direction: column !important;
      align-items: flex-start;
      margin-bottom: 80px;
      padding-left: 70px;
    }

    .our-journey__content {
      width: 100%;
      margin: 0 !important;
      flex-direction: column !important;
      padding: 25px;
    }

    .our-journey__text {
      text-align: left !important;
    }

    .our-journey__dot {
      left: 35px;
      top: 25px;
      width: 16px;
      height: 16px;
    }

    .our-journey__image {
      width: 100%;
      height: 220px;
    }

    .our-journey__year {
      font-size: 3.2rem;
      margin-bottom: 12px;
    }

    .our-journey__subtitle {
      font-size: 1.6rem;
    }

    .our-journey__description {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .our-journey__container {
      padding: 0 15px;
    }

    .our-journey__title {
      font-size: 2.5rem;
    }

    .our-journey__item {
      padding-left: 60px;
    }

    .our-journey__dot {
      left: 30px;
      width: 14px;
      height: 14px;
    }

    .our-journey__timeline::before {
      left: 30px;
    }

    .our-journey__content {
      padding: 20px;
    }

    .our-journey__text {
      text-align: left !important;
    }

    .our-journey__year {
      font-size: 2.5rem;
    }

    .our-journey__subtitle {
      font-size: 1.4rem;
    }

    .our-journey__description {
      font-size: 0.95rem;
    }
  }
</style>

<section class="our-journey">
  <div class="our-journey__container">
    {% if section.settings.title != blank %}
      <h2 class="our-journey__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="our-journey__timeline">
      {% for block in section.blocks %}
        <div class="our-journey__item" {{ block.shopify_attributes }}>
          <div class="our-journey__content">
            {% if block.settings.image %}
              <div class="our-journey__image">
                <img
                  src="{{ block.settings.image | img_url: '480x360' }}"
                  alt="{{ block.settings.image.alt | default: block.settings.subtitle }}"
                  loading="lazy"
                >
              </div>
            {% endif %}

            <div class="our-journey__text">
              {% if block.settings.year != blank %}
                <div class="our-journey__year">{{ block.settings.year }}</div>
              {% endif %}

              {% if block.settings.subtitle != blank %}
                <h3 class="our-journey__subtitle">{{ block.settings.subtitle }}</h3>
              {% endif %}

              {% if block.settings.description != blank %}
                <div class="our-journey__description">
                  {{ block.settings.description }}
                </div>
              {% endif %}
            </div>
          </div>
          <div class="our-journey__dot"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

