<style>
  .our-journey {
    background-color: #f5f5f5;
    padding: 80px 0;
    position: relative;
  }

  .our-journey__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .our-journey__title {
    text-align: center;
    font-size: 3rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 60px;
  }

  .our-journey__timeline {
    position: relative;
    padding: 0;
  }

  .our-journey__timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #ddd;
    transform: translateX(-50%);
    z-index: 1;
  }

  .our-journey__item {
    position: relative;
    margin-bottom: 80px;
    display: flex;
    align-items: center;
    width: 100%;
  }

  .our-journey__item:nth-child(odd) {
    flex-direction: row;
  }

  .our-journey__item:nth-child(even) {
    flex-direction: row-reverse;
  }

  .our-journey__content {
    width: 45%;
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    position: relative;
    display: flex;
    align-items: flex-start;
    gap: 20px;
  }

  .our-journey__item:nth-child(odd) .our-journey__content {
    margin-right: 10%;
  }

  .our-journey__item:nth-child(even) .our-journey__content {
    margin-left: 10%;
  }

  .our-journey__image {
    width: 200px;
    height: 150px;
    border-radius: 15px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .our-journey__text {
    flex: 1;
  }

  .our-journey__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .our-journey__year {
    font-size: 3rem;
    font-weight: 700;
    color: #b33c3b;
    margin-bottom: 10px;
    line-height: 1;
  }

  .our-journey__subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .our-journey__description {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }

  .our-journey__dot {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 16px;
    height: 16px;
    background-color: #b33c3b !important;
    border-radius: 50%;
    z-index: 999 !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  @media (max-width: 768px) {
    .our-journey {
      padding: 60px 0;
    }

    .our-journey__title {
      font-size: 2.5rem;
      margin-bottom: 40px;
    }

    .our-journey__timeline::before {
      left: 30px;
    }

    .our-journey__item {
      flex-direction: column !important;
      align-items: flex-start;
      margin-bottom: 60px;
      padding-left: 60px;
    }

    .our-journey__content {
      width: 100%;
      margin: 0 !important;
      flex-direction: column;
    }

    .our-journey__dot {
      left: 30px;
      top: 30px;
    }

    .our-journey__image {
      width: 100%;
      height: 180px;
    }

    .our-journey__year {
      font-size: 3rem;
      font-weight: 700;
      color: #b33c3b;
      margin-bottom: 10px;
      line-height: 1;
    }
  }

  @media (max-width: 480px) {
    .our-journey__container {
      padding: 0 15px;
    }

    .our-journey__title {
      font-size: 2rem;
    }

    .our-journey__item {
      padding-left: 50px;
    }

    .our-journey__dot {
      left: 25px;
    }

    .our-journey__timeline::before {
      left: 25px;
    }

    .our-journey__year {
      font-size: 2rem;
    }

    .our-journey__subtitle {
      font-size: 1.2rem;
    }

    .our-journey__description {
      font-size: 0.9rem;
    }
  }
</style>

<section class="our-journey">
  <div class="our-journey__container">
    {% if section.settings.title != blank %}
      <h2 class="our-journey__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="our-journey__timeline">
      {% for block in section.blocks %}
        <div class="our-journey__item" {{ block.shopify_attributes }}>
          <div class="our-journey__content">
            {% if block.settings.image %}
              <div class="our-journey__image">
                <img
                  src="{{ block.settings.image | img_url: '400x300' }}"
                  alt="{{ block.settings.image.alt | default: block.settings.subtitle }}"
                  loading="lazy"
                >
              </div>
            {% endif %}

            <div class="our-journey__text">
              {% if block.settings.year != blank %}
                <div class="our-journey__year">{{ block.settings.year }}</div>
              {% endif %}

              {% if block.settings.subtitle != blank %}
                <h3 class="our-journey__subtitle">{{ block.settings.subtitle }}</h3>
              {% endif %}

              {% if block.settings.description != blank %}
                <div class="our-journey__description">
                  {{ block.settings.description }}
                </div>
              {% endif %}
            </div>
          </div>
          <div class="our-journey__dot"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

