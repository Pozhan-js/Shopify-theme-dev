{% schema %}
{
  "name": "Serenity Love Cocoon",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Serenity"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "Love"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Cocoon"
    },
    {
      "type": "image_picker",
      "id": "cocoon_image",
      "label": "背景图片"
    }
  ],
  "presets": [
    {
      "name": "Serenity Love Cocoon",
      "category": "特殊布局"
    }
  ]
}
{% endschema %}

<div class="cocoon-container">
  {% if section.settings.cocoon_image != blank %}
    <img
      width="100%"
      height="auto"
      src="{{ section.settings.cocoon_image | img_url: '2000x' }}"
      alt="Serenity Love Cocoon"
      class="cocoon-image"
    >
    <div class="cocoon-words">
      <span class="word serenity">{{ section.settings.title_line1 }}</span>
      <span class="word love">{{ section.settings.title_line2 }}</span>
      <span class="word cocoon">{{ section.settings.title_line3 }}</span>
    </div>
  {% endif %}
</div>

<style>
  .cocoon-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .cocoon-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cocoon-words {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 15px;
    left: 15px;
    z-index: 1;
  }

  .word {
    font-size: 5rem;
    font-weight: 600;
    color: white;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .word {
      font-size: 2.5rem;
    }
  }
</style>
