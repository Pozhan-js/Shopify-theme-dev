{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .three-column-text {
    background-color: {{ section.settings.background_color }};
  }

  .three-column-text__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .three-column-text__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: stretch;
  }

  @media screen and (min-width: 750px) {
    .three-column-text__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .three-column-text__item {
    background-color: {{ section.settings.column_background }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.column_padding }}px;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    box-shadow: {{ section.settings.shadow_horizontal }}px {{ section.settings.shadow_vertical }}px {{ section.settings.shadow_blur }}px {{ section.settings.shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .three-column-text__item:hover {
    transform: translateY({{ section.settings.hover_lift }}px);
    box-shadow: {{ section.settings.shadow_horizontal }}px {{ section.settings.shadow_vertical | plus: section.settings.hover_lift }}px {{ section.settings.shadow_blur | plus: 5 }}px {{ section.settings.shadow_color }};
  }

  .three-column-text__content {
    flex: 1;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.font_size }}px;
    line-height: {{ section.settings.line_height }};
    text-align: {{ section.settings.text_alignment }};
  }

  .three-column-text__content h1,
  .three-column-text__content h2,
  .three-column-text__content h3,
  .three-column-text__content h4,
  .three-column-text__content h5,
  .three-column-text__content h6 {
    color: {{ section.settings.heading_color }};
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .three-column-text__content p {
    margin-bottom: 1rem;
  }

  .three-column-text__content p:last-child {
    margin-bottom: 0;
  }

  .three-column-text__content a {
    color: {{ section.settings.link_color }};
    text-decoration: underline;
  }

  .three-column-text__content a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .three-column-text__content ul,
  .three-column-text__content ol {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .three-column-text__content blockquote {
    border-left: 4px solid {{ section.settings.link_color }};
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .three-column-text__container {
      padding: 0 1rem;
    }
    
    .three-column-text__content {
      font-size: {{ section.settings.font_size | times: 0.9 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<div class="three-column-text section-{{ section.id }}-padding">
  <div class="three-column-text__container">
    {%- if section.settings.heading != blank -%}
      <div class="section-header" style="text-align: center; margin-bottom: 3rem;">
        <h2 style="color: {{ section.settings.heading_color }}; font-size: 2.5rem; margin: 0;">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p style="color: {{ section.settings.text_color }}; font-size: 1.2rem; margin-top: 1rem;">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="three-column-text__grid">
      <div class="three-column-text__item">
        <div class="three-column-text__content">
          {{ section.settings.column_1_content }}
        </div>
      </div>

      <div class="three-column-text__item">
        <div class="three-column-text__content">
          {{ section.settings.column_2_content }}
        </div>
      </div>

      <div class="three-column-text__item">
        <div class="three-column-text__content">
          {{ section.settings.column_3_content }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
