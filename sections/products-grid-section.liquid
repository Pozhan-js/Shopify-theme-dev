        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 20px;
        color: #333;
        margin-bottom: 8px;
    }

    .empty-state p {
        color: #666;
        margin-bottom: 16px;
    }

    .back-home-btn {
        display: inline-block;
        padding: 10px 24px;
        background: #D8A26C;
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: 14px;
        transition: background-color 0.2s ease;
    }

    .back-home-btn:hover {
        background: #c6925a;
    }

    @media (max-width: 768px) {
        .products-grid-section {
