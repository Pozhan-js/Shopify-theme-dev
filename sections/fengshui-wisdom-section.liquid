{% schema %}
{
  "name": "风水智慧区块",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Where Walls Whisper Wisdom"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "The Measurable Poetry of"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "Feng Shui Science"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "主展示图片"
    }
  ],
  "presets": [
    {
      "name": "风水智慧区块",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<div class="fengshui-wisdom-section">
  <div class="page-width">
    <div class="wisdom-display">
      <div class="wisdom-header">
        <h2 class="wisdom-line">{{ section.settings.title_line1 }}</h2>
        <h2 class="wisdom-line">{{ section.settings.title_line2 }}</h2>
        <h2 class="wisdom-line">{{ section.settings.title_line3 }}</h2>
      </div>
      {% if section.settings.main_image != blank %}
        <div class="main-display">
          <img
            src="{{ section.settings.main_image | img_url: '1200x' }}"
            alt="风水智慧展示"
            width="1200"
            height="800"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .fengshui-wisdom-section {
    padding: 60px 0;
    background: linear-gradient(135deg, #f5f0e6 0%, #e8d9c5 100%);
  }

  .wisdom-display {
    position: relative;
  }

  .wisdom-header {
    position: absolute;
    top: 25px;
    right: 15px;
    text-align: right;
  }

  .wisdom-line {
    line-height: 100px;
    font-weight: 600;
    font-size: 4rem;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
  }

  .main-display {
    margin-bottom: 40px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .main-display img {
    width: 100%;
    height: auto;
    display: block;
  }
</style>
