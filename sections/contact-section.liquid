{% comment %} Contact Section {% endcomment %}
<div class="contact-section">
  {% if section.settings.show_header %}
  <div class="contact-header">
    <h1>{{ section.settings.title | default: "联系我们" }}</h1>
    <p>{{ section.settings.subtitle | default: "我们随时为您提供专业的珠宝咨询服务" }}</p>
  </div>
  {% endif %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'contact_info' %}
        <div class="contact-info-section" style="background: {{ block.settings.bg_color }};">
          <div class="container">
            <h2>{{ block.settings.title | default: "联系方式" }}</h2>
            <div class="info-grid">
              <div class="info-card">
                <div class="info-icon">📍</div>
                <h3>{{ block.settings.address_title | default: "店铺地址" }}</h3>
                <p>{{ block.settings.address_desc | default: "东京都中央区银座4-6-16 银座珠宝大厦1F-3F" }}</p>
              </div>
              <div class="info-card">
                <div class="info-icon">📞</div>
                <h3>{{ block.settings.phone_title | default: "客服热线" }}</h3>
                <p>{{ block.settings.phone_desc | default: "+81-3-1234-5678 周一至周日 10:00-20:00" }}</p>
              </div>
              <div class="info-card">
                <div class="info-icon">✉️</div>
                <h3>{{ block.settings.email_title | default: "邮箱咨询" }}</h3>
                <p>{{ block.settings.email_desc | default: "info@jewelry-store.jp 我们会在24小时内回复" }}</p>
              </div>
              <div class="info-card">
                <div class="info-icon">💬</div>
                <h3>{{ block.settings.chat_title | default: "在线客服" }}</h3>
                <p>{{ block.settings.chat_desc | default: "微信客服：JewelryStore_JP LINE客服：@jewelrystore" }}</p>
              </div>
            </div>
          </div>
        </div>

      {% when 'contact_form' %}
        <div class="contact-form-section" style="background: {{ block.settings.bg_color }};">
          <div class="container">
            <h2>{{ block.settings.title | default: "留言咨询" }}</h2>
            <form class="contact-form" action="/contact#contact_form" method="post">
              <div class="form-row">
                <div class="form-group">
                  <label for="contact-name">{{ block.settings.name_label | default: "姓名 *" }}</label>
                  <input type="text" id="contact-name" name="contact[name]" required>
                </div>
                <div class="form-group">
                  <label for="contact-email">{{ block.settings.email_label | default: "邮箱 *" }}</label>
                  <input type="email" id="contact-email" name="contact[email]" required>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="contact-phone">{{ block.settings.phone_label | default: "电话" }}</label>
                  <input type="tel" id="contact-phone" name="contact[phone]">
                </div>
                <div class="form-group">
                  <label for="contact-subject">{{ block.settings.subject_label | default: "咨询类型" }}</label>
                  <select id="contact-subject" name="contact[subject]">
                    <option value="">{{ block.settings.subject_placeholder | default: "请选择咨询类型" }}</option>
                    <option value="product">{{ block.settings.option1_text | default: "产品咨询" }}</option>
                    <option value="order">{{ block.settings.option2_text | default: "订单查询" }}</option>
                    <option value="custom">{{ block.settings.option3_text | default: "定制服务" }}</option>
                    <option value="repair">{{ block.settings.option4_text | default: "维修服务" }}</option>
                    <option value="other">{{ block.settings.option5_text | default: "其他问题" }}</option>
                  </select>
                </div>
              </div>
              
              <div class="form-group full-width">
                <label for="contact-message">{{ block.settings.message_label | default: "留言内容 *" }}</label>
                <textarea id="contact-message" name="contact[body]" rows="6" required 
                          placeholder="{{ block.settings.message_placeholder | default: "请详细描述您的问题，我们会尽快回复您..." }}"></textarea>
              </div>
              
              <button type="submit" class="submit-btn">{{ block.settings.submit_text | default: "发送留言" }}</button>
            </form>
          </div>
        </div>

    {% endcase %}
  {% endfor %}
</div>

<style>
.contact-section {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 20px;
}

.contact-header {
  text-align: center;
  margin-bottom: 60px;
}

.contact-header h1 {
  font-size: 42px;
  font-weight: 300;
  color: #333;
  margin-bottom: 15px;
  letter-spacing: 2px;
}

.contact-header p {
  font-size: 18px;
  color: #666;
}

.contact-content {
  display: grid;
  gap: 60px;
}

.contact-info-section h2,
.contact-form-section h2 {
  font-size: 32px;
  font-weight: 300;
  color: #333;
  margin-bottom: 30px;
  text-align: center;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
}

.info-card {
  text-align: center;
  padding: 40px 30px;
  background: #f9f9f9;
  border-radius: 12px;
  transition: transform 0.3s ease;
}

.info-card:hover {
  transform: translateY(-5px);
}

.info-icon {
  font-size: 48px;
  margin-bottom: 20px;
}

.info-card h3 {
  font-size: 20px;
  margin-bottom: 15px;
  color: #333;
}

.info-card p {
  font-size: 16px;
  color: #666;
  line-height: 1.6;
}

.contact-form {
  max-width: 800px;
  margin: 0 auto;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
  margin-bottom: 30px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #333;
}

.submit-btn {
  width: 100%;
  padding: 18px;
  background: #333;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 18px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.submit-btn:hover {
  background: #555;
}

@media (max-width: 768px) {
  .contact-section {
    padding: 40px 15px;
  }
  
  .contact-header h1 {
    font-size: 32px;
  }
  
  .form-row {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .info-grid {
    grid-template-columns: 1fr;
  }
}
</style>

