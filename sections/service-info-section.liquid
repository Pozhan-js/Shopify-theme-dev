{% comment %}
  Service Info Section - Logistics, service hours, food quality information display
  Style: Left side gray circular small icon, right side text description, horizontal layout
  Default display 3 service information items
{% endcomment %}

<div class="service-info-section">
  <div class="page-width">
    <div class="service-grid">
      {% comment %} Default display 3 service information items {% endcomment %}
      {% if section.blocks.size == 0 %}
        {% comment %} Default service information {% endcomment %}
        <div class="service-item">
          <div class="service-icon-circle">
            <div class="service-icon-placeholder">üì¶</div>
          </div>
          <div class="service-content">
            <h3 class="service-title">Fast Delivery</h3>
            <p class="service-description">Ship within 24 hours, nationwide delivery</p>
          </div>
        </div>
        
        <div class="service-item">
          <div class="service-icon-circle">
            <div class="service-icon-placeholder">‚è∞</div>
          </div>
          <div class="service-content">
            <h3 class="service-title">Service Hours</h3>
            <p class="service-description">Monday to Sunday 9:00-21:00</p>
          </div>
        </div>
        
        <div class="service-item">
          <div class="service-icon-circle">
            <div class="service-icon-placeholder">‚úÖ</div>
          </div>
          <div class="service-content">
            <h3 class="service-title">Food Quality</h3>
            <p class="service-description">Fresh ingredients, strict quality control</p>
          </div>
        </div>
      {% else %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'service_item' %}
              <div class="service-item" {{ block.shopify_attributes }}>
                <div class="service-icon-circle">
                  {% if block.settings.icon_image != blank %}
                    <img src="{{ block.settings.icon_image | image_url: width: 40 }}" 
                         alt="{{ block.settings.title | escape }}" 
                         class="service-icon"
                         loading="lazy">
                  {% else %}
                    <div class="service-icon-placeholder">
                      {% if block.settings.title != blank %}
                        {{ block.settings.title | first | upcase }}
                      {% else %}
                        ‚úì
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
                <div class="service-content">
                  <h3 class="service-title">{{ block.settings.title | default: 'Service Title' | escape }}</h3>
                  <p class="service-description">{{ block.settings.description | default: 'Service Description' | escape }}</p>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
.service-info-section {
  padding: 60px 0;
  background-color: #DE9B57;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 40px 30px;
  align-items: flex-start;
}

.service-item {
  display: flex;
  align-items: flex-start;
  gap: 16px;
}

.service-icon-circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.service-icon {
  width: 24px;
  height: 24px;
  object-fit: contain;
}

.service-icon-placeholder {
  font-size: 20px;
  font-weight: bold;
  color: #666;
}

.service-content {
  flex: 1;
}

.service-title {
  font-size: 18px;
  font-weight: 600;
  color: #ffffff;
  margin: 0 0 8px 0;
  line-height: 1.3;
}

.service-description {
  font-size: 14px;
  color: #ffffff;
  margin: 0;
  line-height: 1.4;
}

@media screen and (max-width: 768px) {
  .service-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .service-item {
    gap: 12px;
  }
  
  .service-icon-circle {
    width: 45px;
    height: 45px;
  }
  
  .service-icon {
    width: 20px;
    height: 20px;
  }
  
  .service-title {
    font-size: 16px;
  }
  
  .service-description {
    font-size: 13px;
  }
}
</style>

{% schema %}
{
  "name": "Service Info Section",
  "tag": "section",
  "class": "service-info-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#DE9B57"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "service_item",
      "name": "Service Info",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Fast Delivery"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Ship within 24 hours, nationwide delivery"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Info Section",
      "blocks": [
        {
          "type": "service_item",
          "settings": {
            "title": "Fast Delivery",
            "description": "Ship within 24 hours, nationwide delivery"
          }
        },
        {
          "type": "service_item",
          "settings": {
            "title": "Service Hours",
            "description": "Monday to Sunday 9:00-21:00"
          }
        },
        {
          "type": "service_item",
          "settings": {
            "title": "Food Quality",
            "description": "Fresh ingredients, strict quality control"
          }
        }
      ]
    }
  ]
}
{% endschema %}
