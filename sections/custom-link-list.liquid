{%- style -%}
  .custom-link-list {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    padding: 20px 0;
  }
  
  .custom-link-list.single-column {
    flex-direction: column;
    flex-wrap: nowrap;
  }
  
  .custom-link-list.two-columns {
    flex-direction: row;
  }
  
  .custom-link-list.two-columns .custom-link-item {
    width: calc(50% - 6px);
  }
  
  .custom-link-list.three-columns .custom-link-item {
    width: calc(33.33% - 8px);
  }
  
  .custom-link-list.four-columns .custom-link-item {
    width: calc(25% - 9px);
  }
  
  .custom-link-item {
    padding: 12px 16px;
    border-radius: 4px;
    background: {{ section.settings.item_bg }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .custom-link-item.grid-item {
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    position: relative;
    overflow: hidden;
  }
  
  .custom-link-item.grid-item a {
    position: relative;
    z-index: 2;
    text-align: center;
  }
  
  .custom-link-item.grid-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
  }
  
  .custom-link-item:hover {
    color: {{ section.settings.item_font_hover }};
    transform: translateX(5px);
  }
  
  .custom-link-item.grid-item:hover {
    transform: none;
  }
  
  .custom-link-item.grid-item:hover::before {
    background-color: rgba(0,0,0,0.1);
  }
  
  .custom-link-item.grid-item:hover .grid-bg {
    transform: scale(1.1);
  }
  
  .custom-link-item:hover a {
    color: {{ section.settings.item_font_hover }};
  }

  .custom-link-item a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
  }
  
  .custom-link-item.grid-item a {
    color: white;
  }
{%- endstyle -%}

<div class="custom-link-list 
  {% if section.settings.layout == 'single' %}single-column
  {% elsif section.settings.layout == 'two' %}two-columns
  {% elsif section.settings.layout == 'three' %}three-columns
  {% elsif section.settings.layout == 'four' %}four-columns
  {% endif %}">
  {% for block in section.blocks %}
    <div class="custom-link-item {% if section.settings.enable_grid %}grid-item{% endif %}" 
        {% if section.settings.enable_grid and block.settings.bg_image != blank %}
          style="background-image: url({{ block.settings.bg_image | img_url: '800x' }})"
        {% endif %}>
      <a href="{{ block.settings.link_url }}" 
         style="font-size: {% if section.settings.enable_grid %}{{ section.settings.grid_title_size }}px{% else %}{{ section.settings.title_size }}px{% endif %}">
        {{ block.settings.link_title }}
      </a>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "自定义链接列表",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "布局模式",
      "options": [
        {
          "value": "single",
          "label": "单列"
        },
        {
          "value": "two",
          "label": "双列" 
        },
        {
          "value": "three",
          "label": "三列" 
        },
        {
          "value": "four",
          "label": "四列" 
        }
      ],
      "default": "single"
    },
    {
      "type": "header",
      "content": "样式设置"
    },
    {
      "type": "color",
      "id": "item_bg_hover",
      "label": "悬停文字颜色",
      "default": "#e0e0e0"
    },
    {
      "type": "color", 
      "id": "text_color",
      "label": "文字颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "item_font_hover",
      "label": "悬停字体颜色色",
      "default": "#00f"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "边框颜色",
      "default": "transparent"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "边框宽度",
      "default": 0
    },
    {
      "type": "header",
      "content": "网格样式设置"
    },
    {
      "type": "checkbox",
      "id": "enable_grid",
      "label": "启用网格布局",
      "default": false
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "标题文字大小",
      "default": 16
    },
    {
      "type": "range",
      "id": "grid_title_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "网格标题大小",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "链接项",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "链接标题",
          "default": "文章标题"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "链接地址"
        },
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "背景图片",
          "info": "仅网格样式有效"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "自定义链接列表",
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}
