{%- style -%}
  .custom-link-list {
    display: flex;
    gap: 12px;
    padding: 20px;
  }
  
  .custom-link-list.single-column {
    flex-direction: column;
  }
  
  .custom-link-list.two-columns {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .custom-link-list.two-columns .custom-link-item {
    width: calc(50% - 6px);
  }
  
  .custom-link-item {
    padding: 12px 16px;
    border-radius: 4px;
    background: {{ section.settings.item_bg }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .custom-link-item:hover {
    background: {{ section.settings.item_bg_hover }};
    transform: translateX(5px);
  }
  
  .custom-link-item a {
    color: #333;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
  }
{%- endstyle -%}

<div class="custom-link-list {% if section.settings.layout == 'single' %}single-column{% else %}two-columns{% endif %}">
  {% for block in section.blocks %}
    <div class="custom-link-item">
      <a href="{{ block.settings.link_url }}">
        {{ block.settings.link_title }}
      </a>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "自定义链接列表",
  "settings": [
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "布局模式",
      "options": [
        {
          "value": "single",
          "label": "单列"
        },
        {
          "value": "two",
          "label": "双列" 
        },
        {
          "value": "three",
          "label": "三列" 
        },
        {
          "value": "four",
          "label": "四列" 
        }
      ],
      "default": "single"
    },
    {
      "type": "header",
      "content": "样式设置"
    },
    {
      "type": "color",
      "id": "item_bg",
      "label": "项目背景色",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "item_bg_hover",
      "label": "悬停背景色",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "边框颜色",
      "default": "transparent"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "边框宽度",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "链接项",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "链接标题",
          "default": "文章标题"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "链接地址"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "自定义链接列表",
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}
