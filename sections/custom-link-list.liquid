{%- style -%}
  .custom-link-list {
    display: flex;
    gap: 12px;
    padding: 20px;
  }
  
  .custom-link-list.single-column {
    flex-direction: column;
  }
  
  .custom-link-list.two-columns {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .custom-link-list.two-columns .custom-link-item {
    width: calc(50% - 6px);
  }
  
  .custom-link-item {
    padding: 12px 16px;
    border-radius: 4px;
    background: #f5f5f5;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .custom-link-item:hover {
    background: #e0e0e0;
    transform: translateX(5px);
  }
  
  .custom-link-item a {
    color: #333;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
  }
{%- endstyle -%}

<div class="custom-link-list {% if section.settings.layout == 'single' %}single-column{% else %}two-columns{% endif %}">
  {% for block in section.blocks %}
    <div class="custom-link-item">
      <a href="{{ block.settings.link_url }}">
        {{ block.settings.link_title }}
      </a>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "自定义链接列表",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "布局模式",
      "options": [
        {
          "value": "single",
          "label": "单列"
        },
        {
          "value": "two",
          "label": "双列" 
        }
      ],
      "default": "single"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "链接项",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "链接标题",
          "default": "文章标题"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "链接地址"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "自定义链接列表",
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}
