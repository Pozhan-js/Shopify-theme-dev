<div class="product-category-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="category-grid">
      {% assign collections_to_show = collections | where: 'published', true %}
      {% if section.settings.collection_limit > 0 %}
        {% assign collections_to_show = collections_to_show | slice: 0, section.settings.collection_limit %}
      {% endif %}

      {% for collection in collections_to_show %}
        {% unless collection.handle == 'frontpage' %}
          <a
            href="/collections/{{ collection.handle }}"
            class="category-item"
            aria-label="查看 {{ collection.title | escape }} 系列"
          >
            <div class="category-image">
              {% if collection.featured_image != blank %}
                <img
                  src="{{ collection.featured_image | img_url: '600x400' }}"
                  alt="{{ collection.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                <div class="category-placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21 16V8C21 6.9 20.1 6 19 6H5C3.9 6 3 6.9 3 8V16C3 17.1 3.9 18 5 18H19C20.1 18 21 17.1 21 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M7 14L9 12L13 16L17 12L21 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              {% endif %}
              <div class="category-overlay">
                <h3 class="category-title">{{ collection.title | upcase }}</h3>
                {% if section.settings.show_product_count %}
                  <p class="category-count">
                    {{ collection.products_count }}
                    {% if collection.products_count == 1 %}
                      {{ 'collections.general.item' | t }}
                    {% else %}
                      {{ 'collections.general.items' | t }}
                    {% endif %}
                  </p>
                {% endif %}
              </div>
            </div>
          </a>
        {% endunless %}
      {% endfor %}

      {% comment %} 如果没有足够的产品系列，显示占位符 {% endcomment %}
      {% assign collections_count = collections_to_show.size %}
      {% if collections_count == 0 %}
        <div class="no-collections">
          <p>此系列下暂无商品</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .product-category-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-heading {
    font-size: 2.5rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 50px;
    color: {{ section.settings.heading_color | default: '#333333' }};
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 40px;
  }

  .category-item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .category-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    text-decoration: none;
  }

  .category-item:focus {
    outline: none;
  }

  .category-image {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-item:hover .category-image img {
    transform: scale(1.05);
  }

  .category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.6) 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 20px;
  }

  .category-title {
    color: white;
    font-size: 1.8rem;
    font-weight: 500;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .category-count {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.8rem;
    margin: 5px 0 0 0;
    font-weight: 400;
  }

  .category-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .no-collections {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 1.1rem;
  }


  /* 移动端响应式设计 */
  @media (max-width: 768px) {
    .product-category-section {
      padding: 40px 0;
    }

    .container {
      padding: 0 15px;
    }

    .section-heading {
      font-size: 1.8rem;
      margin-bottom: 30px;
    }

    .category-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .category-title {
      font-size: 1.2rem;
    }

  }

  @media (max-width: 480px) {
    .section-heading {
      font-size: 1.5rem;
      letter-spacing: 1px;
    }

    .category-grid {
      gap: 10px;
    }

    .category-title {
      font-size: 1rem;
    }

    .category-overlay {
      padding: 15px;
    }
  }

  /* 平板设备 */
  @media (min-width: 769px) and (max-width: 1024px) {
    .category-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Product Category",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "CATEGORY | カテゴリー"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "collection_limit",
      "label": "Number of Collections to Show",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 8,
      "info": "Set to 0 to show all collections"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show Product Count",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Product Category"
    }
  ]
}
{% endschema %}
