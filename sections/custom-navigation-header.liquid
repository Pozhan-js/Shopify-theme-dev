  <div class="mobile-menu-drawer" id="mobileMenuDrawer">
    <div class="mobile-menu-header">
      <div class="mobile-menu-logo">菜单</div>
      <button class="mobile-menu-close" onclick="closeMobileMenu()" aria-label="关闭菜单">×</button>
