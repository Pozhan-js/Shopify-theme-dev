    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Height",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Custom Navigation Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
