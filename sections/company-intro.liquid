<style>
  .company-intro {
    width: 100%;
    background-color: #f8f9fa;
    padding: 60px 0;
    text-align: center;
  }

  .company-intro__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .company-intro__brand {
    font-size: 48px;
    font-weight: 700;
    color: #333333;
    margin: 0 0 30px 0;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .company-intro__tagline {
    font-size: 32px;
    font-weight: 600;
    color: #555555;
    margin: 0 0 40px 0;
    line-height: 1.3;
  }

  .company-intro__description {
    font-size: 18px;
    font-weight: 400;
    color: #666666;
    line-height: 1.6;
    margin: 0;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 1024px) {
    .company-intro {
      padding: 50px 0;
    }

    .company-intro__container {
      padding: 0 30px;
    }

    .company-intro__brand {
      font-size: 42px;
      margin-bottom: 25px;
    }

    .company-intro__tagline {
      font-size: 28px;
      margin-bottom: 35px;
    }

    .company-intro__description {
      font-size: 17px;
    }
  }

  @media (max-width: 768px) {
    .company-intro {
      padding: 40px 0;
    }

    .company-intro__container {
      padding: 0 20px;
    }

    .company-intro__brand {
      font-size: 36px;
      margin-bottom: 20px;
      letter-spacing: 1px;
    }

    .company-intro__tagline {
      font-size: 24px;
      margin-bottom: 30px;
    }

    .company-intro__description {
      font-size: 16px;
      line-height: 1.5;
    }
  }

  @media (max-width: 480px) {
    .company-intro {
      padding: 35px 0;
    }

    .company-intro__container {
      padding: 0 15px;
    }

    .company-intro__brand {
      font-size: 28px;
      margin-bottom: 18px;
      letter-spacing: 0.5px;
    }

    .company-intro__tagline {
      font-size: 20px;
      margin-bottom: 25px;
    }

    .company-intro__description {
      font-size: 15px;
      line-height: 1.4;
    }
  }
</style>

<section class="company-intro">
  <div class="company-intro__container">
    {% if section.settings.brand_name != blank %}
      <h1 class="company-intro__brand" style="color: {{ section.settings.brand_color }};">
        {{ section.settings.brand_name }}
      </h1>
    {% endif %}

    {% if section.settings.tagline != blank %}
      <h2 class="company-intro__tagline" style="color: {{ section.settings.tagline_color }};">
        {{ section.settings.tagline }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="company-intro__description" style="color: {{ section.settings.description_color }};">
        {{ section.settings.description }}
      </p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Company Introduction",
  "tag": "section",
  "class": "company-intro-section",
  "settings": [
    {
      "type": "header",
      "content": "Brand Settings"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "GETOPAUTO"
    },
    {
      "type": "color",
      "id": "brand_color",
      "label": "Brand Name Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Tagline Settings"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Better service at a lower price"
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline Color",
      "default": "#555555"
    },
    {
      "type": "header",
      "content": "Description Settings"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "As an integrated manufacturer and one-stop online store for filter maintenance, our philosophy emphasizes product performance while eliminating the frustrating markups of middlemen. We offer affordable prices and sincerely serve every order with care."
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    }
  ],
  "presets": [
    {
      "name": "Company Introduction"
    }
  ]
}
{% endschema %}

<style>
  .company-intro-section {
    background-color: {{ section.settings.background_color | default: '#f8f9fa' }};
  }
</style>
