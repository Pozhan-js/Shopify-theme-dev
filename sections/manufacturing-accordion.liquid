  "name": "Manufacturing Accordion",
  "tag": "section",
  "class": "section-manufacturing-accordion",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Manufacturing Excellence"
    }
  ],
  "blocks": [
    {
      "type": "accordion_item",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Manufacturing Excellence"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description (separate items with |)",
          "default": "Integrated production: in-house wood, metal, and upholstery.|Smart tooling & tight tolerances for repeatable precision.|4-stage QC (incoming, in-process, final, pre-ship).|Export-ready packaging and reliable global delivery.",
          "info": "Use | to separate list items"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Manufacturing Accordion",
      "blocks": [
        {
          "type": "accordion_item",
          "settings": {
            "title": "Manufacturing Excellence",
