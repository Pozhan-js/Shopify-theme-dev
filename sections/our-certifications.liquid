<div class="certifications-section">
  <div class="certifications-container">
    <div class="certifications-header">
      <h2 class="certifications-title">
        {{ section.settings.title | default: "Our Certifications" }}
      </h2>
      {% if section.settings.subtitle != blank %}
        <p class="certifications-subtitle">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>
    
    <div class="certifications-grid">
      <!-- CE Certification -->
      <div class="certification-card">
        <div class="certification-icon">
          {% if section.settings.ce_icon != blank %}
            <img src="{{ section.settings.ce_icon | img_url: '120x120' }}" alt="CE Certification" class="cert-icon-image">
          {% else %}
            <div class="cert-icon-placeholder">
              <span>CE</span>
            </div>
          {% endif %}
        </div>
        <div class="certification-content">
          <h3 class="certification-name">
            {{ section.settings.ce_title | default: "CE Certification" }}
          </h3>
          <p class="certification-description">
            {{ section.settings.ce_description | default: "European Conformity certification ensuring our products meet EU safety, health and environmental protection standards." }}
          </p>
        </div>
      </div>

      <!-- ISO Certification -->
      <div class="certification-card">
        <div class="certification-icon">
          {% if section.settings.iso_icon != blank %}
            <img src="{{ section.settings.iso_icon | img_url: '120x120' }}" alt="ISO Certification" class="cert-icon-image">
          {% else %}
            <div class="cert-icon-placeholder">
              <span>ISO</span>
            </div>
          {% endif %}
        </div>
        <div class="certification-content">
          <h3 class="certification-name">
            {{ section.settings.iso_title | default: "ISO Certification" }}
          </h3>
          <p class="certification-description">
            {{ section.settings.iso_description | default: "International Organization for Standardization certification demonstrating our commitment to quality management systems." }}
          </p>
        </div>
      </div>

      <!-- RoHS Certification -->
      <div class="certification-card">
        <div class="certification-icon">
          {% if section.settings.rohs_icon != blank %}
            <img src="{{ section.settings.rohs_icon | img_url: '120x120' }}" alt="RoHS Certification" class="cert-icon-image">
          {% else %}
            <div class="cert-icon-placeholder">
              <span>RoHS</span>
            </div>
          {% endif %}
        </div>
        <div class="certification-content">
          <h3 class="certification-name">
            {{ section.settings.rohs_title | default: "RoHS Certification" }}
          </h3>
          <p class="certification-description">
            {{ section.settings.rohs_description | default: "Restriction of Hazardous Substances compliance ensuring our products are environmentally friendly and safe." }}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

