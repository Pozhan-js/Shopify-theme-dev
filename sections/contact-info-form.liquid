{%- style -%}
  .contact-info-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    margin: 0 auto;
    max-width: var(--page-width);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-info__heading {
    margin: 0 0 1rem;
  }

  .contact-info__description {
    margin: 0 0 2rem;
  }

  .contact-method {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-method__label {
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .contact-info-form {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<div class="contact-info-form page-width">
  <div class="contact-info">
    {%- if section.settings.heading != blank -%}
      <h2 class="contact-info__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="contact-info__description">{{ section.settings.description }}</p>
    {%- endif -%}

    {%- if section.settings.email != blank -%}
      <div class="contact-method">
        <span class="contact-method__label">{{ 'Email' | escape }}</span>
        <span>{{ section.settings.email }}</span>
        {%- if section.settings.email_response_time != blank -%}
          <span class="contact-method__note">({{ section.settings.email_response_time }})</span>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.chat_hours != blank -%}
      <div class="contact-method">
        <span class="contact-method__label">{{ 'Online Chat' | escape }}</span>
        <span>{{ section.settings.chat_hours }}</span>
      </div>
    {%- endif -%}

    {%- if section.settings.whatsapp != blank -%}
      <div class="contact-method">
        <span class="contact-method__label">{{ 'WhatsApp' | escape }}</span>
        <span>{{ section.settings.whatsapp }}</span>
      </div>
    {%- endif -%}

    {%- if section.settings.head_office != blank -%}
      <div class="contact-method">
        <span class="contact-method__label">{{ 'Head Office' | escape }}</span>
        <span>{{ section.settings.head_office | newline_to_br }}</span>
      </div>
    {%- endif -%}
  </div>

  <div class="contact-form-wrapper">
    {%- assign contact_form_section = section.settings.contact_form_section | default: 'contact-form' -%}
    {% section contact_form_section %}
  </div>
</div>

{% schema %}
{
  "name": "Contact Info with Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We'd love to hear from you!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "You can contact us directly via the following methods so that our customer service team can provide further assistance."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "wildolls@126.com"
    },
    {
      "type": "text",
      "id": "email_response_time",
      "label": "Email Response Time",
      "default": "Response within 24 hours"
    },
    {
      "type": "text",
      "id": "chat_hours",
      "label": "Online Chat Hours",
      "default": "Monday - Friday, 9:00--17:00 (UTC+1)"
    },
    {
      "type": "text",
      "id": "whatsapp",
      "label": "WhatsApp Number",
      "default": "+86 18061684601"
    },
    {
      "type": "textarea",
      "id": "head_office",
      "label": "Head Office Address",
      "default": "FLUNORA LIMITED\nRM 509, 5/F, THE CLOUD, 111 TUNG CHAU STREET, TAI KOK TSUI HONG KONG, HONG KONG"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Contact Info with Form"
    }
  ]
}
{% endschema %}
