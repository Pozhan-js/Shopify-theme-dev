{% schema %}
{
  "name": "产品系列网格",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "产品系列网格"
    }
  ]
}
{% endschema %}

{%- style -%}
  @import url('{{ 'collection-grid.css' | asset_url }}');
{%- endstyle -%}

<div class="collection-grid">
  {% for collection in collections %}
    <div class="collection-grid__item">
      {% if collection.featured_image %}
        <img 
          class="collection-grid__image"
          src="{{ collection.featured_image | img_url: '600x600' }}"
          alt="{{ collection.title | escape }}"
          loading="lazy"
          width="600"
          height="600"
        >
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'collection-grid__image' }}
      {% endif %}
      <h3 class="collection-grid__title">{{ collection.title }}</h3>
    </div>
  {% endfor %}
</div>
