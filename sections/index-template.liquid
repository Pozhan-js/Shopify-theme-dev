    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "建议尺寸：1600x1200像素"
    },
    {
      "type": "image_picker",
      "id": "mission_image_1",
      "label": "Mission Image 1",
      "info": "建议尺寸：1200x800像素"
    },
    {
      "type": "image_picker",
      "id": "mission_image_2",
      "label": "Mission Image 2",
      "info": "建议尺寸：1200x800像素"
    },
    {
      "type": "image_picker",
      "id": "mask_icon",
      "label": "Mask Icon",
      "info": "建议尺寸：200x200像素"
    },
    {
      "type": "image_picker",
      "id": "partner_logo_1",
      "label": "Partner Logo 1",
      "info": "建议尺寸：300x160像素"
    },
    {
      "type": "image_picker",
      "id": "partner_logo_2",
      "label": "Partner Logo 2",
      "info": "建议尺寸：300x160像素"
    },
    {
      "type": "image_picker",
      "id": "mask_layers",
      "label": "Mask Layers Diagram",
      "info": "建议尺寸：1600x800像素"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "主标题",
      "default": "Spread the GOOD"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "按钮文字",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "testimonials_title",
      "label": "评价标题",
      "default": "What our customers say:"
    },
    {
      "type": "text",
      "id": "products_title",
      "label": "产品标题",
      "default": "Best sellers"
    },
    {
      "type": "text",
      "id": "mission_title",
      "label": "品牌故事标题",
      "default": "Spreading the GOOD, one mask at a time"
    },
    {
      "type": "richtext",
      "id": "mission_text",
      "label": "品牌故事内容",
      "default": "<p>The GOOD Mask Co. was created to do good right off the bat, albeit in highly dramatic circumstances; the 2020 global pandemic.</p>"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Client Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 100,
          "max": 500,
          "step": 10,
          "unit": "px",
          "label": "Image Width",
          "default": 300
        },
        {
          "type": "range",
          "id": "image_height",
          "min": 100,
          "max": 500,
          "step": 10,
          "unit": "px",
          "label": "Image Height",
          "default": 300
        },
        {
          "type": "text",
          "id": "title",
          "label": "Testimonial Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Testimonial Content"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ]
}
