<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.carousel-track');
    const carouselWrapper = document.querySelector('.carousel-wrapper');
    const items = document.querySelectorAll('.statistic-item');
    const indicators = document.querySelectorAll('.indicator');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');
    
    if (!carousel || items.length === 0) return;
    
    let currentIndex = 0;
    const totalItems = items.length;
    const itemsPerView = 3;
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    
    function setupCarousel() {
      const wrapperWidth = carouselWrapper.offsetWidth;
      const totalGap = 30 * (itemsPerView - 1);
      const itemWidth = (wrapperWidth - totalGap) / itemsPerView;
      
      items.forEach(item => {
        item.style.width = itemWidth + 'px';
        item.style.minWidth = itemWidth + 'px';
      });
    }
    
    function updateCarousel() {
      const wrapperWidth = carouselWrapper.offsetWidth;
      const totalGap = 30 * (itemsPerView - 1);
      const itemWidth = (wrapperWidth - totalGap) / itemsPerView;
      const moveDistance = currentIndex * (itemWidth + 30);
      
      carousel.style.transform = `translateX(-${moveDistance}px)`;
      
      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('active', index === currentIndex);
      });
    }
    
    function nextSlide() {
      currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
      updateCarousel();
    }
    
    function prevSlide() {
      currentIndex = currentIndex <= 0 ? maxIndex : currentIndex - 1;
      updateCarousel();
    }
    
    // 按钮事件
    if (nextBtn) nextBtn.addEventListener('click', nextSlide);
    if (prevBtn) prevBtn.addEventListener('click', prevSlide);
    
    // 指示器事件
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        currentIndex = Math.min(index, maxIndex);
        updateCarousel();
      });
    });
    
    // 自动播放
    {% if section.settings.autoplay %}
      setInterval(nextSlide, {{ section.settings.autoplayspeed | times: 1000 }});
    {% endif %}
    
    // 窗口大小改变时重新计算
    window.addEventListener('resize', function() {
      setupCarousel();
      updateCarousel();
    });
    
    // 初始化轮播
    setupCarousel();
    updateCarousel();
  });
</script>

