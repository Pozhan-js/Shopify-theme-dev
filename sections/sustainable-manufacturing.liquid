    letter-spacing: 1px;
  }

  .certification-subtitle {
    font-size: {{ section.settings.certsubtitlesize }}px;
    color: {{ section.settings.certsubtitlecolor }};
    margin: 0;
    line-height: 1.4;
  }

  /* 轮播样式 */
  .statistics-carousel {
