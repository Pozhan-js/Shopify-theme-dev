    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .statistic-content {
    text-align: center;
    padding: 20px 0;
  }

  .statistic-number {
    font-size: {{ section.settings.statnumbersize }}px;
    font-weight: {{ section.settings.statnumberweight }};
    color: {{ section.settings.statnumbercolor }};
    margin: 0 0 10px;
    line-height: 1;
  }

  .statistic-label {
