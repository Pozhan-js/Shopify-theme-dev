      gap: 30px;
      margin-bottom: 60px;
    }

    .statistic-slide {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
    }

    .section-title {
      font-size: {{ section.settings.title_size | minus: 8 }}px;
    }

    .section-description {
      font-size: {{ section.settings.description_size | minus: 2 }}px;
    }
  }

