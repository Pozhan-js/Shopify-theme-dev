    .sustainable-manufacturing-section {
      margin-top: calc({{ section.settings.margin_top | times: 0.8 | round }}px * 100vw / 1200px);
      padding: {{ section.settings.padding_top | times: 0.8 | round }}
      px 0{{ section.settings.padding_bottom | times: 0.8 | round }}px;
    }
  }

