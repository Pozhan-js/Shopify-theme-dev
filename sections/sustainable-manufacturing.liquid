    position: relative;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .carousel-wrapper {
    flex: 1;
    overflow: hidden;
    border-radius: 12px;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.5s ease;
  }

  .statistic-item {
    flex-shrink: 0;
    width: calc(33.333% - 20px);
    margin-right: 30px;
  }

  .statistic-image {
    height: 250px;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f8f8;
  }

  .statistic-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
