    color: {{ section.settings.cert_subtitle_color }};
    margin: 0;
    line-height: 1.4;
  }

  /* 轮播样式 */
  .statistics-carousel {
    position: relative;
  }

  .carousel-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .carousel-wrapper {
    flex: 1;
    overflow: hidden;
    border-radius: 12px;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.5s ease;
  }

  .statistic-slide {
    min-width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    padding: 0 20px;
  }

  .statistic-image {
    height: 250px;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f8f8;
  }

  .statistic-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .statistic-content {
    text-align: center;
    padding: 20px 0;
  }

  .statistic-number {
    font-size: {{ section.settings.stat_number_size }}px;
    font-weight: {{ section.settings.stat_number_weight }};
    color: {{ section.settings.stat_number_color }};
    margin: 0 0 10px;
    line-height: 1;
  }

  .statistic-label {
    font-size: {{ section.settings.stat_label_size }}px;
    font-weight: {{ section.settings.stat_label_weight }};
    color: {{ section.settings.stat_label_color }};
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .statistic-divider {
    width: 40px;
    height: 3px;
    background: {{ section.settings.divider_color }};
    margin: 0 auto 20px;
  }

  .statistic-description {
    font-size: {{ section.settings.stat_desc_size }}px;
    color: {{ section.settings.stat_desc_color }};
    line-height: 1.5;
    margin: 0;
  }

  /* 轮播按钮 */
  .carousel-btn {
    width: 50px;
    height: 50px;
    border: 2px solid{{ section.settings.btn_border_color }};
    background: {{ section.settings.btn_bg_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: {{ section.settings.btn_text_color }};
  }

  .carousel-btn:hover {
    background: {{ section.settings.btn_hover_bg }};
    color: {{ section.settings.btn_hover_text }};
    transform: scale(1.1);
  }

  /* 轮播指示器 */
  .carousel-indicators {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 30px;
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background: {{ section.settings.indicator_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .indicator.active {
    background: {{ section.settings.indicator_active_color }};
    transform: scale(1.2);
  }

  /* 响应式设计 */
