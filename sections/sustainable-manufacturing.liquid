<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.sustainable-manufacturing-carousel-track');
    const carouselWrapper = document.querySelector('.sustainable-manufacturing-carousel-wrapper');
    const items = document.querySelectorAll('.sustainable-manufacturing-statistic-item');
    const indicators = document.querySelectorAll('.sustainable-manufacturing-indicator');
    const prevBtn = document.querySelector('.sustainable-manufacturing-prev-btn');
    const nextBtn = document.querySelector('.sustainable-manufacturing-next-btn');
    
    if (!carousel || items.length === 0) return;
    
    let currentIndex = 0;
    const totalItems = items.length;
    let itemsPerView = 3;
    let maxIndex = Math.max(0, totalItems - itemsPerView);
    let isMobile = window.innerWidth <= 768;
    
    function getItemsPerView() {
      const width = window.innerWidth;
      if (width <= 768) {
        return 1;
      }
      return 3;
    }
    
    function setupCarousel() {
      isMobile = window.innerWidth <= 768;
      itemsPerView = getItemsPerView();
      maxIndex = Math.max(0, totalItems - itemsPerView);
      
      if (isMobile) {
        // 手机端：移除所有transform，让原生滚动接管
        carousel.style.transform = 'none';
        return;
      }
      
      // 桌面端：正常计算宽度
      const wrapperWidth = carouselWrapper.offsetWidth;
      const totalGap = 30 * (itemsPerView - 1);
      const itemWidth = (wrapperWidth - totalGap) / itemsPerView;
      
      items.forEach(item => {
        item.style.width = itemWidth + 'px';
        item.style.minWidth = itemWidth + 'px';
      });
      
      // 重置当前索引如果超出范围
      if (currentIndex > maxIndex) {
        currentIndex = maxIndex;
      }
    }
    
    function updateCarousel() {
      if (isMobile) {
        // 手机端不需要更新transform
        return;
      }
      
      const wrapperWidth = carouselWrapper.offsetWidth;
      const totalGap = 30 * (itemsPerView - 1);
      const itemWidth = (wrapperWidth - totalGap) / itemsPerView;
      const moveDistance = currentIndex * (itemWidth + 30);
      
      carousel.style.transform = `translateX(-${moveDistance}px)`;
      
      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('active', index === currentIndex);
      });
    }
    
    function nextSlide() {
      if (isMobile) return; // 手机端禁用按钮控制
      currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
      updateCarousel();
    }
    
    function prevSlide() {
      if (isMobile) return; // 手机端禁用按钮控制
      currentIndex = currentIndex <= 0 ? maxIndex : currentIndex - 1;
      updateCarousel();
    }
    
    // 手机端滚动指示器更新
    function updateIndicatorsOnScroll() {
      if (!isMobile) return;
      
      const scrollLeft = carouselWrapper.scrollLeft;
      const itemWidth = items[0].offsetWidth + 20; // 包含margin
      const activeIndex = Math.round(scrollLeft / itemWidth);
      
      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('active', index === activeIndex);
      });
    }
    
    // 按钮事件（仅桌面端）
    if (nextBtn) nextBtn.addEventListener('click', nextSlide);
    if (prevBtn) prevBtn.addEventListener('click', prevSlide);
    
    // 指示器事件
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        if (isMobile) {
          // 手机端：滚动到对应位置
          const itemWidth = items[0].offsetWidth + 20;
          carouselWrapper.scrollTo({
            left: index * itemWidth,
            behavior: 'smooth'
          });
        } else {
          // 桌面端：正常轮播
          currentIndex = Math.min(index, maxIndex);
          updateCarousel();
        }
      });
    });
    
    // 手机端滚动事件监听
    if (carouselWrapper) {
      carouselWrapper.addEventListener('scroll', updateIndicatorsOnScroll);
    }
    
    // 自动播放（仅桌面端）
    {% if section.settings.autoplay %}
      if (!isMobile) {
        setInterval(nextSlide, {{ section.settings.autoplayspeed | times: 1000 }});
      }
    {% endif %}
    
    // 窗口大小改变时重新计算
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        setupCarousel();
        updateCarousel();
      }, 100);
    });
    
    // 初始化轮播
    setupCarousel();
    updateCarousel();
  });
</script>

