<div class="materials-stability-section" {{ section.shopify_attributes }}>
  <div class="container">
    <!-- 标题 -->
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.section_title }}</h2>
    </div>

    <!-- 内容布局 -->
    <div class="materials-layout">
      <!-- 左侧品牌logo图片 -->
      <div class="brand-logo-area">
        {% if section.settings.brand_logo_image %}
          <div class="brand-logo-container">
            <img
              src="{{ section.settings.brand_logo_image | img_url: '600x' }}"
              alt="{{ section.settings.brand_logo_alt }}"
              class="brand-logo-image"
            >
          </div>
        {% endif %}
      </div>

      <!-- 中间产品图片区域 -->
      <div class="product-images-area">
        <!-- 上方产品图片 -->
        {% if section.settings.top_product_image %}
          <div class="product-image-container top-image">
            <img
              src="{{ section.settings.top_product_image | img_url: '500x' }}"
              alt="{{ section.settings.top_product_alt }}"
              class="product-image"
            >
          </div>
        {% endif %}

        <!-- 下方产品图片 -->
        {% if section.settings.bottom_product_image %}
          <div class="product-image-container bottom-image">
            <img
              src="{{ section.settings.bottom_product_image | img_url: '500x' }}"
              alt="{{ section.settings.bottom_product_alt }}"
              class="product-image"
            >
          </div>
        {% endif %}
      </div>

      <!-- 右侧文字内容 -->
      <div class="content-area">
        <!-- 主要描述文字 -->
        <div class="main-description">
          {{ section.settings.main_description }}
        </div>

        <!-- CTA区域 -->
        <div class="cta-area">
          <p class="cta-text">{{ section.settings.cta_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .materials-stability-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    background-color: #fff;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* 标题区域 */
  .section-header {
    text-align: center;
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  .section-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    line-height: {{ section.settings.title_line_height }};
    margin: 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  /* 主要布局 */
  .materials-layout {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: {{ section.settings.layout_gap }}px;
    align-items: start;
    min-height: 500px;
  }

  /* 左侧品牌logo区域 */
  .brand-logo-area {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 40px;
  }

  .brand-logo-container {
    width: 100%;
    max-width: 400px;
    border-radius: {{ section.settings.brand_logo_border_radius }}px;
    overflow: hidden;
    background-color: {{ section.settings.brand_logo_background }};
    padding: {{ section.settings.brand_logo_padding }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-logo-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  /* 中间产品图片区域 */
  .product-images-area {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.product_images_gap }}px;
    align-items: center;
  }

  .product-image-container {
    width: 100%;
    max-width: 350px;
    border-radius: {{ section.settings.product_image_border_radius }}px;
    overflow: hidden;
    background-color: {{ section.settings.product_image_background }};
    padding: {{ section.settings.product_image_padding }}px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .top-image {
    margin-bottom: {{ section.settings.top_image_margin_bottom }}px;
  }

  /* 右侧内容区域 */
  .content-area {
    padding-left: {{ section.settings.content_padding_left }}px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 40px;
  }

  .main-description {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    text-align: left;
  }

  /* CTA区域 */
  .cta-area {
    margin-top: {{ section.settings.cta_margin_top }}px;
  }

  .cta-text {
    font-size: {{ section.settings.cta_font_size }}px;
    color: {{ section.settings.cta_color }};
    font-weight: {{ section.settings.cta_font_weight }};
    line-height: {{ section.settings.cta_line_height }};
    margin: 0;
    position: relative;
    padding-bottom: {{ section.settings.cta_underline_margin_top }}px;
  }

  .cta-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.cta_underline_height }}px;
    background: linear-gradient(to right, {{ section.settings.cta_underline_color }} 0%, {{ section.settings.cta_underline_color }} 85%, transparent 85%);
    display: {% if section.settings.show_cta_underline %}block{% else %}none{% endif %};
  }

  /* 响应式设计 */
  @media (max-width: 1024px) {
    .materials-layout {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .content-area {
      padding-left: 0;
      padding-top: 0;
    }

    .brand-logo-area {
      order: 1;
      padding-top: 0;
    }

    .product-images-area {
      order: 2;
      flex-direction: row;
      justify-content: center;
      gap: 20px;
    }

    .content-area {
      order: 3;
    }

    .product-image-container {
      max-width: 280px;
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: {{ section.settings.title_font_size | minus: 8 }}px;
    }

    .product-images-area {
      flex-direction: column;
      gap: 20px;
    }

    .main-description {
      font-size: {{ section.settings.description_font_size | minus: 2 }}px;
    }

    .cta-text {
      font-size: {{ section.settings.cta_font_size | minus: 2 }}px;
    }

    .cta-text::after {
      background: linear-gradient(to right, {{ section.settings.cta_underline_color }} 0%, {{ section.settings.cta_underline_color }} 75%, transparent 75%);
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .materials-stability-section {
      padding: {{ section.settings.section_padding_top | divided_by: 2 }}px 0;
    }

    .section-title {
      font-size: {{ section.settings.title_font_size | minus: 12 }}px;
    }

    .brand-logo-container,
    .product-image-container {
      padding: 15px;
    }

    .cta-text::after {
      background: linear-gradient(to right, {{ section.settings.cta_underline_color }} 0%, {{ section.settings.cta_underline_color }} 70%, transparent 70%);
    }
  }
</style>

