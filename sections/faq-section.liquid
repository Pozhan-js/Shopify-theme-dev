<style>
    .faq-section-container {
        padding: 60px 20px;
        max-width: 1000px;
        margin: 0 auto;
        background: #fff;
    }

    .faq-wrapper {
        text-align: center;
    }

    .section-title {
        font-size: 36px;
        font-weight: 600;
        color: #D8A26C;
        margin-bottom: 50px;
        letter-spacing: 1px;
    }

    .faq-list {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .faq-group {
        text-align: left;
    }

    .group-title {
        font-size: 24px;
        font-weight: 600;
        color: #D8A26C;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #D8A26C;
    }

    .faq-items {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .faq-item {
        border-bottom: 1px solid #f0f0f0;
    }

    .faq-details {
        width: 100%;
    }

    .faq-question {
        width: 100%;
        padding: 20px 0;
        background: none;
        border: none;
        text-align: left;
        font-size: 16px;
        font-weight: 500;
        color: #333;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: color 0.3s ease;
        list-style: none;
    }

    .faq-question:hover {
        color: #D8A26C;
    }

    .faq-question::-webkit-details-marker {
        display: none;
    }

    .faq-details[open] .faq-question {
        color: #D8A26C;
    }

    .faq-details[open] .chevron-icon {
        transform: rotate(180deg);
    }

    .chevron-icon {
        transition: transform 0.3s ease;
        color: #D8A26C;
    }

    .faq-answer {
        padding: 0 0 20px 0;
        color: #666;
        line-height: 1.8;
        font-size: 15px;
    }

    .faq-answer p {
        margin: 0 0 10px 0;
    }

    .faq-answer ul {
        margin: 10px 0;
        padding-left: 25px;
    }

    .faq-answer li {
        margin-bottom: 5px;
        color: #555;
    }

    @media (max-width: 768px) {
        .faq-section-container {
            padding: 40px 15px;
        }

        .section-title {
            font-size: 28px;
            margin-bottom: 30px;
        }

        .group-title {
            font-size: 20px;
        }

        .faq-question {
            font-size: 15px;
            padding: 15px 0;
        }

        .faq-answer {
            font-size: 14px;
            padding: 0 0 15px 0;
        }
    }
</style>

