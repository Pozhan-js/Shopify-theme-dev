<div class="upholstery-color-section">
  <div class="upholstery-color-container">
    <div class="upholstery-color-header">
      <h2 class="upholstery-color-title">
        {{ section.settings.title | default: "Upholstery Color" }}
      </h2>
      <p class="upholstery-color-subtitle">
        {{ section.settings.subtitle | default: "Choose from our premium upholstery options to match your studio's aesthetic." }}
      </p>
    </div>
    
    <div class="upholstery-color-content">
      <div class="upholstery-color-equipment-display">
        {% assign selected_product = all_products[section.settings.selected_product] %}
        <img id="upholstery-color-main-image" 
             src="{% if selected_product and selected_product.featured_image %}{{ selected_product.featured_image | img_url: '890x412' }}{% elsif section.settings.equipment_image != blank %}{{ section.settings.equipment_image | img_url: '890x412' }}{% else %}https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=890&q=80{% endif %}" 
             alt="Pilates Equipment" 
             class="upholstery-color-equipment-image">
      </div>
      
      <div class="upholstery-color-selection">
        <div class="upholstery-color-colors-header">
          <h3 class="upholstery-color-colors-title">Upholstery Colors</h3>
        </div>
        <div class="upholstery-color-grid">
          {% if selected_product %}
            {% assign first_color_processed = false %}
            {% assign color_option_name = section.settings.color_option_name | default: 'Color' %}
            
            {% comment %} 查找颜色选项 - 支持多种命名方式 {% endcomment %}
            {% for option in selected_product.options_with_values %}
              {% assign option_name_lower = option.name | downcase %}
              {% assign target_name_lower = color_option_name | downcase %}
              
              {% if option_name_lower == target_name_lower or option_name_lower == '颜色' or option_name_lower == 'color' or option_name_lower == 'colour' or option_name_lower == 'upholstery' or option_name_lower == 'fabric' %}
                {% for value in option.values %}
                  {% assign variant_found = false %}
                  {% assign variant_id = '' %}
                  {% assign variant_image = '' %}
                  {% assign color_hex = '#CCCCCC' %}
                  
                  {% comment %} 查找对应的变体 {% endcomment %}
                  {% for variant in selected_product.variants %}
                    {% assign value_matches = false %}
                    
                    {% comment %} 检查变体的所有选项值 {% endcomment %}
                    {% if variant.option1 == value %}
                      {% assign value_matches = true %}
                    {% elsif variant.option2 == value %}
                      {% assign value_matches = true %}
                    {% elsif variant.option3 == value %}
                      {% assign value_matches = true %}
                    {% endif %}
                    
                    {% if value_matches and variant_found == false %}
                      {% assign variant_found = true %}
                      {% assign variant_id = variant.id %}
                      
                      {% comment %} 获取变体图片 {% endcomment %}
                      {% if variant.image %}
                        {% assign variant_image = variant.image | img_url: '890x412' %}
                      {% endif %}
                      
                      {% comment %} 重置颜色值 {% endcomment %}
                      {% assign color_hex = '' %}
                      {% assign color_found = false %}
                      {% assign debug_info = '' %}
                      
                      {% comment %} 尝试多种元字段路径获取颜色值 - 按优先级排序 {% endcomment %}
                      
                      {% comment %} 1. 尝试 custom.color.value {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.custom.color.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'custom.color.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 2. 尝试 custom.color {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.custom.color %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'custom.color' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 3. 尝试 color.value {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.color.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'color.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 4. 尝试 color {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.color %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'color' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 5. 尝试 global.color.value {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.global.color.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'global.color.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 6. 尝试 global.color {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.global.color %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'global.color' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 7. 尝试其他可能的命名 {% endcomment %}
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.custom.hex_color.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'custom.hex_color.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.custom.color_code.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'custom.color_code.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% unless color_found %}
                        {% assign test_value = variant.metafields.custom.color_hex.value %}
                        {% if test_value and test_value != blank and test_value != '' %}
                          {% assign color_hex = test_value %}
                          {% assign color_found = true %}
                          {% assign debug_info = 'custom.color_hex.value' %}
                        {% endif %}
                      {% endunless %}
                      
                      {% comment %} 8. 尝试基于颜色名称的预设颜色映射 {% endcomment %}
                      {% unless color_found %}
                        {% assign value_lower = value | downcase %}
                        {% case value_lower %}
                          {% when 'black' %}
                            {% assign color_hex = '#000000' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-black' %}
                          {% when 'white' %}
                            {% assign color_hex = '#FFFFFF' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-white' %}
                          {% when 'red' %}
                            {% assign color_hex = '#FF0000' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-red' %}
                          {% when 'blue' %}
                            {% assign color_hex = '#0000FF' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-blue' %}
                          {% when 'green' %}
                            {% assign color_hex = '#008000' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-green' %}
                          {% when 'gray', 'grey' %}
                            {% assign color_hex = '#808080' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-gray' %}
                          {% when 'steel gray', 'steel grey' %}
                            {% assign color_hex = '#71797E' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-steel-gray' %}
                          {% when 'brown' %}
                            {% assign color_hex = '#8B4513' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-brown' %}
                          {% when 'navy' %}
                            {% assign color_hex = '#000080' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-navy' %}
                          {% when 'beige' %}
                            {% assign color_hex = '#F5F5DC' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-beige' %}
                          {% when 'tan' %}
                            {% assign color_hex = '#D2B48C' %}
                            {% assign color_found = true %}
                            {% assign debug_info = 'preset-tan' %}
                        {% endcase %}
                      {% endunless %}
                      
                      {% comment %} 9. 如果仍然没有找到颜色，使用默认颜色 {% endcomment %}
                      {% unless color_found %}
                        {% assign color_hex = '#CCCCCC' %}
                        {% assign debug_info = 'default-fallback' %}
                      {% endunless %}
                    {% endif %}
                  {% endfor %}
                  
                  {% comment %} 确保颜色值格式正确 {% endcomment %}
                  {% unless color_hex contains '#' %}
                    {% if color_hex != '' %}
                      {% assign color_hex = '#' | append: color_hex %}
                    {% else %}
                      {% assign color_hex = '#CCCCCC' %}
                    {% endif %}
                  {% endunless %}
                  
                  <div class="upholstery-color-item">
                    <div class="upholstery-color-option {% unless first_color_processed %}upholstery-color-selected{% endunless %}" 
                         style="background-color: {{ color_hex }};"
                         data-color="{{ value }}"
                         data-variant-id="{{ variant_id }}"
                         data-variant-image="{{ variant_image }}"
                         data-color-hex="{{ color_hex }}"
         data-debug-info="{{ debug_info }}">
                      {% unless first_color_processed %}
                        <div class="upholstery-color-checkmark">
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z" fill="white"/>
                          </svg>
                        </div>
                        {% assign first_color_processed = true %}
                      {% endunless %}
                    </div>
                    <div class="upholstery-color-label">{{ value }}</div>
                  </div>
                {% endfor %}
                {% break %}
              {% endif %}
            {% endfor %}
          {% else %}
            {% comment %} 如果没有选择产品，使用区块配置的颜色 {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'color_option' %}
                <div class="upholstery-color-item">
                  <div class="upholstery-color-option {% if forloop.first %}upholstery-color-selected{% endif %}" 
                       style="background-color: {{ block.settings.color_value | default: '#000000' }};"
                       data-color="{{ block.settings.color_name }}"
                       data-variant-image=""
                       data-color-hex="{{ block.settings.color_value | default: '#000000' }}">
                    {% if forloop.first %}
                      <div class="upholstery-color-checkmark">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z" fill="white"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  <div class="upholstery-color-label">{{ block.settings.color_name }}</div>
                </div>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
        
        {% if section.settings.button_text != blank %}
          <div class="upholstery-color-swatch-cta">
            <a href="{{ section.settings.button_url | default: '#' }}" class="upholstery-color-btn upholstery-color-btn-swatch">
              {% if section.settings.button_icon != blank %}
                <img src="{{ section.settings.button_icon | img_url: '12x8' }}" alt="Icon" class="upholstery-color-btn-icon">
              {% else %}
                <svg class="upholstery-color-btn-icon" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8.5 1L11.5 4L8.5 7M11 4H1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% endif %}
              <span class="upholstery-color-btn-text">{{ section.settings.button_text }}</span>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const colorOptions = document.querySelectorAll('.upholstery-color-option');
  const mainImage = document.getElementById('upholstery-color-main-image');
  
  // 调试信息 - 在开发环境中可以启用
  console.log('=== 颜色选择器调试信息 ===');
  console.log('找到颜色选项数量:', colorOptions.length);
  
  // 检查是否有空的颜色值
  let emptyColorCount = 0;
  let presetColorCount = 0;
  let metafieldColorCount = 0;
  
  colorOptions.forEach((option, index) => {
    const colorName = option.getAttribute('data-color');
    const colorHex = option.getAttribute('data-color-hex');
    const variantId = option.getAttribute('data-variant-id');
    const variantImage = option.getAttribute('data-variant-image');
    const debugInfo = option.getAttribute('data-debug-info');
    
    // 检查颜色来源
    if (debugInfo && debugInfo.startsWith('preset-')) {
      presetColorCount++;
      console.log(`🎨 颜色 ${index + 1} "${colorName}" 使用预设颜色:`, {
        name: colorName,
        hex: colorHex,
        source: debugInfo,
        variantId: variantId,
        hasImage: !!variantImage
      });
    } else if (debugInfo && debugInfo !== 'default-fallback') {
      metafieldColorCount++;
      console.log(`✅ 颜色 ${index + 1} "${colorName}" 从元字段获取:`, {
        name: colorName,
        hex: colorHex,
        source: debugInfo,
        variantId: variantId,
        hasImage: !!variantImage
      });
    } else {
      emptyColorCount++;
      console.warn(`⚠️ 颜色 ${index + 1} "${colorName}" 使用默认颜色:`, {
        name: colorName,
        hex: colorHex,
        source: debugInfo || 'unknown',
        variantId: variantId,
        hasImage: !!variantImage,
        isEmpty: true
      });
    }
  });
  
  // 显示调试总结
  console.log('📊 颜色来源统计:');
  console.log(`   - 元字段颜色: ${metafieldColorCount} 个`);
  console.log(`   - 预设颜色: ${presetColorCount} 个`);
  console.log(`   - 默认颜色: ${emptyColorCount} 个`);
  
  if (emptyColorCount > 0) {
    console.warn(`⚠️ 发现 ${emptyColorCount} 个颜色使用默认值`);
    console.log('💡 建议检查以下元字段路径是否正确设置:');
    console.log('   优先级顺序:');
    console.log('   1. variant.metafields.custom.color.value');
    console.log('   2. variant.metafields.custom.color');
    console.log('   3. variant.metafields.color.value');
    console.log('   4. variant.metafields.color');
    console.log('   5. variant.metafields.global.color.value');
    console.log('   6. variant.metafields.global.color');
    console.log('   7. variant.metafields.custom.hex_color.value');
    console.log('   8. variant.metafields.custom.color_code.value');
    console.log('   9. variant.metafields.custom.color_hex.value');
    console.log('');
    console.log('🔧 或者在 Shopify 后台为每个变体设置颜色元字段');
  }
  
  if (presetColorCount > 0) {
    console.log('ℹ️ 部分颜色使用了基于名称的预设值，建议在后台设置准确的颜色值');
  }
  
  colorOptions.forEach((option, index) => {
    option.addEventListener('click', function() {
      // 移除所有选中状态
      colorOptions.forEach(opt => {
        opt.classList.remove('upholstery-color-selected');
        const checkmark = opt.querySelector('.upholstery-color-checkmark');
        if (checkmark) {
          checkmark.remove();
        }
      });
      
      // 添加选中状态到当前选项
      this.classList.add('upholstery-color-selected');
      
      // 添加选中标记
      const checkmark = document.createElement('div');
      checkmark.className = 'upholstery-color-checkmark';
      checkmark.innerHTML = `
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z" fill="white"/>
        </svg>
      `;
      this.appendChild(checkmark);
      
      // 切换主图片
      const variantImage = this.getAttribute('data-variant-image');
      if (variantImage && variantImage !== '') {
        mainImage.src = variantImage;
        console.log('🖼️ 切换图片到:', variantImage);
      } else {
        console.log('⚠️ 该颜色没有对应的图片');
      }
      
      // 触发自定义事件，可用于其他功能
      const colorName = this.getAttribute('data-color');
      const variantId = this.getAttribute('data-variant-id');
      const colorHex = this.getAttribute('data-color-hex');
      
      const event = new CustomEvent('colorSelected', {
        detail: {
          colorName: colorName,
          colorHex: colorHex,
          variantId: variantId,
          variantImage: variantImage
        }
      });
      
      document.dispatchEvent(event);
      
      // 详细的调试信息
      const debugInfo = this.getAttribute('data-debug-info');
      console.log('🎨 选择了颜色:', {
        name: colorName,
        hex: colorHex,
        source: debugInfo,
        variantId: variantId,
        image: variantImage,
        hasValidColor: colorHex && colorHex !== '#{}' && colorHex !== '#' && colorHex !== '#CCCCCC',
        isPreset: debugInfo && debugInfo.startsWith('preset-'),
        isMetafield: debugInfo && !debugInfo.startsWith('preset-') && debugInfo !== 'default-fallback'
      });
    });
  });
  
  // 监听颜色选择事件，可以用于与其他组件通信
  document.addEventListener('colorSelected', function(event) {
    console.log('颜色选择事件触发:', event.detail);
    
    // 这里可以添加其他逻辑，比如更新购物车、价格等
    // 例如：更新产品变体选择
    if (event.detail.variantId) {
      // 可以触发产品表单的变体选择
      const productForm = document.querySelector('form[action*="/cart/add"]');
      if (productForm) {
        const variantInput = productForm.querySelector('select[name="id"], input[name="id"]');
        if (variantInput) {
          variantInput.value = event.detail.variantId;
          
          // 触发变化事件
          const changeEvent = new Event('change', { bubbles: true });
          variantInput.dispatchEvent(changeEvent);
        }
      }
    }
  });
});
</script>

<style>
