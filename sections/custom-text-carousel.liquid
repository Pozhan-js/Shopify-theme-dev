<div class="page-width">
  <div class="text-carousel" style="--font-size: {{ section.settings.font_size }}px; --text-color: {{ section.settings.text_color | default: '#ffffff' }};">
    <div class="carousel-container" style="animation-duration: {{ section.settings.speed }}s">
      {% for block in section.blocks %}
        <div class="carousel-item" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
      {% endfor %}
      <!-- 复制项目实现无缝循环 -->
      {% for block in section.blocks %}
        <div class="carousel-item" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .text-carousel {
    height: calc(var(--font-size) * 2);
    overflow: hidden;
    position: relative;
    color: var(--color);
  }
  .text-carousel:hover .carousel-container {
    animation-play-state: paused;
  }
  .carousel-container {
    display: flex;
    flex-direction: column;
    animation: scroll linear infinite;
    animation-play-state: running;
  }
  .carousel-item {
    font-size: var(--font-size);
    color: var(--text-color);
    line-height: 1.5;
    padding: 5px 0;
    white-space: nowrap;
  }
  @keyframes scroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const carousels = document.querySelectorAll('.text-carousel');
  
  carousels.forEach(carousel => {
    carousel.addEventListener('mouseenter', () => {
      carousel.querySelector('.carousel-container').style.animationPlayState = 'paused';
    });
    
    carousel.addEventListener('mouseleave', () => {
      carousel.querySelector('.carousel-container').style.animationPlayState = 'running';
    });
  });
});
</script>

