<div class="text-carousel" style="--font-size: {{ section.settings.font_size }}px;">
  <div class="carousel-container" style="animation-duration: {{ section.settings.speed }}s">
    {% for block in section.blocks %}
      <div class="carousel-item" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
    {% endfor %}
    <!-- 复制项目实现无缝循环 -->
    {% for block in section.blocks %}
      <div class="carousel-item" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
    {% endfor %}
  </div>
</div>

<style>
  .text-carousel {
    height: calc(var(--font-size) * 2.5);
    overflow: hidden;
    position: relative;
  }
  .carousel-container {
    display: flex;
    flex-direction: column;
    animation: scroll linear infinite;
  }
  .carousel-item {
    font-size: var(--font-size);
    line-height: 1.5;
    padding: 5px 0;
    white-space: nowrap;
  }
  @keyframes scroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }
</style>

{% schema %}
{
  "name": "文本轮播",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "字体大小",
      "default": 16
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "秒",
      "label": "轮播速度",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "轮播文本",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "文本内容",
          "default": "轮播文本内容"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "文本轮播",
      "category": "text",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text": "第一条轮播内容"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "第二条轮播内容"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "第三条轮播内容"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "第四条轮播内容"
          }
        }
      ],
      "settings": {
        "font_size": 16,
        "speed": 10
      }
    }
  ]
}
{% endschema %}
