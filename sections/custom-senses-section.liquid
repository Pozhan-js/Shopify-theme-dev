{
  "name": "Senses Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "区块标题",
      "default": "Senses Preview"
    },
    {
      "type": "product",
      "id": "featured_product",
      "label": "Featured herbal pouch"
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "商品按钮文本",
      "default": "Shop Senses",
      "info": "设置主要商品的购买按钮文本"
    },
    {
      "type": "product",
      "id": "featured_product_1",
      "label": "Featured Product 1"
    },
    {
      "type": "product",
      "id": "featured_product_2",
      "label": "Featured Product 2"
    },
    {
      "type": "product",
      "id": "featured_product_3",
      "label": "Featured Product 3"
    },
    {
      "type": "product",
      "id": "featured_product_4",
      "label": "Featured Product 4"
    },
    {
      "type": "text",
      "id": "shop_all_text",
      "label": "Shop All Button Text",
      "default": "Shop All Senses"
    },
    {
      "type": "url",
      "id": "shop_all_link",
      "label": "Shop All Button Link"
    }
  ],
  "presets": [
    {
      "name": "Senses Section"
    }
  ]
}
{% endschema %}
