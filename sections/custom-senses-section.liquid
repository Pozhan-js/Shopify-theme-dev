{%- liquid
  assign heading = section.settings.heading
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
  assign featured_product = section.settings.featured_product
  assign shop_button_text = section.settings.shop_button_text
-%}
<div class="senses-section">
  <h3 class="section-heading">{{ heading }}</h3>
  <div class="featured-product-container">
    {% if section.settings.featured_product != blank %}
      {% assign product = all_products[section.settings.featured_product] %}
      <div class="featured-product">
        <div class="featured-product-image">
          {{ product.featured_image | image_url: width: 600 | image_tag }}
        </div>
        <div class="featured-product-info">
          <div class="product-details">
            <h3 class="product-name">{{ product.title }}</h3>
            {% if product.handle != blank %}
              <p class="product-series">{{ product.handle }}</p>
            {% endif %}
            <div class="product-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>
          </div>
          <div class="button-container">
            <a href="{{ product.url }}" class="button">
              {{ shop_button_text | default: 'Shop Senses' }}
            </a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <div class="product-grid-container">
    <div class="product-grid">
      {% for i in (1..4) %}
        {% assign product_setting = 'featured_product_' | append: i %}
        {% if section.settings[product_setting] != blank %}
          {% assign product = all_products[section.settings[product_setting]] %}
          <a href="{{ product.url }}" class="product-grid-item">
            <div class="product-grid-image">
              {{ product.featured_image | image_url: width: 300 | image_tag }}
            </div>
            <h4 class="product-grid-name">{{ product.title }}</h4>
            {% if product.handle != blank %}
              <p class="product-grid-series">{{ product.handle }}</p>
            {% endif %}
            <div class="product-grid-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.shop_all_text != blank and section.settings.shop_all_link != blank %}
      <div class="shop-all-button-container">
        <a href="{{ section.settings.shop_all_link }}" class="button">
          {{ section.settings.shop_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .featured-product-container {
    margin-bottom: 50px;
    margin-top: 30px;
  }

  .featured-product {
    display: flex;
    gap: 60px;
    align-items: center;
    max-height: 400px;
    overflow: hidden;
  }

  .featured-product-image {
    flex: 1;
    max-height: 400px;
    display: flex;
    align-items: center;
  }

  .featured-product-image img {
    width: 100%;
    height: 100%;
    max-height: 400px;
    object-fit: contain;
    border-radius: 8px;
  }

  .featured-product-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    min-height: 300px;
    text-align: center;
  }

  .product-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .product-name {
    width: 100%;
    font-size: 2rem;
    margin-bottom: 10px;
    text-align: center;
  }

  .product-series {
    width: 100%;
    color: #666;
    font-size: 1.2rem;
    margin: 10px 0;
    text-align: center;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 15px 0;
    padding: 10px 15px;
    color: #666;
    display: inline-block;
    border-radius: 4px;
    text-align: center;
  }

  .compare-price {
    text-decoration: line-through;
    color: #ccc;
    font-size: 1rem;
    margin-left: 10px;
  }

  .button-container {
    display: flex !important;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .senses-section .button {
    background-color: #f8f8f8;
    color: #333;
    padding: 12px 24px;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block !important;
  }

  .button:hover {
    background-color: #e0e0e0;
    color: #000;
  }

  .product-grid-container {
    margin-top: 40px;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .product-grid-item {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .product-grid-item:hover {
    transform: translateY(-5px);
  }

  .product-grid-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .product-grid-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-grid-name {
    font-size: 1.1rem;
    margin: 5px 0;
  }

  .product-grid-series {
    color: #666;
    font-size: 0.9rem;
    margin: 5px 0;
  }

  .product-grid-price {
    font-size: 1.1rem;
    font-weight: bold;
    margin: 5px 0;
  }

  .shop-all-button-container {
    display: flex;
    justify-content: center;
    margin-top: 30px;
  }

  @media (max-width: 768px) {
    .featured-product {
      flex-direction: column;
      gap: 30px;
      max-height: none;
    }

    .featured-product-image {
      max-height: 300px;
    }

    .featured-product-info {
      min-height: auto;
      text-align: center;
    }

    .product-name {
      font-size: 1.5rem;
    }

    .product-series {
      font-size: 1rem;
    }

    .product-price {
      font-size: 1.2rem;
    }

    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .product-grid-image {
      height: 150px;
    }

    .senses-section .button {
      padding: 10px 20px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .featured-product-image {
      max-height: 250px;
    }

    .product-grid {
      grid-template-columns: 1fr;
    }

    .product-name {
      font-size: 1.3rem;
    }
  }
</style>

