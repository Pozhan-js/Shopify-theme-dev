{% comment %}
  Auto Category Section
  This section automatically displays all product collections in circular format
  Categories are dynamically fetched from all available collections
{% endcomment %}

<div class="auto-category-section">
  <div class="page-width">
    {% if section.settings.show_section_title %}
      <div class="section-header text-center">
        <h2 class="section-title">{{ section.settings.section_title | escape }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle | escape }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="category-grid">
      {% assign collections_to_show = '' | split: '' %}
      
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' or collection.handle == 'all' %}
          {% if collection.all_products_count > 0 %}
            {% assign collections_to_show = collections_to_show | push: collection %}
          {% endif %}
        {% endunless %}
      {% endfor %}
      
      {% comment %} Limit to specified number of collections {% endcomment %}
      {% assign max_collections = section.settings.max_collections | times: 1 %}
      {% if max_collections > 0 %}
        {% assign collections_to_show = collections_to_show | slice: 0, max_collections %}
      {% endif %}
      
      {% for collection in collections_to_show %}
        <div class="category-item">
          <a href="{{ collection.url }}" class="category-link">
            <div class="category-circle">
              {% if collection.image != blank %}
                <img src="{{ collection.image | image_url: width: 200, height: 200, crop: center }}" 
                     alt="{{ collection.title | escape }}" 
                     class="category-image"
                     loading="lazy">
              {% else %}
                <div class="category-placeholder">
                  <span>{{ collection.title | first | upcase }}</span>
                </div>
              {% endif %}
            </div>
            <h3 class="category-title">{{ collection.title | escape }}</h3>
            {% if section.settings.show_product_count %}
              <p class="category-count">{{ collection.all_products_count }} products</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_link != blank %}
      <div class="view-all-wrapper text-center">
        <a href="{{ section.settings.view_all_link }}" class="button button--primary">
          {{ section.settings.view_all_text | default: 'View All Categories' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.auto-category-section {
  padding: 60px 0;
  background-color: {{ section.settings.background_color }};
}

.section-header {
  margin-bottom: 48px;
}

.section-title {
  font-size: {{ section.settings.title_font_size }}px;
  font-weight: 700;
  color: {{ section.settings.title_color }};
  margin-bottom: 12px;
}

.section-subtitle {
  font-size: 18px;
  color: {{ section.settings.subtitle_color }};
  max-width: 600px;
  margin: 0 auto;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 40px 30px;
  justify-items: center;
}

.category-item {
  text-align: center;
  transition: transform 0.3s ease;
}

.category-item:hover {
  transform: translateY(-5px);
}

.category-link {
  text-decoration: none;
  color: inherit;
}

.category-circle {
  width: 170px;
  height: 170px;
  border-radius: 50%;
  border: 2px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  overflow: hidden;
  background-color: #fff;
  transition: border-color 0.3s ease;
}

.category-item:hover .category-circle {
  border-color: {{ section.settings.hover_border_color }};
}

.category-image {
  width: 90px;
  height: 90px;
  object-fit: cover;
  border-radius: 50%;
}

.category-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #666;
  font-size: 48px;
  font-weight: bold;
}

.category-title {
  font-size: 18px;
  font-weight: 600;
  color: {{ section.settings.text_color }};
  margin-bottom: 8px;
}

.category-count {
  font-size: 14px;
  color: {{ section.settings.count_color }};
  margin: 0;
}

.view-all-wrapper {
  margin-top: 48px;
}

@media screen and (max-width: 768px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px 20px;
  }
  
  .category-circle {
    width: 140px;
    height: 140px;
  }
  
  .category-image {
    width: 70px;
    height: 70px;
  }
}

@media screen and (max-width: 480px) {
  .category-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Auto Category Section",
  "tag": "section",
  "class": "auto-category-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section_title",
      "label": "Show section title",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section subtitle",
      "default": "Discover our curated collections"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title font size",
      "min": 24,
      "max": 48,
      "step": 2,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "count_color",
      "label": "Product count color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "hover_border_color",
      "label": "Hover border color",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "range",
      "id": "max_collections",
      "label": "Maximum collections to show",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 8,
      "info": "Set to 0 to show all collections"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": false
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All Categories"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    }
  ],
  "presets": [
    {
      "name": "Auto Category Section"
    }
  ]
}
{% endschema %}
