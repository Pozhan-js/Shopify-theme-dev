{% comment %}
  Auto Category Section - 圆形分类模块，名字在圆形内
  样式：圆形边框，名字在内部，hover时仅边框颜色变为#DE9B57
{% endcomment %}

<div class="auto-category-section">
  <div class="page-width">
    {% if section.settings.show_section_title %}
      <div class="section-header text-center">
      </div>
    {% endif %}

    <div class="category-grid">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' or collection.handle == 'all' %}
          {% if collection.all_products_count > 0 %}
            <div class="category-item">
              <a href="{{ collection.url }}" class="category-link">
                <div class="category-circle">
                  {% if collection.image != blank %}
                    <img src="{{ collection.image | image_url: width: 150, height: 150, crop: center }}" 
                         alt="{{ collection.title | escape }}" 
                         class="category-image"
                         loading="lazy">
                  {% else %}
                    <div class="category-placeholder">
                      <span>{{ collection.title | first | upcase }}</span>
                    </div>
                  {% endif %}
                  <h3 class="category-title">{{ collection.title | escape }}</h3>
                </div>
              </a>
            </div>
          {% endif %}
        {% endunless %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_link != blank %}
      <div class="view-all-wrapper text-center">
        <a href="{{ section.settings.view_all_link }}" class="button button--primary">
          {{ section.settings.view_all_text | default: '查看所有分类' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.auto-category-section {
  padding: 60px 0;
  background-color: {{ section.settings.background_color }};
}

.section-header {
  margin-bottom: 48px;
}

.section-title {
  font-size: {{ section.settings.title_font_size }}px;
  font-weight: 700;
  color: {{ section.settings.title_color }};
  margin-bottom: 12px;
}

.section-subtitle {
  font-size: 18px;
  color: {{ section.settings.subtitle_color }};
  max-width: 600px;
  margin: 0 auto;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 40px 30px;
  justify-items: center;
}

.category-item {
  text-align: center;
  transition: transform 0.3s ease;
}

.category-item:hover {
  transform: translateY(-5px);
}

.category-link {
  text-decoration: none;
  color: inherit;
}

.category-circle {
  width: 170px;
  height: 170px;
  border-radius: 50%;
  border: 2px solid #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background-color: #fff;
  transition: border-color 0.3s ease;
}

.category-item:hover .category-circle {
  border-color: #DE9B57;
}

.category-image {
  width: 70px;
  height: 70px;
  object-fit: cover;
  border-radius: 50%;
  margin-bottom: 8px;
}

.category-placeholder {
  width: 70px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #666;
  font-size: 32px;
  font-weight: bold;
  border-radius: 50%;
  margin-bottom: 8px;
}

.category-title {
  font-size: 16px;
  font-weight: 600;
  color: {{ section.settings.text_color }};
  text-align: center;
  max-width: 140px;
  line-height: 1.2;
  margin: 0;
  padding: 0 10px;
}

@media screen and (max-width: 768px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px 20px;
  }
  
  .category-circle {
    width: 140px;
    height: 140px;
  }
  
  .category-image {
    width: 60px;
    height: 60px;
  }
  
  .category-placeholder {
    width: 60px;
    height: 60px;
    font-size: 24px;
  }
  
  .category-title {
    font-size: 14px;
    max-width: 120px;
  }
}

@media screen and (max-width: 480px) {
  .category-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Auto Category Section",
  "tag": "section",
  "class": "auto-category-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section_title",
      "label": "显示标题",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "标题颜色",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "标题大小",
      "min": 24,
      "max": 48,
      "step": 2,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "副标题颜色",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "hover_border_color",
      "label": "悬停边框颜色",
      "default": "#DE9B57"
    }
  ],
  "presets": [
    {
      "name": "Auto Category Section"
    }
  ]
}
{% endschema %}
