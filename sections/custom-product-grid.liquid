      "id": "button_text",
      "label": "按钮文案",
      "default": "ADD TO CART"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "每行显示数量",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "分类产品网格",
      "category": "产品展示"
    }
  ]
}
{% endschema %}
