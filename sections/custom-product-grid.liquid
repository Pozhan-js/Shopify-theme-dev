{%- assign category_param = request.query_parameters.category | default: request.path | split: '/' | last -%}
{%- assign current_collection = collections[category_param] | default: collections['all'] -%}
<script>
console.log('DEBUG: category_param = {{ category_param }}', 
            'current_collection = {{ current_collection.handle }}', 
            'products count = {{ current_collection.products.size }}');
</script>

<div class="product-grid page-width">
  <div class="grid grid--custom-col">
    {% for product in current_collection.products %}
      <div class="grid__item">
        <a href="{{ product.url }}" class="product-card">
          <div class="product-card__image" data-product='{{ product | json }}'>
            {% if product.featured_image != blank %}
              {{ product.featured_image | image_url: width: 500 | image_tag: loading: 'lazy' }}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          <div class="product-card__content">
            <h3 class="product-card__title">{{ product.title }}</h3>
            <p class="product-card__description">{{ product.description | strip_html }}</p>
            <div class="product-card__footer">
              <button class="button product-card__button" 
                      data-product-id="{{ product.variants.first.id }}">
                <span>{{ section.settings.button_text }}</span>
                <span class="button-price">{{ product.price | money }}</span>
              </button>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .product-grid {
    padding: 40px 0;
  }
  
  .grid {
    display: grid;
    grid-auto-flow: row;
    gap: 30px;
    width: 100%;
  }
  
  .grid--custom-col {
    grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
  }
  
  .product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
  }
  
  .product-card__image {
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
  }
  
  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-card__content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .product-card__title {
    font-size: 1.2rem;
    margin-bottom: 15px;
  }
  
  .product-card__description {
    color: #666;
    margin-bottom: 15px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .product-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }
  
  .product-card__price {
    font-weight: bold;
    font-size: 1.1rem;
  }
  
  .product-card__button {
    width: 100%;
    margin-top: 10px;
    background: transparent;
    color: #000;
    border: 1px solid #000;
    padding: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .button-price {
    background: rgba(0,0,0,0.1);
    padding: 2px 8px;
    border-radius: 4px;
  }
  
  .product-card__button:hover {
    background: rgba(0,0,0,0.05);
  }
  
  @media (max-width: 749px) {
    .grid--custom-col {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
// 图片hover切换效果
function setupImageHover() {
  document.querySelectorAll('.product-card').forEach(card => {
    try {
      const product = JSON.parse(card.dataset.product);
      if (product && product.images && product.images.length > 1 && product.images[1].src) {
        const imgContainer = card.querySelector('.product-card__image');
        const primaryImg = imgContainer.querySelector('img');
        const secondaryImg = primaryImg.cloneNode();
        secondaryImg.src = product.images[1].src.replace('_small', '') + '&width=500';
        secondaryImg.style.display = 'none';
        secondaryImg.loading = 'lazy';
        imgContainer.appendChild(secondaryImg);

        card.addEventListener('mouseenter', () => {
          primaryImg.style.display = 'none';
          secondaryImg.style.display = 'block';
        });
        card.addEventListener('mouseleave', () => {
          primaryImg.style.display = 'block';
          secondaryImg.style.display = 'none';
        });
      }
    } catch (e) {
      console.error('Error setting up image hover:', e);
    }
  });
}

// 确保购物车功能在Turbo加载后也能工作
function setupCartButtons() {
  document.querySelectorAll('.product-card__button').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const productId = this.dataset.productId;
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
          items: [{
            id: productId,
            quantity: 1
          }]
        })
      })
      .then(response => response.json())
      .then(data => {
        // 可以在这里添加购物车更新通知
        console.log('产品已加入购物车', data);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    });
  });
}

// 初始化功能
function initProductGrid() {
  setupCartButtons();
  setupImageHover();
}

document.addEventListener('DOMContentLoaded', initProductGrid);
document.addEventListener('turbo:load', initProductGrid);
</script>

