<div class="product-grid page-width">
  <div class="grid grid--custom-col" id="product-grid-container">
    <!-- 产品将由JavaScript动态加载 -->
    <div class="loading-indicator">加载中...</div>
  </div>

  <!-- 产品卡片模板 (隐藏) -->
  <template id="product-card-template">
    <div class="grid__item">
      <a href="" class="product-card">
        <div class="product-card__image">
          <img src="" loading="lazy" class="product-image" width="500" height="500"/>
        </div>
        <div class="product-card__content">
          <h3 class="product-card__title"></h3>
          <p class="product-card__description"></p>
          <div class="product-card__footer">
            <button class="button product-card__button">
              <span class="button-text"></span>
              <span class="button-price"></span>
            </button>
          </div>
        </div>
      </a>
    </div>
  </template>
</div>

<style>
  .product-grid {
    padding: 40px 0;
  }
  
  .grid {
    display: grid;
    grid-auto-flow: row;
    gap: 30px;
    width: 100%;
  }
  
  .grid--custom-col {
    grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
  }
  
  .product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
  }
  
  .product-card__image {
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
  }
  
  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-card__content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .product-card__title {
    font-size: 1.2rem;
    margin-bottom: 15px;
  }
  
  .product-card__description {
    color: #666;
    margin-bottom: 15px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .product-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }
  
  .product-card__price {
    font-weight: bold;
    font-size: 1.1rem;
  }
  
  .product-card__button {
    width: 100%;
    margin-top: 10px;
    background: transparent;
    color: #000;
    border: 1px solid #000;
    padding: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .button-price {
    background: rgba(0,0,0,0.1);
    padding: 2px 8px;
    border-radius: 4px;
  }
  
  .product-card__button:hover {
    background: rgba(0,0,0,0.05);
  }
  
  @media (max-width: 749px) {
    .grid--custom-col {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
// 图片hover切换效果
function setupImageHover() {
  document.querySelectorAll('.product-card').forEach(card => {
    try {
      const product = JSON.parse(card.dataset.product);
      if (product && product.images && product.images.length > 1 && product.images[1].src) {
        const imgContainer = card.querySelector('.product-card__image');
        const primaryImg = imgContainer.querySelector('img');
        const secondaryImg = primaryImg.cloneNode();
        secondaryImg.src = product.images[1].src.replace('_small', '') + '&width=500';
        secondaryImg.style.display = 'none';
        secondaryImg.loading = 'lazy';
        imgContainer.appendChild(secondaryImg);

        card.addEventListener('mouseenter', () => {
          primaryImg.style.display = 'none';
          secondaryImg.style.display = 'block';
        });
        card.addEventListener('mouseleave', () => {
          primaryImg.style.display = 'block';
          secondaryImg.style.display = 'none';
        });
      }
    } catch (e) {
      console.error('Error setting up image hover:', e);
    }
  });
}

// 确保购物车功能在Turbo加载后也能工作
function setupCartButtons() {
  document.querySelectorAll('.product-card__button').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const productId = this.dataset.productId;
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
          items: [{
            id: productId,
            quantity: 1
          }]
        })
      })
      .then(response => response.json())
      .then(data => {
        // 可以在这里添加购物车更新通知
        console.log('产品已加入购物车', data);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    });
  });
}

// 获取URL查询参数
function getQueryParams() {
  const params = new URLSearchParams(window.location.search);
  return Object.fromEntries(params.entries());
}

// 加载产品数据
async function loadProducts() {
  const params = getQueryParams();
  const category = params.category || params.Category;
  const container = document.getElementById('product-grid-container');
  
  try {
    // 显示加载状态
    container.innerHTML = '<div class="loading-indicator">加载中...</div>';
    
    // 获取产品数据
    const response = await fetch(`/collections/${category || 'all'}/products.json`);
    const data = await response.json();
    
    // 清空容器
    container.innerHTML = '';
    
    // 使用模板创建产品卡片
    const template = document.getElementById('product-card-template');
    
    data.products.forEach(product => {
      const clone = template.content.cloneNode(true);
      const card = clone.querySelector('.product-card');
      
      // 填充产品数据
      card.href = `/products/${product.handle}`;
      const img = clone.querySelector('.product-image');
      img.src = product.images[0]?.src || '';
      img.alt = product.title;
      clone.querySelector('.product-card__title').textContent = product.title;
      clone.querySelector('.product-card__description').textContent = product.description;
      clone.querySelector('.button-text').textContent = 'ADD TO CART';
      clone.querySelector('.button-price').textContent = new Intl.NumberFormat('zh-CN', {
        style: 'currency',
        currency: 'CNY'
      }).format(product.price / 100);
      card.dataset.product = JSON.stringify(product);
      card.querySelector('.product-card__button').dataset.productId = product.variants[0]?.id;
      
      container.appendChild(clone);
    });
    
    // 初始化交互功能
    setupCartButtons();
    setupImageHover();
    
  } catch (error) {
    console.error('加载产品失败:', error);
    container.innerHTML = '<div class="error-message">加载产品失败，请刷新重试</div>';
  }
}

// 初始化功能
function initProductGrid() {
  loadProducts();
}

document.addEventListener('DOMContentLoaded', initProductGrid);
document.addEventListener('turbo:load', initProductGrid);
</script>

{% schema %}
{
  "name": "分类产品网格",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文案",
      "default": "ADD TO CART"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "每行显示数量",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "分类产品网格",
      "category": "产品展示"
    }
  ]
}
{% endschema %}
