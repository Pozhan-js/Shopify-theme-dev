      "id": "title",
      "label": "区块标题",
      "default": "最新博客文章"
    }
  ],
  "blocks": [
    {
      "type": "blog_item",
      "name": "博客项",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题",
          "default": "博客标题"
        },
        {
          "type": "text",
          "id": "date",
          "label": "日期",
          "default": "2023-01-01"
        },
        {
          "type": "text",
          "id": "time",
          "label": "时间",
          "default": "10:00"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "博客网格列表",
      "category": "内容",
      "blocks": [
        {
          "type": "blog_item"
        },
        {
          "type": "blog_item"
        },
        {
          "type": "blog_item"
        },
        {
          "type": "blog_item"
        }
      ]
    }
  ]
}
{% endschema %}
