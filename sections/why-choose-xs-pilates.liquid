<div class="why-choose-section">
  <div class="why-choose-container">
    <div class="why-choose-header">
      <h2 class="why-choose-title">
        {{ section.settings.title | default: "Why Choose XS Pilates?" }}
      </h2>
      <p class="why-choose-subtitle">
        {{ section.settings.subtitle | default: "Trusted by studios worldwide for quality, reliability, and innovation." }}
      </p>
    </div>
    
    <div class="why-choose-grid">
      <!-- 10-YEAR Warranty -->
      <div class="why-choose-item why-choose-item-1">
        <div class="why-choose-number">
          {{ section.settings.warranty_number | default: "10-YEAR" }}
        </div>
        <div class="why-choose-label">
          {{ section.settings.warranty_label | default: "Main Frame Warranty" }}
        </div>
      </div>
      
      <!-- CE, ISO, RoHS -->
      <div class="why-choose-item why-choose-item-2">
        <div class="why-choose-number">
          {{ section.settings.certification_number | default: "CE, ISO, RoHS" }}
        </div>
        <div class="why-choose-label">
          {{ section.settings.certification_label | default: "Compliant Manufacturing" }}
        </div>
      </div>
      
      <!-- 50 MOQ -->
      <div class="why-choose-item why-choose-item-3">
        <div class="why-choose-number">
          {{ section.settings.moq_number | default: "50 MOQ" }}
        </div>
        <div class="why-choose-label">
          {{ section.settings.moq_label | default: "Flexible Trial Production" }}
        </div>
      </div>
      
      <!-- 30-DAY -->
      <div class="why-choose-item why-choose-item-4">
        <div class="why-choose-number">
          {{ section.settings.sample_number | default: "30-DAY" }}
        </div>
        <div class="why-choose-label">
          {{ section.settings.sample_label | default: "Sample Turnaround" }}
        </div>
      </div>
    </div>
  </div>
</div>

