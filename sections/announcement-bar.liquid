{% comment %}
  Announcement Bar Section
  支持后台编辑的公告栏模块
{% endcomment %}

<style>
  .announcement-bar {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 12px 0;
    text-align: center;
    position: relative;
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    line-height: 1.2;
    padding: 26px 0px;
  }

  .announcement-bar__container {
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
  }

  .announcement-bar__content {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .announcement-bar__text {
    margin: 0;
    font-family: inherit;
  }

  .announcement-bar__link {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .announcement-bar__link:hover {
    opacity: 0.8;
  }

  .announcement-bar__social {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-left: auto;
    position: absolute;
    right: 30px;
  }

  .announcement-bar__social-link {
    color: {{ section.settings.text_color }};
    font-size: 18px;
    transition: opacity 0.3s ease;
    text-decoration: none;
  }

  .announcement-bar__social-link:hover {
    opacity: 0.7;
  }

  .announcement-bar__close {
    background: none;
    border: none;
    color: {{ section.settings.text_color }};
    font-size: 20px;
    cursor: pointer;
    padding: 0;
    margin-left: 15px;
    transition: opacity 0.3s ease;
  }

  .announcement-bar__close:hover {
    opacity: 0.7;
  }

  .announcement-bar--hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .announcement-bar__container {
      padding: 0 15px;
    }

    .announcement-bar__social {
      display: none;
    }

    .announcement-bar {
      font-size: {{ section.settings.mobile_font_size }}px;
    }
  }
</style>

{% if section.settings.show_announcement %}
  <div class="announcement-bar" id="announcement-bar-{{ section.id }}">
    <div class="announcement-bar__container">
      {% comment %} 公告内容 - 绝对居中 {% endcomment %}
      <div class="announcement-bar__content">
        {% if section.settings.announcement_link != blank %}
          <a href="{{ section.settings.announcement_link }}" class="announcement-bar__link">
            <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
          </a>
        {% else %}
          <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
        {% endif %}
      </div>

      {% comment %} 社交媒体图标 - 右侧对齐 {% endcomment %}
      {% if section.settings.show_social_right %}
        <div class="announcement-bar__social">
          {% if section.settings.facebook_url != blank %}
            <a
              href="{{ section.settings.facebook_url }}"
              class="announcement-bar__social-link"
              target="_blank"
              rel="noopener"
              aria-label="Facebook"
            >
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
