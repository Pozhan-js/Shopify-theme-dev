{% comment %}
  Category Grid Section - 圆形分类模块，名字在圆形内
  样式：圆形边框，名字在内部，hover时仅边框颜色变为#DE9B57
  无标题和副标题
{% endcomment %}

<div class="category-grid-section">
  <div class="page-width">
    <div class="category-grid">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' or collection.handle == 'all' %}
          {% if collection.all_products_count > 0 %}
            <div class="category-item">
              <a href="{{ collection.url }}" class="category-link">
                <div class="category-circle">
                  {% if collection.image != blank %}
                    <img src="{{ collection.image | image_url: width: 150, height: 150, crop: center }}" 
                         alt="{{ collection.title | escape }}" 
                         class="category-image"
                         loading="lazy">
                  {% else %}
                    <div class="category-placeholder">
                      <span>{{ collection.title | first | upcase }}</span>
                    </div>
                  {% endif %}
                  <h3 class="category-title">{{ collection.title | escape }}</h3>
                </div>
              </a>
            </div>
          {% endif %}
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
.category-grid-section {
  padding: 60px 0;
  background-color: {{ section.settings.background_color }};
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 40px 30px;
  justify-items: center;
}

.category-item {
  text-align: center;
  transition: transform 0.3s ease;
}

.category-item:hover {
  transform: translateY(-5px);
}

.category-link {
  text-decoration: none;
  color: inherit;
}

.category-circle {
  width: 170px;
  height: 170px;
  border-radius: 50%;
  border: 2px solid #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background-color: #fff;
  transition: border-color 0.3s ease;
}

.category-item:hover .category-circle {
  border-color: #DE9B57;
}

.category-image {
  width: 70px;
  height: 70px;
  object-fit: cover;
  border-radius: 50%;
  margin-bottom: 8px;
}

.category-placeholder {
  width: 70px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #666;
  font-size: 32px;
  font-weight: bold;
  border-radius: 50%;
  margin-bottom: 8px;
}

.category-title {
  font-size: 16px;
  font-weight: 600;
  color: {{ section.settings.text_color }};
  text-align: center;
  max-width: 140px;
  line-height: 1.2;
  margin: 0;
  padding: 0 10px;
}

@media screen and (max-width: 768px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px 20px;
  }
  
  .category-circle {
    width: 140px;
    height: 140px;
  }
  
  .category-image {
    width: 60px;
    height: 60px;
  }
  
  .category-placeholder {
    width: 60px;
    height: 60px;
    font-size: 24px;
  }
  
  .category-title {
    font-size: 14px;
    max-width: 120px;
  }
}

@media screen and (max-width: 480px) {
  .category-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Category Grid",
  "tag": "section",
  "class": "category-grid-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Category Grid"
    }
  ]
}
{% endschema %}
