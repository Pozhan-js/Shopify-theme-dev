{% schema %}
{
  "name": "风水咨询服务区块",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "Your space resonates with energy"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "描述内容",
      "default": "<p>In the silent interplay between the bed and the beam, the desk and the doorway, lies a profound understanding of well-being unveiled through modern scientific inquiry.</p>"
    },
    {
      "type": "header",
      "content": "步骤1设置"
    },
    {
      "type": "image_picker",
      "id": "step1_icon",
      "label": "步骤1图标"
    },
    {
      "type": "text",
      "id": "step1_title",
      "label": "步骤1标题",
      "default": "Take a 3-min Quiz"
    },
    {
      "type": "text",
      "id": "step1_desc",
      "label": "步骤1描述",
      "default": "Identify your key Feng Shui Challenges"
    },
    {
      "type": "header",
      "content": "步骤2设置"
    },
    {
      "type": "image_picker",
      "id": "step2_icon",
      "label": "步骤2图标"
    },
    {
      "type": "text",
      "id": "step2_title",
      "label": "步骤2标题",
      "default": "Get Matched Solutions"
    },
    {
      "type": "text",
      "id": "step2_desc",
      "label": "步骤2描述",
      "default": "Discover products tailored to your quiz results"
    },
    {
      "type": "header",
      "content": "步骤3设置"
    },
    {
      "type": "image_picker",
      "id": "step3_icon",
      "label": "步骤3图标"
    },
    {
      "type": "text",
      "id": "step3_title",
      "label": "步骤3标题",
      "default": "Book a 1-on-1 Consultation (Optional)"
    },
    {
      "type": "text",
      "id": "step3_desc",
      "label": "步骤3描述",
      "default": "For a personalized plan, schedule an appointment with our consultant"
    },
    {
      "type": "header",
      "content": "按钮设置"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "Unlock Custom Feng Shui Solution"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    },
    {
      "type": "text",
      "id": "faq_text",
      "label": "FAQ链接文字",
      "default": "Or, Visit Our FAQ to Learn More"
    },
    {
      "type": "url",
      "id": "faq_link",
      "label": "FAQ链接"
    }
  ],
  "presets": [
    {
      "name": "风水咨询服务区块",
      "category": "自定义区块"
    }
  ]
}
{% endschema %}

<div class="fengshui-consult-section">
  <div class="page-width">
    <div class="consult-header">
      <h2 class="consult-title">{{ section.settings.title }}</h2>
      <div class="consult-description">
        {{ section.settings.description }}
      </div>
    </div>

    <div class="consult-steps">
      <div class="consult-step">
        {% if section.settings.step1_icon != blank %}
          <img
            src="{{ section.settings.step1_icon | img_url: '200x' }}"
            alt="{{ section.settings.step1_title }}"
            width="200"
            height="200"
            loading="lazy"
          >
        {% endif %}
        <h3>{{ section.settings.step1_title }}</h3>
        <p>{{ section.settings.step1_desc }}</p>
      </div>

      <div class="consult-step">
        {% if section.settings.step2_icon != blank %}
          <img
            src="{{ section.settings.step2_icon | img_url: '200x' }}"
            alt="{{ section.settings.step2_title }}"
            width="200"
            height="200"
            loading="lazy"
          >
        {% endif %}
        <h3>{{ section.settings.step2_title }}</h3>
        <p>{{ section.settings.step2_desc }}</p>
      </div>

      <div class="consult-step">
        {% if section.settings.step3_icon != blank %}
          <img
            src="{{ section.settings.step3_icon | img_url: '200x' }}"
            alt="{{ section.settings.step3_title }}"
            width="200"
            height="200"
            loading="lazy"
          >
        {% endif %}
        <h3>{{ section.settings.step3_title }}</h3>
        <p>{{ section.settings.step3_desc }}</p>
      </div>
    </div>

    <div class="consult-actions">
      <a href="{{ section.settings.button_link }}" class="button consult-button">
        {{ section.settings.button_text }}
      </a>
      <a href="{{ section.settings.faq_link }}" class="consult-faq">
        {{ section.settings.faq_text }}
      </a>
    </div>
  </div>
</div>

<style>
  .fengshui-consult-section {
    padding: 60px 0;
    background: #000;
  }

  .consult-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 50px;
  }

  .consult-title {
    font-size: 2.2rem;
    color: #fff;
    margin-bottom: 20px;
    margin-top: 0;
  }

  .consult-description {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #fff;
  }

  .consult-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto 50px;
  }

  .consult-step {
    text-align: center;
    padding: 30px;
    background: white;
    border-radius: 8px;
    background: rgba(0,0,0,.5);
    color:#fff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .consult-step:hover {
    transform: translateY(-5px);
  }

  .consult-step img {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    display: block;
  }

  .consult-step h3 {
    font-size: 2rem;
    color: #fff;
    margin-bottom: 15px;
  }

  .consult-step p {
    font-size: 1.5rem;
    color: #eee;
    line-height: 1.6;
    margin: 0;
  }

  .consult-actions {
    text-align: center;
  }

  .consult-button {
    background-color: #000;
    color: white;
    padding: 15px 40px;
    border-radius: 4px;
    font-size: 1.5rem;
    margin-bottom: 20px;
    display: inline-block;
  }

  .consult-button:hover {
    background-color: #fff;
  }

  .consult-faq {
    color: #fff;
    text-decoration: underline;
    display: block;
  }

  @media (max-width: 768px) {
    .consult-title {
      font-size: 1.8rem;
    }

    .consult-steps {
      grid-template-columns: 1fr;
    }
  }
</style>
