<div class="upholstery-color">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        {{ section.settings.title | default: "Upholstery Color" }}
      </h2>
      <p class="section-subtitle">
        {{ section.settings.subtitle | default: "Choose from our premium upholstery options to match your studio's aesthetic." }}
      </p>
    </div>
    
    <div class="upholstery-content">
      <div class="equipment-display">
        {% if section.settings.equipment_image != blank %}
          <img src="{{ section.settings.equipment_image | img_url: '1072x688' }}" alt="Pilates Equipment" class="equipment-image">
        {% else %}
          <div class="equipment-image-placeholder">
            <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1072&q=80" alt="Pilates Equipment" class="equipment-image">
          </div>
        {% endif %}
      </div>
      
      <div class="color-selection">
        <div class="color-grid">
          {% for block in section.blocks %}
            {% if block.type == 'color_option' %}
              <div class="color-option {% if block.settings.is_selected %}selected{% endif %}" 
                   style="background-color: {{ block.settings.color_value | default: '#000000' }};"
                   data-color="{{ block.settings.color_name }}">
                {% if block.settings.is_selected %}
                  <div class="color-checkmark">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z" fill="white"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        {% if section.settings.button_text != blank %}
          <div class="swatch-cta">
            <a href="{{ section.settings.button_url | default: '#' }}" class="btn btn-swatch">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

