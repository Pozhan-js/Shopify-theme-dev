}

.btn {
  display: inline-block;
  padding: 15px 30px;
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-swatch {
  background-color: #C22E35;
  color: white;
  width: 280px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-swatch:hover {
