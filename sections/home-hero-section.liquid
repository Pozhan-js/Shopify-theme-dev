<!-- Home Hero Section - 首页顶部横幅 -->
<div class="home-hero-section">
    <div class="hero-container">
        <div class="hero-content-left">
            <div class="hero-discount">{{ section.settings.discount_text | default: 'Get 80% discount' }}</div>
            <div class="hero-line1">{{ section.settings.line1 | default: 'Fresh' }}</div>
            <div class="hero-line2">{{ section.settings.line2 | default: 'Bakery' }}</div>
            <div class="hero-line3">{{ section.settings.line3 | default: 'Foods' }}</div>
            {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_link }}" class="hero-button">
                    {{ section.settings.button_text }}
                </a>
            {% endif %}
        </div>
        <div class="hero-image-right">
            {% if section.settings.hero_image != blank %}
                <img src="{{ section.settings.hero_image | img_url: 'master' }}" 
                     alt="{{ section.settings.title | default: 'Bakery Banner' }}" 
                     class="hero-image">
            {% else %}
                <img src="{{ '2025-08-24 235452.jpg' | asset_url }}" 
                     alt="Bakery Banner" 
                     class="hero-image">
            {% endif %}
        </div>
    </div>
</div>

<style>
    .home-hero-section {
        padding: 0;
        background-color: #FBF2EA;
        color: #000;
    }

    .hero-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        min-height: 500px;
        padding: 0 20px;
    }

    .hero-content-left {
        flex: 1;
        padding-right: 40px;
        text-align: left;
    }

    .hero-image-right {
        flex: 1;
        padding-left: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-discount {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #D9A15F;
    }

    .hero-line1 {
        font-size: 64px;
        font-weight: 800;
        margin-bottom: 10px;
        line-height: 1.1;
        color: #8B4513;
    }

    .hero-line2 {
        font-size: 64px;
        font-weight: 800;
        margin-bottom: 10px;
        line-height: 1.1;
        color: #8B4513;
    }

    .hero-line3 {
        font-size: 64px;
        font-weight: 800;
        margin-bottom: 30px;
        line-height: 1.1;
        color: #8B4513;
    }

    .hero-button {
        display: inline-block;
        padding: 15px 40px;
        background: white;
        color: #D8A26C;
        text-decoration: none;
        border-radius: 30px;
        font-weight: 600;
        transition: transform 0.3s ease;
    }

    .hero-button:hover {
        transform: translateY(-2px);
    }

    .hero-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: contain;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    @media (max-width: 768px) {
        .hero-container {
            flex-direction: column;
            padding: 40px 20px;
            text-align: center;
        }
        .hero-content-left {
            padding-right: 0;
            margin-bottom: 30px;
        }
        .hero-image-right {
            padding-left: 0;
            width: 100%;
        }
        .hero-line1, .hero-line2, .hero-line3 {
            font-size: 48px;
        }
        .hero-image {
            max-height: 300px;
        }
    }
</style>

{% schema %}
{
  "name": "首页顶部横幅",
  "settings": [
    {
      "type": "text",
      "id": "discount_text",
      "label": "折扣文字",
      "default": "Get 80% discount"
    },
    {
      "type": "text",
      "id": "line1",
      "label": "第一行文字",
      "default": "美味"
    },
    {
      "type": "text",
      "id": "line2",
      "label": "第二行文字",
      "default": "烘焙"
    },
    {
      "type": "text",
      "id": "line3",
      "label": "第三行文字",
      "default": "博客"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "View it now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "右侧横幅图片"
    }
  ],
  "presets": [
    {
      "name": "首页顶部横幅",
      "category": "首页"
    }
  ]
}
{% endschema %}
