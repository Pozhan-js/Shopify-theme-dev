{% comment %}
  Home Hero Section - 英雄轮播区域
  使用 blocks 实现轮播图，兼容所有 Shopify 主题
  支持后台上传图片、修改标题、按钮等
  支持后台编辑轮播图宽高，保持自适应效果
{% endcomment %}

<style>
  /* Hero Banner Styles */
  .hero-section {
    position: relative;
    width: {{ section.settings.container_width }}%;
    max-width: {{ section.settings.max_width }}px;
    margin: 2rem auto;
    height: {{ section.settings.desktop_height }}px;
    min-height: {{ section.settings.min_height }}px;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .hero-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.7s ease;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
  }

  .hero-slide.active {
    opacity: 1;
  }

  /* 确保图片完全展示的样式 */
  .hero-slide-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    object-position: center center;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    color: white;
    padding: 2rem;
    max-width: 600px;
    margin-left: 10%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    border-radius: 0.5rem;
    backdrop-filter: blur(4px);
  }

  .hero-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    line-height: 1.5;
    color: white;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  }

  .hero-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    background: rgba(255, 255, 255, 0.3);
    color: white;
    width: 4.5rem;
    height: 4.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: none;
    transition: background 0.3s ease;
    backdrop-filter: blur(4px);
  }

  .hero-nav:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .hero-nav.prev {
    left: 2rem;
  }

  .hero-nav.next {
    right: 2rem;
  }

  .hero-indicators {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 3;
  }

  .hero-indicator {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .hero-indicator.active {
    background: white;
  }

  .hero-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .hero-btn-primary {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
  }

  .hero-btn-primary:hover {
    background-color: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(154, 189, 72, 0.3);
  }

  /* 自适应响应式设计 */
  @media (min-width: 1280px) {
    .hero-section {
      width: {{ section.settings.container_width }}%;
      max-width: {{ section.settings.max_width }}px;
      height: {{ section.settings.desktop_height }}px;
    }
  }

  @media (min-width: 1024px) and (max-width: 1279px) {
    .hero-section {
      width: {{ section.settings.container_width | plus: 5 }}%;
      height: calc({{ section.settings.container_width | plus: 5 }}vw * {{ section.settings.desktop_height }} / {{ section.settings.max_width }});
      min-height: {{ section.settings.min_height | times: 0.85 | round }}px;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-section {
      width: {{ section.settings.tablet_width }}%;
      height: calc({{ section.settings.tablet_width }}vw * {{ section.settings.tablet_height }} / 100);
      min-height: {{ section.settings.min_height | times: 0.7 | round }}px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 767px) {
    .hero-section {
      width: {{ section.settings.mobile_width }}%;
      height: calc({{ section.settings.mobile_width }}vw * {{ section.settings.mobile_height }} / 100);
      min-height: {{ section.settings.min_height | times: 0.6 | round }}px;
      margin: 1rem auto;
    }

    .hero-content {
      margin-left: 5%;
      margin-right: 5%;
      max-width: none;
      padding: 1.5rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-nav {
      width: 3.5rem;
      height: 3.5rem;
    }

    .hero-nav.prev {
      left: 1rem;
    }

    .hero-nav.next {
      right: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      width: {{ section.settings.mobile_width | plus: 3 }}%;
      height: calc({{ section.settings.mobile_width | plus: 3 }}vw * {{ section.settings.mobile_height | plus: 10 }} / 100);
      min-height: {{ section.settings.min_height | times: 0.5 | round }}px;
      border-radius: 0.5rem;
    }

    .hero-content {
      padding: 1rem;
      margin-left: 2%;
      margin-right: 2%;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .hero-subtitle {
      font-size: 0.9rem;
    }
  }

  /* 自定义宽高比例保持 */
  {% if section.settings.maintain_aspect_ratio %}
  .hero-section {
    aspect-ratio: {{ section.settings.aspect_ratio_width }} / {{ section.settings.aspect_ratio_height }};
    height: auto !important;
  }

  @media (max-width: 767px) {
    .hero-section {
      aspect-ratio: {{ section.settings.mobile_aspect_ratio_width }} / {{ section.settings.mobile_aspect_ratio_height }};
    }
  }
  {% endif %}
</style>

<div class="hero-section">
  {% for block in section.blocks %}
    {% if block.type == 'slide' %}
      <div class="hero-slide {% if forloop.first %}active{% endif %}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: section.settings.image_width }}"
            alt="{{ block.settings.title | escape }}"
            class="hero-slide-image"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {% endif %}
        <div class="hero-content">
          <h1 class="hero-title">{{ block.settings.title }}</h1>
          <p class="hero-subtitle">{{ block.settings.subtitle }}</p>
          {% if block.settings.buttontext != blank and block.settings.buttonlink != blank %}
            <a href="{{ block.settings.buttonlink }}" class="hero-btn hero-btn-primary">
              {{- block.settings.buttontext -}}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  {% if section.settings.show_navigation %}
    <button class="hero-nav prev" aria-label="Previous slide">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    <button class="hero-nav next" aria-label="Next slide">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  {% endif %}

  {% if section.settings.show_indicators %}
    <div class="hero-indicators">
      {% assign slideindex = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div
            class="hero-indicator {% if forloop.first %}active{% endif %}"
            data-slide="{{ slideindex }}"
          ></div>
          {% assign slideindex = slideindex | plus: 1 %}
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = Array.from(document.querySelectorAll('.hero-slide'));
    const indicators = Array.from(document.querySelectorAll('.hero-indicator'));
    const prevBtn = document.querySelector('.hero-nav.prev');
    const nextBtn = document.querySelector('.hero-nav.next');
    let currentSlide = 0;
    let autoSlideInterval;
    const autoSlideDelay = {{ section.settings.auto_slide_delay | times: 1000 }};

    // 过滤出有效的幻灯片和指示器
    const validSlides = slides.filter((slide) => {
      const img = slide.querySelector('.hero-slide-image');
      return img && img.src;
    });
    const validIndicators = indicators.slice(0, validSlides.length);

    function showSlide(index) {
      validSlides.forEach((slide) => slide.classList.remove('active'));
      validIndicators.forEach((indicator) => indicator.classList.remove('active'));

      if (validSlides[index]) validSlides[index].classList.add('active');
      if (validIndicators[index]) validIndicators[index].classList.add('active');
      currentSlide = index;
    }

    function nextSlide() {
      const nextIndex = (currentSlide + 1) % validSlides.length;
      showSlide(nextIndex);
    }

    function prevSlide() {
      const prevIndex = (currentSlide - 1 + validSlides.length) % validSlides.length;
      showSlide(prevIndex);
    }

    function startAutoSlide() {
      if (validSlides.length > 1 && {{ section.settings.auto_slide | json }}) {
        autoSlideInterval = setInterval(nextSlide, autoSlideDelay);
      }
    }

    function stopAutoSlide() {
      clearInterval(autoSlideInterval);
    }

    // 只有多张图片时才显示导航
    if (validSlides.length <= 1) {
      if (prevBtn) prevBtn.style.display = 'none';
      if (nextBtn) nextBtn.style.display = 'none';
      const indicatorsContainer = document.querySelector('.hero-indicators');
      if (indicatorsContainer) indicatorsContainer.style.display = 'none';
    } else {
      // 导航按钮
      prevBtn?.addEventListener('click', () => {
        prevSlide();
        stopAutoSlide();
        startAutoSlide();
      });

      nextBtn?.addEventListener('click', () => {
        nextSlide();
        stopAutoSlide();
        startAutoSlide();
      });

      // 指示器点击
      validIndicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => {
          showSlide(index);
          stopAutoSlide();
          startAutoSlide();
        });
      });

      // 悬停暂停
      {% if section.settings.pause_on_hover %}
      const heroSection = document.querySelector('.hero-section');
      heroSection?.addEventListener('mouseenter', stopAutoSlide);
      heroSection?.addEventListener('mouseleave', startAutoSlide);
      {% endif %}

      // 启动自动轮播
      startAutoSlide();
    }

    // 键盘导航
    {% if section.settings.keyboard_navigation %}
    document.addEventListener('keydown', (e) => {
      if (validSlides.length > 1) {
        if (e.key === 'ArrowLeft') {
          prevSlide();
          stopAutoSlide();
          startAutoSlide();
        } else if (e.key === 'ArrowRight') {
          nextSlide();
          stopAutoSlide();
          startAutoSlide();
        }
      }
    });
    {% endif %}
  });
</script>

