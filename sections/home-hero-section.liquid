{% comment %}
  Home Hero Section - 英雄轮播区域
  使用 blocks 实现轮播图，兼容所有 Shopify 主题
  支持后台上传图片、修改标题、按钮等
{% endcomment %}

<style>
  /* Hero Banner Styles */
  .hero-section {
    position: relative;
    height: 100vh;
    overflow: hidden;
  }

  .hero-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.7s ease;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
  }

  .hero-slide.active {
    opacity: 1;
  }

  .hero-content {
    color: white;
    padding: 2rem;
    max-width: 600px;
    margin-left: 10%;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: white;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    line-height: 1.5;
    color: white;
  }

  .hero-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.3);
    color: white;
    width: 4.5rem;
    height: 4.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: none;
    transition: background 0.3s ease;
    backdrop-filter: blur(4px);
  }

  .hero-nav:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .hero-nav.prev {
    left: 2rem;
  }

  .hero-nav.next {
    right: 2rem;
  }

  .hero-indicators {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
  }

  .hero-indicator {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .hero-indicator.active {
    background: white;
  }

  .hero-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .hero-btn-primary {
    background-color: #ef4444;
    color: white;
    border: none;
  }

  .hero-btn-primary:hover {
    background-color: #dc2626;
  }

  @media (max-width: 768px) {
    .hero-content {
      margin-left: 5%;
      margin-right: 5%;
      max-width: none;
    }
    
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>

<div class="hero-section">
  {% for block in section.blocks %}
    {% if block.type == 'slide' %}
      <div class="hero-slide {% if forloop.first %}active{% endif %}"
           style="background-image: url('{{ block.settings.image | image_url: width: 1920 }}');">
        <div class="hero-content">
          <h1 class="hero-title">{{ block.settings.title }}</h1>
          <p class="hero-subtitle">{{ block.settings.subtitle }}</p>
          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="hero-btn hero-btn-primary">{{ block.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  <button class="hero-nav prev" aria-label="Previous slide">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  <button class="hero-nav next" aria-label="Next slide">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>

  <div class="hero-indicators">
    {% assign slide_index = 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="hero-indicator {% if forloop.first %}active{% endif %}" 
             data-slide="{{ slide_index }}"></div>
        {% assign slide_index = slide_index | plus: 1 %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slides = Array.from(document.querySelectorAll('.hero-slide'));
    const indicators = Array.from(document.querySelectorAll('.hero-indicator'));
    const prevBtn = document.querySelector('.hero-nav.prev');
    const nextBtn = document.querySelector('.hero-nav.next');
    let currentSlide = 0;
    let autoSlideInterval;

    // 过滤出有效的幻灯片和指示器
    const validSlides = slides.filter(s => s.style.backgroundImage);
    const validIndicators = indicators.slice(0, validSlides.length);

    function showSlide(index) {
      validSlides.forEach(slide => slide.classList.remove('active'));
      validIndicators.forEach(indicator => indicator.classList.remove('active'));
      
      if (validSlides[index]) validSlides[index].classList.add('active');
      if (validIndicators[index]) validIndicators[index].classList.add('active');
      currentSlide = index;
    }

    function nextSlide() {
      const nextIndex = (currentSlide + 1) % validSlides.length;
      showSlide(nextIndex);
    }

    function prevSlide() {
      const prevIndex = (currentSlide - 1 + validSlides.length) % validSlides.length;
      showSlide(prevIndex);
    }

    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoSlide() {
      clearInterval(autoSlideInterval);
    }

    // 导航按钮
    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    // 指示器点击
    validIndicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        showSlide(index);
        stopAutoSlide();
        startAutoSlide();
      });
    });

    // 悬停暂停
    const heroSection = document.querySelector('.hero-section');
    heroSection?.addEventListener('mouseenter', stopAutoSlide);
    heroSection?.addEventListener('mouseleave', startAutoSlide);

    // 启动自动轮播
    startAutoSlide();
  });
</script>

