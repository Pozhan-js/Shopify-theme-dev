{% schema %}
{
  "name": "事业财富风水布局",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "标题1",
      "default": "Golden"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "标题2",
      "default": "Career"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "标题3",
      "default": "ascension"
    },
    {
      "type": "text",
      "id": "title_line4",
      "label": "标题4",
      "default": "grid"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "背景图片"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#F9F5F0"
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "内容图片"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "内容描述",
      "default": "<p>在这里添加事业财富风水布局的详细描述</p>"
    }
  ],
  "presets": [
    {
      "name": "事业财富风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div
  class="fengshui-career-section"
  {% if section.settings.bg_image != blank %}
    style="background: url('{{ section.settings.bg_image | img_url: '2000x' }}')  center center / cover no-repeat;"
  {% endif %}
>
  <div class="page-width">
    <div class="career-content">
      <div class="content-left">
        <div class="wisdom-header">
          <h2 class="career-title">{{ section.settings.title_line1 }}</h2>
          <h2 class="career-title">{{ section.settings.title_line2 }}</h2>
          <h2 class="career-title">{{ section.settings.title_line3 }}</h2>
          <h2 class="career-title">{{ section.settings.title_line4 }}</h2>
        </div>
        {% if section.settings.content_image != blank %}
          <img
            src="{{ section.settings.content_image | img_url: '800x' }}"
            alt="事业财富风水布局"
            width="800"
            height="800"
            loading="lazy"
            style="max-width: 100%; height: auto;"
          >
        {% endif %}
      </div>
      <div class="content-right">
        <div class="content-text">
          {{ section.settings.content_text }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-career-section {
    padding: 60px 0;
    background-size: cover;
    background-position: center;
    position: relative;
    background: #000;
  }
  .fengshui-career-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_color }};
    opacity: 0.85;
    z-index: 0;
  }

  .wisdom-header {
    position: absolute;
    top: 25px;
    margin-left:15px;
    text-align: left;
  }

  .career-title {
    font-weight: 600;
    font-size: 4rem;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.1);
  }

  .career-content {
    display: flex;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-left {
    flex: 1;
    position: relative;
  }
  .content-left img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .content-right {
    flex: 1;
    display: flex;
    align-items: center;
  }
  .content-text {
    font-size: 1.5rem;
    line-height: 1.3;
    color: #555;
  }

  @media (max-width: 768px) {
    .career-content {
      flex-direction: column;
    }
    .career-title {
      font-size: 1.8rem;
    }
  }
</style>
