<style>
  .hot-products {
    width: 100%;
    background-color: #ffffff;
    padding: 60px 0;
  }

  .hot-products_container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 45px;
    box-sizing: border-box;
  }

  .hot-products_title {
    text-align: center;
    font-size: 36px;
    font-weight: 600;
    color: #333;
    margin: 0 0 50px 0;
  }

  .hot-products_grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }

  .hot-products_item {
    position: relative;
    background: #ffffff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .hot-products_item:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .hot-products_image-wrapper {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .hot-products_image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    transition: opacity 0.3s ease;
  }

  .hot-products_sale-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: #dc3545;
    color: white;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
    z-index: 2;
  }

  .hot-products_hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.95);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 15px;
    box-sizing: border-box;
    z-index: 3;
  }

  .hot-products_item:hover .hot-products_hover-overlay {
    opacity: 1;
    visibility: visible;
  }

  .hot-products_hover-top {
    width: 100%;
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 10px;
  }

  .hot-products_hover-small-image {
    width: 70px;
    height: 70px;
    object-fit: contain;
    border-radius: 4px;
    flex-shrink: 0;
    position: relative;
    top: 0;
    left: 0;
  }

  .hot-products_hover-content {
    flex: 1;
    min-width: 0;
  }

  .hot-products_compatibility-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin: 0 0 10px 0;
    text-align: left;
    line-height: 1.2;
  }

  .hot-products_compatibility-list {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .hot-products_compatibility-item {
    font-size: 12px;
    color: #333;
    margin-bottom: 3px;
    line-height: 1.3;
  }

  .hot-products_description {
    font-size: 12px;
    color: #333;
    line-height: 1.4;
    text-align: left;
  }

  .hot-products_hover-bottom {
    width: 100%;
    margin-top: auto;
    padding-top: 10px;
  }

  .hot-products_hover-bottom-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
  }

  .hot-products_content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .hot-products_name {
    font-size: 16px;
    font-weight: 500;
    color: #333;
    margin: 0 0 10px 0;
    line-height: 1.3;
    text-align: center;
  }

  .hot-products_rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    margin-bottom: 15px;
  }

  .hot-products_stars {
    display: flex;
    gap: 2px;
  }

  .hot-products_star {
    width: 16px;
    height: 16px;
    fill: #ffc107;
  }

  .hot-products_review-count {
    font-size: 14px;
    color: #666;
    margin-left: 5px;
  }

  .hot-products_price-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .hot-products_original-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .hot-products_current-price {
    font-size: 18px;
    font-weight: 600;
    color: #333;
  }

  .hot-products_add-to-cart {
    width: 100%;
    background-color: #871d16;
    color: white;
    border: none;
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 4px;
    margin-top: auto;
  }

  .hot-products_add-to-cart:hover {
    background-color: #6b1611;
    transform: translateY(-1px);
  }

  .hot-products_loading {
    text-align: center;
    padding: 40px;
    font-size: 16px;
    color: #666;
  }

  .hot-products_empty {
    text-align: center;
    padding: 40px;
    font-size: 16px;
    color: #666;
  }

  @media (max-width: 1024px) {
    .hot-products {
      padding: 50px 0;
    }

    .hot-products_container {
      padding: 0 30px;
    }

    .hot-products_title {
      font-size: 32px;
      margin-bottom: 40px;
    }

    .hot-products_grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 25px;
    }

    .hot-products_image-wrapper {
      height: 220px;
    }
  }

  @media (max-width: 768px) {
    .hot-products {
      padding: 40px 0;
    }

    .hot-products_container {
      padding: 0 20px;
    }

    .hot-products_title {
      font-size: 28px;
      margin-bottom: 35px;
    }

    .hot-products_grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .hot-products_image-wrapper {
      height: 200px;
    }

    .hot-products_content {
      padding: 15px;
    }

    .hot-products_name {
      font-size: 15px;
    }

    .hot-products_compatibility-title {
      font-size: 16px;
    }

    .hot-products_compatibility-item {
      font-size: 13px;
    }

    .hot-products_description {
      font-size: 13px;
    }

    .hot-products_hover-overlay {
      padding: 12px;
    }

    .hot-products_hover-small-image {
      width: 60px;
      height: 60px;
    }

    .hot-products_hover-bottom {
      padding-top: 8px;
    }

    .hot-products_hover-top {
      gap: 10px;
      margin-bottom: 8px;
    }

    .hot-products_compatibility-title {
      font-size: 14px;
      margin-bottom: 8px;
    }

    .hot-products_compatibility-item {
      font-size: 11px;
      margin-bottom: 2px;
    }

    .hot-products_description {
      font-size: 11px;
      line-height: 1.3;
    }
  }

  @media (max-width: 480px) {
    .hot-products {
      padding: 35px 0;
    }

    .hot-products_container {
      padding: 0 15px;
    }

    .hot-products_title {
      font-size: 24px;
      margin-bottom: 30px;
    }

    .hot-products_grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .hot-products_image-wrapper {
      height: 250px;
    }

    .hot-products_content {
      padding: 15px;
    }

    .hot-products_name {
      font-size: 14px;
    }

    .hot-products_hover-overlay {
      padding: 10px;
    }

    .hot-products_compatibility-title {
      font-size: 13px;
      margin-bottom: 6px;
    }

    .hot-products_compatibility-item {
      font-size: 10px;
      margin-bottom: 2px;
    }

    .hot-products_description {
      font-size: 10px;
      line-height: 1.2;
    }

    .hot-products_hover-small-image {
      width: 50px;
      height: 50px;
    }

    .hot-products_hover-bottom {
      padding-top: 6px;
    }

    .hot-products_hover-top {
      gap: 8px;
      margin-bottom: 6px;
    }
  }
</style>

<section class="hot-products">
  <div class="hot-products_container">
    {% if section.settings.title != blank %}
      <h2 class="hot-products_title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="hot-products_grid">
      {% for product in collections.all.products %}
        {% if product.tags contains 'hot' %}
          <div class="hot-products_item">
            <div class="hot-products_image-wrapper">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | img_url: '400x' }}"
                  alt="{{ product.title }}"
                  class="hot-products_image"
                  loading="lazy"
                >
              {% else %}
                <div
                  class="hot-products_image"
                  style="background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999;"
                >
                  No Image
                </div>
              {% endif %}

              {% comment %} 计算折扣百分比 {% endcomment %}
              {% if product.compare_at_price > product.price %}
                {% assign discount = product.compare_at_price | minus: product.price %}
                {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                <div class="hot-products_sale-badge">-{{ discount_percentage }}%</div>
              {% endif %}

              {% comment %} 悬停覆盖层 {% endcomment %}
              <div class="hot-products_hover-overlay">
                <div class="hot-products_hover-top">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | img_url: '160x' }}"
                      alt="{{ product.title }} small"
                      class="hot-products_hover-small-image"
                      loading="lazy"
                    >
                  {% endif %}

                  <div class="hot-products_hover-content">
                    <h3 class="hot-products_compatibility-title">Product Description</h3>

                    {% comment %} 显示产品描述 {% endcomment %}
                    {% if product.description != blank %}
                      <div class="hot-products_description">
                        {{ product.description | strip_html | truncate: 150 }}
                      </div>
                    {% else %}
                      <div class="hot-products_description">No description available.</div>
                    {% endif %}
                  </div>
                </div>

                {% comment %} 底部图片 - 显示第二张产品图片 {% endcomment %}
                {% if product.images.size > 1 %}
                  <div class="hot-products_hover-bottom">
                    <img
                      src="{{ product.images[1] | img_url: '400x' }}"
                      alt="{{ product.title }} detail"
                      class="hot-products_hover-bottom-image"
                      loading="lazy"
                    >
                  </div>
                {% endif %}
              </div>
            </div>

            <div class="hot-products_content">
              <h3 class="hot-products_name">{{ product.title }}</h3>

              {% comment %} 评分显示 - 可以根据实际评分系统调整 {% endcomment %}
              <div class="hot-products_rating">
                <div class="hot-products_stars">
                  {% for i in (1..5) %}
                    <svg class="hot-products_star" viewBox="0 0 24 24">
                      <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z"/>
                    </svg>
                  {% endfor %}
                </div>
                {% comment %} 这里可以集成实际的评论数量 {% endcomment %}
                <span class="hot-products_review-count">
                  {{- product.metafields.reviews.rating_count | default: '0' }} reviews</span
                >
              </div>

              <div class="hot-products_price-wrapper">
                {% if product.compare_at_price > product.price %}
                  <span class="hot-products_original-price">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="hot-products_current-price">{{ product.price | money }}</span>
              </div>

              {% comment %} 加入购物车按钮 {% endcomment %}
              <form action="/cart/add" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button
                  type="submit"
                  class="hot-products_add-to-cart"
                  {% unless product.available %}
                    disabled
                  {% endunless %}
                >
                  {% if product.available %}
                    ADD TO CART
                  {% else %}
                    SOLD OUT
                  {% endif %}
                </button>
              </form>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<script>
  // 增强的加入购物车功能
  document.addEventListener('DOMContentLoaded', function () {
    const forms = document.querySelectorAll('.hot-products_content form');

    forms.forEach(function (form) {
      form.addEventListener('submit', function (e) {
        const button = form.querySelector('.hot-products_add-to-cart');
        const originalText = button.textContent;

        // 显示加载状态
        button.textContent = 'ADDING...';
        button.disabled = true;

        // 使用 fetch API 进行异步提交
        e.preventDefault();

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-Requested-With': 'XMLHttpRequest',
          },
          body: new URLSearchParams(new FormData(form)),
        })
          .then((response) => response.json())
          .then((data) => {
            // 成功添加到购物车
            button.textContent = 'ADDED!';
            button.style.backgroundColor = '#28a745';

            // 触发购物车更新事件
            document.dispatchEvent(new CustomEvent('cart:updated'));

            // 2秒后恢复原状
            setTimeout(() => {
              button.textContent = originalText;
              button.style.backgroundColor = '';
              button.disabled = false;
            }, 2000);
          })
          .catch((error) => {
            console.error('Error:', error);
            button.textContent = 'ERROR';
            button.style.backgroundColor = '#dc3545';

            setTimeout(() => {
              button.textContent = originalText;
              button.style.backgroundColor = '';
              button.disabled = false;
            }, 2000);
          });
      });
    });
  });
</script>

