{% schema %}
{
  "name": "Serenity Love Cocoon-2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "大标题",
      "default": "Tranquil Sleep & Romance Formation"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "背景图片"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此输入内容</p>"
    }
  ],
  "presets": [
    {
      "name": "天轨八卦风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="fengshui-cocoon-section">
  <div
    class="page-width"
    style="background: url('{{ section.settings.bg_image | img_url: '1000x' }}')  center center / cover no-repeat;"
  >
    <h2 class="cocoon-title">{{ section.settings.title }}</h2>
    <div class="cocoon-content">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .fengshui-cocoon-section {
    padding: 0;
    position: relative;
    min-height: 500px;
  }

  .page-width {
    position: relative;
    z-index: 11;
  }

  .cocoon-title {
    text-align: center;
    font-size: 2.2rem;
    color: #5c3a21;
    margin-bottom: 30px;
    margin-top: 0;
  }

  .cocoon-content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 30px;
    background: transparent;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .fengshui-cocoon-section {
      padding: 30px 0;
      min-height: 300px;
    }

    .cocoon-title {
      font-size: 1.8rem;
    }
  }
</style>
