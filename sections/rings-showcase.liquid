<!-- 戒指展示模块 - 简化版 -->
<div class="rings-showcase-container">
    <div class="rings-showcase-wrapper">
        <!-- 左侧模特图 -->
        <div class="model-image-section">
            {% if section.settings.model_image %}
                <img src="{{ section.settings.model_image | image_url: width: 800, height: 1200, crop: 'center' }}" 
                     alt="{{ section.settings.model_image_alt | default: '戒指模特展示' }}" 
                     class="model-image"
                     loading="lazy">
            {% else %}
                <div class="model-placeholder" style="background: {{ section.settings.placeholder_color }};"></div>
            {% endif %}
        </div>
        
        <!-- 右侧商品列表 -->
        <div class="products-section">
            <div class="products-container">
                <h2 class="section-title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px;">
                    {{ section.settings.section_title | default: '戒指系列' }}
                </h2>
                
                <div class="products-grid">
                    {%- comment -%} 根据产品类型筛选商品 {%- endcomment -%}
                    {%- assign all_products = collections.all.products -%}
                    {%- assign collection_products = all_products | where: 'type', section.settings.product_type | default: '戒指' -%}
                    
                    {%- assign product_count = collection_products.size -%}
                    
                    {%- if product_count > 0 -%}
                        {%- for product in collection_products limit: section.settings.max_products -%}
                            <div class="product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        <img src="{{ product.featured_image | image_url: width: 120, height: 120, crop: 'center' }}" 
                                             alt="{{ product.title }}" 
                                             class="product-image"
                                             loading="lazy">
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    <form method="post" action="/cart/add" class="add-to-cart-form">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="add-to-cart-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                            </svg>
                                            加入购物车
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="no-products-message">
                            <p>{{ section.settings.empty_message | default: '暂无商品，请在后台添加产品' }}</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if collection_products.size > section.settings.max_products -%}
                    <div class="view-more-container">
                        <a href="/collections/all?filter.p.product.type={{ section.settings.product_type | default: '戒指' | url_encode }}" class="view-more-btn">
                            {{ section.settings.view_more_text | default: '查看更多商品' }}
                        </a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>

<style>
    .rings-showcase-container {
        width: 100%;
        margin: {{ section.settings.top_margin }}px 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0;
    }

    .rings-showcase-wrapper {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }

    /* 左侧模特图 */
    .model-image-section {
        flex: 1;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
    }

    .model-image, .model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .model-placeholder {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* 右侧商品列表 */
    .products-section {
        flex: 1;
        background: {{ section.settings.background_color }};
        height: 100vh;
        overflow-y: auto;
    }

    .products-container {
        padding: 60px 40px;
        max-width: 500px;
        margin: 0 auto;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
    }

    /* 换行竖向排列的商品网格 */
    .products-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 40px;
        justify-content: flex-start;
        align-content: flex-start;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        width: calc(50% - 10px);
        min-width: 200px;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 180px;
        overflow: hidden;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-info {
        padding: 15px;
        display: flex;
        flex-direction: column;
        text-align: center;
        flex: 1;
    }

    .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
    }

    .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .current-price {
        color: #333;
    }

    .add-to-cart-form {
        margin: 0;
        margin-top: auto;
    }

    .add-to-cart-btn {
        background: {{ section.settings.button_bg_color }};
        color: {{ section.settings.button_text_color }};
        border: 1px solid {{ section.settings.button_border_color }};
        padding: 8px 16px;
        border-radius: {{ section.settings.button_border_radius }}px;
        font-size: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .add-to-cart-btn:hover {
        background: {{ section.settings.button_hover_color }};
        border-color: {{ section.settings.button_hover_color }};
        transform: translateY(-1px);
    }

    .no-products-message {
        text-align: center;
        padding: 40px;
        color: #666;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 12px 30px;
        background: transparent;
        color: #333;
        text-decoration: none;
        border: 1px solid #333;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .view-more-btn:hover {
        background: #333;
        color: white;
    }

    /* 响应式设计 */
    @media screen and (max-width: 1024px) {
        .rings-showcase-wrapper {
            flex-direction: column;
        }

        .model-image-section {
            position: relative;
            height: 50vh;
            flex: none;
        }

        .products-section {
            flex: none;
            height: auto;
            overflow-y: visible;
        }

        .products-container {
            padding: 40px 20px;
            max-width: 100%;
        }
    }

    @media screen and (max-width: 749px) {
        .products-grid {
            justify-content: center;
        }

        .product-card {
            width: 100%;
            max-width: 280px;
            flex: 0 0 auto;
        }

        .product-image-container {
            height: 200px;
        }

        .section-title {
            font-size: 24px;
        }

        .products-container {
            padding: 30px 15px;
        }
    }

    @media screen and (min-width: 750px) and (max-width: 1024px) {
        .product-card {
            width: calc(50% - 10px);
        }
    }

    @media screen and (min-width: 1025px) {
        .products-container {
            max-width: 600px;
        }
        
        .product-card {
            width: calc(50% - 10px);
            margin-bottom: 20px;
        }
        
        .products-grid {
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: flex-start;
            align-items: flex-start;
        }
    }

    /* 滚动条样式 */
    .products-section::-webkit-scrollbar {
        width: 6px;
    }

    .products-section::-webkit-scrollbar-track {
        background: rgba(0,0,0,0.1);
    }

    .products-section::-webkit-scrollbar-thumb {
        background: rgba(0,0,0,0.3);
        border-radius: 3px;
    }

    .products-section::-webkit-scrollbar-thumb:hover {
        background: rgba(0,0,0,0.5);
    }
</style>

{% schema %}
{
  "name": "戒指展示模块",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "基本设置"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "模块标题",
      "default": "戒指系列"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "标题颜色",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "标题大小",
      "default": 36
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#f8f8f8"
    },
    {
      "type": "header",
      "content": "模特图片设置"
    },
    {
      "type": "image_picker",
      "id": "model_image",
      "label": "模特图片"
    },
    {
      "type": "text",
      "id": "model_image_alt",
      "label": "模特图片alt文本",
      "default": "戒指模特展示"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "占位背景颜色",
      "default": "#f0f0f0"
    },
    {
      "type": "header",
      "content": "商品设置"
    },
    {
      "type": "text",
      "id": "product_type",
      "label": "产品类型",
      "default": "戒指",
      "info": "根据此产品类型筛选商品"
    },
    {
      "type": "range",
      "id": "max_products",
      "min": 1,
      "max": 20,
      "step": 1,
      "label": "最大显示产品数",
      "default": 8
    },
    {
      "type": "text",
      "id": "empty_message",
      "label": "空集合提示文字",
      "default": "暂无商品，请在后台添加产品"
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "查看更多按钮文字",
      "default": "查看更多商品"
    },
    {
      "type": "header",
      "content": "按钮样式设置"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "按钮背景颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "按钮文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "按钮边框颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "按钮悬停颜色",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 25,
      "step": 1,
      "unit": "px",
      "label": "按钮圆角",
      "default": 4
    },
    {
      "type": "header",
      "content": "间距设置"
    },
    {
      "type": "range",
      "id": "top_margin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "上边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_margin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "下边距",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "戒指展示模块",
      "settings": {
        "section_title": "戒指系列",
        "product_type": "戒指",
        "max_products": 8
      }
    }
  ]
}
{% endschema %}
