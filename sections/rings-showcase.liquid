<!-- 戒指展示模块 - 后台可编辑版 -->
<div class="rings-showcase-container">
    <div class="rings-showcase-wrapper">
        <!-- 左侧模特图 -->
        <div class="model-image-section">
            {% if section.settings.modelimage %}
                <img src="{{ section.settings.modelimage | image_url: width: 800, height: 1200, crop: 'center' }}" 
                     alt="{{ section.settings.modelimagealt | default: '戒指模特展示' }}" 
                     class="model-image"
                     loading="lazy">
            {% else %}
                <div class="model-placeholder" style="background: {{ section.settings.placeholdercolor }};"></div>
            {% endif %}
        </div>
        
        <!-- 右侧商品列表 -->
        <div class="products-section">
            <div class="products-container">
                <h2 class="section-title" style="color: {{ section.settings.titlecolor }}; font-size: {{ section.settings.titlesize }}px;">
                    {{ section.settings.sectiontitle | default: '戒指系列' }}
                </h2>
                
                <div class="products-grid">
                    {%- assign selected_collection = collections[section.settings.collection_handle] -%}
                    {%- if selected_collection and selected_collection.products.size > 0 -%}
                        {%- assign collection_products = selected_collection.products -%}
                        {%- assign product_count = collection_products.size -%}
                        
                        {%- for product in collection_products limit: section.settings.maxproducts -%}
                            <div class="product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        <img src="{{ product.featured_image | image_url: width: 190, height: 190, crop: 'center' }}" 
                                             alt="{{ product.title }}" 
                                             class="product-image"
                                             loading="lazy">
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    <form method="post" action="/cart/add" class="add-to-cart-form">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="add-to-cart-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                            </svg>
                                            加入购物车
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="no-products-message">
                            <p>{{ section.settings.emptymessage | default: '暂无商品，请在后台添加产品或选择正确的系列' }}</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if selected_collection and selected_collection.products.size > section.settings.maxproducts -%}
                    <div class="view-more-container">
                        <a href="{{ selected_collection.url }}" class="view-more-btn">
                            {{ section.settings.viewmoretext | default: '查看更多商品' }}
                        </a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>

<style>
    .rings-showcase-container {
        width: 100%;
        margin: {{ section.settings.topmargin }}px 0 {{ section.settings.bottommargin }}px 0;
        padding: 0;
    }

    .rings-showcase-wrapper {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }

    /* 左侧模特图 */
    .model-image-section {
        flex: 1;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
    }

    .model-image, .model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .model-placeholder {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* 右侧商品列表 */
    .products-section {
        flex: 1;
        background: {{ section.settings.backgroundcolor }};
    }

    .products-container {
        padding: 60px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 190px;
        overflow: hidden;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-info {
        padding: 15px;
        text-align: center;
    }

    .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
    }

    .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .current-price {
        color: #333;
    }

    .add-to-cart-form {
        margin: 0;
    }

    .add-to-cart-btn {
        background: {{ section.settings.buttonbgcolor }};
        color: {{ section.settings.buttontextcolor }};
        border: 1px solid {{ section.settings.buttonbordercolor }};
        padding: 8px 16px;
        border-radius: {{ section.settings.buttonborderradius }}px;
        font-size: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .add-to-cart-btn:hover {
        background: {{ section.settings.buttonhovercolor }};
        border-color: {{ section.settings.buttonhovercolor }};
        transform: translateY(-1px);
    }

    .no-products-message {
        text-align: center;
        padding: 40px;
        color: #666;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 12px 30px;
        background: transparent;
        color: #333;
        text-decoration: none;
        border: 1px solid #333;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .view-more-btn:hover {
        background: #333;
        color: white;
    }

    /* 响应式设计 */
    @media screen and (max-width: 1024px) {
        .rings-showcase-wrapper {
            flex-direction: column;
        }

        .model-image-section {
            position: relative;
            height: 50vh;
            flex: none;
        }

        .products-section {
            flex: none;
        }

        .products-container {
            padding: 40px 20px;
        }
    }

    @media screen and (max-width: 749px) {
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
        }

        .product-image-container {
            height: 150px;
        }

        .section-title {
            font-size: 24px;
        }
    }
</style>

{% schema %}
{
  "name": "戒指展示模块",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "sectiontitle",
      "label": "模块标题",
      "default": "戒指系列"
    },
    {
      "type": "color",
      "id": "titlecolor",
      "label": "标题颜色",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "titlesize",
      "min": 24,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "标题大小",
      "default": 36
    },
    {
      "type": "collection",
      "id": "collection_handle",
      "label": "选择商品系列",
      "info": "选择要展示的商品系列，例如：アパレル・アウター"
    },
    {
      "type": "color",
      "id": "backgroundcolor",
      "label": "背景颜色",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "placeholdercolor",
      "label": "占位背景颜色",
      "default": "#f0f0f0"
    },
    {
      "type": "image_picker",
      "id": "modelimage",
      "label": "模特图片"
    },
    {
      "type": "text",
      "id": "modelimagealt",
      "label": "模特图片alt文本",
      "default": "戒指模特展示"
    },
    {
      "type": "range",
      "id": "maxproducts",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "最大显示产品数",
      "default": 8
    },
    {
      "type": "color",
      "id": "buttonbgcolor",
      "label": "按钮背景颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "buttontextcolor",
      "label": "按钮文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "buttonbordercolor",
      "label": "按钮边框颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "buttonhovercolor",
      "label": "按钮悬停颜色",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "buttonborderradius",
      "min": 0,
      "max": 25,
      "step": 1,
      "unit": "px",
      "label": "按钮圆角",
      "default": 4
    },
    {
      "type": "range",
      "id": "topmargin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "上边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottommargin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "下边距",
      "default": 0
    },
    {
      "type": "text",
      "id": "emptymessage",
      "label": "空集合提示文字",
      "default": "暂无商品，请在后台添加产品或选择正确的系列"
    },
    {
      "type": "text",
      "id": "viewmoretext",
      "label": "查看更多按钮文字",
      "default": "查看更多商品"
    }
  ],
  "presets": [
    {
      "name": "戒指展示模块",
      "settings": {
        "sectiontitle": "戒指系列",
        "maxproducts": 8
      }
    }
  ]
}
{% endschema %}
