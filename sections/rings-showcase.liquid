<!-- 戒指展示模块 - 模特图+系列商品版 -->
<div class="rings-showcase-container">
    <div class="rings-showcase-wrapper">
        <!-- 模特图 -->
        <div class="model-image-section">
            {% if section.settings.model_image %}
                <img src="{{ section.settings.model_image | image_url: width: 1200, height: 1600, crop: 'center' }}" 
                     alt="{{ section.settings.model_image_alt | default: '戒指模特展示' }}" 
                     class="model-image"
                     loading="lazy">
            {% else %}
                <div class="model-placeholder" style="background: {{ section.settings.placeholder_color }};"></div>
            {% endif %}
        </div>

        <!-- 系列商品展示 -->
        <div class="products-section">
            {% if section.settings.collection_handle != blank %}
                {% assign featured_collection = collections[section.settings.collection_handle] %}
                
                <!-- 系列标题 -->
                <div class="collection-header">
                    <h2 class="collection-title">{{ section.settings.collection_title | default: featured_collection.title }}</h2>
                    {% if section.settings.collection_description != blank %}
                        <p class="collection-description">{{ section.settings.collection_description }}</p>
                    {% endif %}
                </div>

                <!-- 商品网格 -->
                <div class="products-grid">
                    {% assign products_limit = section.settings.products_limit | default: 6 %}
                    {% for product in featured_collection.products limit: products_limit %}
                        <div class="product-card">
                            <div class="product-image-wrapper">
                                {% if product.featured_image %}
                                    <img src="{{ product.featured_image | image_url: width: 400, height: 400, crop: 'center' }}" 
                                         alt="{{ product.featured_image.alt | default: product.title }}" 
                                         class="product-image"
                                         loading="lazy">
                                {% else %}
                                    <div class="product-image-placeholder"></div>
                                {% endif %}
                                
                                <!-- 快速查看按钮 -->
                                <div class="product-overlay">
                                    <a href="{{ product.url }}" class="quick-view-btn">
                                        {{ section.settings.quick_view_text | default: '查看详情' }}
                                    </a>
                                </div>
                            </div>
                            
                            <div class="product-info">
                                <h3 class="product-title">
                                    <a href="{{ product.url }}">{{ product.title }}</a>
                                </h3>
                                
                                <div class="product-price">
                                    {% if product.compare_at_price > product.price %}
                                        <span class="price-sale">{{ product.price | money }}</span>
                                        <span class="price-compare">{{ product.compare_at_price | money }}</span>
                                    {% else %}
                                        <span class="price-regular">{{ product.price | money }}</span>
                                    {% endif %}
                                </div>
                                
                                {% if section.settings.show_product_rating %}
                                    <div class="product-rating">
                                        <!-- 这里可以集成评分系统 -->
                                        <div class="stars">★★★★★</div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- 查看更多按钮 -->
                {% if section.settings.show_view_all %}
                    <div class="view-all-wrapper">
                        <a href="{{ featured_collection.url }}" class="view-all-btn">
                            {{ section.settings.view_all_text | default: '查看全部' }}
                        </a>
                    </div>
                {% endif %}
            {% else %}
                <!-- 未选择系列时的占位内容 -->
                <div class="no-collection-placeholder">
                    <h3>请在后台选择要展示的商品系列</h3>
                    <p>在模块设置中选择一个商品系列来展示相关产品</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .rings-showcase-container {
        width: 100%;
        margin: {{ section.settings.top_margin }}px 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0 20px;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    .rings-showcase-wrapper {
        display: grid;
        grid-template-columns: {{ section.settings.image_width }}% 1fr;
        gap: {{ section.settings.content_gap }}px;
        align-items: start;
        min-height: {{ section.settings.min_height }}px;
    }

    /* 模特图样式 */
    .model-image-section {
        width: 100%;
        height: {{ section.settings.image_height }}px;
        overflow: hidden;
        border-radius: {{ section.settings.border_radius }}px;
        box-shadow: {{ section.settings.shadow_enabled | default: false | if: '0 10px 30px rgba(0,0,0,0.1)', 'none' }};
        position: sticky;
        top: 20px;
    }

    .model-image, .model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .model-image:hover {
        transform: scale({{ section.settings.hover_scale | default: 1.05 }});
    }

    .model-placeholder {
        background: linear-gradient(135deg, {{ section.settings.placeholder_color }} 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255,255,255,0.8);
        font-size: 18px;
        font-weight: 300;
    }

    .model-placeholder::after {
        content: "{{ section.settings.placeholder_text | default: '请上传模特图片' }}";
    }

    /* 商品展示区域 */
    .products-section {
        padding: 20px 0;
    }

    .collection-header {
        margin-bottom: 30px;
        text-align: {{ section.settings.text_alignment }};
    }

    .collection-title {
        font-size: {{ section.settings.title_font_size }}px;
        font-weight: {{ section.settings.title_font_weight }};
        color: {{ section.settings.title_color }};
        margin: 0 0 10px 0;
        line-height: 1.2;
    }

    .collection-description {
        font-size: {{ section.settings.description_font_size }}px;
        color: {{ section.settings.description_color }};
        margin: 0;
        line-height: 1.5;
    }

    /* 商品网格 */
    .products-grid {
        display: grid;
        grid-template-columns: repeat({{ section.settings.products_per_row }}, 1fr);
        gap: {{ section.settings.product_gap }}px;
        margin-bottom: 30px;
    }

    .product-card {
        background: {{ section.settings.card_background }};
        border-radius: {{ section.settings.card_border_radius }}px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .product-image-wrapper {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-image-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .quick-view-btn {
        background: {{ section.settings.button_background }};
        color: {{ section.settings.button_text_color }};
        padding: 12px 24px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .quick-view-btn:hover {
        background: {{ section.settings.button_hover_background }};
        color: {{ section.settings.button_hover_text_color }};
        transform: scale(1.05);
    }

    .product-info {
        padding: 20px;
        text-align: center;
    }

    .product-title {
        margin: 0 0 10px 0;
        font-size: {{ section.settings.product_title_size }}px;
        font-weight: 500;
    }

    .product-title a {
        color: {{ section.settings.product_title_color }};
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .product-title a:hover {
        color: {{ section.settings.product_title_hover_color }};
    }

    .product-price {
        margin-bottom: 10px;
    }

    .price-regular, .price-sale {
        font-size: {{ section.settings.price_font_size }}px;
        font-weight: 600;
        color: {{ section.settings.price_color }};
    }

    .price-compare {
        font-size: {{ section.settings.price_font_size | minus: 2 }}px;
        color: {{ section.settings.compare_price_color }};
        text-decoration: line-through;
        margin-left: 8px;
    }

    .product-rating {
        color: {{ section.settings.rating_color }};
        font-size: 14px;
    }

    /* 查看更多按钮 */
    .view-all-wrapper {
        text-align: center;
        margin-top: 30px;
    }

    .view-all-btn {
        display: inline-block;
        background: {{ section.settings.view_all_background }};
        color: {{ section.settings.view_all_text_color }};
        padding: 15px 30px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid {{ section.settings.view_all_background }};
    }

    .view-all-btn:hover {
        background: transparent;
        color: {{ section.settings.view_all_background }};
    }

    /* 占位内容 */
    .no-collection-placeholder {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

    .no-collection-placeholder h3 {
        margin: 0 0 10px 0;
        font-size: 24px;
        color: #333;
    }

    .no-collection-placeholder p {
        margin: 0;
        font-size: 16px;
    }

    /* 响应式设计 */
    @media screen and (max-width: 1024px) {
        .rings-showcase-wrapper {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        
        .model-image-section {
            height: {{ section.settings.tablet_height }}px;
            position: static;
        }
        
        .products-grid {
            grid-template-columns: repeat({{ section.settings.tablet_products_per_row }}, 1fr);
        }
    }

    @media screen and (max-width: 749px) {
        .rings-showcase-container {
            padding: 0 15px;
        }
        
        .model-image-section {
            height: {{ section.settings.mobile_height }}px;
            border-radius: {{ section.settings.mobile_border_radius }}px;
        }
        
        .products-grid {
            grid-template-columns: repeat({{ section.settings.mobile_products_per_row }}, 1fr);
            gap: 15px;
        }
        
        .product-info {
            padding: 15px;
        }
        
        .collection-title {
            font-size: {{ section.settings.title_font_size | minus: 4 }}px;
        }
    }
</style>

