        transform: scale(1.05);
    }

    /* 轮播进度条 */
    .progress-bar-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: rgba(255, 255, 255, 0.3);
        z-index: 2;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        width: 0%;
        transition: width 0.1s linear;
    }

    .rings-product-card .product-info {
        padding: 0;
