        padding: 40px;
        color: #666;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 12px 30px;
        background: transparent;
        color: #333;
        text-decoration: none;
        border: 1px solid #333;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .view-more-btn:hover {
        background: #333;
        color: white;
    }

    /* 响应式设计 */
