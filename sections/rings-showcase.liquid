        display: block;
        width: 100%;
        height: 100%;
        position: relative;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .product-image.active {
        opacity: 1;
    }

    .product-image-placeholder {
