<!-- 戒指展示模块 - 后台可编辑版 -->
<div class="rings-showcase-container">
    <div class="rings-showcase-wrapper">
        <!-- 左侧模特图 -->
        <div class="rings-model-image-section" id="ringsModelSection">
            {% if section.settings.modelimage %}
                <img src="{{ section.settings.modelimage | image_url: width: 800, height: 1200, crop: 'center' }}" 
                     alt="{{ section.settings.modelimagealt | default: '戒指模特展示' }}" 
                     class="rings-model-image"
                     loading="lazy">
            {% else %}
                <div class="rings-model-placeholder" style="background: {{ section.settings.placeholdercolor }};"></div>
            {% endif %}
        </div>
        
        <!-- 右侧商品列表 -->
        <div class="rings-products-section" id="ringsProductsSection">
            <div class="rings-products-container">
                <h2 class="section-title" style="color: {{ section.settings.titlecolor }}; font-size: {{ section.settings.titlesize }}px;">
                    {{ section.settings.sectiontitle | default: '戒指系列' }}
                </h2>
                
                <div class="rings-products-grid">
                    {%- assign selected_collection = collections[section.settings.collection_handle] -%}
                    {%- if selected_collection and selected_collection.products.size > 0 -%}
                        {%- assign collection_products = selected_collection.products -%}
                        {%- assign product_count = collection_products.size -%}
                        
                        {%- for product in collection_products limit: section.settings.maxproducts -%}
                            <div class="rings-product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        {%- if product.featured_image -%}
                                            <img src="{{ product.featured_image | img_url: '300x300' }}" 
                                                 alt="{{ product.title }}" 
                                                 class="product-image"
                                                 loading="lazy">
                                        {%- else -%}
                                            <div class="product-image-placeholder">暂无图片</div>
                                        {%- endif -%}
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    <form method="post" action="/cart/add" class="add-to-cart-form">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="add-to-cart-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                            </svg>
                                            加入购物车
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="rings-no-products-message">
                            <p>{{ section.settings.emptymessage | default: '暂无商品，请在后台添加产品或选择正确的系列' }}</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if selected_collection and selected_collection.products.size > section.settings.maxproducts -%}
                    <div class="view-more-container">
                        <a href="{{ selected_collection.url }}" class="view-more-btn">
                            {{ section.settings.viewmoretext | default: '查看更多商品' }}
                        </a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>

<style>
    .rings-showcase-container {
        width: 100%;
        margin: {{ section.settings.topmargin }}px 0 {{ section.settings.bottommargin }}px 0;
        padding: 0;
        position: relative;
    }

    .rings-showcase-wrapper {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }

    /* 左侧模特图 */
    .rings-model-image-section {
        flex: 1;
        position: relative;
        height: 100vh;
        overflow: hidden;
        z-index: 10;
        transition: position 0.3s ease;
    }

    .rings-model-image-section.sticky {
        position: fixed;
        top: 0;
        left: 0;
        width: 50%;
    }

    .rings-model-image-section.sticky-end {
        position: absolute;
        bottom: 0;
        top: auto;
    }

    .rings-model-image, .rings-model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .rings-model-placeholder {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* 右侧商品列表 */
    .rings-products-section {
        flex: 1;
        background: transparent;
        position: relative;
        z-index: 5;
    }

    .rings-products-section.offset {
        margin-left: 50%;
    }

    .rings-products-container {
        padding: 60px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
    }

    /* 桌面端：两列展示 */
    .rings-products-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .rings-product-card {
        background: transparent;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .rings-product-card:hover {
        transform: translateY(-3px);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        overflow: hidden;
        border-radius: 8px;
        background: #f5f5f5;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-image-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 12px;
    }

    .rings-product-card:hover .product-image {
        transform: scale(1.05);
    }

    .rings-product-card .product-info {
        padding: 0;
        text-align: left;
    }

    .rings-product-card .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .rings-product-card .product-title a {
        color: #333;
        text-decoration: none;
    }

    .rings-product-card .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
        text-align: left;
    }

    .rings-product-card .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .rings-product-card .current-price {
        color: #333;
    }

    .rings-product-card .add-to-cart-form {
        margin: 0;
    }

    .rings-product-card .add-to-cart-btn {
        background: {{ section.settings.buttonbgcolor }};
        color: {{ section.settings.buttontextcolor }};
        border: 1px solid {{ section.settings.buttonbordercolor }};
        padding: 8px 16px;
        border-radius: {{ section.settings.buttonborderradius }}px;
        font-size: 12px;
        cursor
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .rings-product-card .add-to-cart-btn:hover {
        background: {{ section.settings.buttonhovercolor }};
        border-color: {{ section.settings.buttonhovercolor }};
        transform: translateY(-1px);
    }

    .rings-no-products-message {
        text-align: center;
        padding: 40px;
        color: #666;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 12px 30px;
        background: transparent;
        color: #333;
        text-decoration: none;
        border: 1px solid #333;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .view-more-btn:hover {
        background: #333;
        color: white;
    }

    /* 响应式设计 */
    @media screen and (max-width: 749px) {
        .rings-showcase-wrapper {
            flex-direction: column;
        }

        .rings-model-image-section {
            position: relative !important;
            height: 50vh;
            flex: none;
            width: 100% !important;
        }

        .rings-model-image-section.sticky,
        .rings-model-image-section.sticky-end {
            position: relative !important;
            width: 100% !important;
            margin-left: 0 !important;
        }

        .rings-products-section {
            flex: none;
            margin-left: 0 !important;
        }

        .rings-products-container {
            padding: 40px 20px;
        }

        /* 手机端：横向排列 */
        .rings-products-grid {
            display: flex;
            flex-direction: row;
            overflow-x: auto;
            gap: 20px;
            margin-bottom: 40px;
            padding-bottom: 10px;
        }

        .rings-product-card {
            flex: 0 0 150px;
            min-width: 150px;
            flex-direction: column;
            gap: 10px;
        }

        .rings-product-card .product-image-container {
            width: 150px;
            height: 150px;
        }

        .rings-product-card .product-info {
            padding: 0;
            width: 100%;
        }

        .rings-product-card .product-title {
            font-size: 14px;
        }

        .rings-product-card .add-to-cart-form {
            max-width: none;
        }

        .section-title {
            font-size: 24px;
        }

        .rings-products-grid::-webkit-scrollbar {
            height: 4px;
        }

        .rings-products-grid::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 2px;
        }

        .rings-products-grid::-webkit-scrollbar-thumb {
            background: #ccc;
            border-radius: 2px;
        }

        .rings-products-grid::-webkit-scrollbar-thumb:hover {
            background: #999;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // 只在桌面端执行滚动固定逻辑
    if (window.innerWidth <= 749) return;
    
    const modelSection = document.getElementById('ringsModelSection');
    const productsSection = document.getElementById('ringsProductsSection');
    const container = document.querySelector('.rings-showcase-container');
    
    if (!modelSection || !productsSection || !container) return;
    
    let isScrolling = false;
    let scrollTimeout;
    
    // 获取初始位置信息
    const containerRect = container.getBoundingClientRect();
    const containerTop = containerRect.top + window.pageYOffset;
    const containerHeight = containerRect.height;
    const containerBottom = containerTop + containerHeight;
    
    function handleScroll() {
        const scrollTop = window.pageYOffset;
        const windowHeight = window.innerHeight;
        
        // 清除之前的超时
        clearTimeout(scrollTimeout);
        
        // 标记正在滚动
        if (!isScrolling) {
            isScrolling = true;
        }
        
        // 判断滚动位置
        if (scrollTop >= containerTop && scrollTop + windowHeight < containerBottom) {
            // 在容器范围内滚动，固定模特图
            modelSection.classList.add('sticky');
            modelSection.classList.remove('sticky-end');
            productsSection.classList.add('offset');
        } else if (scrollTop + windowHeight >= containerBottom) {
            // 滚动到容器底部，模特图固定在底部
            modelSection.classList.remove('sticky');
            modelSection.classList.add('sticky-end');
            productsSection.classList.add('offset');
        } else {
            // 在容器外，恢复正常状态
            modelSection.classList.remove('sticky', 'sticky-end');
            productsSection.classList.remove('offset');
        }
        
        // 设置滚动结束检测
        scrollTimeout = setTimeout(function() {
            isScrolling = false;
            
            // 滚动结束后的处理
            const currentScrollTop = window.pageYOffset;
            if (currentScrollTop < containerTop || currentScrollTop + windowHeight >= containerBottom) {
                // 如果滚动结束时不在容器范围内，取消固定
                modelSection.classList.remove('sticky', 'sticky-end');
                productsSection.classList.remove('offset');
            }
        }, 150); // 150ms 后认为滚动结束
    }
    
    // 监听滚动事件
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    // 监听窗口大小变化
    window.addEventListener('resize', function() {
        if (window.innerWidth <= 749) {
            // 移动端时移除所有固定状态
            modelSection.classList.remove('sticky', 'sticky-end');
            productsSection.classList.remove('offset');
        }
    });
    
    // 初始检查
    handleScroll();
});
</script>

