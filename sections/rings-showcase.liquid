<!-- 戒指展示模块 - 左侧模特图 + 右侧商品列表（单滚动条版） -->
<div class="rings-showcase-container">
    <div class="rings-showcase-wrapper">
        <!-- 左侧模特图 -->
        <div class="model-image-section">
            <img src="https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=800&h=1200&fit=crop" 
                 alt="戒指模特展示" 
                 class="model-image"
                 loading="lazy">
        </div>
        
        <!-- 右侧商品列表 -->
        <div class="products-section">
            <div class="products-container">
                <h2 class="section-title">戒指系列</h2>
                
                <div class="products-grid">
                    {%- assign all_products = collections.all.products -%}
                    {%- assign product_count = all_products.size -%}
                    
                    {%- if product_count > 0 -%}
                        {%- for i in (1..12) -%}
                            {%- assign product_index = forloop.index0 | modulo: product_count -%}
                            {%- assign product = all_products[product_index] -%}
                            
                            <div class="product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        <img src="{{ product.featured_image | image_url: width: 190, height: 190, crop: 'center' }}" 
                                             alt="{{ product.title }}" 
                                             class="product-image"
                                             loading="lazy">
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    <form method="post" action="/cart/add" class="add-to-cart-form">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="add-to-cart-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                            </svg>
                                            加入购物车
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="no-products-message">
                            <p>暂无商品，请在后台添加产品</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if all_products.size > 0 -%}
                    <div class="view-more-container">
                        <a href="/collections/all" class="view-more-btn">查看更多商品</a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>

<style>
    .rings-showcase-container {
        width: 100%;
        margin: 60px 0 0 0;
        padding: 0;
    }

    .rings-showcase-wrapper {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }

    /* 左侧模特图 */
    .model-image-section {
        flex: 1;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
    }

    .model-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    /* 右侧商品列表 */
    .products-section {
        flex: 1;
        background: #fff;
    }

    .products-container {
        padding: 60px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 32px;
        font-weight: 300;
        color: #333;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 190px;
        overflow: hidden;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-info {
        padding: 15px;
        text-align: center;
    }

    .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
    }

    .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .current-price {
        color: #333;
    }

    .add-to-cart-form {
        margin: 0;
    }

    .add-to-cart-btn {
        background: #F5F5F5;
        color: #333;
        border: 1px solid #ddd;
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .add-to-cart-btn:hover {
        background: #e0e0e0;
    }

    .add-to-cart-btn svg {
        width: 14px;
        height: 14px;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        background: #333;
        color: #fff;
        padding: 12px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 14px;
        transition: background 0.3s ease;
    }

    .view-more-btn:hover {
        background: #555;
    }

    .no-products-message {
        text-align: center;
        padding: 60px 20px;
        color: #666;
        grid-column: 1 / -1;
    }

    /* 响应式设计 */
    @media (max-width: 1024px) {
        .rings-showcase-wrapper {
            flex-direction: column;
        }

        .model-image-section {
            position: relative;
            height: 50vh;
            width: 100%;
        }

        .products-section {
            width: 100%;
        }

        .products-container {
            padding: 40px 20px;
        }
    }

    @media (max-width: 768px) {
        .rings-showcase-container {
            margin: 40px 0 0 0;
        }

        .model-image-section {
            height: 40vh;
        }

        .products-container {
            padding: 30px 15px;
        }

        .section-title {
            font-size: 28px;
            margin-bottom: 30px;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
            gap: 20px;
        }
    }

    @media (max-width: 480px) {
        .rings-showcase-container {
            margin: 20px 0 0 0;
        }

        .model-image-section {
            height: 30vh;
        }

        .products-container {
            padding: 20px 10px;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .products-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
    }
</style>
