        position: fixed;
        top: 0;
        left: 0;
        width: 50%;
        height: 100vh;
    }

    .rings-model-image-section.sticky-end {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50%;
        height: 100vh;
        top: auto;
    }

