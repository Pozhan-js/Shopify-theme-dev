        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .rings-product-card .product-title a {
        color: #333;
        text-decoration: none;
    }

    .rings-product-card .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
        text-align: left;
    }

    .rings-product-card .original-price {
