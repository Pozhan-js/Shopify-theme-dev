        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .rings-product-card:hover {
        transform: translateY(-3px);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        overflow: hidden;
        border-radius: 8px;
        background: #f5f5f5;
    }

