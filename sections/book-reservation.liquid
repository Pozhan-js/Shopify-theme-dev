{% comment %}
  Book Reservation Section - 预订表单模块
  包含背景图片和完整的预订表单
{% endcomment %}

<div class="book-reservation-section">
  <div class="page-width">
    <div class="reservation-container">
      <div class="reservation-header">
        <h2 class="reservation-title">{{ section.settings.title | default: 'Book Our Reservation' | escape }}</h2>
      </div>
      
      <form class="reservation-form" action="/contact#contact_form" method="post" id="reservation-form">
        <input type="hidden" name="form_type" value="contact">
        <input type="hidden" name="utf8" value="✓">
        
        <div class="form-row">
          <div class="form-group">
            <input type="text" id="full_name" name="contact[full_name]" required placeholder="Full Name *">
          </div>
          
          <div class="form-group">
            <input type="tel" id="phone" name="contact[phone]" required placeholder="Phone Number *">
          </div>
          
          <div class="form-group">
            <input type="email" id="email" name="contact[email]" required placeholder="Email Address *">
          </div>
        </div>
        
        <div class="form-group full-width">
          <textarea id="message" name="contact[message]" rows="4" placeholder="Messages"></textarea>
        </div>
        
        <button type="submit" class="submit-button">
          <span class="button-text">{{ section.settings.button_text | default: 'Book Reservation' | escape }}</span>
          <span class="button-loading" style="display: none;">Sending...</span>
        </button>
      </form>
    </div>
  </div>
</div>

<style>
.book-reservation-section {
  background-color: #ffffff;
  padding: 60px 0;
}

.reservation-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 20px;
}

.reservation-header {
  text-align: center;
  margin-bottom: 40px;
}

.reservation-title {
  font-size: 32px;
  color: #8B4513;
  margin-bottom: 8px;
  font-weight: 600;
}

.reservation-form {
  width: 100%;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-bottom: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group input,
.form-group textarea {
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s ease;
  background: #ffffff;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #D8A26C;
  box-shadow: 0 0 0 2px rgba(216, 162, 108, 0.2);
}

.submit-button {
  width: 100%;
  max-width: 200px;
  margin: 30px auto 0;
  padding: 14px 30px;
  background: #D8A26C;
  color: white;
  border: none;
  border-radius: 50px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: block;
}

.submit-button:hover {
  background: #c6925a;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(216, 162, 108, 0.3);
}

.submit-button:active {
  transform: translateY(0);
}

.reservation-info {
  text-align: center;
  margin-top: 20px;
}

.info-text {
  font-size: 14px;
  color: #666;
}

@media (max-width: 768px) {
  .book-reservation-section {
    padding: 40px 0;
  }
  
  .reservation-title {
    font-size: 28px;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
  
  .submit-button {
    max-width: 100%;
  }
}
</style>

{% schema %}
{
  "name": "Book Reservation Section",
  "tag": "section",
  "class": "book-reservation-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Book Our Reservation"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Book Reservation"
    }
  ],
  "presets": [
    {
      "name": "Book Reservation Section",
      "settings": {
        "title": "Book Our Reservation",
        "button_text": "Book Reservation"
      }
    }
  ]
}
{% endschema %}
