{% comment %}
  Book Reservation Section - 预订表单模块
  包含背景图片和完整的预订表单
{% endcomment %}

<div class="book-reservation-section">
  <div class="reservation-background">
    <div class="reservation-overlay"></div>
    <div class="page-width">
      <div class="reservation-container">
        <div class="reservation-header">
          <h2 class="reservation-title">{{ section.settings.title | default: 'Book Our Reservation' | escape }}</h2>
          <p class="reservation-subtitle">{{ section.settings.subtitle | default: 'Reserve your table for an unforgettable baking experience' | escape }}</p>
        </div>
        
        <form class="reservation-form" action="/contact#contact_form" method="post" id="reservation-form">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="✓">
          
          <div class="form-row">
            <div class="form-group">
              <label for="full_name">Full Name *</label>
              <input type="text" id="full_name" name="contact[full_name]" required placeholder="Enter your full name">
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number *</label>
              <input type="tel" id="phone" name="contact[phone]" required placeholder="Enter your phone number">
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="contact[email]" required placeholder="Enter your email address">
            </div>
            
            <div class="form-group">
              <label for="date">Preferred Date</label>
              <input type="date" id="date" name="contact[date]" min="{{ 'now' | date: '%Y-%m-%d' }}">
            </div>
          </div>
          
          <div class="form-group full-width">
            <label for="message">Messages</label>
            <textarea id="message" name="contact[message]" rows="4" placeholder="Any special requests or dietary requirements?"></textarea>
          </div>
          
          <div class="form-group full-width">
            <label for="guests">Number of Guests</label>
            <select id="guests" name="contact[guests]">
              <option value="1">1 Guest</option>
              <option value="2" selected>2 Guests</option>
              <option value="3">3 Guests</option>
              <option value="4">4 Guests</option>
              <option value="5">5 Guests</option>
              <option value="6">6 Guests</option>
              <option value="7+">7+ Guests</option>
            </select>
          </div>
          
          <button type="submit" class="submit-button">
            <span class="button-text">{{ section.settings.button_text | default: 'Book Reservation' | escape }}</span>
            <span class="button-loading" style="display: none;">Sending...</span>
          </button>
        </form>
        
        <div class="reservation-info">
          <p class="info-text">{{ section.settings.info_text | default: 'We will contact you within 24 hours to confirm your reservation.' | escape }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.book-reservation-section {
  position: relative;
  overflow: hidden;
}

.reservation-background {
  position: relative;
  min-height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), 
              url('{{ section.settings.background_image | image_url: 'master' }}');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

.reservation-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.reservation-container {
  position: relative;
  z-index: 2;
  max-width: 600px;
  width: 100%;
  padding: 40px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

.reservation-header {
  text-align: center;
  margin-bottom: 32px;
}

.reservation-title {
  font-size: 32px;
  color: #8B4513;
  margin-bottom: 8px;
  font-weight: 600;
}

.reservation-subtitle {
  font-size: 16px;
  color: #666;
}

.reservation-form {
  width: 100%;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-size: 14px;
  color: #333;
  margin-bottom: 6px;
  font-weight: 500;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s ease;
  background: rgba(255, 255, 255, 0.9);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #D8A26C;
  box-shadow: 0 0 0 2px rgba(216, 162, 108, 0.2);
}

.submit-button {
  width: 100%;
  padding: 16px;
  background: #D8A26C;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.submit-button:hover {
  background: #c6925a;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(216, 162, 108, 0.3);
}

.submit-button:active {
  transform: translateY(0);
}

.reservation-info {
  text-align: center;
  margin-top: 20px;
}

.info-text {
  font-size: 14px;
  color: #666;
}

@media (max-width: 768px) {
  .reservation-background {
    min-height: 400px;
  }
  
  .reservation-container {
    margin: 20px;
    padding: 30px 20px;
  }
  
  .reservation-title {
    font-size: 28px;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Book Reservation Section",
  "tag": "section",
  "class": "book-reservation-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Book Our Reservation"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Reserve your table for an unforgettable baking experience"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Book Reservation"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "info_text",
      "label": "Info Text",
      "default": "We will contact you within 24 hours to confirm your reservation."
    }
  ],
  "presets": [
    {
      "name": "Book Reservation Section",
      "settings": {
        "title": "Book Our Reservation",
        "subtitle": "Reserve your table for an unforgettable baking experience",
        "button_text": "Book Reservation"
      }
    }
  ]
}
{% endschema %}
