<div class="custom-footer page-width">
  <!-- 主菜单 -->
  <nav class="footer-main-menu">
    <ul>
      {% for link in section.settings.main_menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>

  <div class="footer-divider"></div>

  <!-- 底部链接和版权 -->
  <div class="footer-bottom">
    <div class="footer-links">
      <ul>
        {% for link in section.settings.bottom_menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <div class="copyright">
      © {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}
    </div>
    {% if section.settings.show_language_selector %}
      <div class="language-selector">
        <button>中英文</button>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .custom-footer {
    background-color: #000;
    color: #fff;
    padding: 40px 0;
    text-align: center;
  }

  .footer-main-menu ul,
  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 30px;
  }

  .footer-main-menu a {
    color: #ff0;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
  }

  .footer-divider {
    height: 1px;
    background-color: #ff0;
    margin: 20px auto;
    width: 80%;
  }

  .footer-links a {
    color: #fff;
    font-size: 14px;
    text-decoration: none;
  }

  .copyright {
    margin-top: 20px;
    color: #fff;
    font-size: 14px;
  }

  .language-selector button {
    background: transparent;
    border: 1px solid #fff;
    color: #fff;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    margin-top: 20px;
    cursor: pointer;
  }
</style>

{% schema %}
{
  "name": "自定义页脚",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "主菜单",
      "default": "main-menu"
    },
    {
      "type": "link_list",
      "id": "bottom_menu",
      "label": "底部链接",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "版权文本",
      "default": "Good Mask Co. All rights reserved."
    },
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "label": "显示语言选择器",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "自定义页脚"
    }
  ]
}
{% endschema %}
