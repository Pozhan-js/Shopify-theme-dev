{% schema %}
{
  "name": "关于我们布局2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "大标题",
      "default": "天轨八卦风水布局"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此输入风水布局内容</p>"
    }
  ],
  "presets": [
    {
      "name": "天轨八卦风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="fengshui-celestial-section">
  <div
    class="page-width"
  >
    <h2 class="celestial-title">{{ section.settings.title }}</h2>
    <div class="celestial-content">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .fengshui-celestial-section {
    padding: 0;
    position: relative;
    min-height: 500px;
    background: #000000;
  }

  .page-width {
    position: relative;
    z-index: 11;
  }

  .celestial-title {
    text-align: center;
    font-size: 2.2rem;
    color: #ffffff;
    margin-bottom: 30px;
    margin-top: 0;
  }

  .celestial-content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 30px;
    background: rgba(0,0,0,0.5);
    border-radius: 8px;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .fengshui-celestial-section {
      padding: 30px 0;
      min-height: 300px;
    }

    .celestial-title {
      font-size: 1.8rem;
    }
  }
</style>
