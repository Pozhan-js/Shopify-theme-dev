{% schema %}
{
  "name": "关于我们布局2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "大标题",
      "default": "天轨八卦风水布局"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此输入风水布局内容</p>"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "base_font_size",
      "label": "基础字体大小",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "h1_size",
      "label": "H1字体大小",
      "min": 24,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "h2_size",
      "label": "H2字体大小",
      "min": 20,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 28
    },
    {
      "type": "range",
      "id": "h3_size",
      "label": "H3字体大小",
      "min": 18,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 22
    }
  ],
  "presets": [
    {
      "name": "天轨八卦风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="custom-rich-text-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h1 class="rich-text-title" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.h1_size }}px;">{{ section.settings.title }}</h1>
    {% endif %}
    <div class="rich-text-content" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.base_font_size }}px; background-color: transparent;">
      {{ section.settings.content }}
    </div>
  </div>
</div>

<style>
  .custom-rich-text-section {
    padding: 60px 0;
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
  }

  .page-width {
    position: relative;
    z-index: 11;
    width: 100%;
  }

  .rich-text-title {
    text-align: center;
    margin-bottom: 30px;
    margin-top: 0;
    font-weight: bold;
  }

  .rich-text-content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 30px;
    line-height: 1.8;
    background-color: transparent;
  }

  .rich-text-content h1 {
    font-size: {{ section.settings.h1_size }}px;
    margin: 1.5rem 0 1rem 0;
    font-weight: bold;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content h2 {
    font-size: {{ section.settings.h2_size }}px;
    margin: 1.5rem 0 1rem 0;
    font-weight: bold;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content h3 {
    font-size: {{ section.settings.h3_size }}px;
    margin: 1.5rem 0 1rem 0;
    font-weight: bold;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content p {
    margin: 1rem 0;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content ul,
  .rich-text-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content li {
    margin: 0.5rem 0;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content strong {
    font-weight: bold;
    color: {{ section.settings.text_color }};
  }

  .rich-text-content em {
    font-style: italic;
    color: {{ section.settings.text_color }};
  }

  @media (max-width: 768px) {
    .custom-rich-text-section {
      padding: 40px 20px;
      min-height: auto;
    }

    .rich-text-title {
      font-size: 28px;
    }

    .rich-text-content {
      padding: 0 20px;
      font-size: 14px;
    }

    .rich-text-content h1 {
      font-size: 28px;
    }

    .rich-text-content h2 {
      font-size: 24px;
    }

    .rich-text-content h3 {
      font-size: 20px;
    }
  }
</style>
