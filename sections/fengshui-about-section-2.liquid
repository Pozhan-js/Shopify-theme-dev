{% schema %}
{
  "name": "关于我们布局2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "大标题",
      "default": "天轨八卦风水布局"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "内容",
      "default": "<p>在此输入风水布局内容</p>"
    }
  ],
  "presets": [
    {
      "name": "天轨八卦风水布局",
      "category": "风水布局"
    }
  ]
}
{% endschema %}

<div class="fengshui-celestial-section">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="celestial-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="celestial-content">
      <div class="custom-rich-text">
        {{ section.settings.content }}
      </div>
    </div>
  </div>
</div>

<style>
  .fengshui-celestial-section {
    padding: 0;
    position: relative;
    min-height: 500px;
    background: #000000;
  }

  .page-width {
    position: relative;
    z-index: 11;
  }

  .celestial-title {
    text-align: center;
    font-size: 2.2rem;
    color: #ffffff;
    margin-bottom: 30px;
    margin-top: 0;
  }

  .celestial-content {
    max-width: 1000px;
    padding: 30px;
    border-radius: 8px;
    color: #ffffff;
  }

  .custom-rich-text {
    width: 100%;
  }

  .custom-rich-text h1,
  .custom-rich-text h2,
  .custom-rich-text h3,
  .custom-rich-text h4,
  .custom-rich-text h5,
  .custom-rich-text h6 {
    color: #ffffff;
    margin: 1.5rem 0 1rem 0;
  }

  .custom-rich-text p {
    color: #ffffff;
    margin: 1rem 0;
    line-height: 1.8;
  }

  .custom-rich-text ul,
  .custom-rich-text ol {
    color: #ffffff;
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .custom-rich-text li {
    color: #ffffff;
    margin: 0.5rem 0;
  }

  .custom-rich-text strong {
    color: #ffffff;
    font-weight: bold;
  }

  .custom-rich-text em {
    color: #ffffff;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .fengshui-celestial-section {
      padding: 30px 0;
      min-height: 300px;
    }

    .celestial-title {
      font-size: 1.8rem;
    }
  }
</style>
