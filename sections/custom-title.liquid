{% schema %}
{
  "name": "自定义标题",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题内容",
      "default": "请输入标题"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "对齐方式",
      "options": [
        {
          "value": "left",
          "label": "左侧"
        },
        {
          "value": "center",
          "label": "居中"
        },
        {
          "value": "right",
          "label": "右侧"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "color",
      "label": "字体颜色",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "字体大小",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "上边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "下边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "font_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "字体粗细",
      "default": 700
    }
  ],
  "presets": [
    {
      "name": "自定义标题"
    }
  ]
}
{% endschema %}

<style>
  section .custom-title {
    text-align: {{ section.settings.alignment }} !important;
    color: {{ section.settings.color }} !important;
    font-size: {{ section.settings.font_size }}px !important;
    margin-top: {{ section.settings.margin_top }}px !important;
    padding-bottom: {{ section.settings.margin_bottom }}px !important;
    font-weight: {{ section.settings.font_weight }} !important;
  }
  /* Debug info: {{ section.settings | json }} */
</style>

<h2 class="custom-title">{{ section.settings.title }}</h2>
