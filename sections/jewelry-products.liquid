        font-family: 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Yu Gothic', 'Meiryo', sans-serif;
        white-space: nowrap;
    }

    .tab-btn:hover {
        background: #F5F5F5;
        color: #333;
    }

    .tab-btn.active {
        background: #F5F5F5;
        color: #333;
    }

    /* TAB内容样式 */
    .tab-content {
        position: relative;
    }

    .tab-pane {
        display: none;
    }

    .tab-pane.active {
        display: block;
    }

    .products-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
    }

