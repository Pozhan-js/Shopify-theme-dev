<!-- 背包展示模块 - 后台可编辑版 -->
<div class="backpack-showcase-container">
    <div class="backpack-showcase-wrapper">
        <!-- 左侧商品列表 -->
        <div class="products-section">
            <div class="products-container">
                <h2 class="section-title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px;">
                    {{ section.settings.section_title | default: '背包系列' }}
                </h2>
                
                <div class="products-grid">
                    {%- assign backpack_products = collections[section.settings.collection_handle].products -%}
                    {%- assign product_count = backpack_products.size -%}
                    
                    {%- if product_count > 0 -%}
                        {%- for product in backpack_products limit: section.settings.max_products -%}
                            <div class="product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        <img src="{{ product.featured_image | image_url: width: 190, height: 190, crop: 'center' }}" 
                                             alt="{{ product.title }}" 
                                             class="product-image"
                                             loading="lazy">
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    <form method="post" action="/cart/add" class="add-to-cart-form">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="add-to-cart-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                            </svg>
                                            加入购物车
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="no-products-message">
                            <p>{{ section.settings.empty_message | default: '暂无商品，请在后台添加产品' }}</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if backpack_products.size > section.settings.max_products -%}
                    <div class="view-more-container">
                        <a href="{{ collections[section.settings.collection_handle].url }}" class="view-more-btn">
                            {{ section.settings.view_more_text | default: '查看更多商品' }}
                        </a>
                    </div>
                {%- endif -%}
            </div>
        </div>
        
        <!-- 右侧固定模特图 -->
        <div class="model-image-section">
            {% if section.settings.model_image %}
                <img src="{{ section.settings.model_image | image_url: width: 800, height: 1200, crop: 'center' }}" 
                     alt="{{ section.settings.model_image_alt | default: '背包模特展示' }}" 
                     class="model-image"
                     loading="lazy">
            {% else %}
                <div class="model-placeholder" style="background: {{ section.settings.placeholder_color }};"></div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .backpack-showcase-container {
        width: 100%;
        margin: {{ section.settings.top_margin }}px 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0;
    }

    .backpack-showcase-wrapper {
        display: flex;
        align-items: flex-start;
    }

    /* 左侧商品列表 */
    .products-section {
        flex: 1;
        background: {{ section.settings.background_color }};
    }

    .products-container {
        padding: 60px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 190px;
        overflow: hidden;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-info {
        padding: 15px;
        text-align: center;
    }

    .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
    }

    .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .current-price {
        color: #333;
    }

    .add-to-cart-form {
        margin: 0;
    }

    .add-to-cart-btn {
        background: {{ section.settings.button_bg_color }};
        color: {{ section.settings.button_text_color }};
        border: 1px solid {{ section.settings.button_border_color }};
        padding: 8px 16px;
        border-radius: {{ section.settings.button_border_radius }}px;
        font-size: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .add-to-cart-btn:hover {
        background: {{ section.settings.button_hover_color }};
    }

    .add-to-cart-btn svg {
        width: 14px;
        height: 14px;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        background: {{ section.settings.view_more_bg_color }};
        color: {{ section.settings.view_more_text_color }};
        padding: 12px 30px;
        border-radius: {{ section.settings.view_more_border_radius }}px;
        text-decoration: none;
        font-size: 14px;
        transition: background 0.3s ease;
    }

    .view-more-btn:hover {
        background: {{ section.settings.view_more_hover_color }};
    }

    .no-products-message {
        text-align: center;
        padding: 60px 20px;
        color: #666;
        grid-column: 1 / -1;
    }

    /* 右侧模特图 */
    .model-image-section {
        flex: 1;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
    }

    .model-image, .model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .model-placeholder {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    /* 响应式设计 */
    @media (max-width: 1024px) {
        .backpack-showcase-wrapper {
            flex-direction: column;
        }

        .products-section {
            width: 100%;
        }

        .model-image-section {
            position: relative;
            height: 50vh;
            width: 100%;
        }

        .products-container {
            padding: 40px 20px;
        }
    }

    @media (max-width: 768px) {
        .backpack-showcase-container {
            margin: 40px 0 0 0;
        }

        .model-image-section {
            height: 40vh;
        }

        .products-container {
            padding: 30px 15px;
        }

        .section-title {
            font-size: 28px;
            margin-bottom: 30px;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
            gap: 20px;
        }
    }

    @media (max-width: 480px) {
        .backpack-showcase-container {
            margin: 20px 0 0 0;
        }

        .model-image-section {
            height: 30vh;
        }

        .products-container {
            padding: 20px 10px;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .products-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
    }
</style>

{% schema %}
{
  "name": "背包展示模块",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "model_image",
      "label": "模特图片"
    },
    {
      "type": "text",
      "id": "model_image_alt",
      "label": "模特图片alt文字",
      "default": "背包模特展示"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "区块标题",
      "default": "背包系列"
    },
    {
      "type": "select",
      "id": "title_size",
      "options": [
        {
          "value": "28",
          "label": "小"
        },
        {
          "value": "32",
          "label": "中"
        },
        {
          "value": "36",
          "label": "大"
        }
      ],
      "default": "32",
      "label": "标题大小"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "标题颜色",
      "default": "#333333"
    },
    {
      "type": "text",
      "id": "collection_handle",
      "label": "产品分类handle",
      "default": "backpacks"
    },
    {
      "type": "range",
      "id": "max_products",
      "min": 4,
      "max": 20,
      "step": 1,
      "label": "显示产品数量",
      "default": 12
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "占位背景颜色",
      "default": "#4facfe"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "按钮背景颜色",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "按钮文字颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "按钮边框颜色",
      "default": "#dddddd"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "按钮悬停颜色",
      "default": "#e0e0e0"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "按钮圆角",
      "default": 4
    },
    {
      "type": "color",
      "id": "view_more_bg_color",
      "label": "查看更多按钮背景颜色",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "view_more_text_color",
      "label": "查看更多按钮文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "view_more_hover_color",
      "label": "查看更多按钮悬停颜色",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "view_more_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "查看更多按钮圆角",
      "default": "25"
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "查看更多按钮文字",
      "default": "查看更多商品"
    },
    {
      "type": "text",
      "id": "empty_message",
      "label": "空列表提示文字",
      "default": "暂无商品，请在后台添加产品"
    },
    {
      "type": "range",
      "id": "top_margin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "上边距",
      "default": "60"
    },
    {
      "type": "range",
      "id": "bottom_margin",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "下边距",
      "default": "0"
    }
  ],
  "presets": [
    {
      "name": "背包展示模块",
      "settings": {
        "section_title": "背包系列",
        "collection_handle": "backpacks",
        "max_products": 12,
        "view_more_text": "查看更多商品"
      }
    }
  ]
}
{% endschema %}
