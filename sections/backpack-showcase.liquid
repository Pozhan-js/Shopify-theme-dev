<!-- 背包展示模块 - 后台可编辑版 -->
<div class="backpack-showcase-container">
    <div class="backpack-showcase-wrapper">
        <!-- 左侧商品列表 -->
        <div class="products-section">
            <div class="products-container">
                <h2 class="section-title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px;">
                    {{ section.settings.section_title | default: '背包系列' }}
                </h2>
                
                <div class="products-grid">
                    {%- comment -%}
                    获取指定系列的商品
                    优先级：指定系列 > 产品类型 > 所有商品
                    {%- endcomment -%}
                    
                    {%- assign target_products = blank -%}
                    
                    {%- if section.settings.collection_handle != blank -%}
                        {%- comment -%} 如果指定了系列，获取该系列的商品 {%- endcomment -%}
                        {%- assign target_collection = collections[section.settings.collection_handle] -%}
                        {%- if target_collection -%}
                            {%- assign target_products = target_collection.products -%}
                        {%- endif -%}
                    {%- elsif section.settings.product_type != blank -%}
                        {%- comment -%} 如果没有指定系列但指定了产品类型，按类型筛选 {%- endcomment -%}
                        {%- assign target_products = collections.all.products | where: 'type', section.settings.product_type -%}
                    {%- else -%}
                        {%- comment -%} 都没有指定则显示所有商品 {%- endcomment -%}
                        {%- assign target_products = collections.all.products -%}
                    {%- endif -%}
                    
                    {%- comment -%} 如果启用了产品类型过滤，在系列基础上再次过滤 {%- endcomment -%}
                    {%- if section.settings.enable_type_filter and section.settings.product_type != blank and section.settings.collection_handle != blank -%}
                        {%- assign target_products = target_products | where: 'type', section.settings.product_type -%}
                    {%- endif -%}
                    
                    {%- comment -%} 按照设置的排序方式排序 {%- endcomment -%}
                    {%- case section.settings.sort_by -%}
                        {%- when 'price_ascending' -%}
                            {%- assign target_products = target_products | sort: 'price' -%}
                        {%- when 'price_descending' -%}
                            {%- assign target_products = target_products | sort: 'price' | reverse -%}
                        {%- when 'title_ascending' -%}
                            {%- assign target_products = target_products | sort: 'title' -%}
                        {%- when 'title_descending' -%}
                            {%- assign target_products = target_products | sort: 'title' | reverse -%}
                        {%- when 'created_ascending' -%}
                            {%- assign target_products = target_products | sort: 'created_at' -%}
                        {%- when 'created_descending' -%}
                 = target_products | sort: 'created_at' | reverse -%}
                        {%- when 'best_selling' -%}
                            {%- comment -%} 保持原有顺序，通常系列已按销量排序 {%- endcomment -%}
                        {%- else -%}
                            {%- comment -%} 默认保持原有顺序 {%- endcomment -%}
                    {%- endcase -%}
                    
                    {%- assign product_count = target_products.size -%}
                    
                    {%- if product_count > 0 -%}
                        {%- for product in target_products limit: section.settings.max_products -%}
                            <div class="product-card">
                                <div class="product-image-container">
                                    <a href="{{ product.url }}" class="product-link">
                                        <img src="{{ product.featured_image | image_url: width: 190, height: 190, crop: 'center' }}" 
                                             alt="{{ product.title }}" 
                                             class="product-image"
                                             loading="lazy">
                                    </a>
                                    
                                    {%- if product.compare_at_price > product.price -%}
                                        <div class="sale-badge">
                                            {{ section.settings.sale_badge_text | default: '特价' }}
                                        </div>
                                    {%- endif -%}
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="{{ product.url }}">{{ product.title }}</a>
                                    </h3>
                                    <div class="product-price">
                                        {%- if product.compare_at_price > product.price -%}
                                            <span class="original-price">{{ product.compare_at_price | money }}</span>
                                        {%- endif -%}
                                        <span class="current-price">{{ product.price | money }}</span>
                                    </div>
                                    
                                    {%- if section.settings.show_add_to_cart -%}
                                        <form method="post" action="/cart/add" class="add-to-cart-form">
                                            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit" class="add-to-cart-btn" {% unless product.available %}disabled{% endunless %}>
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                                    <path d="M9 2L6 6H3L5 20H19L21 6H18L15 2H9Z" stroke="currentColor" stroke-width="2"/>
                                                </svg>
                                                {% if product.available %}
                                                    {{ section.settings.add_to_cart_text | default: '加入购物车' }}
                                                {% else %}
                                                    {{ section.settings.sold_out_text | default: '已售完' }}
                                                {% endif %}
                                            </button>
                                        </form>
                                    {%- endif -%}
                                </div>
                            </div>
                        {%- endfor -%}
                    {%- else -%}
                        <div class="no-products-message">
                            <p>{{ section.settings.empty_message | default: '暂无商品，请在后台添加产品' }}</p>
                        </div>
                    {%- endif -%}
                </div>
                
                {%- if target_products.size > section.settings.max_products -%}
                    <div class="view-more-container">
                        {%- if section.settings.collection_handle != blank -%}
                            <a href="/collections/{{ section.settings.collection_handle }}" class="view-more-btn">
                        {%- elsif section.settings.product_type != blank -%}
                            <a href="/collections/all?filter.p.product.type={{ section.settings.product_type | url_encode }}" class="view-more-btn">
                        {%- else -%}
                            <a href="/collections/all" class="view-more-btn">
                        {%- endif -%}
                            {{ section.settings.view_more_text | default: '查看更多商品' }}
                        </a>
                    </div>
                {%- endif -%}
            </div>
        </div>
        
        <!-- 右侧固定模特图 -->
        <div class="model-image-section">
            {% if section.settings.model_image %}
                <img src="{{ section.settings.model_image | image_url: width: 800, height: 1200, crop: 'center' }}" 
                     alt="{{ section.settings.model_image_alt | default: '背包模特展示' }}" 
                     class="model-image"
                     loading="lazy">
            {% else %}
                <div class="model-placeholder" style="background: {{ section.settings.placeholder_color }};"></div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .backpack-showcase-container {
        width: 100%;
        margin: {{ section.settings.top_margin }}px 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0;
    }

    .backpack-showcase-wrapper {
        display: flex;
        align-items: flex-start;
    }

    /* 左侧商品列表 */
    .products-section {
        flex: 1;
        background: {{ section.settings.background_color }};
    }

    .products-container {
        padding: 60px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 190px;
        overflow: hidden;
    }

    .product-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .sale-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        background: {{ section.settings.sale_badge_color }};
        color: {{ section.settings.sale_badge_text_color }};
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
        z-index: 2;
    }

    .product-info {
        padding: 15px;
        text-align: center;
    }

    .product-title {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        line-height: 1.4;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
    }

    .product-price {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 8px;
        font-size: 14px;
    }

    .current-price {
        color: #333;
    }

    .add-to-cart-form {
        margin: 0;
    }

    .add-to-cart-btn {
        background: {{ section.settings.button_bg_color }};
        color: {{ section.settings.button_text_color }};
        border: 1px solid {{ section.settings.button_border_color }};
        padding: 8px 16px;
        border-radius: {{ section.settings.button_border_radius }}px;
        font-size: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .add-to-cart-btn:hover:not(:disabled) {
        background: {{ section.settings.button_hover_color }};
        border-color: {{ section.settings.button_hover_color }};
        transform: translateY(-1px);
    }

    .add-to-cart-btn:disabled {
        background: #f5f5f5;
        color: #999;
        border-color: #ddd;
        cursor: not-allowed;
    }

    .no-products-message {
        text-align: center;
        padding: 40px;
        color: #666;
        grid-column: 1 / -1;
    }

    .view-more-container {
        text-align: center;
        margin-top: 40px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 12px 30px;
        background: {{ section.settings.view_more_bg_color }};
        color: {{ section.settings.view_more_text_color }};
        border-radius: {{ section.settings.view_more_border_radius }}px;
        text-decoration: none;
        font-size: 14px;
        transition: background 0.3s ease;
    }

    .view-more-btn:hover {
        background: {{ section.settings.view_more_hover_color }};
    }

    /* 右侧模特图 */
    .model-image-section {
        flex: 1;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
    }

    .model-image, .model-placeholder {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .model-placeholder {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    /* 响应式设计 */
    @media (max-width: 1024px) {
        .backpack-showcase-wrapper {
            flex-direction: column;
        }

        .products-section {
            width: 100%;
        }

        .model-image-section {
            position: relative;
            height: 50vh;
            width: 100%;
        }

        .products-container {
            padding: 40px 20px;
        }
    }

    @media (max-width: 768px) {
        .backpack-showcase-container {
            margin: 40px 0 0 0;
        }

        .model-image-section {
            height: 40vh;
        }

        .products-container {
            padding: 30px 15px;
        }

        .section-title {
            font-size: 28px;
            margin-bottom: 30px;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
            gap: 20px;
        }
    }

    @media (max-width: 480px) {
        .backpack-showcase-container {
            margin: 20px 0 0 0;
        }

        .model-image-section {
            height: 30vh;
        }

        .products-container {
            padding: 20px 10px;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .products-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
    }
</style>

