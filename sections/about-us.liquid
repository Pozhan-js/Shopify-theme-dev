  About Us Section - 关于我们页面
  简洁专业的品牌介绍页面设计，支持后台编辑
{% endcomment %}

<style>
  .about-us-section {
    background: #ffffff;
    color: #333333;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
  }

  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header Section */
  .about-header {
    text-align: center;
    padding: 4rem 0 3rem;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 4rem;
  }

  .about-title {
    font-size: 4rem;
    font-weight: 300;
    color: #333333;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .about-breadcrumb {
    font-size: 1rem;
    color: #666666;
    margin: 0;
  }

  .about-breadcrumb a {
    color: #666666;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .about-breadcrumb a:hover {
    color: #9abd48;
  }

  .about-breadcrumb span {
    margin: 0 0.5rem;
  }

  /* Welcome Section */
  .about-welcome {
    padding-bottom: 3rem;
  }

  .welcome-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #333333;
    margin-bottom: 2rem;
  }

  /* Content Section */
  .about-content {
    padding-bottom: 4rem;
  }

  .content-text {
    font-size: 1rem;
    color: #555555;
    line-height: 1.8;
    margin-bottom: 2rem;
    text-align: justify;
  }

  .content-text:last-child {
    margin-bottom: 0;
  }

  .content-link {
    color: #9abd48;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .content-link:hover {
    color: #8aa63f;
  }

  /* Images Section */
  .about-images {
    padding: 4rem 0;
    background: #fafafa;
  }

  .images-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .images-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .images-right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-item {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .image-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .image-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .image-item:hover img {
    transform: scale(1.05);
  }

  .image-small {
    height: 250px;
  }

  .image-small img {
    height: 100%;
    object-fit: cover;
  }

  .image-large {
    height: 520px;
  }

  .image-large img {
    height: 100%;
    object-fit: cover;
  }

  /* Features Section */
  .about-features {
    padding: 4rem 0;
    background: #ffffff;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .feature-card {
    text-align: center;
    padding: 2rem;
    background: #fafafa;
    border-radius: 1rem;
    transition: all 0.3s ease;
    border: 1px solid #e5e5e5;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: #9abd48;
  }

  .feature-icon {
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, #9abd48, #8aa63f);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 4px 15px rgba(154, 189, 72, 0.3);
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
    fill: white;
  }

  .feature-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333333;
    margin-bottom: 1rem;
  }

  .feature-description {
    font-size: 1rem;
    color: #666666;
    line-height: 1.6;
  }

  /* Team Section */
  .about-team {
    padding: 4rem 0;
    background: #f8f9fa;
  }

  .team-title {
    font-size: 2.5rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 3rem;
    color: #333333;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .team-member {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .team-photo {
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .team-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .team-member:hover .team-photo img {
    transform: scale(1.05);
  }

  .team-info {
    padding: 1.5rem;
    text-align: center;
  }

  .team-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333333;
    margin-bottom: 0.5rem;
  }

  .team-position {
    font-size: 1rem;
    color: #9abd48;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .team-description {
    font-size: 0.9rem;
    color: #666666;
    line-height: 1.6;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-container {
      padding: 0 1rem;
    }

    .about-header {
      padding: 2.5rem 0 2rem;
    }

    .about-title {
      font-size: 2.5rem;
    }

    .images-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .images-left {
      order: 2;
    }

    .images-right {
      order: 1;
    }

    .image-large {
      height: 300px;
    }

    .image-small {
      height: 200px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
    }

    .team-title {
      font-size: 2rem;
    }

    .about-content,
    .about-features,
    .about-team {
      padding: 2rem 0;
    }
  }

  @media (max-width: 480px) {
    .about-title {
      font-size: 2rem;
    }

    .welcome-title {
      font-size: 1.3rem;
    }

    .team-title {
      font-size: 1.8rem;
    }

    .feature-card {
      padding: 1.5rem;
    }
  }
</style>

<section class="about-us-section">
  <div class="about-container">
    <!-- Header -->
    <header class="about-header">
      <h1 class="about-title">{{ section.settings.page_title }}</h1>
      <nav class="about-breadcrumb">
        <a href="{{ routes.root_url }}">{{ section.settings.breadcrumb_home }}</a>
        <span>/</span>
        <span>{{ section.settings.breadcrumb_current }}</span>
      </nav>
    </header>

    <!-- Welcome Section -->
    {% if section.settings.welcome_title != blank %}
      <div class="about-welcome">
        <h2 class="welcome-title">{{ section.settings.welcome_title }}</h2>
      </div>
    {% endif %}

    <!-- Content Section -->
    <div class="about-content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'text_content' %}
            {% if block.settings.content_text != blank %}
              <div class="content-text">
                {{ block.settings.content_text }}
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>

  <!-- Images Section -->
  {% assign image_blocks = section.blocks | where: 'type', 'image' %}
  {% if image_blocks.size > 0 %}
    <div class="about-images">
      <div class="about-container">
        <div class="images-grid">
          <div class="images-left">
            {% for block in image_blocks %}
              {% if forloop.index <= 2 %}
                <div class="image-item image-small">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      alt="{{ block.settings.image_alt | default: 'About us image' }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                      Image placeholder
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
          <div class="images-right">
            {% for block in image_blocks %}
              {% if forloop.index == 3 %}
                <div class="image-item image-large">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image_alt | default: 'About us main image' }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                      Main image placeholder
                    </div>
                  {% endif %}
                </div>
                {% break %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Features Section -->
  {% assign feature_blocks = section.blocks | where: 'type', 'feature' %}
  {% if feature_blocks.size > 0 %}
    <div class="about-features">
      <div class="about-container">
        <div class="features-grid">
          {% for block in feature_blocks %}
            <div class="feature-card">
              <div class="feature-icon">
                {% case block.settings.icon_type %}
                  {% when 'quality' %}
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% when 'service' %}
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                  {% when 'innovation' %}
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M9 21c0 .5.4 1 1 1h4c.6 0 1-.5 1-1v-1H9v1zm3-19C8.1 2 5 5.1 5 9c0 2.4 1.2 4.5 3 5.7V17c0 .5.4 1 1 1h6c.6 0 1-.5 1-1v-2.3c1.8-1.3 3-3.4 3-5.7 0-3.9-3.1-7-7-7z"/>
                    </svg>
                  {% when 'support' %}
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                    </svg>
                  {% else %}
                    <svg viewBox="0 0 24 24">
                      <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                {% endcase %}
              </div>
              <h3 class="feature-title">{{ block.settings.feature_title }}</h3>
              <p class="feature-description">{{ block.settings.feature_description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Team Section -->
  {% assign team_blocks = section.blocks | where: 'type', 'team_member' %}
  {% if team_blocks.size > 0 %}
    <div class="about-team">
      <div class="about-container">
        <h2 class="team-title">{{ section.settings.team_title }}</h2>
        <div class="team-grid">
          {% for block in team_blocks %}
            <div class="team-member">
              <div class="team-photo">
                {% if block.settings.member_photo != blank %}
                  <img
                    src="{{ block.settings.member_photo | image_url: width: 400 }}"
                    alt="{{ block.settings.member_name | default: 'Team member' }}"
                    loading="lazy"
                  >
                {% else %}
                  <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                    Photo placeholder
                  </div>
                {% endif %}
              </div>
              <div class="team-info">
                <h3 class="team-name">{{ block.settings.member_name }}</h3>
                <p class="team-position">{{ block.settings.member_position }}</p>
                {% if block.settings.member_description != blank %}
                  <p class="team-description">{{ block.settings.member_description }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

