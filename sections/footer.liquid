{%- style -%}
  .footer {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer__column h3 {
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 0.8rem;
  }

  .footer__links a {
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__links a:hover {
    opacity: 0.7;
  }

  .footer__social {
    display: flex;
    gap: 1.5rem;
  }

  .footer__social svg {
    width: 2.4rem;
    height: 2.4rem;
  }

  @media screen and (max-width: 750px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }}">
  <div class="footer__content">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'link_list' -%}
          <div class="footer__column" {{ block.shopify_attributes }}>
            <h3>{{ block.settings.heading }}</h3>
            <ul class="footer__links">
              {%- for link in block.settings.menu.links -%}
                <li>
                  <a href="{{ link.url }}" class="link link--text">
                    {{ link.title }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
      {%- endcase -%}
    {%- endfor -%}

    <div class="footer__column">
      <h3>{{ section.settings.social_heading }}</h3>
      <div class="footer__social">
        {%- if settings.social_facebook_link != blank -%}
          <a href="{{ settings.social_facebook_link }}" target="_blank">
            {% render 'icon-facebook' %}
          </a>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <a href="{{ settings.social_instagram_link }}" target="_blank">
            {% render 'icon-instagram' %}
          </a>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" target="_blank">
            {% render 'icon-tiktok' %}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Navigation column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "social_heading",
      "default": "Follow us",
      "label": "Social media heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list",
        "settings": {
          "heading": "Products",
          "menu": "footer"
        }
      },
      {
        "type": "link_list",
        "settings": {
          "heading": "Support",
          "menu": "footer"
        }
      },
      {
        "type": "link_list",
        "settings": {
          "heading": "Company",
          "menu": "footer"
        }
      }
    ]
  }
}
{% endschema %}
