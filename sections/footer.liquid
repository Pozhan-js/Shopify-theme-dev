{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'footer-new.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .shopify-section.shopify-section-group-footer-group {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    z-index: 999 !important;
  }

  .footer-new {
    width: 100vw;
    padding: 16px;
  }

  .footer-new a {
    text-decoration: none;
  }

  .footer-new a:visited {
    color: inherit;
  }

  .footer-new a:hover {
    color: #ff4f00;
  }

  .footer-links-column h3 {
    font-weight: 600;
  }

  .footer-links-column li a {
    font-weight: 500;
  }

  .header__heading-link {
    z-index: 1001 !important;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .shopify-section.shopify-section-group-footer-group {
      margin-top: {{ section.settings.margin_top }}px;
      z-index: 999 !important;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .newsletter-form__button.field__button {
    position:static;
  }
  .newsletter-wrap {
    width:100%;
    display: flex;
    align-items: flex-start;
    gap:2rem;
  }
  .footer-newsletter {
    max-width: 100%!important;
  }
  .newsletter-form {
    max-width:unset!important;
  }
  .footer-newsletter button {
    min-width: 10rem;
  }
  .field__input:focus,.field:hover.field:after,.field__input:focus-visible {
    box-shadow: 0 0 0 2px #ff4f00;
  }
{%- endstyle -%}

<footer class="footer-new color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer-top">
    <div class="footer-heading-container">
      <h2 class="footer-heading">{{ section.settings.newsletter_heading | default: "Subscribe to our newsletter" }}</h2>
      <p class="footer-subheading">Get the latest updates on new products and upcoming sales.</p>
    </div>
    <div class="footer-newsletter">
      {%- if section.settings.newsletter_enable -%}
        {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-wrap">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            <button
              type="submit"
              class="newsletter-form__button field__button"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              {{ 'newsletter.button_label' | t }}
            </button>
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="ContactFooter-success"
              tabindex="-1"
              autofocus
            >
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {%- endform -%}
      {%- endif -%}
    </div>
  </div>

  <div class="footer-middle">
    <div class="footer-links">
      {%- for block in section.blocks limit: 3 -%}
        {%- if block.type == 'link_list' -%}
          <div class="footer-links-column">
            <h3>{{ block.settings.heading | default: block.settings.menu.title }}</h3>
            <ul>
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    <div class="footer-logo">
      {%- if section.settings.logo != blank -%}
        <img 
          src="{{ section.settings.logo | image_url: '500x' }}" 
          alt="{{ shop.name }}"
          width="500"
          height="{{ 500 | divided_by: section.settings.logo.aspect_ratio | round }}"
          loading="lazy"
        >
      {%- else -%}
        <h2>{{ shop.name }}</h2>
      {%- endif -%}
    </div>
  </div>

  <div class="footer-bottom">
    <div class="payment-icons">
      {%- for type in shop.enabled_payment_types -%}
        {{ type | payment_type_svg_tag }}
      {%- endfor -%}
    </div>
    <div class="copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ powered_by_link }}
    </div>
  </div>
</footer>

