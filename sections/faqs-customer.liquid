<style>
  .faq-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: #F1F0EE;
    padding-top: 211px;
  }
  
  .faq-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .faq-category {
    margin-bottom: 60px;
  }
  
  .faq-category-title {
    position: relative;
    font-size: 48px;
    font-weight: 700;
    color: #333;
    margin-bottom: 40px;
    line-height: 1.2;
    margin-top: 0px;
  }
  
  .faq-category-title::first-letter {
    position: relative;
    z-index: 2;
  }
  
  .faq-category-title::before {
    content: '';
    position: absolute;
    left: -13px;
    top: 1px;
    width: 40px;
    height: 40px;
    background-color: rgba(194, 46, 53, 0.15);
    border-radius: 50%;
    z-index: 1;
  }
  
  .faq-item {
    margin-bottom: 32px;
    background: white;
    border-radius: 8px;
    padding: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  
  .faq-question {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.4;
  }
  
  .faq-answer {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }
  
  .contact-message {
    text-align: center;
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    margin-top: 40px;
  }
  
  .contact-message p {
    font-size: 20px;
    font-weight: 600;
    color: #333;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .faq-section {
      padding-top: 120px;
    }
    
    .faq-category-title {
      font-size: 32px;
    }
    
    .faq-category-title::before {
      width: 32px;
      height: 32px;
      top: -4px;
      left: -6px;
    }
    
    .faq-item {
      padding: 20px;
    }
    
    .faq-question {
      font-size: 16px;
    }
    
    .faq-answer {
      font-size: 14px;
    }
    
    .contact-message {
      padding: 30px 20px;
    }
    
    .contact-message p {
      font-size: 18px;
    }
  }
  
  @media (max-width: 480px) {
    .faq-section {
      padding-top: 80px;
    }
    
    .faq-category-title {
      font-size: 28px;
    }
    
    .faq-category-title::before {
      width: 28px;
      height: 28px;
      top: -2px;
      left: -5px;
    }
  }
</style>

<div class="faq-section">
  <div class="faq-container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'faqcategory' %}
          {% if block.settings.categorytitle != blank %}
            <div class="faq-category" {{ block.shopify_attributes }}>
              <h2 class="faq-category-title">{{ block.settings.categorytitle }}</h2>
              
              {% for i in (1..10) %}
                {% assign question_key = 'question' | append: i %}
                {% assign answer_key = 'answer' | append: i %}
                {% assign question = block.settings[question_key] %}
                {% assign answer = block.settings[answer_key] %}
                
                {% if question != blank and answer != blank %}
                  <div class="faq-item">
                    <h3 class="faq-question">{{ question }}</h3>
                    <p class="faq-answer">{{ answer }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
          
        {% when 'contactmessage' %}
          {% if block.settings.message != blank %}
            <div class="contact-message" {{ block.shopify_attributes }}>
              <p>{{ block.settings.message }}</p>
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

