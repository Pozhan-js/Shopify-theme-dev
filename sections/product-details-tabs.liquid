<div class="product-details-tabs-section" {{ section.shopify_attributes }}>
  <div class="container">
    <!-- 标签导航 -->
    <div class="tabs-navigation">
      {% if section.settings.show_description_tab %}
        <button
          class="tab-button {% if section.settings.default_active_tab == 'description' %}active{% endif %}"
          data-tab="description"
        >
          {{ section.settings.description_tab_title }}
        </button>
      {% endif %}
      {% if section.settings.show_details_tab %}
        <button
          class="tab-button {% if section.settings.default_active_tab == 'details' %}active{% endif %}"
          data-tab="details"
        >
          {{ section.settings.details_tab_title }}
        </button>
      {% endif %}
      {% if section.settings.show_warranty_tab %}
        <button
          class="tab-button {% if section.settings.default_active_tab == 'warranty' %}active{% endif %}"
          data-tab="warranty"
        >
          {{ section.settings.warranty_tab_title }}
        </button>
      {% endif %}
    </div>

    <!-- 标签内容 -->
    <div class="tabs-content">
      <!-- Description Tab -->
      {% if section.settings.show_description_tab %}
        <div
          class="tab-content {% if section.settings.default_active_tab == 'description' %}active{% endif %}"
          id="description-content"
        >
          <div class="description-content">
            {{ section.settings.description_content }}
          </div>
        </div>
      {% endif %}

      <!-- Product Details Tab -->
      {% if section.settings.show_details_tab %}
        <div
          class="tab-content {% if section.settings.default_active_tab == 'details' %}active{% endif %}"
          id="details-content"
        >
          <div class="product-details">
            <!-- 产品型号 -->
            {% if section.settings.show_model_section %}
              <div class="model-section">
                <h3 class="model-title">{{ section.settings.model_title }}</h3>
              </div>
            {% endif %}

            <!-- 产品规格表格 -->
            <div class="specifications-table">
              {% for block in section.blocks %}
                {% if block.type == 'specification' %}
                  <div class="spec-row" {{ block.shopify_attributes }}>
                    <div class="spec-label">{{ block.settings.spec_label }}</div>
                    <div class="spec-value">{{ block.settings.spec_value }}</div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Warranty Tab -->
      {% if section.settings.show_warranty_tab %}
        <div
          class="tab-content {% if section.settings.default_active_tab == 'warranty' %}active{% endif %}"
          id="warranty-content"
        >
          <div class="warranty-content">
            {{ section.settings.warranty_content }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .product-details-tabs-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    background-color: {{ section.settings.section_background_color }};
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* 标签导航 */
  .tabs-navigation {
    display: flex;
    justify-content: center;
    border-bottom: 1px solid {{ section.settings.tab_border_color }};
    margin-bottom: {{ section.settings.content_margin_top }}px;
    gap: 0;
  }

  .tab-button {
    background: none;
    border: none;
    padding: 20px 0;
    font-size: {{ section.settings.tab_font_size }}px;
    color: {{ section.settings.tab_text_color }};
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
    border-bottom: 2px solid transparent;
    margin-right: {{ section.settings.tab_spacing }}px;
    font-weight: 400;
  }

  .tab-button:hover {
    color: {{ section.settings.tab_active_color }};
  }

  .tab-button.active {
    color: {{ section.settings.tab_active_color }};
    border-bottom-color: {{ section.settings.tab_active_border_color }};
    font-weight: 500;
  }

  /* 标签内容 */
  .tabs-content {
    min-height: 400px;
    padding-top: 40px;
  }

  .tab-content {
    display: none;
    animation: fadeIn 0.3s ease-in-out;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 产品详情内容 */
  .product-details {
    max-width: 800px;
  }

  .model-section {
    margin-bottom: 40px;
  }

  .model-title {
    font-size: {{ section.settings.model_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.model_title_color }};
    margin: 0;
  }

  /* 规格表格 */
  .specifications-table {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .spec-row {
    display: grid;
    grid-template-columns: {{ section.settings.spec_label_width }}px 1fr;
    gap: {{ section.settings.spec_gap }}px;
    padding: {{ section.settings.spec_row_padding }}px 0;
    border-bottom: 1px solid {{ section.settings.spec_border_color }};
    align-items: flex-start;
  }

  .spec-row:last-child {
    border-bottom: none;
  }

  .spec-label {
    font-size: {{ section.settings.spec_font_size }}px;
    color: {{ section.settings.spec_label_color }};
    font-weight: 400;
    line-height: 1.5;
  }

  .spec-value {
    font-size: {{ section.settings.spec_font_size }}px;
    color: {{ section.settings.spec_value_color }};
    line-height: 1.5;
  }

  /* Description 和 Warranty 内容 */
  .description-content {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_text_color }};
    line-height: {{ section.settings.description_line_height }};
    max-width: 800px;
  }

  .warranty-content {
    font-size: {{ section.settings.warranty_font_size }}px;
    color: {{ section.settings.warranty_text_color }};
    line-height: {{ section.settings.warranty_line_height }};
    max-width: 800px;
  }

  .description-content p,
  .warranty-content p {
    margin: 0 0 16px 0;
  }

  .description-content p:last-child,
  .warranty-content p:last-child {
    margin-bottom: 0;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .tabs-navigation {
      flex-wrap: wrap;
      gap: 10px;
    }

    .tab-button {
      margin-right: 30px;
      padding: 16px 0;
      font-size: 14px;
    }

    .spec-row {
      grid-template-columns: 1fr;
      gap: 8px;
    }

    .spec-label {
      font-weight: 600;
    }

    .model-title {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .product-details-tabs-section {
      padding: 30px 0;
    }

    .tab-button {
      font-size: 14px;
      margin-right: 20px;
    }

    .tabs-content {
      padding-top: 30px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(function (button) {
      button.addEventListener('click', function () {
        const targetTab = this.getAttribute('data-tab');

        // 移除所有活动状态
        tabButtons.forEach(function (btn) {
          btn.classList.remove('active');
        });

        tabContents.forEach(function (content) {
          content.classList.remove('active');
        });

        // 添加活动状态到当前标签
        this.classList.add('active');

        // 显示对应内容
        const targetContent = document.getElementById(targetTab + '-content');
        if (targetContent) {
          targetContent.classList.add('active');
        }
      });
    });
  });
</script>

