{%- liquid
  assign heading = section.settings.heading
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
-%}

<div class="rituals-section custom-section">
  <h3 class="section-heading">{{ heading }}</h3>

  <div class="rituals-container">
    <div class="rituals-content">
      <h4 class="sub-heading">{{ section.settings.sub_heading }}</h4>
      <p class="sub-text">{{ section.settings.sub_text }}</p>
      <a href="{{ cta_link }}" class="button">{{ cta_text }}</a>
    </div>

    {% if section.settings.promo_image != blank %}
      <div class="rituals-image">
        {{ section.settings.promo_image | image_url: width: 800 | image_tag }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  {% comment %} .custom-section {
    padding: 0 50px;
  } {% endcomment %}
  .rituals-section {
    text-align: center;
    padding: 40px 0;
  }

  .rituals-container {
    display: flex;
    gap: 40px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    max-height: 400px;
    overflow: hidden;
  }

  .rituals-content {
    flex: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .rituals-image {
    flex: 1;
  }

  .rituals-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .sub-heading {
    font-size: 1.5rem;
    margin: 0;
  }

  .sub-text {
    margin: 0;
    color: #666;
  }

  .rituals-section .button {
    background: transparent;
    color: black;
    border: 1px solid black;
    padding: 10px 20px;
    text-decoration: none;
  }
  .rituals-section .button:hover {
    background: white;
    color: black;
  }

  @media screen and (max-width: 768px) {
    .rituals-container {
      flex-direction: column;
      gap: 20px;
      max-height: none;
      padding: 0 15px;
    }

    .rituals-content {
      text-align: center;
      gap: 15px;
    }

    .sub-heading {
      font-size: 1.3rem;
    }

    .rituals-section .button {
      margin: 0 auto;
      width: 80%;
      max-width: 300px;
    }
  }

  @media screen and (max-width: 480px) {
    .rituals-section {
      padding: 20px 0;
    }

    .sub-heading {
      font-size: 1.1rem;
    }

    .sub-text {
      font-size: 0.9rem;
    }

    .rituals-section .button {
      padding: 8px 16px;
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "Rituals Preview",
  "settings": [
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "宣传图片"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "区块标题",
      "default": "Rituals Preview"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "副标题",
      "default": "特色仪式"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "描述文字",
      "default": "探索我们的特色仪式"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "按钮文字",
      "default": "Explore Rituals "
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "按钮链接"
    }
  ],
  "presets": [
    {
      "name": "Rituals Preview"
    }
  ]
}
{% endschema %}
