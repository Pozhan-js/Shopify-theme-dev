<script>
document.addEventListener('DOMContentLoaded', function() {
  const gridItems = document.querySelectorAll('.grid-item-header');
  
  gridItems.forEach(header => {
    const content = header.nextElementSibling;
    header.addEventListener('click', function() {
      this.classList.toggle('active');
      content.style.maxHeight = content.style.maxHeight ? null : content.scrollHeight + 'px';
    });
  });
});
</script>

{%- style -%}
.expandable-grid {
  padding: 20px;
  display: grid;
  grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
  gap: {{ section.settings.gap }}px;
}

.grid-item {
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  overflow: hidden;
}

.grid-item-header {
  padding: 16px;
  background: #f8f8f8;
  cursor: pointer;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s ease;
  color: {{ section.settings.title_color }};
  font-size: {{ section.settings.title_size }}px;
}

.grid-item-header:hover {
  background: #f0f0f0;
}

.grid-item-header:after {
  content: '+';
  font-size: 20px;
}

.grid-item-header.active:after {
  content: '-';
}

.grid-item-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: white;
}

.grid-item-content-inner {
  padding: 16px;
  color: {{ section.settings.content_color }};
  font-size: {{ section.settings.content_size }}px;
}

.grid-item-image {
  width: 100%;
  height: auto;
  margin-bottom: 12px;
  border-radius: 4px;
}

@media (max-width: 768px) {
  .expandable-grid {
    grid-template-columns: 1fr;
  }
}
{%- endstyle -%}

<div class="expandable-grid">
  {% for block in section.blocks %}
    <div class="grid-item">
      <div class="grid-item-header">
        {{ block.settings.title }}
      </div>
      <div class="grid-item-content">
        <div class="grid-item-content-inner">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '800x' }}" 
                 alt="{{ block.settings.title }}" 
                 class="grid-item-image">
          {% endif %}
          {{ block.settings.content }}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

