<!-- About Us Mega Menu Snippet - 按照附件2还原 -->
<div class="mega-dropdown-menu">
  <div class="mega-menu-grid">
    <div class="mega-menu-column">
      <div class="mega-menu-category">
        <h3>{{ section.settings.about_cat1_title | default: 'Our Story' }}</h3>
        <ul>
          {% for i in (1..4) %}
            {% assign item_title = 'about_cat1_item' | append: i | append: '_title' %}
            {% assign item_url = 'about_cat1_item' | append: i | append: '_url' %}
            {% if section.settings[item_title] != blank %}
              <li><a href="{{ section.settings[item_url] | default: '#' }}">{{ section.settings[item_title] }}</a></li>
            {% endif %}
          {% endfor %}
          {% if section.settings.about_cat1_item1_title == blank %}
            <li><a href="/pages/our-story">Our Story</a></li>
          {% endif %}
        </ul>
      </div>
      <div class="mega-menu-category">
        <h3>{{ section.settings.about_cat2_title | default: 'Our Factory' }}</h3>
        <ul>
          {% for i in (1..4) %}
            {% assign item_title = 'about_cat2_item' | append: i | append: '_title' %}
            {% assign item_url = 'about_cat2_item' | append: i | append: '_url' %}
            {% if section.settings[item_title] != blank %}
              <li><a href="{{ section.settings[item_url] | default: '#' }}">{{ section.settings[item_title] }}</a></li>
            {% endif %}
          {% endfor %}
          {% if section.settings.about_cat2_item1_title == blank %}
            <li><a href="/pages/our-factory">Our Factory</a></li>
          {% endif %}
        </ul>
      </div>
      <div class="mega-menu-category">
        <h3>{{ section.settings.about_cat3_title | default: 'Quality Control' }}</h3>
        <ul>
          {% for i in (1..4) %}
            {% assign item_title = 'about_cat3_item' | append: i | append: '_title' %}
            {% assign item_url = 'about_cat3_item' | append: i | append: '_url' %}
            {% if section.settings[item_title] != blank %}
              <li><a href="{{ section.settings[item_url] | default: '#' }}">{{ section.settings[item_title] }}</a></li>
            {% endif %}
          {% endfor %}
          {% if section.settings.about_cat3_item1_title == blank %}
            <li><a href="/pages/quality-control">Quality Control</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
    <div class="mega-menu-column">
      <div class="mega-menu-cta">
        {% if section.settings.about_image %}
          <img src="{{ section.settings.about_image | img_url: '800x1200' }}" alt="{{ section.settings.about_image_alt | default: 'About XS Pilates' }}" />
        {% else %}
          <img src="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=800&h=1200&fit=crop&crop=center" alt="About XS Pilates" />
        {% endif %}
      </div>
    </div>
  </div>
  <div class="mega-menu-footer">
    {% if section.settings.contactfootericon %}
      <div class="mega-menu-footer-icon">
        <img src="{{ section.settings.contactfootericon | img_url: '44x44' }}" alt="Contact Icon">
      </div>
    {% endif %}
    <span>{{ section.settings.about_footer_text | default: 'CONTACT US' }}</span>
  </div>
</div>
