{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu vertical-menu">
  <ul class="list-menu vertical-menu__list" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
                style="padding: 0.8rem 1rem; display: flex; align-items: center; gap: 5px;"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                <span class="custom-arrow">></span>
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <ul
                  class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                  role="list"
                >
                  {%- for childlink in link.links -%}
                    <li>
                      <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{ childlink.title | escape }}
                      </a>
                      {%- if childlink.links != blank -%}
                        <ul class="list-unstyled" role="list">
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ grandchildlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>

<style>
  .custom-arrow {
    font-weight: bold;
    margin-left: 5px;
    transition: color 0.2s ease;
    text-decoration: none !important;
    display: none;
  }
  
  .header__menu-item:hover .custom-arrow {
    display: inline-block;
  }

  /* 移除所有下划线并设置hover绿色效果 */
  .header__menu-item,
  .header__menu-item span,
  .mega-menu__link,
  .mega-menu__link--level-2 {
    text-decoration: none !important;
  }
  
  .header__menu-item:hover,
  .header__menu-item:hover span,
  .mega-menu__link:hover,
  .mega-menu__link--level-2:hover {
    color: #ff7000 !important;
  }
  
  /* 三级菜单样式 */
  .mega-menu__content .list-unstyled {
    padding-left: 1.5rem;
    margin-top: 0.5rem;
  }
  
  .mega-menu__content .list-unstyled .mega-menu__link {
    display: block;
    padding: 0.5rem 0;
  }

  /* 响应式设计 */
  @media screen and (max-width: 768px) {
    .header__inline-menu {
      width: 100% !important;
      height: auto !important;
      max-height: 50vh !important;
    }
  }

  /* 确保header作为定位基准 */
  .header__heading {
    position: relative;
  }

  /* 一级菜单样式 */
  .vertical-menu {
    position: absolute;
    left: 0;
    top: 100%;
    width: 280px;
    background-color: rgb(var(--color-background));
    z-index: 998;
  }

  /* 二级菜单样式 */
  .mega-menu__content {
    position: absolute;
    left: 280px; /* 一级菜单宽度 */
    top: 0; /* 与一级菜单同高度 */
    width: 280px;
    height: calc(100vh - var(--header-height, 100px) + 30px);
    padding: 1rem;
    background-color: rgb(var(--color-background));
    overflow-y: auto;
    z-index: 998;
    padding-bottom: 66px!important;
  }
  
  .mega-menu__content .mega-menu__list {
    padding-left: 1.5rem!important;
    padding-inline-start: 1.5rem!important;
  }

  .header__heading {
    position: relative;
    z-index: 1001; /* 高于header-wrapper */
  }
  
  body {
    overflow-x: hidden; /* 确保不影响sticky定位 */
  }

  .header__menu-item,
  .mega-menu__link--level-2 {
    font-size: 22px;
    font-weight: bold;
  }

  .mega-menu__link:not(.mega-menu__link--level-2) {
    font-size: 22px;
    font-weight: bold;
  }

  .vertical-menu__list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
    padding: 1rem;
  }

  .mega-menu,.mega-menu {
    position: static;
  }

  @media screen and (max-width: 768px) {
    .vertical-menu {
      position: relative;
      width: 100%;
    }
    
    .mega-menu__content {
      position: relative;
      left: 0;
      width: 100%;
    }
  }
</style>
