            {% assign item_title = 'resources_cat1_item' | append: i | append: '_title' %}
            {% assign item_url = 'resources_cat1_item' | append: i | append: '_url' %}
            {% if section.settings[item_title] != blank %}
              <li><a href="{{ section.settings[item_url] | default: '#' }}">{{ section.settings[item_title] }}</a></li>
            {% endif %}
          {% endfor %}
          {% if section.settings.resources_cat1_item1_title == blank %}
