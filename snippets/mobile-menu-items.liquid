<!-- Mobile Menu Items Snippet -->
{% assign mainmenu = linklists[section.settings.mainmenu] %}
{% if mainmenu and mainmenu.links.size > 0 %}
  {% for link in mainmenu.links %}
    {% assign link_handle = link.title | handleize %}
    
            {% if link_handle == 'pilates-equipment' or link_handle == 'products' or link_handle == 'equipment' %}
              <!-- Mobile Equipment Menu -->
              <div>
                <button class="mobile-menu-item" onclick="toggleSubmenu('mobileSubmenuEquipment')">
                  {{ link.title | escape }}
                </button>
                <div class="mobile-submenu" id="mobileSubmenuEquipment" style="display: none;">
                  {% if link.links.size > 0 %}
                    {% for childlink in link.links %}
                      {% if childlink.links.size > 0 %}
                        {% for grandchildlink in childlink.links %}
                          <a href="{{ grandchildlink.url }}" class="mobile-submenu-item">{{ grandchildlink.title | escape }}</a>
                        {% endfor %}
                      {% else %}
                        <a href="{{ childlink.url }}" class="mobile-submenu-item">{{ childlink.title | escape }}</a>
                      {% endif %}
                    {% endfor %}
                  {% else %}
                    <a href="#" class="mobile-submenu-item">Reformer</a>
                    <a href="#" class="mobile-submenu-item">Pilates Chair</a>
                    <a href="#" class="mobile-submenu-item">Ladder Barrel</a>
                    <a href="#" class="mobile-submenu-item">Cadillac</a>
                    <a href="#" class="mobile-submenu-item">Spine Corrector</a>
                    <a href="#" class="mobile-submenu-item">Accessories</a>
                  {% endif %}
                </div>
              </div>
            {% elsif link_handle == 'pilates-equipment-custom' %}
              <!-- Mobile Custom Equipment Menu -->
              <div>
                <button class="mobile-menu-item" onclick="toggleSubmenu('mobileSubmenuEquipmentCustom')">
                  {{ link.title | escape }}
                </button>
                <div class="mobile-submenu" id="mobileSubmenuEquipmentCustom" style="display: none;">
                  {% for i in (1..10) %}
                    {% assign item_title = 'equipment_dropdown_item' | append: i | append: '_title' %}
                    {% assign item_url = 'equipment_dropdown_item' | append: i | append: '_url' %}
                    {% if section.settings[item_title] != blank %}
                      <a href="{{ section.settings[item_url] | default: '#' }}" class="mobile-submenu-item">{{ section.settings[item_title] }}</a>
                    {% endif %}
                  {% endfor %}
                  {% if section.settings.equipment_dropdown_item1_title == blank %}
                    <a href="#" class="mobile-submenu-item">All Equipment</a>
                    <a href="#" class="mobile-submenu-item">Reformers</a>
                    <a href="#" class="mobile-submenu-item">Chairs</a>
                    <a href="#" class="mobile-submenu-item">Barrels</a>
                    <a href="#" class="mobile-submenu-item">Accessories</a>
                  {% endif %}
                </div>
              </div>
    {% elsif link_handle == 'resources' or link_handle == 'support' %}
      <!-- Mobile Resources Menu -->
      <div>
        <button class="mobile-menu-item" onclick="toggleSubmenu('mobileSubmenuResources')">
          {{ link.title | escape }}
        </button>
        <div class="mobile-submenu" id="mobileSubmenuResources" style="display: none;">
          <a href="/blogs/news" class="mobile-submenu-item">Blog</a>
          <a href="/pages/training-guides" class="mobile-submenu-item">Training Guides</a>
          <a href="/pages/video-tutorials" class="mobile-submenu-item">Video Tutorials</a>
          <a href="/pages/exercise-library" class="mobile-submenu-item">Exercise Library</a>
          <a href="/pages/user-manuals" class="mobile-submenu-item">User Manuals</a>
          <a href="/pages/assembly-guides" class="mobile-submenu-item">Assembly Guides</a>
          <a href="/pages/maintenance-tips" class="mobile-submenu-item">Maintenance Tips</a>
          <a href="/pages/faqs" class="mobile-submenu-item">FAQs</a>
          <a href="/pages/technical-support" class="mobile-submenu-item">Technical Support</a>
          <a href="/pages/warranty-info" class="mobile-submenu-item">Warranty Information</a>
          <a href="/pages/aftersales" class="mobile-submenu-item">Aftersales Service</a>
          <a href="/pages/customer-story" class="mobile-submenu-item">Customer Stories</a>
          <a href="/pages/testimonials" class="mobile-submenu-item">Testimonials</a>
          <a href="/pages/community-forum" class="mobile-submenu-item">Community Forum</a>
          <a href="/pages/certificates" class="mobile-submenu-item">Product Certificates</a>
          <a href="/pages/quality-standards" class="mobile-submenu-item">Quality Standards</a>
          <a href="/pages/safety-compliance" class="mobile-submenu-item">Safety Compliance</a>
          <a href="/pages/iso-certifications" class="mobile-submenu-item">ISO Certifications</a>
          <a href="/pages/product-catalogs" class="mobile-submenu-item">Product Catalogs</a>
          <a href="/pages/specification-sheets" class="mobile-submenu-item">Specification Sheets</a>
          <a href="/pages/brochures" class="mobile-submenu-item">Brochures</a>
        </div>
      </div>
    {% elsif link_handle == 'about-us' or link_handle == 'about' %}
      <!-- Mobile About Menu -->
      <div>
        <button class="mobile-menu-item" onclick="toggleSubmenu('mobileSubmenuAbout')">
          {{ link.title | escape }}
        </button>
        <div class="mobile-submenu" id="mobileSubmenuAbout" style="display: none;">
          <a href="/pages/our-story" class="mobile-submenu-item">Our Story</a>
          <a href="/pages/mission-vision" class="mobile-submenu-item">Mission & Vision</a>
          <a href="/pages/company-values" class="mobile-submenu-item">Company Values</a>
          <a href="/pages/company-history" class="mobile-submenu-item">Company History</a>
          <a href="/pages/leadership-team" class="mobile-submenu-item">Leadership Team</a>
          <a href="/pages/certified-instructors" class="mobile-submenu-item">Certified Instructors</a>
          <a href="/pages/advisory-board" class="mobile-submenu-item">Advisory Board</a>
          <a href="/pages/awards-recognition" class="mobile-submenu-item">Awards & Recognition</a>
          <a href="/pages/company-milestones" class="mobile-submenu-item">Company Milestones</a>
          <a href="/pages/media-coverage" class="mobile-submenu-item">Media Coverage</a>
          <a href="/pages/quality-commitment" class="mobile-submenu-item">Quality Commitment</a>
          <a href="/pages/manufacturing-process" class="mobile-submenu-item">Manufacturing Process</a>
          <a href="/pages/certifications" class="mobile-submenu-item">Certifications</a>
          <a href="/pages/career-opportunities" class="mobile-submenu-item">Career Opportunities</a>
          <a href="/pages/company-culture" class="mobile-submenu-item">Company Culture</a>
          <a href="/pages/employee-benefits" class="mobile-submenu-item">Employee Benefits</a>
          <a href="/pages/internship-programs" class="mobile-submenu-item">Internship Programs</a>
          <a href="/pages/environmental-commitment" class="mobile-submenu-item">Environmental Commitment</a>
          <a href="/pages/sustainable-practices" class="mobile-submenu-item">Sustainable Practices</a>
          <a href="/pages/community-involvement" class="mobile-submenu-item">Community Involvement</a>
        </div>
      </div>
    {% elsif link.links.size > 0 %}
      <!-- Other Dropdown Items -->
      <div>
        <button class="mobile-menu-item" onclick="toggleSubmenu('submenu{{ forloop.index }}')">
          {{ link.title | escape }}
        </button>
        <div
          class="mobile-submenu"
          id="submenu{{ forloop.index }}"
          style="display: none;">
          {% for childlink in link.links %}
            <a href="{{ childlink.url }}" class="mobile-submenu-item">
              {{ childlink.title | escape }}
            </a>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <!-- Simple Link -->
      <a href="{{ link.url }}" class="mobile-menu-item">
        {{ link.title | escape }}
      </a>
    {% endif %}
  {% endfor %}
{% endif %}
