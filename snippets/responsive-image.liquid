{%- liquid
  assign image_class = image_class | default: ''
  assign image_width = image_width | default: image.width
  assign image_height = image_height | default: image.height
  assign loading = loading | default: 'lazy'
  assign widths = '165, 360, 535, 750, 1070, 1500'
  assign sizes = sizes | default: '(min-width: 750px) 50vw, 100vw'
-%}

{%- if image != blank -%}
  {{
    image
    | image_url: width: 1500
    | image_tag:
      loading: loading,
      width: image_width,
      height: image_height,
      class: image_class,
      sizes: sizes,
      widths: widths
  }}
{%- endif -%}
